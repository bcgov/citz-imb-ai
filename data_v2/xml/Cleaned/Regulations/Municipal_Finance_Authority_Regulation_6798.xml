    <bcl:section id="d2e38">
      <bcl:marginalnote>Definition</bcl:marginalnote>
      <bcl:num>1</bcl:num>
      <bcl:text>In this regulation, <in:term>Act</in:term> means the <bcl:link resource="leg" xlink:href="/legislation/96325_01" xlink:type="locator"><in:doc>Municipal Finance Authority Act</in:doc></bcl:link>.</bcl:text>
    </bcl:section>
    <bcl:section id="d2e56">
