                    <in:em>Maximum Charge per unit</in:em>
                  </in:strong>
                </oasis:line>
              </oasis:entry>
            </oasis:trow>
            <oasis:trow>
              <oasis:entry colname="c1" align="center">
                <oasis:line>low density</oasis:line>
              </oasis:entry>
