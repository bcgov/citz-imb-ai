              <oasis:entry colname="c2" align="center">
                <oasis:line>
                  <in:strong>Column 2</in:strong>
                </oasis:line>
              </oasis:entry>
            </oasis:trow>
            <oasis:trow>
              <oasis:entry colname="c1" align="center">
                <oasis:line>
                  <in:strong>
                    <in:em>Category of Eligible Development</in:em>
                  </in:strong>
                </oasis:line>
              </oasis:entry>
              <oasis:entry colname="c2" align="center">
