    <bcl:section id="d2e498">
      <bcl:marginalnote>Maximum school site acquisition charges</bcl:marginalnote>
      <bcl:num>5</bcl:num>
      <bcl:text>For each category listed in Column 1 in the following Table, the maximum school site acquisition charge payable per unit is the corresponding entry in Column 2 in that Table.</bcl:text>
      <oasis:table style="1">
        <oasis:tgroup cols="2" width="500">
          <oasis:colspec colname="c1" colnum="1" align="center" border="0"/>
          <oasis:colspec colname="c2" colnum="2" align="center" border="0"/>
          <oasis:tbody>
            <oasis:trow>
              <oasis:entry colname="c1" namest="1" nameend="2" align="center" colspan="2">
                <oasis:line>
                  <in:strong>Table</in:strong>
                </oasis:line>
              </oasis:entry>
            </oasis:trow>
            <oasis:trow>
              <oasis:entry colname="c1" align="center">
                <oasis:line>
                  <in:strong>Column 1</in:strong>
                </oasis:line>
