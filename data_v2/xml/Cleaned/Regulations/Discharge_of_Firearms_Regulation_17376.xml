  <reg:acttitle>Creston Valley Wildlife Act</reg:acttitle>
  <reg:title>Discharge of Firearms Regulation</reg:title>
  <reg:content>
    <bcl:section id="d2e22" toc="false">
      <bcl:marginalnote>No discharge without permit</bcl:marginalnote>
      <bcl:num>1</bcl:num>
      <bcl:text>No person shall discharge a firearm within the Creston Valley Wildlife Management
        Area except as authorized by a permit or an open general permit issued by the Management
        Authority.</bcl:text>
    </bcl:section>
