  <actname titleOverride="Trespass Act [RSBC 2018] c. 3">Trespass Act</actname>
  <yearenacted revised="RSBC">2018</yearenacted>
  <chapter>3</chapter>
  <change section="1">
    <changenote eff="February 21, 2020">Section 1 definition of "premises", paragraph (b) BEFORE amended by <chapnum>2019-36-19</chapnum>, effective February 21, 2020 (BC Reg <regnum>29/2020</regnum>).</changenote>
    <bcl:paragraph id="d1e230">
      <bcl:num>b</bcl:num>
      <bcl:text>anything on the land, including</bcl:text>
      <bcl:subparagraph id="d1e238">
        <bcl:num>i</bcl:num>
        <bcl:text>a building or other permanent structure,</bcl:text>
      </bcl:subparagraph>
      <bcl:subparagraph id="d1e247">
        <bcl:num>ii</bcl:num>
        <bcl:text>a ship or vessel, train, railway car or vehicle, except while in operation,</bcl:text>
      </bcl:subparagraph>
      <bcl:subparagraph id="d1e256">
        <bcl:num>iii</bcl:num>
        <bcl:text>a trailer or a portable structure designed or used as a residence, for shelter or to house a business, and</bcl:text>
      </bcl:subparagraph>
      <bcl:subparagraph id="d1e266">
        <bcl:num>iv</bcl:num>
        <bcl:text>water;</bcl:text>
      </bcl:subparagraph>
    </bcl:paragraph>
  </change>
  <change section="10">
    <changenote eff="February 1, 2021">Section 10 (4) BEFORE amended by <chapnum>2010-21-31</chapnum>, effective February 1, 2021 (BC Reg <regnum>20/2021</regnum>).</changenote>
    <bcl:subsection id="d1e827">
      <bcl:num>4</bcl:num>
      <bcl:text>This section does not apply on treaty lands.</bcl:text>
    </bcl:subsection>
  </change>
