  <reg:content>
    <bcl:section id="d2e27" toc="false">
      <bcl:marginalnote>Repealed</bcl:marginalnote>
      <bcl:num>1-3</bcl:num>
      <bcl:text>Repealed. [B.C. Reg. 220/2003.]</bcl:text>
    </bcl:section>
    <bcl:section id="d2e39">
      <bcl:marginalnote>Recreation commission</bcl:marginalnote>
      <bcl:num>4</bcl:num>
      <bcl:text>A person authorized by the district manager to collect a fee referred to in section
        24 (2) of the Forest Recreation Regulation, B.C. Reg. 58/99, may retain a commission equal
        to 100 percent of the amount collected.</bcl:text>
    </bcl:section>
