    <bcl:section id="d2e26" toc="false">
      <bcl:marginalnote>Exemption</bcl:marginalnote>
      <bcl:num>1</bcl:num>
      <bcl:text>The following persons are exempt from the requirements of sectionÂ 194 (3) of the <bcl:link resource="leg" xlink:href="/legislation/96318_00" xlink:type="locator"><in:doc>Motor Vehicle Act</in:doc></bcl:link>:</bcl:text>
      <bcl:paragraph id="d2e40">
        <bcl:num>a</bcl:num>
        <bcl:text>a person who</bcl:text>
        <bcl:subparagraph id="d2e49">
          <bcl:num>i</bcl:num>
          <bcl:text>practises the Sikh religion, and</bcl:text>
        </bcl:subparagraph>
        <bcl:subparagraph id="d2e59">
          <bcl:num>ii</bcl:num>
          <bcl:text>has unshorn hair and habitually wears a turban composed of 5 or more square metres of cloth.</bcl:text>
        </bcl:subparagraph>
      </bcl:paragraph>
      <bcl:hnote>[am. B.C. Reg. 62/2017.]</bcl:hnote>
    </bcl:section>
