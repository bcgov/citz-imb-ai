  <reg:content>
    <bcl:section id="d2e29" toc="false">
      <bcl:marginalnote>Prescribed classes</bcl:marginalnote>
      <bcl:num>1</bcl:num>
      <bcl:text>The prescribed classes of financial agreements for the purposes of section 76 (1)
        (c) of the <bcl:link resource="leg" xlink:href="/legislation/96138_01" xlink:type="locator"><in:doc>Financial Administration Act</in:doc></bcl:link> are:</bcl:text>
      <bcl:paragraph id="d2e43">
        <bcl:num>a</bcl:num>
        <bcl:text>options to enter into any of the agreements referred to in section 76 (1) (b) of
          the <bcl:link resource="leg" xlink:href="/legislation/96138_01" xlink:type="locator"><in:doc>Financial Administration Act</in:doc></bcl:link>;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e55">
        <bcl:num>b</bcl:num>
        <bcl:text>forward security purchase or sale agreements;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e65">
        <bcl:num>c</bcl:num>
        <bcl:text>options to enter into forward security purchase or sale agreements;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e74">
        <bcl:num>d</bcl:num>
        <bcl:text>equity-index linked futures agreements;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e83">
        <bcl:num>e</bcl:num>
        <bcl:text>equity-index linked exchange agreements;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e92">
        <bcl:num>f</bcl:num>
        <bcl:text>options to enter into equity-index linked futures agreements or equity-index
          linked exchange agreements;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e101">
        <bcl:num>g</bcl:num>
        <bcl:text>options to purchase or sell any security.</bcl:text>
      </bcl:paragraph>
      <bcl:hnote>[am. B.C. Regs. 321/91; 100/99.]</bcl:hnote>
    </bcl:section>
