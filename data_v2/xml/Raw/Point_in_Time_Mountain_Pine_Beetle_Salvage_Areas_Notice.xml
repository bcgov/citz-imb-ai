    <reg:regulation index="">
      <reg:acttitle>Forest Act</reg:acttitle>
      <reg:title>Mountain Pine Beetle Salvage Areas</reg:title>
      <reg:content>
        <bcl:schedule id="d0e16">
          <bcl:lefttext>The following regulations do not appear in this publication. They were made under section 14.1 of the <in:doc>Forest Act</in:doc> and designate Crown land infested by mountain pine beetle as mountain pine beetle salvage areas. They are published in The British Columbia Gazette, Part II.</bcl:lefttext>
          <oasis:table style="1" id="d0e24">
            <oasis:tgroup cols="2">
              <oasis:colspec colname="c1" colnum="1" align="center" border="0"/>
              <oasis:colspec colname="c2" colnum="2" align="center" border="0"/>
              <oasis:thead>
                <oasis:trow>
                  <oasis:entry colname="c1" valign="top">
                    <oasis:line>
                      <in:strong>
                        <in:em>Designated Area</in:em>
                      </in:strong>
                    </oasis:line>
                  </oasis:entry>
                  <oasis:entry colname="c2" align="right" valign="top">
                    <oasis:line>
                      <in:strong>
                        <in:em>B.C. Reg.<in:br/>Number</in:em>
                      </in:strong>
                    </oasis:line>
                  </oasis:entry>
                </oasis:trow>
              </oasis:thead>
              <oasis:tbody>
                <oasis:trow>
                  <oasis:entry colname="c1" valign="top">
                    <oasis:line>Mountain Pine Beetle Salvage Area No. 3, until September 9, 2018....................................</oasis:line>
                  </oasis:entry>
                  <oasis:entry colname="c2" align="right" valign="top">
                    <oasis:line>245/2008</oasis:line>
                  </oasis:entry>
                </oasis:trow>
              </oasis:tbody>
            </oasis:tgroup>
          </oasis:table>
        </bcl:schedule>
      </reg:content>
    </reg:regulation>
