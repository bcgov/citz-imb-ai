        "@id": "00_11021_01",
        "act:title": "Natural Resource Compliance Act",
        "act:chapter": "21",
        "act:yearenacted": "2011",
        "act:assentedto": "November 14, 2011",
        "act:currency": {
            "act:tlcDirPath": "757987613/11021/644242876",
            "act:tlc": "1788785338"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "ministry",
                                "#text": "means the ministry of the minister responsible for the administration of this Act;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "natural resource officer",
                                "#text": "means a person designated under section 2."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e45",
                    "bcl:marginalnote": "Natural resource officers \u2014 designation",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e53",
                            "bcl:num": "1",
                            "bcl:text": "Subject to the regulations, if any, the minister may designate in writing persons or a class of persons as natural resource officers."
                        },
                        {
                            "@id": "d2e62",
                            "bcl:num": "2",
                            "bcl:text": "In designating natural resource officers under subsection (1), the minister may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e71",
                                    "bcl:num": "a",
                                    "bcl:text": "describe a person by name, title, position or class,"
                                },
                                {
                                    "@id": "d2e81",
                                    "bcl:num": "b",
                                    "bcl:text": "limit the designation to a specified time period or geographical area,"
                                },
                                {
                                    "@id": "d2e90",
                                    "bcl:num": "c",
                                    "bcl:text": "limit the powers and duties conferred under section 3 to the officials or enactments specified in the designation,"
                                },
                                {
                                    "@id": "d2e99",
                                    "bcl:num": "d",
                                    "bcl:text": "describe the limitations, if any, on the natural resource officer's powers and duties, or"
                                },
                                {
                                    "@id": "d2e108",
                                    "bcl:num": "e",
                                    "bcl:text": "make the designation subject to other terms and conditions."
                                }
                            ]
                        },
                        {
                            "@id": "d2e117",
                            "bcl:num": "3",
                            "bcl:text": "The minister may vary or revoke a designation."
                        }
                    ]
                },
                {
                    "@id": "d2e127",
                    "bcl:marginalnote": "Natural resource officers \u2014 powers and duties",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e135",
                            "bcl:num": "1",
                            "bcl:text": "Despite any other enactment, but subject to the limitations, terms and conditions, if any, imposed by the minister under section 2 (2), a natural resource officer may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e144",
                                    "bcl:num": "a",
                                    "bcl:text": "exercise the powers and perform the duties of a prescribed official under a prescribed enactment, and"
                                },
                                {
                                    "@id": "d2e153",
                                    "bcl:num": "b",
                                    "bcl:text": "enforce the prohibitions or requirements of prescribed enactments."
                                }
                            ]
                        },
                        {
                            "@id": "d2e163",
                            "bcl:num": "2",
                            "bcl:text": "Subject to this Act, the exercise of powers and the performance of duties conferred on a natural resource officer under subsection (1) (a) remain subject to the prescribed enactment."
                        }
                    ]
                },
                {
                    "@id": "d2e173",
                    "bcl:marginalnote": "Delegation",
                    "bcl:num": "4",
                    "bcl:text": "The minister may, in writing,",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e184",
                            "bcl:num": "a",
                            "bcl:text": "delegate the power of the minister under section 2 to",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d2e193",
                                    "bcl:num": "i",
                                    "bcl:text": "a person employed in the ministry, or"
                                },
                                {
                                    "@id": "d2e203",
                                    "bcl:num": "ii",
                                    "bcl:text": "a class of persons employed in the ministry,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e212",
                            "bcl:num": "b",
                            "bcl:text": "provide directions that are binding on the delegate respecting the exercise of the power, and"
                        },
                        {
                            "@id": "d2e221",
                            "bcl:num": "c",
                            "bcl:text": "vary or revoke a delegation or direction."
                        }
                    ]
                },
                {
                    "@id": "d2e231",
                    "bcl:marginalnote": "Regulations",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e239",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e251",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e260",
                                    "bcl:num": "a",
                                    "bcl:text": "respecting the designation of natural resource officers under section\u00a02;"
                                },
                                {
                                    "@id": "d2e270",
                                    "bcl:num": "b",
                                    "bcl:text": "prescribing officials and enactments for the purpose of section 3 (1) (a);"
                                },
                                {
                                    "@id": "d2e279",
                                    "bcl:num": "c",
                                    "bcl:text": "prescribing enactments for the purpose of section 3 (1) (b)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e288",
                            "bcl:num": "3",
                            "bcl:text": "In making a regulation under this Act, the Lieutenant Governor in Council may make different regulations for different persons, classes of persons, places or activities."
                        }
                    ]
                },
                {
                    "@id": "d2e299",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "6",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in Council."
                }
            ]
        }
    }
}