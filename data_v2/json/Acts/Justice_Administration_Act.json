        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96243_01",
        "act:title": "Justice Administration Act",
        "act:chapter": "243",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "216002890/96243/tlc96243_f",
            "act:tlc": "E2tlc96243"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": [
                                {
                                    "in:term": "administration of justice",
                                    "#text": "means the"
                                },
                                "for the purpose of their functions, including functions given to the courts or offices, or to any official of them, under an Act,"
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e35",
                                    "bcl:num": "a",
                                    "bcl:text": "provision, maintenance and operation of",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e45",
                                            "bcl:num": "i",
                                            "bcl:text": "courts of justice in British Columbia,"
                                        },
                                        {
                                            "@id": "d2e54",
                                            "bcl:num": "ii",
                                            "bcl:text": "court registry and land title offices,"
                                        },
                                        {
                                            "@id": "d2e63",
                                            "bcl:num": "iii",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/04046_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Correction Act"
                                                },
                                                "#text": "correctional centres as defined in the , and prisons and lockups operated by"
                                            },
                                            "bcl:clause": [
                                                {
                                                    "@id": "d2e75",
                                                    "bcl:num": "A",
                                                    "bcl:text": "police forces,"
                                                },
                                                {
                                                    "@id": "d2e84",
                                                    "bcl:num": "B",
                                                    "bcl:text": "police departments,"
                                                },
                                                {
                                                    "@id": "d2e93",
                                                    "bcl:num": "C",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "/legislation/96367_01",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Police Act"
                                                        },
                                                        "#text": "designated policing units, as defined in section\u00a01 of the , or"
                                                    }
                                                },
                                                {
                                                    "@id": "d2e106",
                                                    "bcl:num": "D",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "/legislation/96367_01",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Police Act"
                                                        },
                                                        "#text": "designated law enforcement units, as defined in section\u00a01 of the ,"
                                                    }
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d2e118",
                                            "bcl:num": "iv",
                                            "bcl:text": "the offices of coroner, Crown counsel, probation officers, court workers and sheriffs, and their officers, and"
                                        },
                                        {
                                            "@id": "d2e127",
                                            "bcl:num": "v",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/96367_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Police Act"
                                                },
                                                "#text": "the police forces and police departments and any designated policing unit and designated law enforcement unit, as those terms are defined in section\u00a01 of the ,"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e142",
                                    "bcl:num": "b",
                                    "bcl:text": "prosecution of offences, and"
                                },
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "c",
                                    "bcl:text": "provision of adequate legal services, including the operation of legal aid offices;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e161",
                            "bcl:text": {
                                "in:term": "commission",
                                "#text": "means the Justice Development Commission;"
                            }
                        },
                        {
                            "@id": "d2e170",
                            "bcl:text": {
                                "in:term": "minister",
                                "#text": "includes a person designated in writing by the minister."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e180",
                    "bcl:marginalnote": "Commission continued",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e188",
                            "bcl:num": "1",
                            "bcl:text": "The commission, known as the Justice Development Commission, consisting of the number of members the Lieutenant Governor in Council determines, is continued."
                        },
                        {
                            "@id": "d2e197",
                            "bcl:num": "2",
                            "bcl:text": "The members of the commission are to be appointed by the Lieutenant Governor in Council to hold office during pleasure."
                        },
                        {
                            "@id": "d2e206",
                            "bcl:num": "3",
                            "bcl:text": "A person may be appointed a member of the commission even though the person is a member of a body constituted under any other Act, or is a member of the public service of British Columbia."
                        },
                        {
                            "@id": "d2e216",
                            "bcl:num": "4",
                            "bcl:text": "One of the members must be designated by the Lieutenant Governor in Council as chair of the commission, and one or more of the other members may be designated by the Lieutenant Governor in Council to be a vice chair."
                        },
                        {
                            "@id": "d2e225",
                            "bcl:num": "5",
                            "bcl:text": "A majority of the members constitutes a quorum."
                        },
                        {
                            "@id": "d2e234",
                            "bcl:num": "6",
                            "bcl:text": "A member must be reimbursed for reasonable travelling or out of pocket expenses necessarily incurred in discharging duties, and, in addition, may be paid the remuneration for the member's services the Lieutenant Governor in Council determines."
                        }
                    ]
                },
                {
                    "@id": "d2e244",
                    "bcl:marginalnote": "Commission an agent of the government",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e252",
                            "bcl:num": "1",
                            "bcl:text": "The commission is, for all purposes, an agent of the government."
                        },
                        {
                            "@id": "d2e261",
                            "bcl:num": "2",
                            "bcl:text": "The commission may, as agent,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e270",
                                    "bcl:num": "a",
                                    "bcl:text": "carry out its powers and duties under this Act in its own name, and"
                                },
                                {
                                    "@id": "d2e280",
                                    "bcl:num": "b",
                                    "bcl:text": "with the prior approval of the Lieutenant Governor in Council, acquire and hold in its own name land required for the purpose of the commission and may dispose of that property."
                                }
                            ]
                        },
                        {
                            "@id": "d2e289",
                            "bcl:num": "3",
                            "bcl:text": "The commission, as agent, is a legal entity."
                        }
                    ]
                },
                {
                    "@id": "d2e299",
                    "bcl:marginalnote": "Staff",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e307",
                            "bcl:num": "1",
                            "bcl:text": "An executive secretary of the commission must be appointed by the Lieutenant Governor in Council and must be paid the remuneration for services on behalf of the commission the Lieutenant Governor in Council determines."
                        },
                        {
                            "@id": "d2e316",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Act"
                                },
                                "#text": "Despite the , the commission or, if authorized by the commission, the executive secretary may appoint officers and employees and engage and retain specialists and consultants considered necessary to carry out the duties and functions of the commission, and may determine their remuneration."
                            }
                        },
                        {
                            "@id": "d2e328",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96385_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Public Service Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96388_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Public Service Labour Relations Act"
                                    }
                                ],
                                "#text": "The  and the  do not apply to the commission or its officers and employees appointed under subsection (2)."
                            }
                        },
                        {
                            "@id": "d2e344",
                            "bcl:num": "4",
                            "bcl:text": "[Repealed 1999-44-67.]"
                        },
                        {
                            "@id": "d2e353",
                            "bcl:num": "5",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96385_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Public Service Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/99044_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Public Sector Pension Plans Act"
                                    }
                                ],
                                "#text": "Despite subsection (3), if an officer or employee appointed under subsection (2) is, at the date of appointment, a public service employee under the , the officer or employee continues to be, and is entitled to and must receive all the rights and privileges of, a public servant under that Act and under the Public Service Pension Plan continued under the ."
                            }
                        },
                        {
                            "@id": "d2e368",
                            "bcl:num": "6",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Act"
                                },
                                "#text": "Despite the , an officer or employee referred to in subsection (5) may be paid and accept remuneration payable under this section, and the provisions of that Act respecting appointments, classification of positions, rates of compensation and promotion do not apply."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e381",
                    "bcl:marginalnote": "Functions of commission",
                    "bcl:num": "5",
                    "bcl:text": "It is the function of the commission to do the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e392",
                            "bcl:num": "a",
                            "bcl:text": "develop coordinated plans for the future development of the administration of justice in British Columbia;"
                        },
                        {
                            "@id": "d2e401",
                            "bcl:num": "b",
                            "bcl:text": "promote, establish, supervise and finance research respecting the administration of justice in or out of British Columbia;"
                        },
                        {
                            "@id": "d2e411",
                            "bcl:num": "c",
                            "bcl:text": "report to the minister respecting the results of its research, inquiries and investigations and make recommendations for change, reorganization and general improvement of the administration of justice;"
                        },
                        {
                            "@id": "d2e420",
                            "bcl:num": "d",
                            "bcl:text": "conduct research or inquiries into the administration of justice and to report and make recommendations to the minister;"
                        },
                        {
                            "@id": "d2e429",
                            "bcl:num": "e",
                            "bcl:text": "enter into agreements or arrangements with Canada or any province or agencies or with universities, municipalities, regional districts or any other person or organization for research, inquiry or investigation of, or assistance in, the administration of justice;"
                        },
                        {
                            "@id": "d2e438",
                            "bcl:num": "f",
                            "bcl:text": "provide financial assistance to any person or organization undertaking research, inquiries or investigations under this Act, or operating programs and projects on behalf of the commission;"
                        },
                        {
                            "@id": "d2e447",
                            "bcl:num": "g",
                            "bcl:text": "develop experimental programs and projects respecting the administration of justice and, with the approval of the minister, to lease buildings, facilities and employ staff necessary to initiate, develop and operate these programs and projects;"
                        },
                        {
                            "@id": "d2e456",
                            "bcl:num": "h",
                            "bcl:text": "perform any other function respecting the development of the administration of justice the Lieutenant Governor in Council orders."
                        }
                    ]
                },
                {
                    "@id": "d2e467",
                    "bcl:marginalnote": "Supervision and jurisdiction not affected",
                    "bcl:num": "6",
                    "bcl:text": {
                        "bcl:link": [
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96443_01",
                                "@xlink:type": "locator",
                                "in:doc": "Supreme Court Act"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96077_01",
                                "@xlink:type": "locator",
                                "in:doc": "Court of Appeal Act"
                            }
                        ],
                        "#text": "Neither this Act nor a regulation made under it affects the general supervision of the Chief Justice of the Supreme Court over the judges of the Supreme Court under the , or the jurisdiction of the Chief Justice of British Columbia under the ."
                    }
                },
                {
                    "@id": "d2e485",
                    "bcl:marginalnote": "Agreements",
                    "bcl:num": "7",
                    "bcl:text": "For the purpose of section 5 (e), the commission must not enter into an arrangement or agreement with Canada, or any other province, or any of their agencies, without the prior approval of the Lieutenant Governor in Council."
                },
                {
                    "@id": "d2e497",
                    "bcl:marginalnote": "Annual report",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e505",
                            "bcl:num": "1",
                            "bcl:text": "The commission must submit annually to the minister",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e514",
                                    "bcl:num": "a",
                                    "bcl:text": "a report respecting the operation of the commission for the preceding fiscal year of the government, and"
                                },
                                {
                                    "@id": "d2e523",
                                    "bcl:num": "b",
                                    "bcl:text": "a financial statement showing the financial operations of the commission in the preceding fiscal year of the government."
                                }
                            ]
                        },
                        {
                            "@id": "d2e533",
                            "bcl:num": "2",
                            "bcl:text": "The report and financial statement referred to in subsection (1) must be laid before the Legislature within 15 days after the opening of the first session in the following calendar year."
                        }
                    ]
                },
                {
                    "@id": "d2e543",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e551",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e563",
                            "bcl:num": "2",
                            "bcl:text": "The commission may, with the prior approval of the minister, make rules governing its own procedures."
                        }
                    ]
                }
            ]
        }
    }
}