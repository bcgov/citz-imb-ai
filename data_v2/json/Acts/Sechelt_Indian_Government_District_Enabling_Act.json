        "@id": "00_96416_01",
        "act:title": "Sechelt Indian Government District Enabling Act",
        "act:chapter": "416",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1527898742/96416/tlc96416_f",
            "act:tlc": "E3tlc96416"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions and interpretation",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e29",
                            "bcl:num": "1",
                            "bcl:text": "In this Act:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e38",
                                    "bcl:text": {
                                        "in:term": "Advisory Council",
                                        "#text": "means the Advisory Council established under section 2;"
                                    }
                                },
                                {
                                    "@id": "d2e47",
                                    "bcl:text": {
                                        "in:term": "District Council",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/S-6.6/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Sechelt Indian Band Self-Government Act"
                                        },
                                        "#text": "means the Sechelt Indian Government District Council established by the  (Canada);"
                                    }
                                },
                                {
                                    "@id": "d2e60",
                                    "bcl:text": {
                                        "in:term": "municipal benefit",
                                        "#text": "includes a service, a grant of money, a right or eligibility to participate in a program, and any other benefit available to a municipality under an enactment;"
                                    }
                                },
                                {
                                    "@id": "d2e69",
                                    "bcl:text": {
                                        "in:term": "Proclamation",
                                        "#text": "means a Proclamation made under this Act and issued under the Great Seal of the Province;"
                                    }
                                },
                                {
                                    "@id": "d2e78",
                                    "bcl:text": {
                                        "in:term": "referendum",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/S-6.6/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Sechelt Indian Band Self-Government Act"
                                        },
                                        "#text": "means a referendum held in accordance with the constitution of the Sechelt Indian Band established by the  (Canada);"
                                    }
                                },
                                {
                                    "@id": "d2e90",
                                    "bcl:text": {
                                        "in:term": "Sechelt Indian Government District",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/S-6.6/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Sechelt Indian Band Self-Government Act"
                                        },
                                        "#text": "means the Sechelt Indian Government District established by the  (Canada)."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e102",
                            "bcl:num": "2",
                            "bcl:text": "Nothing in this Act is to be construed as conferring on, or authorizing the conferral on, the District Council or Advisory Council of legislative powers."
                        }
                    ]
                },
                {
                    "@id": "d2e112",
                    "bcl:marginalnote": "Status of District Council and establishment of Advisory Council",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e120",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may by Proclamation issued under the Great Seal of the Province, recognize the District Council as the governing body of the Sechelt Indian Government District.",
                            "bcl:editorialnote": {
                                "in:em": "[Note: Proclamation issued recognizing the Sechelt Indian Government District Council as the governing body of the Sechelt Indian Government District (OIC 564/88).]"
                            }
                        },
                        {
                            "@id": "d2e131",
                            "bcl:num": "2",
                            "bcl:text": "If a Proclamation is issued, the Lieutenant Governor in Council must by regulation establish an Advisory Council to represent all the residents of the Sechelt Indian Government District."
                        }
                    ]
                },
                {
                    "@id": "d2e141",
                    "bcl:marginalnote": "Laws and bylaws",
                    "bcl:num": "3",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/S-6.6/",
                            "@xlink:type": "locator",
                            "in:doc": "Sechelt Indian Band Self-Government Act"
                        },
                        "#text": "If in the exercise of its powers of self-government conferred by the  (Canada) the District Council enacts laws or bylaws that a municipality has power to enact under an Act of British Columbia, those laws or bylaws are, for the purposes of this Act, deemed to have been enacted under the authority of that Act of British Columbia."
                    }
                },
                {
                    "@id": "d2e156",
                    "bcl:marginalnote": "Municipal benefits",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e164",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may by regulation declare that the District Council is entitled to or eligible for municipal benefits specified in the regulation."
                        },
                        {
                            "@id": "d2e173",
                            "bcl:num": "2",
                            "bcl:text": "The Lieutenant Governor in Council may prescribe requirements to be met by the District Council as a condition of being entitled to or eligible for a municipal benefit and, where the Lieutenant Governor in Council considers it necessary or desirable, may, for this purpose, make applicable a provision of an enactment."
                        },
                        {
                            "@id": "d2e182",
                            "bcl:num": "3",
                            "bcl:text": "The Lieutenant Governor in Council may by regulation",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e192",
                                    "bcl:num": "a",
                                    "bcl:text": "vary or withdraw the entitlement or eligibility of the District Council to or for a municipal benefit, or"
                                },
                                {
                                    "@id": "d2e201",
                                    "bcl:num": "b",
                                    "bcl:text": "specify an additional municipal benefit to which the District Council is entitled or for which it is eligible."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e211",
                    "bcl:marginalnote": "Suspension of taxation under other Acts",
                    "bcl:num": "5",
                    "bcl:text": "If a Proclamation has been issued and the District Council desires to provide services in respect of the Sechelt Indian Government District of a nature similar to services provided by a municipality, the Lieutenant Governor in Council may by regulation, for the purpose of assisting the District Council to provide those services, suspend, to the extent and subject to conditions the Lieutenant Governor in Council considers necessary or desirable, the liability of persons to taxation in respect of their interests in lands in the Sechelt Indian Government District under the following Acts:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e222",
                            "bcl:num": "a",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/03026_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Community Charter"
                                },
                                "#text": ";"
                            }
                        },
                        {
                            "@id": "d2e234",
                            "bcl:num": "b",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/r15001_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Local Government Act"
                                },
                                "#text": ";"
                            }
                        },
                        {
                            "@id": "d2e247",
                            "bcl:num": "c",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96448_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Taxation (Rural Area) Act"
                                },
                                "#text": "."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e261",
                    "bcl:marginalnote": "Approving officers",
                    "bcl:num": "6",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96250_00",
                            "@xlink:type": "locator",
                            "in:doc": "Land Title Act"
                        },
                        "#text": "A person appointed as an approving officer by the Sechelt Indian Government District may, with respect to land in that district, exercise the jurisdiction conferred on an approving officer by the , a regulation under it or by any other enactment."
                    }
                },
                {
                    "@id": "d2e276",
                    "bcl:marginalnote": "Repeal and continuation",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e284",
                            "bcl:num": "1",
                            "bcl:text": "This Act is repealed on June 30, 2006."
                        },
                        {
                            "@id": "d2e293",
                            "bcl:num": "2",
                            "bcl:text": [
                                "Subsection (1) does not apply if the Lieutenant Governor in Council",
                                "and this Act is repealed on the expiration of the period so prescribed."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e302",
                                    "bcl:num": "a",
                                    "bcl:text": "is satisfied that a referendum held during the year 2004 approves the continuation of this Act in force after June 30, 2006, and"
                                },
                                {
                                    "@id": "d2e312",
                                    "bcl:num": "b",
                                    "bcl:text": "prescribes a further period during which this Act continues in force,"
                                }
                            ]
                        }
                    ],
                    "bcl:editorialnote": {
                        "in:em": "[Note: See B.C. Reg. 302/2005, prescribing a further period of 20 years from June 30, 2006. Act continues in force until repealed on June 30, 2026.]"
                    }
                },
                {
                    "@id": "d2e334",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e342",
                            "bcl:num": "1",
                            "bcl:text": "Nothing in this section limits the scope of section 2 (2), 4 or 5, and nothing in those sections limits the scope of this section."
                        },
                        {
                            "@id": "d2e351",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                            }
                        },
                        {
                            "@id": "d2e363",
                            "bcl:num": "3",
                            "bcl:text": "Without limiting subsection (2), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e373",
                                    "bcl:num": "a",
                                    "bcl:text": "facilitating the exercise and discharge by the District Council of powers, duties and functions analogous to those of a municipality;"
                                },
                                {
                                    "@id": "d2e382",
                                    "bcl:num": "b",
                                    "bcl:text": "delegating or entrusting to the District Council administrative duties, functions and responsibilities that the Lieutenant Governor in Council considers desirable and consistent with the local administration of municipal services;"
                                },
                                {
                                    "@id": "d2e391",
                                    "bcl:num": "c",
                                    "bcl:text": "for the purpose of assisting the District Council to exercise and discharge a power, duty, function or responsibility, making applicable in respect of the District Council a provision of an enactment;"
                                },
                                {
                                    "@id": "d2e400",
                                    "bcl:num": "d",
                                    "bcl:text": "appointing or providing for the appointment of the initial members of the Advisory Council and for election of their successors;"
                                },
                                {
                                    "@id": "d2e409",
                                    "bcl:num": "e",
                                    "bcl:text": "authorizing and empowering the Advisory Council to receive from the District Council, and to expend, money required for the conduct of elections and for the conduct of the business of the Advisory Council;"
                                },
                                {
                                    "@id": "d2e418",
                                    "bcl:num": "f",
                                    "bcl:text": "conferring on the Advisory Council any powers, duties and functions considered necessary or advisable to carry out its purpose as an advisory body to the District Council."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}