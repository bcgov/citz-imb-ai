{
    "act:act": {
        "@xmlns:act": "http://www.gov.bc.ca/2013/legislation/act",
        "@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance",
        "@xmlns:bcl": "http://www.gov.bc.ca/2013/bclegislation",
        "@xmlns:xlink": "http://www.w3.org/1999/xlink",
        "@xmlns:in": "http://www.qp.gov.bc.ca/2013/inline",
        "@xmlns:fun": "http://www.bclaws.ca/xslt/functions",
        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96312_01",
        "act:title": "Miscellaneous Registrations Act, 1992",
        "act:chapter": "312",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1325524918/96312/tlc96312_f",
            "act:tlc": "tlc96312"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "claim",
                                "#text": "has the meaning given in a regulation made under this\n          Act;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "financing change statement",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96359_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Personal Property Security Act"
                                },
                                "#text": "has the meaning prescribed under the\n             or this Act;"
                            }
                        },
                        {
                            "@id": "d2e48",
                            "bcl:text": {
                                "in:term": "financing statement",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e57",
                                    "bcl:num": "a",
                                    "bcl:text": "[Repealed 2003-96-51.]"
                                },
                                {
                                    "@id": "d2e66",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96359_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Personal Property\n                Security Act"
                                        },
                                        "#text": "data authorized by a regulation prescribed under the  or this Act to be transmitted electronically,\n            directly to the computer data base of the registry to effect a registration;"
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e78",
                            "bcl:text": {
                                "in:term": "holder",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e87",
                                    "bcl:num": "a",
                                    "bcl:text": "a person identified on a financing statement as having a claim, or"
                                },
                                {
                                    "@id": "d2e96",
                                    "bcl:num": "b",
                                    "bcl:text": "a person who has issued a notice or order defined as a claim by a regulation\n            made under this Act;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e106",
                            "bcl:text": {
                                "in:term": "registrar",
                                "#text": "means the registrar of the personal property\n          registry;"
                            }
                        },
                        {
                            "@id": "d2e115",
                            "bcl:text": {
                                "in:term": "registry",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96359_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Personal Property Security Act"
                                },
                                "#text": "means the personal property registry established under\n          the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e128",
                    "bcl:marginalnote": "Registration of claims",
                    "bcl:num": "2",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96359_01",
                            "@xlink:type": "locator",
                            "in:doc": "Personal Property Security Act"
                        },
                        "#text": "A person may register a claim respecting personal property in the registry by\n        registering a financing statement in accordance with the regulations made under the\n           and this Act."
                    }
                },
                {
                    "@id": "d2e143",
                    "bcl:marginalnote": "Registration of multiple interests",
                    "bcl:num": "3",
                    "bcl:text": "A single registration may relate to more than one claim."
                },
                {
                    "@id": "d2e155",
                    "bcl:marginalnote": {
                        "in:doc": "Personal Property Security\n        Act",
                        "#text": "Application of"
                    },
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e165",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96359_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Personal\n              Property Security Act"
                                },
                                "#text": "Sections 42\n            (5), 43 (1) to (3), (12) and (13), 44, 46 (1), 48 and 54 of the  apply to registrations under this\n          Act."
                            }
                        },
                        {
                            "@id": "d2e177",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96359_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Personal Property\n              Security Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96359_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Personal Property Security Act"
                                    }
                                ],
                                "#text": "For the purpose of applying the sections of the  referred to in subsection (1), a reference to\n          \"debtor\" in the  must be\n          read as a reference to a person who owns personal property that is subject to a\n          claim."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e193",
                    "bcl:marginalnote": "Registration has no effect",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e201",
                            "bcl:num": "1",
                            "bcl:text": "Registration under this Act does not affect the priority of an interest in\n          personal property unless another enactment of British Columbia or Canada provides\n          otherwise."
                        },
                        {
                            "@id": "d2e210",
                            "bcl:num": "2",
                            "bcl:text": "Registration under this Act of a financing statement in the registry is not\n          express, constructive or implied notice or knowledge of its contents, or of the claim to\n          which it relates, to any person unless another enactment of British Columbia or Canada\n          provides otherwise."
                        }
                    ]
                },
                {
                    "@id": "d2e221",
                    "bcl:marginalnote": "When does a registration have to be discharged?",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e229",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96359_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Personal Property Security Act"
                                },
                                "#text": "If a claim that was registered under this Act ceases to exist, the holder must\n          discharge the registration within one\u00a0month of the claim ceasing to exist, by registering\n          a form prescribed under the  or this\n          Act."
                            }
                        },
                        {
                            "@id": "d2e241",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96359_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Personal Property\n              Security Act"
                                },
                                "#text": "If the registration relates to more than one claim, the holder must partially\n          discharge the registration by discharging that part of the registration that relates to\n          the claim that has ceased to exist within one month of the claim ceasing to exist, by\n          registering a form prescribed under the  or this Act."
                            }
                        },
                        {
                            "@id": "d2e253",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96359_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Personal Property Security Act"
                                },
                                "#text": "If the holder does not comply with subsection (1) or (2), a person\n          with an interest in the personal property against which the claim is registered may\n          require the holder to discharge the registration by giving a written demand in a form\n          prescribed under the  or this\n          Act."
                            }
                        },
                        {
                            "@id": "d2e266",
                            "bcl:num": "4",
                            "bcl:text": "The demand may be given to the holder",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e275",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96359_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Personal Property\n                Security Act"
                                        },
                                        "#text": "in accordance with section 72 of the , or"
                                    }
                                },
                                {
                                    "@id": "d2e287",
                                    "bcl:num": "b",
                                    "bcl:text": "by registered mail addressed to the address of the holder as it appears on the\n            financing statement."
                                }
                            ]
                        },
                        {
                            "@id": "d2e296",
                            "bcl:num": "5",
                            "bcl:text": "If the holder fails to discharge or partially discharge the registration as\n          required by subsection (1) or (2), a person making the demand under subsection (3)\n          may apply to a court having jurisdiction for an order directing that the registration be\n          discharged or partially discharged."
                        },
                        {
                            "@id": "d2e305",
                            "bcl:num": "6",
                            "bcl:text": "No fee or expense may be charged and no amount may be accepted by the holder for\n          compliance with this section, unless the charge is agreed to by the parties before the\n          demand is made."
                        }
                    ]
                },
                {
                    "@id": "d2e315",
                    "bcl:marginalnote": "Removal of information from records of registry",
                    "bcl:num": "7",
                    "bcl:text": "The registrar may remove information from the records of the registry",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e326",
                            "bcl:num": "a",
                            "bcl:text": "when the registration is no longer effective,"
                        },
                        {
                            "@id": "d2e335",
                            "bcl:num": "b",
                            "bcl:text": "on the receipt of a prescribed form discharging or partially discharging the\n          registration, and"
                        },
                        {
                            "@id": "d2e345",
                            "bcl:num": "c",
                            "bcl:text": "on the receipt of a court order compelling the discharge or partial discharge of a\n          registration."
                        }
                    ]
                },
                {
                    "@id": "d2e355",
                    "bcl:marginalnote": "What limitations are there on the liability of the\n        government?",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e363",
                            "bcl:num": "1",
                            "bcl:text": "The government is not liable either directly or vicariously for loss or damage\n          suffered by a person because of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e372",
                                    "bcl:num": "a",
                                    "bcl:text": [
                                        "verbal advice given by an agent or employee of the government\n            respecting",
                                        "unless the person who brings the action proves that the agent or employee was\n            not acting in good faith, or"
                                    ],
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e381",
                                            "bcl:num": "i",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/96359_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Personal Property Security Act"
                                                },
                                                "#text": "this Act, the  or a\n              regulation made under either Act, or"
                                            }
                                        },
                                        {
                                            "@id": "d2e394",
                                            "bcl:num": "ii",
                                            "bcl:text": "the operation of the registry"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e406",
                                    "bcl:num": "b",
                                    "bcl:text": "failure to register or to register correctly data authorized under a regulation\n            to be transmitted electronically, directly to the computer data base of the registry to\n            effect a registration."
                                }
                            ]
                        },
                        {
                            "@id": "d2e415",
                            "bcl:num": "2",
                            "bcl:text": "If an action is brought against the government for the recovery of loss or damage\n          that results from the failure of the registrar to register a claim submitted for\n          registration, it is a defence to the action that the failure to register was\n          because",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e424",
                                    "bcl:num": "a",
                                    "bcl:text": "the applicant did not pay a prescribed fee, if any, for registration,"
                                },
                                {
                                    "@id": "d2e433",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96359_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Personal Property Security Act"
                                        },
                                        "#text": "the registrar had refused to register due to circumstances referred to in\n            section\u00a042\u00a0(5) of the ,\n            or"
                                    }
                                },
                                {
                                    "@id": "d2e446",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96359_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Personal Property Security Act"
                                        },
                                        "#text": "the registrar had refused to register for a reason referred to in section 43 (12) of\n            the ."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e458",
                            "bcl:num": "3",
                            "bcl:text": "Nothing in this section limits any defences that would be available to the\n          government in the absence of this section."
                        }
                    ]
                },
                {
                    "@id": "d2e468",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e476",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041\n          of the ."
                            }
                        },
                        {
                            "@id": "d2e488",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may\n          make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e497",
                                    "bcl:num": "a",
                                    "bcl:text": "defining \"claim\";"
                                },
                                {
                                    "@id": "d2e507",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96359_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Personal Property\n                Security Act"
                                        },
                                        "#text": "respecting matters set out in section\u00a076 of the  with the necessary changes so that they apply to\n            this Act;"
                                    }
                                },
                                {
                                    "@id": "d2e519",
                                    "bcl:num": "c",
                                    "bcl:text": "requiring a holder to give a prescribed person a copy of a verification\n            statement or a copy of a financing statement in a prescribed manner and within a\n            prescribed time;"
                                },
                                {
                                    "@id": "d2e528",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96359_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Personal Property\n                Security Act"
                                        },
                                        "#text": "applying regulations made under the  to this Act."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e540",
                            "bcl:num": "3",
                            "bcl:text": "A regulation made under subsection (1) or (2) may be made in respect of\n          different classes of persons or transactions."
                        },
                        {
                            "@id": "d2e549",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96359_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Personal\n              Property Security Act"
                                },
                                "#text": "Nothing in this section affects the power to make regulations under the ."
                            }
                        }
                    ]
                }
            ]
        }
    }
}