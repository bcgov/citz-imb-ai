        "@id": "15012",
        "act:title": "BC Transportation Financing Authority Transit Assets and Liabilities Act",
        "act:chapter": "12",
        "act:yearenacted": "2015",
        "act:assentedto": "May 14, 2015",
        "act:currency": {
            "act:tlcDirPath": "1944036832/15012act/15012tlc",
            "act:tlc": "E3tlc15012"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d0e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d0e29",
                            "bcl:text": {
                                "in:term": "asset",
                                "#text": "includes a right and property;"
                            }
                        },
                        {
                            "@id": "d0e37",
                            "bcl:text": {
                                "in:term": "BC Transit",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96038_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "British Columbia Transit Act"
                                },
                                "#text": "means British Columbia Transit continued under section 2 (1) of the ;"
                            }
                        },
                        {
                            "@id": "d0e49",
                            "bcl:text": {
                                "in:term": "liability",
                                "#text": "includes an obligation;"
                            }
                        },
                        {
                            "@id": "d0e57",
                            "bcl:text": {
                                "in:term": "record",
                                "#text": "includes an authorization or other instrument issued by a regulatory body;"
                            }
                        },
                        {
                            "@id": "d0e65",
                            "bcl:text": {
                                "in:term": "regional transportation system",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/98030_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "South Coast British Columbia Transportation Authority Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d0e77",
                            "bcl:text": {
                                "in:term": "RTP",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/02057_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Business Corporations Act"
                                },
                                "#text": "means Rapid Transit Project 2000 Ltd., a company under the ;"
                            }
                        },
                        {
                            "@id": "d0e89",
                            "bcl:text": {
                                "in:term": "TFA",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04044_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Transportation Act"
                                },
                                "#text": "means the BC Transportation Financing Authority continued under section\u00a025 (1) of the ;"
                            }
                        },
                        {
                            "@id": "d0e101",
                            "bcl:text": {
                                "in:term": "transportation service region",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/98030_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "South Coast British Columbia Transportation Authority Act"
                                },
                                "#text": "has the same meaning as in the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d0e114",
                    "bcl:marginalnote": "Transfer from RTP",
                    "bcl:num": "2",
                    "bcl:text": "All the assets and liabilities of RTP are transferred to the TFA."
                },
                {
                    "@id": "d0e126",
                    "bcl:marginalnote": "Transfer from BC Transit",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d0e134",
                            "bcl:num": "1",
                            "bcl:text": "The following assets and liabilities of BC Transit are transferred to the TFA:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e142",
                                    "bcl:num": "a",
                                    "bcl:text": "assets that are located in the transportation service region;"
                                },
                                {
                                    "@id": "d0e151",
                                    "bcl:num": "b",
                                    "bcl:text": "assets that form part of or are held for the purposes of the regional transportation system;"
                                },
                                {
                                    "@id": "d0e160",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/98030_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "South Coast British Columbia Transportation Authority Act"
                                        },
                                        "#text": "assets that are used by the South Coast British Columbia Transportation Authority or its subsidiaries as defined in the ;"
                                    }
                                },
                                {
                                    "@id": "d0e173",
                                    "bcl:num": "d",
                                    "bcl:text": "liabilities that are related to the assets that are transferred under this subsection to the TFA."
                                }
                            ]
                        },
                        {
                            "@id": "d0e183",
                            "bcl:num": "2",
                            "bcl:text": "The assets and liabilities transferred under subsection (1) do not include any asset or liability excluded",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e191",
                                    "bcl:num": "a",
                                    "bcl:text": "by an order made under subsection (4) of this section, or"
                                },
                                {
                                    "@id": "d0e200",
                                    "bcl:num": "b",
                                    "bcl:text": "by a regulation made under section 10 (4)."
                                }
                            ]
                        },
                        {
                            "@id": "d0e210",
                            "bcl:num": "3",
                            "bcl:text": "The assets and liabilities transferred under subsection (1) include any asset or liability included by a regulation made under section 10 (4)."
                        },
                        {
                            "@id": "d0e219",
                            "bcl:num": "4",
                            "bcl:text": "The minister may, by order made after this Act receives Royal Assent and before this Act comes into force, exclude from the transfer under subsection (1) any asset or liability of BC Transit."
                        }
                    ]
                },
                {
                    "@id": "d0e229",
                    "bcl:marginalnote": "Vesting and assumption",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d0e237",
                            "bcl:num": "1",
                            "bcl:text": "An asset that is transferred under this Act to the TFA is also vested in the TFA, and a liability that is transferred under this Act to the TFA is also assumed by the TFA."
                        },
                        {
                            "@id": "d0e246",
                            "bcl:num": "2",
                            "bcl:text": "Any reference in this Act or the regulations to a transfer of an asset is also a reference to the vesting of the asset, and any reference in this Act or the regulations to a transfer of a liability is also a reference to the assumption of the liability."
                        }
                    ]
                },
                {
                    "@id": "d0e256",
                    "bcl:marginalnote": "Special lease continued",
                    "bcl:num": "5",
                    "bcl:text": "The lease granted under Order in Council 399/99, as amended by Orders in Council\u00a01358/99 and 107/2003, to the Greater Vancouver Transportation Authority, now known as the South Coast British Columbia Transportation Authority,",
                    "bcl:paragraph": [
                        {
                            "@id": "d0e267",
                            "bcl:num": "a",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/98030_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "South Coast British Columbia Transportation Authority Act"
                                },
                                "#text": "is continued, despite the repeal of section 38 (8) of the , as a lease between the TFA and the South Coast British Columbia Transportation Authority, and"
                            }
                        },
                        {
                            "@id": "d0e276",
                            "bcl:num": "b",
                            "bcl:text": "may be amended, renewed or terminated without the approval of the Lieutenant Governor in Council."
                        }
                    ]
                },
                {
                    "@id": "d0e286",
                    "bcl:marginalnote": "Effect of transfer",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d0e294",
                            "bcl:num": "1",
                            "bcl:text": "Despite any other enactment, the transfer under this Act of assets and liabilities takes effect",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e302",
                                    "bcl:num": "a",
                                    "bcl:text": "without the execution or issue of any record,"
                                },
                                {
                                    "@id": "d0e311",
                                    "bcl:num": "b",
                                    "bcl:text": "without any registration or filing of this Act or any other record in or with any registry, office or court,"
                                },
                                {
                                    "@id": "d0e320",
                                    "bcl:num": "c",
                                    "bcl:text": "despite any prohibition on all or any part of the transfer,"
                                },
                                {
                                    "@id": "d0e329",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96250_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Land Title Act"
                                        },
                                        "#text": "whether or not a duplicate certificate of indefeasible title has been issued by the registrar under the , and"
                                    }
                                },
                                {
                                    "@id": "d0e342",
                                    "bcl:num": "e",
                                    "bcl:text": "despite any condition, including the absence of any consent or approval, that is or may be required for all or any part of the transfer."
                                }
                            ]
                        },
                        {
                            "@id": "d0e352",
                            "bcl:num": "2",
                            "bcl:text": "Despite any provision to the contrary in a record, the transfer under this Act to the TFA of an asset or liability does not constitute a breach or contravention of, or an event of default under, the record and, without limiting this, does not entitle any person who has an interest in the asset or liability to claim any damages, compensation, penalty, indemnity or other remedy."
                        }
                    ]
                },
                {
                    "@id": "d0e362",
                    "bcl:marginalnote": "References in records",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d0e370",
                            "bcl:num": "1",
                            "bcl:text": "A reference to RTP in any record that creates, evidences or otherwise relates to an asset or liability that is transferred under this Act to the TFA is deemed to be a reference to the TFA."
                        },
                        {
                            "@id": "d0e379",
                            "bcl:num": "2",
                            "bcl:text": "A reference to BC Transit in any record that creates, evidences or otherwise relates to an asset or liability that is transferred under this Act to the TFA is,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e387",
                                    "bcl:num": "a",
                                    "bcl:text": "if the whole of the asset or liability is transferred, deemed to be a reference to the TFA, and"
                                },
                                {
                                    "@id": "d0e396",
                                    "bcl:num": "b",
                                    "bcl:text": "if part of the asset or liability is transferred, deemed to be a reference to the TFA in respect of the part transferred."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d0e407",
                    "bcl:marginalnote": "Dealing with transferred assets and liabilities",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d0e415",
                            "bcl:num": "1",
                            "bcl:text": "In any record that deals with an asset or liability transferred under this Act, it is sufficient for all purposes to cite this Act as having effected the transfer to the TFA."
                        },
                        {
                            "@id": "d0e424",
                            "bcl:num": "2",
                            "bcl:text": "If an asset or liability transferred under this Act to the TFA is registered or recorded in the name of RTP or BC Transit, the TFA may, in its own name,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e432",
                                    "bcl:num": "a",
                                    "bcl:text": "effect a transfer, charge, encumbrance or dealing with the asset or liability, and"
                                },
                                {
                                    "@id": "d0e441",
                                    "bcl:num": "b",
                                    "bcl:text": "execute any record required to give effect to the transfer, charge, encumbrance or dealing."
                                }
                            ]
                        },
                        {
                            "@id": "d0e451",
                            "bcl:num": "3",
                            "bcl:text": [
                                "An official",
                                "must give the record the same effect as if it had been executed by RTP or BC Transit, as the case may be."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e459",
                                    "bcl:num": "a",
                                    "bcl:text": "who has authority over a registry or other office, including, without limitation, the personal property registry and a land title office, in which title to or an interest in an asset or liability is registered or recorded, and"
                                },
                                {
                                    "@id": "d0e468",
                                    "bcl:num": "b",
                                    "bcl:text": "who receives a record, referred to in subsection (2), executed by the TFA"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d0e482",
                    "bcl:marginalnote": "Delivery of BC Transit records",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d0e490",
                            "bcl:num": "1",
                            "bcl:text": "This section applies to records in the custody or under the control of BC Transit that relate to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e498",
                                    "bcl:num": "a",
                                    "bcl:text": "the assets and liabilities transferred under this Act to the TFA, or"
                                },
                                {
                                    "@id": "d0e507",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/98030_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "South Coast British Columbia Transportation Authority Act"
                                        },
                                        "#text": "the operation and maintenance of a rail transportation system, as defined in the , in the transportation service region."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d0e521",
                            "bcl:num": "2",
                            "bcl:text": "BC Transit must deliver its records or a copy of them to the TFA in accordance with the terms established by the TFA."
                        }
                    ]
                },
                {
                    "@id": "d0e531",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d0e539",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                            }
                        },
                        {
                            "@id": "d0e552",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e560",
                                    "bcl:num": "a",
                                    "bcl:text": "remedying any difficulty encountered in the transfer under this Act of assets or liabilities;"
                                },
                                {
                                    "@id": "d0e569",
                                    "bcl:num": "b",
                                    "bcl:text": "respecting any other matter or thing that the Lieutenant Governor in Council considers necessary or advisable to carry out the intent of this Act."
                                }
                            ]
                        },
                        {
                            "@id": "d0e579",
                            "bcl:num": "3",
                            "bcl:text": "For 3 years after the date this Act comes into force, a regulation made under subsection (2) may be made retroactive to a date not earlier than the date this Act comes into force and, if made retroactive, is deemed to have come into force on the date specified in the regulation."
                        },
                        {
                            "@id": "d0e588",
                            "bcl:num": "4",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may, for 3\u00a0years after the date this Act comes into force, make regulations excluding from or including in the transfer under section 3 (1) any asset or liability of BC Transit."
                        },
                        {
                            "@id": "d0e597",
                            "bcl:num": "5",
                            "bcl:text": "A regulation made under subsection (4) is retroactive to and is deemed to have come into force on the date this Act comes into force."
                        },
                        {
                            "@id": "d0e606",
                            "bcl:num": "6",
                            "bcl:text": "Despite the retroactive effect referred to in subsection (5), an asset or liability that is excluded or included by a regulation made under subsection (4) is subject to any rights acquired by a person after the date this Act comes into force."
                        },
                        {
                            "@id": "d0e615",
                            "bcl:num": "7",
                            "bcl:text": "In making a regulation under this section, the Lieutenant Governor in Council may make different regulations for different assets and liabilities or for different classes of assets and liabilities."
                        }
                    ]
                },
                {
                    "@id": "d0e625",
                    "bcl:marginalnote": "Later transfers",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d0e633",
                            "bcl:num": "1",
                            "bcl:text": "After the date this Act comes into force, if the minister considers it necessary or advisable for transportation purposes, the minister may, by order, transfer, with or without conditions,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e641",
                                    "bcl:num": "a",
                                    "bcl:text": "from the TFA to BC Transit any asset or liability that was transferred under this Act from BC Transit to the TFA, or"
                                },
                                {
                                    "@id": "d0e650",
                                    "bcl:num": "b",
                                    "bcl:text": "from BC Transit to the TFA any asset or liability."
                                }
                            ]
                        },
                        {
                            "@id": "d0e660",
                            "bcl:num": "2",
                            "bcl:text": "The provisions of this Act that apply to an asset or liability that is transferred under section 3 apply, with the necessary modifications, to a transfer under subsection (1) of this section."
                        },
                        {
                            "@id": "d0e669",
                            "bcl:num": "3",
                            "bcl:text": "The authority to make an order under subsection (1) ends 3 years after the date this Act comes into force."
                        }
                    ]
                },
                {
                    "@id": "d0e854",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "20",
                    "bcl:text": "This Act comes into force on the date that is 7 days after the date of Royal Assent."
                }
            ],
