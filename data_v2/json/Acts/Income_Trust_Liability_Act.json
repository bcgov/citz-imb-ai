        "@id": "00_06014_01",
        "act:title": "Income Trust Liability Act",
        "act:chapter": "14",
        "act:yearenacted": "2006",
        "act:assentedto": "March 30, 2006",
        "act:currency": {
            "act:tlcDirPath": "111685340/06014/tlc06014_f",
            "act:tlc": "E2tlc06014"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "British Columbia income trust",
                        "#text": "In this Act,  means a trust that is"
                    },
                    "bcl:paragraph": [
                        {
                            "@id": "d2e29",
                            "bcl:num": "a",
                            "bcl:text": "existing under a trust instrument governed by the laws of British Columbia, and"
                        },
                        {
                            "@id": "d2e38",
                            "bcl:num": "b",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96418_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Securities Act"
                                },
                                "#text": "a reporting issuer under the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e51",
                    "bcl:marginalnote": "Limited liability",
                    "bcl:num": "2",
                    "bcl:text": "Despite any express or implied indemnity of a trustee of a British Columbia income trust by a beneficiary of the trust, the beneficiary is not, as a beneficiary, liable for any act, default, obligation or liability of the trustee."
                },
                {
                    "@id": "d2e63",
                    "bcl:marginalnote": "Governing law",
                    "bcl:num": "3",
                    "bcl:text": "Without limiting the circumstances in which an income trust instrument may be governed by the laws of a particular jurisdiction, an income trust instrument is governed by the laws of the particular jurisdiction as provided in the income trust instrument."
                },
                {
                    "@id": "d2e75",
                    "bcl:marginalnote": "Retroactive effect",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e83",
                            "bcl:num": "1",
                            "bcl:text": "This Act must be applied to and must be given effect in every action or proceeding, whether commenced before, on or after the date on which this Act receives Royal Assent."
                        },
                        {
                            "@id": "d2e92",
                            "bcl:num": "2",
                            "bcl:text": "This Act must not be construed as lacking effect, whether retroactive or otherwise, in relation to any matter because it makes no specific reference to that matter."
                        }
                    ]
                },
                {
                    "@id": "d2e102",
                    "bcl:marginalnote": "Liability in other circumstances",
                    "bcl:num": "5",
                    "bcl:text": "This Act does not affect any liability of a beneficiary of a trust in any other circumstance."
                },
                {
                    "@id": "d2e115",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "6",
                    "bcl:text": "This Act comes into force on the date of Royal Assent."
                }
            ]
        }
    }
}