        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96301_01",
        "act:title": "Ministry of Health Act",
        "act:chapter": "301",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1325524918/96301/tlc96301_f",
            "act:tlc": "E2tlc96301"
        },
        "act:content": {
            "bcl:part": [
                {
                    "@id": "d2e15",
                    "bcl:num": "1",
                    "bcl:text": "General",
                    "bcl:section": [
                        {
                            "@id": "d2e24",
                            "bcl:marginalnote": "Ministry continued",
                            "bcl:num": "1",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e32",
                                    "bcl:num": "1",
                                    "bcl:text": "There is to be a ministry of the public service of British Columbia called the Ministry of Health."
                                },
                                {
                                    "@id": "d2e41",
                                    "bcl:num": "2",
                                    "bcl:text": "The minister is to preside over and be responsible to the Lieutenant Governor in Council for the direction of the ministry."
                                },
                                {
                                    "@id": "d2e50",
                                    "bcl:num": "3",
                                    "bcl:text": "The minister may establish branches or divisions of the ministry the minister considers advisable."
                                }
                            ]
                        },
                        {
                            "@id": "d2e60",
                            "bcl:marginalnote": "Deputy and employees",
                            "bcl:num": "2",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e68",
                                    "bcl:num": "1",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96385_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Service Act"
                                        },
                                        "#text": "Deputy ministers of the ministry and other employees required to carry out the ministry's business may be appointed under the ."
                                    }
                                },
                                {
                                    "@id": "d2e80",
                                    "bcl:num": "2",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96385_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Service Act"
                                        },
                                        "#text": "Despite the  but subject to the approval of the Lieutenant Governor in Council, the minister may engage and retain persons the minister considers necessary as consultants, experts or specialists, and may set their remuneration."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e93",
                            "bcl:marginalnote": "Agreements",
                            "bcl:num": "3",
                            "bcl:text": "The minister may, for the purposes of any Act under the minister's administration, enter into agreements with any person."
                        },
                        {
                            "@id": "d2e105",
                            "bcl:marginalnote": "Minister's duties",
                            "bcl:num": "4",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e113",
                                    "bcl:num": "1",
                                    "bcl:text": "The duties, powers and functions of the minister extend to and include all matters relating to health that",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e122",
                                            "bcl:num": "a",
                                            "bcl:text": "are assigned to the minister under any Act or by the Lieutenant Governor in Council, and"
                                        },
                                        {
                                            "@id": "d2e131",
                                            "bcl:num": "b",
                                            "bcl:text": "are not, by law or by order of the Lieutenant Governor in Council, assigned to another minister, ministry, branch or agency of the government."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e141",
                                    "bcl:num": "2",
                                    "bcl:text": "The minister may in writing delegate any or all of the minister's duties, powers and functions granted or imposed by any Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e152",
                            "bcl:marginalnote": "Purposes and functions of ministry",
                            "bcl:num": "5",
                            "bcl:text": "The ministry, under the minister's direction, has charge of all matters relating to public health and government operated health insurance programs."
                        },
                        {
                            "@id": "d2e164",
                            "bcl:marginalnote": "Repealed",
                            "bcl:num": "6",
                            "bcl:text": "[Repealed 2000-23-45.]"
                        },
                        {
                            "@id": "d2e176",
                            "bcl:marginalnote": "Power to make regulations",
                            "bcl:num": "7",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e191",
                            "bcl:marginalnote": "Appropriation",
                            "bcl:num": "8",
                            "bcl:text": "On the requisition of the minister, the Minister of Finance must pay money required for the administration or for any of the purposes of this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e203",
                    "bcl:num": "2",
                    "bcl:text": "Collection, Use and Disclosure of Personal Information",
                    "bcl:section": [
                        {
                            "@id": "d2e212",
                            "bcl:marginalnote": "Definitions",
                            "bcl:num": "9",
                            "bcl:text": "In this Part:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e223",
                                    "bcl:text": {
                                        "in:term": "health care body",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96165_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Freedom of Information and Protection of Privacy Act"
                                        },
                                        "#text": "has the same meaning as in the ;"
                                    }
                                },
                                {
                                    "@id": "d2e235",
                                    "bcl:text": {
                                        "in:term": "health enactment",
                                        "#text": "means"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e245",
                                            "bcl:num": "a",
                                            "bcl:text": "an enactment for which the minister is responsible, or"
                                        },
                                        {
                                            "@id": "d2e254",
                                            "bcl:num": "b",
                                            "bcl:text": "a prescribed enactment that deals with a matter relating to health;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e263",
                                    "bcl:text": {
                                        "in:term": "personal information",
                                        "#text": "means recorded information about an identifiable individual;"
                                    }
                                },
                                {
                                    "@id": "d2e272",
                                    "bcl:text": {
                                        "in:term": "public body",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96165_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Freedom of Information and Protection of Privacy Act"
                                        },
                                        "#text": "has the same meaning as in the ;"
                                    }
                                },
                                {
                                    "@id": "d2e284",
                                    "bcl:text": {
                                        "in:term": "stewardship purpose",
                                        "#text": "means any of the following purposes:"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e293",
                                            "bcl:num": "a",
                                            "bcl:text": "to develop, operate, monitor or evaluate a program or activity authorized under a health enactment;"
                                        },
                                        {
                                            "@id": "d2e303",
                                            "bcl:num": "b",
                                            "bcl:text": "to exercise powers or perform duties of the minister under an enactment;"
                                        },
                                        {
                                            "@id": "d2e312",
                                            "bcl:num": "c",
                                            "bcl:text": "to engage in health system planning, management, evaluation or improvement;"
                                        },
                                        {
                                            "@id": "d2e321",
                                            "bcl:num": "d",
                                            "bcl:text": "to conduct or facilitate research into health issues;"
                                        },
                                        {
                                            "@id": "d2e330",
                                            "bcl:num": "e",
                                            "bcl:text": "to monitor or evaluate a health care body;"
                                        },
                                        {
                                            "@id": "d2e339",
                                            "bcl:num": "f",
                                            "bcl:text": "a prescribed purpose."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e350",
                            "bcl:marginalnote": "Collection, use and disclosure of personal information",
                            "bcl:num": "10",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e358",
                                    "bcl:num": "1",
                                    "bcl:text": "Subject to subsection (4), if the minister is satisfied that the collection, use or disclosure of personal information is reasonably needed to fulfill a stewardship purpose, the minister may",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e367",
                                            "bcl:num": "a",
                                            "bcl:text": "collect personal information from a public body,"
                                        },
                                        {
                                            "@id": "d2e376",
                                            "bcl:num": "b",
                                            "bcl:text": "use personal information, and"
                                        },
                                        {
                                            "@id": "d2e386",
                                            "bcl:num": "c",
                                            "bcl:text": "disclose personal information to a public body."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e395",
                                    "bcl:num": "2",
                                    "bcl:text": "A public body that receives a request for personal information under this section must, if the public body has custody or control of the personal information, provide the personal information in the manner and form requested, and within the time requested."
                                },
                                {
                                    "@id": "d2e404",
                                    "bcl:num": "3",
                                    "bcl:text": "Nothing in this section limits the authority of a person to collect, use or disclose personal information as authorized under any enactment."
                                },
                                {
                                    "@id": "d2e413",
                                    "bcl:num": "4",
                                    "bcl:text": "The minister may not collect, use or disclose personal information under this section",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e422",
                                            "bcl:num": "a",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/08038_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "E-Health (Personal Health Information Access and Protection of Privacy) Act"
                                                },
                                                "#text": "through a health information bank established or designated under the  in a manner that would be inconsistent with"
                                            },
                                            "bcl:subparagraph": [
                                                {
                                                    "@id": "d2e434",
                                                    "bcl:num": "i",
                                                    "bcl:text": "a designation order made under that Act, or"
                                                },
                                                {
                                                    "@id": "d2e444",
                                                    "bcl:num": "ii",
                                                    "bcl:text": "the policies and procedures established under section 13 (2) of that Act by the data stewardship committee,"
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d2e453",
                                            "bcl:num": "a.1",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/12022_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Pharmaceutical Services Act"
                                                },
                                                "#text": "through prescribed information management technology within the meaning of the  in a manner that would be inconsistent with a provision of that Act or a regulation made under it, or"
                                            }
                                        },
                                        {
                                            "@id": "d2e465",
                                            "bcl:num": "b",
                                            "bcl:text": "in a manner that would be inconsistent with provisions respecting the collection, use or disclosure of personal information in a prescribed enactment."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e475",
                            "bcl:marginalnote": "Information-sharing agreements",
                            "bcl:num": "11",
                            "bcl:text": "Without limiting section 3, if the minister is satisfied that the collection, use or disclosure of personal information is reasonably needed to fulfill a stewardship purpose, the minister may enter into an information-sharing agreement with any person."
                        },
                        {
                            "@id": "d2e487",
                            "bcl:marginalnote": "Regulations respecting collection, use and disclosure of personal information",
                            "bcl:num": "12",
                            "bcl:text": "The Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e498",
                                    "bcl:num": "a",
                                    "bcl:text": "for the purposes of section 9,",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e507",
                                            "bcl:num": "i",
                                            "bcl:text": "prescribing enactments, by name or by class,"
                                        },
                                        {
                                            "@id": "d2e517",
                                            "bcl:num": "ii",
                                            "bcl:text": "prescribing further stewardship purposes, and"
                                        },
                                        {
                                            "@id": "d2e526",
                                            "bcl:num": "iii",
                                            "bcl:text": "defining a term used in the definition of \"stewardship purposes\";"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e535",
                                    "bcl:num": "b",
                                    "bcl:text": "prescribing enactments for the purposes of section 10 (4) (b)."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}