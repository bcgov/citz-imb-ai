        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_03018_01",
        "act:title": "Coalbed Gas Act",
        "act:chapter": "18",
        "act:yearenacted": "2003",
        "act:assentedto": "April 10, 2003",
        "act:currency": {
            "act:tlcDirPath": "781755088/03018/tlc03018_f",
            "act:tlc": "tlc03018"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": {
                                "in:term": "coal",
                                "#text": "means a combustible sedimentary rock, other than peat, composed of altered and hardened carbonized vegetable matter, but does not include coalbed gas;"
                            }
                        },
                        {
                            "@id": "d2e38",
                            "bcl:text": {
                                "in:term": "coal disposition",
                                "#text": "means a disposition of coal;"
                            }
                        },
                        {
                            "@id": "d2e48",
                            "bcl:text": {
                                "in:term": "coal owner",
                                "#text": "means a person who holds a coal tenure or a coal disposition;"
                            }
                        },
                        {
                            "@id": "d2e57",
                            "bcl:text": {
                                "in:term": "coal tenure",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04015_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Coal Act"
                                },
                                "#text": "means any lease or licence under the ;"
                            }
                        },
                        {
                            "@id": "d2e69",
                            "bcl:text": {
                                "in:term": "coalbed gas",
                                "#text": "means all substances"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e78",
                                    "bcl:num": "a",
                                    "bcl:text": "that can be recovered to the surface through a wellbore from subsurface coal deposits and any reservoirs in communication with the coal deposits, and"
                                },
                                {
                                    "@id": "d2e87",
                                    "bcl:num": "b",
                                    "bcl:text": "the volume of which, if measured at the surface immediately following that recovery, would be measured as a gas;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e96",
                            "bcl:text": {
                                "in:term": "disposition",
                                "#text": "means any patent, title, deed, notification, conveyance, agreement, transfer, surrender or other documents granting or reserving any right, title, estate or interest in fee simple to a parcel;"
                            }
                        },
                        {
                            "@id": "d2e106",
                            "bcl:text": {
                                "in:term": "natural gas",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96361_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Petroleum and Natural Gas Act"
                                },
                                "#text": "means natural gas as defined in the ;"
                            }
                        },
                        {
                            "@id": "d2e118",
                            "bcl:text": {
                                "in:term": "natural gas disposition",
                                "#text": "means a disposition of natural gas;"
                            }
                        },
                        {
                            "@id": "d2e127",
                            "bcl:text": {
                                "in:term": "natural gas owner",
                                "#text": "means a person who holds a natural gas tenure or natural gas disposition;"
                            }
                        },
                        {
                            "@id": "d2e136",
                            "bcl:text": {
                                "in:term": "natural gas tenure",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96361_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Petroleum and Natural Gas Act"
                                },
                                "#text": "means any lease, licence or permit under the  or other rights acquired under section 72 (2) of that Act in respect of petroleum and natural gas, or of natural gas only;"
                            }
                        },
                        {
                            "@id": "d2e148",
                            "bcl:text": {
                                "in:term": "parcel",
                                "#text": "means the area of land specified in"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e157",
                                    "bcl:num": "a",
                                    "bcl:text": "a coal tenure,"
                                },
                                {
                                    "@id": "d2e167",
                                    "bcl:num": "b",
                                    "bcl:text": "a natural gas tenure, or"
                                },
                                {
                                    "@id": "d2e176",
                                    "bcl:num": "c",
                                    "bcl:text": "a disposition from the Crown;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e185",
                            "bcl:text": {
                                "in:term": "surface owner",
                                "#text": ", in respect of a parcel, means a person who is the registered owner of the land surface."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e195",
                    "bcl:marginalnote": "Natural gas is a mineral",
                    "bcl:num": "2",
                    "bcl:text": "Natural gas must be considered to be and to have always been a mineral."
                },
                {
                    "@id": "d2e207",
                    "bcl:marginalnote": "Coalbed gas is natural gas",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e215",
                            "bcl:num": "1",
                            "bcl:text": "Coalbed gas must be considered to be and to have always been natural gas."
                        },
                        {
                            "@id": "d2e224",
                            "bcl:num": "2",
                            "bcl:text": "This section does not affect a provision contained in any disposition subsequent to the original disposition from the Crown by which a natural gas owner of a parcel specifically grants coalbed gas rights to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e233",
                                    "bcl:num": "a",
                                    "bcl:text": "the coal owner in that parcel, or"
                                },
                                {
                                    "@id": "d2e243",
                                    "bcl:num": "b",
                                    "bcl:text": "any person holding coal rights in that parcel through the coal owner."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e253",
                    "bcl:marginalnote": "Natural gas tenure includes coalbed gas",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e261",
                            "bcl:num": "1",
                            "bcl:text": "A natural gas tenure, whether made before or after the coming into force of this Act, includes any coalbed gas rights."
                        },
                        {
                            "@id": "d2e270",
                            "bcl:num": "2",
                            "bcl:text": "A coal tenure, whether made before or after the coming into force of this Act, does not include any coalbed gas rights."
                        }
                    ]
                },
                {
                    "@id": "d2e280",
                    "bcl:marginalnote": "Minister may issue natural gas tenure of coalbed gas rights",
                    "bcl:num": "5",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96361_01",
                            "@xlink:type": "locator",
                            "in:doc": "Petroleum and Natural Gas Act"
                        },
                        "#text": "Under section 72 (2) of the , the minister may issue a natural gas tenure of coalbed gas rights to any person with respect to specified coal deposits underlying a parcel."
                    }
                },
                {
                    "@id": "d2e296",
                    "bcl:marginalnote": "No compensation or right of action",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e304",
                            "bcl:num": "1",
                            "bcl:text": "A person has no right of action and must not commence or maintain proceedings, as a result of the enactment of this Act or the exercise by the minister of powers referred to in section\u00a05 or\u00a07,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e313",
                                    "bcl:num": "a",
                                    "bcl:text": "to claim damages or compensation of any kind from the government, or"
                                },
                                {
                                    "@id": "d2e322",
                                    "bcl:num": "b",
                                    "bcl:text": "to obtain a declaration that damages or compensation are payable by the government."
                                }
                            ]
                        },
                        {
                            "@id": "d2e332",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96125_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Expropriation Act"
                                },
                                "#text": "For all purposes, including for the purposes of the , no expropriation or injurious affection occurs as a result of the enactment of this Act or the exercise by the minister of powers referred to in section\u00a05 or\u00a07."
                            }
                        },
                        {
                            "@id": "d2e344",
                            "bcl:num": "3",
                            "bcl:text": "The natural gas owner or a person who has acquired coalbed gas rights from the natural gas owner has no right of action and must not commence or maintain proceedings against the government, the surface owner or the coal owner for damages or compensation because of extraction, production or removal of coalbed gas if that extraction, production or removal occurred before the coming into force of this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e354",
                    "bcl:marginalnote": "Exception for safety reasons",
                    "bcl:num": "7",
                    "bcl:text": "If the minister is satisfied that it is necessary to do so for safety reasons, the minister may, by regulation, authorize coal owners or the holders of Crown coal dispositions to vent or dispose of coal bed gas as directed."
                }
            ]
        }
    }
}