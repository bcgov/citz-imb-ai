{
    "act:act": {
        "@xmlns:act": "http://www.gov.bc.ca/2013/legislation/act",
        "@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance",
        "@xmlns:bcl": "http://www.gov.bc.ca/2013/bclegislation",
        "@xmlns:xlink": "http://www.w3.org/1999/xlink",
        "@xmlns:in": "http://www.qp.gov.bc.ca/2013/inline",
        "@xmlns:fun": "http://www.bclaws.ca/xslt/functions",
        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96281_01",
        "act:title": "Manufactured Home Tax Act",
        "act:chapter": "281",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1325524918/96281/tlc96281_f",
            "act:tlc": "E3tlc96281"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": [
                                {
                                    "in:term": "manufactured home",
                                    "#text": "means a structure, whether or not ordinarily equipped with wheels, that is designed, constructed or manufactured"
                                },
                                "unless exempted under this Act;"
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e35",
                                    "bcl:num": "a",
                                    "bcl:text": "to be moved from one place to another by being towed or carried, and"
                                },
                                {
                                    "@id": "d2e45",
                                    "bcl:num": "b",
                                    "bcl:text": "to provide",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e54",
                                            "bcl:num": "i",
                                            "bcl:text": "a dwelling house or premises,"
                                        },
                                        {
                                            "@id": "d2e63",
                                            "bcl:num": "ii",
                                            "bcl:text": "a business office or premises,"
                                        },
                                        {
                                            "@id": "d2e72",
                                            "bcl:num": "iii",
                                            "bcl:text": "accommodation for any purpose other than those referred to in subparagraphs (i) and (ii),"
                                        },
                                        {
                                            "@id": "d2e81",
                                            "bcl:num": "iv",
                                            "bcl:text": "shelter for machinery or other equipment, or"
                                        },
                                        {
                                            "@id": "d2e90",
                                            "bcl:num": "v",
                                            "bcl:text": "storage, workshop, repair, construction or manufacturing facilities,"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e103",
                            "bcl:text": {
                                "in:term": "manufactured home park",
                                "#text": "means land used or occupied by a person for the purpose of"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e112",
                                    "bcl:num": "a",
                                    "bcl:text": "providing space for the accommodation of one or more manufactured homes, and"
                                },
                                {
                                    "@id": "d2e121",
                                    "bcl:num": "b",
                                    "bcl:text": "imposing a charge or rental for the use of that space;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e130",
                            "bcl:text": {
                                "in:term": "owner",
                                "#text": "includes a person in possession of a manufactured home under a contract by which the person may become the owner on full compliance with the terms of the contract."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e140",
                    "bcl:marginalnote": "Manufactured home an improvement",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d1e162",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96020_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Assessment Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/03026_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Community Charter"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/99002_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Nisg\u0331a'a Final Agreement Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96412_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "School Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96448_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Taxation (Rural Area) Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/07038_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Treaty First Nation Taxation Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/vanch_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Vancouver Charter"
                                    }
                                ],
                                "#text": "Subject to sections 3 and 4, a manufactured home, whether or not it falls within the definition of \"improvement\" under the , , , , , ,  or any other Act, is an improvement"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e202",
                                    "bcl:num": "a",
                                    "bcl:text": "for the purposes of real property assessment in Nisg\u0331a'a Lands, and"
                                },
                                {
                                    "@id": "d1e214",
                                    "bcl:num": "b",
                                    "bcl:text": "for the purposes of real property assessment and taxation elsewhere."
                                }
                            ]
                        },
                        {
                            "@id": "d1e224",
                            "bcl:num": "2",
                            "bcl:text": "A manufactured home that is an improvement under subsection (1) must be assessed under subsection (1) (a) or assessed and taxed under subsection (1) (b), as applicable, in the name of the owner of the land on which the manufactured home is located at the time of the assessment."
                        }
                    ]
                },
                {
                    "@id": "d2e171",
                    "bcl:marginalnote": "Manufactured home parks",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e179",
                            "bcl:num": "1",
                            "bcl:text": [
                                {
                                    "bcl:link": {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96020_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Assessment Act"
                                    },
                                    "#text": "Despite section 2, if a manufactured home is located within a manufactured home park and the owner of the manufactured home is not the owner of the manufactured home park, the manufactured home, together with any improvement as defined in the  that"
                                },
                                "must be assessed, or assessed and taxed, as applicable, under section 2 in the name of the owner of the manufactured home."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e191",
                                    "bcl:num": "a",
                                    "bcl:text": "is either",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e200",
                                            "bcl:num": "i",
                                            "bcl:text": "attached to the manufactured home, or"
                                        },
                                        {
                                            "@id": "d2e210",
                                            "bcl:num": "ii",
                                            "bcl:text": "ancillary to the use of the manufactured home, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e219",
                                    "bcl:num": "b",
                                    "bcl:text": "is not owned or leased by",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e228",
                                            "bcl:num": "i",
                                            "bcl:text": "the owner of the manufactured home park, or"
                                        },
                                        {
                                            "@id": "d2e237",
                                            "bcl:num": "ii",
                                            "bcl:text": "a person other than the owner of the manufactured home park who is using or occupying the land for the purpose stated in the definition of manufactured home park,"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e249",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96020_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Assessment Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/03026_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Community Charter"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96412_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "School Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96448_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Taxation (Rural Area) Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/07038_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Treaty First Nation Taxation Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/vanch_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Vancouver Charter"
                                    }
                                ],
                                "#text": "For subsection (1), the owner of the manufactured home is an owner of an improvement within the meaning of the , , , ,\u00a0 or , as the case may be, and is liable for the taxes imposed under the relevant Act."
                            }
                        },
                        {
                            "@id": "d2e278",
                            "bcl:num": "3",
                            "bcl:text": [
                                "If",
                                "is assessed or assessed and taxed under subsection (1) in the name of the owner of the manufactured home, the manufactured home and the improvement must not be assessed or assessed and taxed under section\u00a02 as an improvement in the name of the owner of the land."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e287",
                                    "bcl:num": "a",
                                    "bcl:text": "a manufactured home, or"
                                },
                                {
                                    "@id": "d2e296",
                                    "bcl:num": "b",
                                    "bcl:text": "a manufactured home and any improvement"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e309",
                    "bcl:marginalnote": "Exemptions",
                    "bcl:num": "4",
                    "bcl:text": "This Act does not apply to manufactured homes",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e320",
                            "bcl:num": "a",
                            "bcl:text": "owned by the government or by a municipality and occupied by or on behalf of the government or the municipality,"
                        },
                        {
                            "@id": "d2e329",
                            "bcl:num": "a.1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/07038_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Treaty First Nation Taxation Act"
                                },
                                "#text": "owned by a taxing treaty first nation, as defined in the , and occupied by or on behalf of the taxing treaty first nation,"
                            }
                        },
                        {
                            "@id": "d1e441",
                            "bcl:num": "a.2",
                            "bcl:text": "owned and occupied by or on behalf of one or more of the Nisg\u0331a'a Nation and a Nisg\u0331a'a Village,"
                        },
                        {
                            "@id": "d2e342",
                            "bcl:num": "b",
                            "bcl:text": "which are held in storage or which form part of the inventory of a manufacturer or dealer,"
                        },
                        {
                            "@id": "d2e351",
                            "bcl:num": "c",
                            "bcl:text": "licensed and equipped to travel on a public highway, that are occupied by a genuine tourist and are located within a manufactured home park for a period of less than 60\u00a0days, or"
                        },
                        {
                            "@id": "d2e360",
                            "bcl:num": "d",
                            "bcl:text": "that are exempted by regulations."
                        }
                    ]
                },
                {
                    "@id": "d2e370",
                    "bcl:marginalnote": "Tax collection",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e378",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/03026_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Community Charter"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/r15001_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Local Government Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/vanch_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Vancouver Charter"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96412_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "School Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96448_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Taxation (Rural Area) Act"
                                    }
                                ],
                                "#text": "The taxes assessed in respect of a manufactured home under section 2 or 3 are recoverable in any manner in which taxes are recoverable under the , , ,  or ."
                            }
                        },
                        {
                            "@id": "d2e402",
                            "bcl:num": "2",
                            "bcl:text": "In the case of taxes assessed under section 3,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e411",
                                    "bcl:num": "a",
                                    "bcl:text": "the land comprising the manufactured home park is not subject to tax sale or forfeiture, and"
                                },
                                {
                                    "@id": "d2e421",
                                    "bcl:num": "b",
                                    "bcl:text": "the arrears of taxes or delinquent taxes do not constitute a lien on the land."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e432",
                    "bcl:marginalnote": "Information",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e440",
                            "bcl:num": "1",
                            "bcl:text": "The owner or operator of a manufactured home park must, on demand, furnish to the assessor having jurisdiction, or an agent authorized in writing, full information respecting the owner of each manufactured home in the manufactured home park."
                        },
                        {
                            "@id": "d2e449",
                            "bcl:num": "2",
                            "bcl:text": "In addition to the information furnished under subsection (1), the owner or operator of a manufactured home park must notify the assessor, in writing, promptly after a manufactured home is moved into, or out of, the manufactured home park."
                        },
                        {
                            "@id": "d2e458",
                            "bcl:num": "3",
                            "bcl:text": "The assessor, or an agent authorized in writing, may, at all reasonable times, enter a manufactured home park or a manufactured home for assessing the manufactured home and inspecting any records kept by the owner or operator of the manufactured home park."
                        }
                    ]
                },
                {
                    "@id": "d2e468",
                    "bcl:marginalnote": "Application of other Acts",
                    "bcl:num": "7",
                    "bcl:text": {
                        "bcl:link": [
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/03026_00",
                                "@xlink:type": "locator",
                                "in:doc": "Community Charter"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/r15001_00",
                                "@xlink:type": "locator",
                                "in:doc": "Local Government Act"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/vanch_00",
                                "@xlink:type": "locator",
                                "in:doc": "Vancouver Charter"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96412_00",
                                "@xlink:type": "locator",
                                "in:doc": "School Act"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96448_01",
                                "@xlink:type": "locator",
                                "in:doc": "Taxation (Rural Area) Act"
                            }
                        ],
                        "#text": "Except if inconsistent with this Act, the , , ,  and , as the case may be, apply to the assessment and taxation of manufactured homes under this Act."
                    }
                },
                {
                    "@id": "d2e495",
                    "bcl:marginalnote": "Effect of Act",
                    "bcl:num": "8",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96194_01",
                            "@xlink:type": "locator",
                            "in:doc": "Home Owner Grant Act"
                        },
                        "in:doc": "Provincial Home Acquisition Act",
                        "#text": "The owner of a manufactured home that is assessable and taxable under this Act must be considered to be an owner of a parcel of land within the meaning of, and for the purposes of, the  and the ."
                    }
                },
                {
                    "@id": "d2e513",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e521",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e533",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e542",
                                    "bcl:num": "a",
                                    "bcl:text": "respecting the assessment and taxation of manufactured homes under this Act, including assessment and taxation for manufactured homes for part of a year, and amendment of the tax rolls accordingly;"
                                },
                                {
                                    "@id": "d2e552",
                                    "bcl:num": "b",
                                    "bcl:text": "defining, for the regulations, any word not defined in this Act;"
                                },
                                {
                                    "@id": "d2e561",
                                    "bcl:num": "c",
                                    "bcl:text": "exempting a manufactured home, or any class of manufactured homes, from this Act or the regulations;"
                                },
                                {
                                    "@id": "d2e570",
                                    "bcl:num": "d",
                                    "bcl:text": "generally respecting any matter necessary to carry out this Act."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}