        "@id": "00_98003_01",
        "act:title": "BC-Alcan Northern Development Fund Act",
        "act:chapter": "3",
        "act:yearenacted": "1998",
        "act:assentedto": "May 13, 1998",
        "act:currency": {
            "act:tlcDirPath": "1944036832/98003/tlc98003_f",
            "act:tlc": "tlc98003"
        },
        "act:content": {
            "bcl:preamble": {
                "bcl:text": "HER MAJESTY, by and with the advice and consent of the Legislative Assembly of the Province of British Columbia, enacts as follows:"
            },
            "bcl:section": [
                {
                    "@id": "d2e27",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e38",
                            "bcl:text": {
                                "in:term": "Alcan",
                                "#text": "means Alcan Aluminium Limited;"
                            }
                        },
                        {
                            "@id": "d2e47",
                            "bcl:text": {
                                "in:term": "fund",
                                "#text": "means the Northern Development Fund established under\n          section\u00a02;"
                            }
                        },
                        {
                            "@id": "d2e57",
                            "bcl:text": {
                                "in:term": "Northwestern British Columbia",
                                "#text": "includes the Nechako River\n          basin and other areas prescribed by regulation."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e67",
                    "bcl:marginalnote": "Northern Development Fund",
                    "bcl:num": "2",
                    "bcl:text": "The Northern Development Fund is established as a special account in the general\n        fund of the consolidated revenue fund."
                },
                {
                    "@id": "d2e79",
                    "bcl:marginalnote": "Purpose of the fund",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e87",
                            "bcl:num": "1",
                            "bcl:text": "The purpose of the fund is to promote sustainable economic development in\n          Northwestern British Columbia."
                        },
                        {
                            "@id": "d2e96",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the fund may be used for the\n          following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e105",
                                    "bcl:num": "a",
                                    "bcl:text": "supporting investment in new or existing businesses;"
                                },
                                {
                                    "@id": "d2e115",
                                    "bcl:num": "b",
                                    "bcl:text": "creating new employment or stabilizing existing employment;"
                                },
                                {
                                    "@id": "d2e124",
                                    "bcl:num": "c",
                                    "bcl:text": "supporting other goals that are consistent with subsection (1) and that the\n            minister considers desirable."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e134",
                    "bcl:marginalnote": "Funding",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e142",
                            "bcl:num": "1",
                            "bcl:text": "The fund will consist of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96138_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Financial Administration Act"
                                        },
                                        "#text": "$7.5 million transferred, before December\u00a031,\u00a02000, to the fund from a vote, as\n            defined in the , that\n            provides for the transfer;"
                                    }
                                },
                                {
                                    "@id": "d2e163",
                                    "bcl:num": "b",
                                    "bcl:text": "$7.5 million contributed, before December\u00a031,\u00a02000, to the fund by\n            Alcan;"
                                },
                                {
                                    "@id": "d2e173",
                                    "bcl:num": "c",
                                    "bcl:text": "any money received as contributions to the fund;"
                                },
                                {
                                    "@id": "d2e182",
                                    "bcl:num": "d",
                                    "bcl:text": "any interest or other income of the fund."
                                }
                            ]
                        },
                        {
                            "@id": "d2e191",
                            "bcl:num": "2",
                            "bcl:text": "Transfers and contributions to the fund under subsection (1) (a) and (b) must be\n          made in accordance with the agreement dated August 5, 1997, between the government and\n          Alcan."
                        }
                    ]
                },
                {
                    "@id": "d2e202",
                    "bcl:marginalnote": "Expenditures",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e210",
                            "bcl:num": "1",
                            "bcl:text": "The minister may pay money out of the fund for the purposes referred to in\n          section\u00a03."
                        },
                        {
                            "@id": "d2e219",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the minister may make loans or investments out of\n          the fund for the purposes referred to in section\u00a03."
                        }
                    ]
                },
                {
                    "@id": "d2e229",
                    "bcl:marginalnote": "Annual report",
                    "bcl:num": "6",
                    "bcl:text": "The minister, not later than 90 days after the end of the fiscal year of the\n        government, must submit an annual report respecting the operation of the fund to the\n        Treasury Board and the annual report must include any information that the Treasury Board\n        specifies."
                },
                {
                    "@id": "d2e241",
                    "bcl:marginalnote": "Advisory board",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e249",
                            "bcl:num": "1",
                            "bcl:text": "The Northern Development Fund Advisory Board established under the agreement dated\n          August\u00a05,\u00a01997, between the government and Alcan is continued for the purpose of advising\n          the minister with respect to payments out of the fund."
                        },
                        {
                            "@id": "d2e258",
                            "bcl:num": "2",
                            "bcl:text": "The advisory board consists of the members appointed by the Lieutenant Governor in\n          Council as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e267",
                                    "bcl:num": "a",
                                    "bcl:text": "one or more members representative of the government;"
                                },
                                {
                                    "@id": "d2e277",
                                    "bcl:num": "b",
                                    "bcl:text": "one or more members representative of local government;"
                                },
                                {
                                    "@id": "d2e286",
                                    "bcl:num": "c",
                                    "bcl:text": "one or more members representative of business, other than from\n            Alcan;"
                                },
                                {
                                    "@id": "d2e295",
                                    "bcl:num": "d",
                                    "bcl:text": "one or more first nations representatives;"
                                },
                                {
                                    "@id": "d2e304",
                                    "bcl:num": "e",
                                    "bcl:text": "one or more trade union representatives;"
                                },
                                {
                                    "@id": "d2e313",
                                    "bcl:num": "f",
                                    "bcl:text": "2 persons nominated by Alcan as its representatives;"
                                },
                                {
                                    "@id": "d2e322",
                                    "bcl:num": "g",
                                    "bcl:text": "other persons representative of Northwestern British Columbia."
                                }
                            ]
                        },
                        {
                            "@id": "d2e332",
                            "bcl:num": "3",
                            "bcl:text": "The Lieutenant Governor in Council must designate a member of the advisory board\n          other than a member appointed under subsection (2) (a) or (f) as chair of the advisory\n          board."
                        }
                    ]
                },
                {
                    "@id": "d2e342",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e350",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041\n          of the ."
                            }
                        },
                        {
                            "@id": "d2e362",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make\n          regulations prescribing areas for the purpose of the definition of \"Northwestern British\n          Columbia\" in section\u00a01."
                        }
                    ]
                },
                {
                    "@id": "d2e372",
                    "bcl:marginalnote": "Transitional",
                    "bcl:num": "9",
                    "bcl:text": "The members of the Northern Development Fund Advisory Board appointed under Order in\n        Council 136/98 continue to be the members of the advisory board as if appointed under\n        section\u00a07."
                }
            ]
        }
    }
}