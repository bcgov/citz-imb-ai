        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96417_01",
        "act:title": "Sechelt Indian Government District Home Owner Grant Act",
        "act:chapter": "417",
        "act:yearenacted": "1996",
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "district",
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/S-6.6/",
                            "@xlink:type": "locator",
                            "in:doc": "Sechelt Indian Band Self-Government Act"
                        },
                        "#text": "In this Act,  means the Sechelt Indian Government District recognized by section 17 of the  (Canada)."
                    }
                },
                {
                    "@id": "d2e30",
                    "bcl:marginalnote": "Minister may pay grant",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e38",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96194_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Home Owner Grant Act"
                                },
                                "#text": "The minister may pay to the district, out of money appropriated for that purpose, a grant in place of benefits payable under the ."
                            }
                        },
                        {
                            "@id": "d2e50",
                            "bcl:num": "2",
                            "bcl:text": "The minister may attach conditions to a grant paid under subsection (1) with respect to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e59",
                                    "bcl:num": "a",
                                    "bcl:text": "the persons to whom the district must pass on the benefit of the grant, and"
                                },
                                {
                                    "@id": "d2e69",
                                    "bcl:num": "b",
                                    "bcl:text": "how",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e78",
                                            "bcl:num": "i",
                                            "bcl:text": "the persons who are entitled to the benefit will be determined, and"
                                        },
                                        {
                                            "@id": "d2e87",
                                            "bcl:num": "ii",
                                            "bcl:text": "the amount of the benefits to them will be determined and calculated."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e96",
                            "bcl:num": "3",
                            "bcl:text": "For the purposes of subsection (2), the minister may attach different conditions for different classes of persons."
                        },
                        {
                            "@id": "d2e105",
                            "bcl:num": "4",
                            "bcl:text": "If the district fails to comply with a condition of the minister under subsection (2) or (3), the minister may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e114",
                                    "bcl:num": "a",
                                    "bcl:text": "withhold all or part of the grant appropriated for the purposes of this Act in any subsequent year, and"
                                },
                                {
                                    "@id": "d2e124",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96416_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Sechelt Indian Government District Enabling Act"
                                        },
                                        "#text": "order that a municipal benefit referred to in section 4 (1) of the , not be paid or conferred."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e136",
                            "bcl:num": "5",
                            "bcl:text": "If the minister makes an order under subsection (4) (b), the person who is authorized to make the payment or confer the benefit must comply with the minister's order."
                        }
                    ]
                }
            ]
        }
    }
}