        "@id": "00_96304_01",
        "act:title": "Ministry of International Business and Immigration Act",
        "act:chapter": "304",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1325524918/96304/tlc96304_f",
            "act:tlc": "tlc96304"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e17",
                    "bcl:marginalnote": "Ministry continued",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e25",
                            "bcl:num": "1",
                            "bcl:text": "The Ministry of International Business and Immigration is continued as a ministry of the public service of British Columbia."
                        },
                        {
                            "@id": "d2e34",
                            "bcl:num": "2",
                            "bcl:text": "The minister is to continue to preside over and be responsible to the Lieutenant Governor in Council for the direction of the ministry."
                        }
                    ]
                },
                {
                    "@id": "d2e44",
                    "bcl:marginalnote": "Deputy, employees and Agents General",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e52",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Act"
                                },
                                "#text": "A deputy minister and other employees required to carry out the functions of the ministry may be appointed under the ."
                            }
                        },
                        {
                            "@id": "d2e64",
                            "bcl:num": "2",
                            "bcl:text": "The minister may retain the services of consultants, experts and specialists and set their remuneration."
                        },
                        {
                            "@id": "d2e73",
                            "bcl:num": "3",
                            "bcl:text": "The Lieutenant Governor in Council may appoint persons to act as Agents General to represent British Columbia outside British Columbia."
                        },
                        {
                            "@id": "d2e83",
                            "bcl:num": "4",
                            "bcl:text": "Agents General hold office during pleasure and must, while acting as Agents General, have seals of office."
                        },
                        {
                            "@id": "d2e92",
                            "bcl:num": "5",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96124_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Evidence Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96334_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Notaries Act"
                                    }
                                ],
                                "#text": "An Agent General may exercise all the functions of a commissioner for taking affidavits for British Columbia under the , and of a notary public under the ."
                            }
                        },
                        {
                            "@id": "d2e107",
                            "bcl:num": "6",
                            "bcl:text": "All acts and things done or affirmations and declarations taken by an Agent General under this section and attested by the Agent General's official seal are as valid as if performed in British Columbia by a commissioner for taking affidavits or notary public."
                        }
                    ]
                },
                {
                    "@id": "d2e117",
                    "bcl:marginalnote": "Minister's duties",
                    "bcl:num": "3",
                    "bcl:text": "The duties, powers and functions of the minister extend to and include all matters relating to international business and immigration for British Columbia that are not, by law or by order of the Lieutenant Governor in Council, assigned to another minister, ministry, branch or agency of the government."
                },
                {
                    "@id": "d2e129",
                    "bcl:marginalnote": "Purposes and functions of the ministry",
                    "bcl:num": "4",
                    "bcl:text": "The purposes and functions of the ministry are to",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e140",
                            "bcl:num": "a",
                            "bcl:text": "develop policy options and make recommendations to the government on trade, investment and immigration,"
                        },
                        {
                            "@id": "d2e149",
                            "bcl:num": "b",
                            "bcl:text": "encourage and facilitate the export of British Columbia goods and services,"
                        },
                        {
                            "@id": "d2e159",
                            "bcl:num": "c",
                            "bcl:text": "promote and attract investment into British Columbia by developing and implementing investment and immigration policies and programs,"
                        },
                        {
                            "@id": "d2e168",
                            "bcl:num": "d",
                            "bcl:text": "manage and coordinate government involvement in policy and program initiatives having trade, investment and immigration objectives,"
                        },
                        {
                            "@id": "d2e177",
                            "bcl:num": "e",
                            "bcl:text": "establish and maintain appropriate representation for British Columbia outside British Columbia,"
                        },
                        {
                            "@id": "d2e186",
                            "bcl:num": "f",
                            "bcl:text": "plan for and manage the government's role in immigration, including the selection and settlement of immigrants to British Columbia, and"
                        },
                        {
                            "@id": "d2e195",
                            "bcl:num": "g",
                            "bcl:text": "perform any other duties relating to international business and immigration that may be assigned by the Lieutenant Governor in Council."
                        }
                    ]
                },
                {
                    "@id": "d2e205",
                    "bcl:marginalnote": "Powers of the minister",
                    "bcl:num": "5",
                    "bcl:text": "The minister may",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e216",
                            "bcl:num": "a",
                            "bcl:text": "negotiate and enter into agreements or arrangements relating to trade, investment and immigration or any other matter referred to in section\u00a03 or\u00a04",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d2e225",
                                    "bcl:num": "i",
                                    "bcl:text": "subject to the approval of the Lieutenant Governor in Council, with the government of a province or the government of Canada, and"
                                },
                                {
                                    "@id": "d2e235",
                                    "bcl:num": "ii",
                                    "bcl:text": "with any other person, and"
                                }
                            ]
                        },
                        {
                            "@id": "d2e244",
                            "bcl:num": "b",
                            "bcl:text": "do other things the Lieutenant Governor in Council may authorize for the purposes referred to in section\u00a04."
                        }
                    ]
                },
                {
                    "@id": "d2e255",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "6",
                    "bcl:text": "[Repealed 2000-23-48.]"
                },
                {
                    "@id": "d2e267",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e275",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e287",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations for the purposes of implementing an agreement with the government of a province or the government of Canada under section 5 (a)."
                        }
                    ]
                }
            ]
        }
    }
}