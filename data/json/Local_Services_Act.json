        "@id": "00_96276_01",
        "act:title": "Local Services Act",
        "act:chapter": "276",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "76470131/96276/tlc96276_f",
            "act:tlc": "E3tlc96276"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "local area",
                                "#text": "means an area established under this Act;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "local service",
                                "#text": "means a service that may be provided under this Act."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e45",
                    "bcl:marginalnote": "Services in local areas",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e53",
                            "bcl:num": "1",
                            "bcl:text": "On the recommendation of the minister, the Lieutenant Governor in Council may establish an area of British Columbia not incorporated as a municipality as a local area for one or more of the following purposes:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e62",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/r15001_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Local Government Act"
                                        },
                                        "#text": "the preparation of official community plans by the application of Division 4 of Part 14 of the  for the local area, and in that event the minister may exercise, in respect of the local area, any of the powers exercisable under that Division by a municipal council or regional district board;"
                                    }
                                },
                                {
                                    "@id": "d2e74",
                                    "bcl:num": "b",
                                    "bcl:text": "the provision of public comfort stations;"
                                },
                                {
                                    "@id": "d2e84",
                                    "bcl:num": "c",
                                    "bcl:text": "the provision of home nursing care;"
                                },
                                {
                                    "@id": "d2e93",
                                    "bcl:num": "d",
                                    "bcl:text": "the provision of garbage collection and disposal;"
                                },
                                {
                                    "@id": "d2e102",
                                    "bcl:num": "e",
                                    "bcl:text": "the provision of ambulance service;"
                                },
                                {
                                    "@id": "d2e111",
                                    "bcl:num": "f",
                                    "bcl:text": "the provision of fire protection service;"
                                },
                                {
                                    "@id": "d2e120",
                                    "bcl:num": "g",
                                    "bcl:text": "the provision of property for pleasure, recreation or community uses of the public;"
                                },
                                {
                                    "@id": "d2e129",
                                    "bcl:num": "h",
                                    "bcl:text": "the conservation of heritage property;"
                                },
                                {
                                    "@id": "d2e139",
                                    "bcl:num": "i",
                                    "bcl:text": "the provision of assistance toward the establishment of homes for senior citizens;"
                                },
                                {
                                    "@id": "d2e148",
                                    "bcl:num": "j",
                                    "bcl:text": {
                                        "in:desc": "[fundamental powers \u2014 business]",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/03026_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Community Charter"
                                        },
                                        "#text": "the regulation of business with respect to hours of closing, and in that event the minister may exercise, in respect of the local area, any of the powers exercisable by a council under or in relation to section 8 (6)\u00a0 of the ;"
                                    }
                                },
                                {
                                    "@id": "d2e163",
                                    "bcl:num": "k",
                                    "bcl:text": "the regulation of the following:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e172",
                                            "bcl:num": "i",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/r15001_00",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Local Government Act"
                                                },
                                                "#text": "the construction of buildings and other structures by the application of the following provisions of the :"
                                            },
                                            "bcl:clause": [
                                                {
                                                    "@id": "d0e188",
                                                    "bcl:num": "A",
                                                    "bcl:text": {
                                                        "in:desc": [
                                                            "[Building Regulation]",
                                                            "[Regional Districts: Specific Service Powers]"
                                                        ],
                                                        "#text": "Division 1  of Part 9 ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d0e203",
                                                    "bcl:num": "B",
                                                    "bcl:text": {
                                                        "in:desc": "[remedial authority in relation to hazardous conditions]",
                                                        "#text": "section 305 ;"
                                                    }
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d2e184",
                                            "bcl:num": "ii",
                                            "bcl:text": {
                                                "in:desc": "[Planning and Land Use Management]",
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/r15001_00",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Local Government Act"
                                                },
                                                "#text": "the use and subdivision of land by the application of Part 14  of the , other than the following provisions of that Part:"
                                            },
                                            "bcl:clause": [
                                                {
                                                    "@id": "d0e231",
                                                    "bcl:num": "A",
                                                    "bcl:text": {
                                                        "in:desc": "[area of authority for municipalities and regional districts]",
                                                        "#text": "section 456 ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d0e243",
                                                    "bcl:num": "B",
                                                    "bcl:text": {
                                                        "in:desc": "[rural land use bylaws]",
                                                        "#text": "section 457 ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d0e255",
                                                    "bcl:num": "C",
                                                    "bcl:text": {
                                                        "in:desc": "[Official Community Plans]",
                                                        "#text": "Division 4 ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d0e267",
                                                    "bcl:num": "D",
                                                    "bcl:text": {
                                                        "in:desc": "[Contaminated Sites]",
                                                        "#text": "Division 18 ;"
                                                    }
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d2e196",
                                            "bcl:num": "iii",
                                            "bcl:text": {
                                                "in:desc": "[Heritage Conservation]",
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/r15001_00",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Local Government Act"
                                                },
                                                "#text": "the conservation of heritage property by the application of Part 15  of the ."
                                            }
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e209",
                            "bcl:num": "2",
                            "bcl:text": "If an area is established as a local area under subsection (1), the minister may exercise, in respect of the local area or any part of it, any of the powers exercisable by a council or regional district board under",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e218",
                                    "bcl:num": "a",
                                    "bcl:text": "the applicable provision referred to in that subsection,"
                                },
                                {
                                    "@id": "d2e227",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "in:desc": "[general authority for services]",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/r15001_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Local Government Act"
                                        },
                                        "#text": "section 332\u00a0 of the , as that section applies in relation to the applicable provision referred to in subsection (1), and"
                                    }
                                },
                                {
                                    "@id": "d2e242",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/00_96323b_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Local Government Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/03052_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Community Charter Transitional Provisions, Consequential Amendments and Other Amendments Act, 2003"
                                            }
                                        ],
                                        "#text": "the following provisions of the , R.S.B.C. 1996, c. 323, as those sections read immediately before the date the  came into force:"
                                    },
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e283",
                                            "bcl:num": "i",
                                            "bcl:text": {
                                                "in:desc": "[special authority in relation to highways]",
                                                "#text": "section 530\u00a0;"
                                            }
                                        },
                                        {
                                            "@id": "d0e372",
                                            "bcl:num": "ii",
                                            "bcl:text": {
                                                "in:desc": "[regulation of animal nuisances]",
                                                "#text": "section 704\u00a0;"
                                            }
                                        },
                                        {
                                            "@id": "d0e384",
                                            "bcl:num": "iii",
                                            "bcl:text": {
                                                "in:desc": "[noise control]",
                                                "#text": "section 724\u00a0;"
                                            }
                                        },
                                        {
                                            "@id": "d0e396",
                                            "bcl:num": "iv",
                                            "bcl:text": {
                                                "in:desc": "[nuisances and disturbances]",
                                                "#text": "section 725\u00a0;"
                                            }
                                        },
                                        {
                                            "@id": "d0e408",
                                            "bcl:num": "v",
                                            "bcl:text": {
                                                "in:desc": "[regulation of fireworks]",
                                                "#text": "section 728 (1) (e)\u00a0."
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e289",
                    "bcl:marginalnote": "Setting up local area",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e297",
                            "bcl:num": "1",
                            "bcl:text": "An order establishing a local area must include the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e306",
                                    "bcl:num": "a",
                                    "bcl:text": "the name and legal boundaries of the local area;"
                                },
                                {
                                    "@id": "d2e315",
                                    "bcl:num": "b",
                                    "bcl:text": "the local service or services that may be provided;"
                                },
                                {
                                    "@id": "d2e325",
                                    "bcl:num": "c",
                                    "bcl:text": "other provisions and conditions the Lieutenant Governor in Council thinks proper and necessary."
                                }
                            ]
                        },
                        {
                            "@id": "d2e334",
                            "bcl:num": "2",
                            "bcl:text": "An order extending a local area must include the extended legal boundaries of the area."
                        },
                        {
                            "@id": "d2e343",
                            "bcl:num": "3",
                            "bcl:text": "An order merging 2 or more local areas must include the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e352",
                                    "bcl:num": "a",
                                    "bcl:text": "the name and legal boundaries of the resulting local area;"
                                },
                                {
                                    "@id": "d2e361",
                                    "bcl:num": "b",
                                    "bcl:text": "a list of the regulations, if any, that continue in effect in the resulting local area, or in any part of it, until altered or repealed by the minister;"
                                },
                                {
                                    "@id": "d2e370",
                                    "bcl:num": "c",
                                    "bcl:text": "other provisions and conditions the Lieutenant Governor in Council thinks proper and necessary."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e380",
                    "bcl:marginalnote": "Procedure for regulations",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e388",
                            "bcl:num": "1",
                            "bcl:text": "If a local area has been established under this Act, the minister may make regulations thought expedient to give effect to the purpose for which the local area was established."
                        },
                        {
                            "@id": "d2e397",
                            "bcl:num": "2",
                            "bcl:text": "If a local area has been extended or if 2 or more local areas have been merged, the minister may, subject to the order of extension or merger made by the Lieutenant Governor in Council, rescind, vary and make regulations thought expedient to give effect to the purpose of the extension or merger."
                        },
                        {
                            "@id": "d2e406",
                            "bcl:num": "3",
                            "bcl:text": "If a local area is extended, the regulations in force in the local area immediately before the extension apply to the local area as extended and continue in effect in it until rescinded or varied."
                        }
                    ]
                },
                {
                    "@id": "d2e416",
                    "bcl:marginalnote": "Financing of services",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e424",
                            "bcl:num": "1",
                            "bcl:text": "The minister may enter into agreements with any person or agency for the provision of local services or anything incidental for and on behalf of the local area."
                        },
                        {
                            "@id": "d2e433",
                            "bcl:num": "2",
                            "bcl:text": "On the recommendation of the minister, the Lieutenant Governor in Council may acquire land necessary to provide local services in a local area."
                        },
                        {
                            "@id": "d2e442",
                            "bcl:num": "3",
                            "bcl:text": "The minister may acquire machinery, equipment and other property required for a local service of an established local area."
                        },
                        {
                            "@id": "d2e452",
                            "bcl:num": "4",
                            "bcl:text": "The title to all land and property acquired is in the government."
                        }
                    ]
                },
                {
                    "@id": "d2e463",
                    "bcl:marginalnote": "Advancing money required",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e471",
                            "bcl:num": "1",
                            "bcl:text": "The Minister of Finance must advance from the consolidated revenue fund to the minister the sums of money the Lieutenant Governor in Council directs to be used by the minister for and on behalf of a local area."
                        },
                        {
                            "@id": "d2e480",
                            "bcl:num": "2",
                            "bcl:text": "All advances made must be repaid to the consolidated revenue fund from the proceeds of taxes levied as provided in this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e490",
                    "bcl:marginalnote": "Certification of sums advanced",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e498",
                            "bcl:num": "1",
                            "bcl:text": "On the establishment or extension of a local area or the merger of 2 or more local areas, the minister must forward to the Surveyor of Taxes of the assessment district within which the whole or the greater part of the local area is situated a certificate containing a description of the local area as established, extended or merged."
                        },
                        {
                            "@id": "d2e507",
                            "bcl:num": "2",
                            "bcl:text": "As soon as practicable after December 31 in each year the Minister of Finance must certify to the Surveyor of Taxes the sum of money that was advanced or expended under this Act during the year on behalf of that local area."
                        }
                    ]
                },
                {
                    "@id": "d2e517",
                    "bcl:marginalnote": "Recovery of money advanced",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e525",
                            "bcl:num": "1",
                            "bcl:text": "The money certified under this Act as having been advanced or expended in a year on behalf of a local area must be assessed and levied in the next year on the net taxable value of land and improvements and on the owners of the land and improvements in that local area."
                        },
                        {
                            "@id": "d2e534",
                            "bcl:num": "2",
                            "bcl:text": "For subsection (1),",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e543",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96020_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Assessment Act"
                                        },
                                        "#text": "the definition \"improvements\" in the  applies, and"
                                    }
                                },
                                {
                                    "@id": "d2e556",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96412_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "School Act"
                                        },
                                        "#text": "the exemptions in sections 129 to 131.01 of the  apply."
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e569",
                    "bcl:marginalnote": {
                        "in:doc": "Taxation (Rural Area) Act",
                        "#text": "Application of"
                    },
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e579",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96448_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Taxation (Rural Area) Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96448_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Taxation (Rural Area) Act"
                                    }
                                ],
                                "#text": "Subject to this Act, the  applies to the assessment, levy, collection and recovery of taxes imposed under this Act in a local area, and to the addition of interest to the taxes if delinquent, in the same manner as taxes imposed under the ."
                            }
                        },
                        {
                            "@id": "d2e594",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96448_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Taxation (Rural Area) Act"
                                },
                                "#text": "All taxes imposed under this Act are, for the , deemed to be taxes imposed and assessed under that Act, and on collection or recovery must be accounted for as such."
                            }
                        }
                    ]
                }
            ]
        }
    }
}