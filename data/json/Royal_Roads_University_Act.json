        "@id": "00_96409_01",
        "act:title": "Royal Roads University Act",
        "act:chapter": "409",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "286269762/96409/tlc96409_f",
            "act:tlc": "E3tlc96409"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "academic council",
                                "#text": "means the academic council under section\u00a015;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "board",
                                "#text": "means the board of governors of the university;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "chancellor",
                                "#text": "means the chancellor under section 11;"
                            }
                        },
                        {
                            "@id": "d2e54",
                            "bcl:text": {
                                "in:term": "convocation",
                                "#text": "means the convocation of the university;"
                            }
                        },
                        {
                            "@id": "d2e63",
                            "bcl:text": {
                                "in:term": "president",
                                "#text": "means the president of the university;"
                            }
                        },
                        {
                            "@id": "d2e72",
                            "bcl:text": {
                                "in:term": "professor",
                                "#text": "means an instructor or researcher employed at the university and recognized by the board as a professor for the purposes of this Act;"
                            }
                        },
                        {
                            "@id": "d2e81",
                            "bcl:text": {
                                "in:term": "program and research council",
                                "#text": "means the program and research council under section\u00a014;"
                            }
                        },
                        {
                            "@id": "d2e90",
                            "bcl:text": {
                                "in:term": "registrar",
                                "#text": "means the registrar of the university;"
                            }
                        },
                        {
                            "@id": "d2e100",
                            "bcl:text": {
                                "in:term": "student",
                                "#text": "means a person who is enrolled in a credit course at the university;"
                            }
                        },
                        {
                            "@id": "d2e109",
                            "bcl:text": {
                                "in:term": "university",
                                "#text": "means the Royal Roads University continued by this Act."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e119",
                    "bcl:marginalnote": "Purposes",
                    "bcl:num": "2",
                    "bcl:text": "The purposes of the university are",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e130",
                            "bcl:num": "a",
                            "bcl:text": "to offer certificate, diploma and degree programs at the undergraduate and graduate levels in solely the applied and professional fields,"
                        },
                        {
                            "@id": "d2e139",
                            "bcl:num": "b",
                            "bcl:text": "to provide continuing education in response to the needs of the local community, and"
                        },
                        {
                            "@id": "d2e149",
                            "bcl:num": "c",
                            "bcl:text": "to maintain teaching excellence and research activities that support the university's programs in response to the labour market needs of British Columbia."
                        }
                    ]
                },
                {
                    "@id": "d2e159",
                    "bcl:marginalnote": "Best interests of university",
                    "bcl:num": "2.1",
                    "bcl:text": "In carrying out the purposes of the university, the members of the board of governors of the university must act in the best interests of the university."
                },
                {
                    "@id": "d2e171",
                    "bcl:marginalnote": "Royal Roads University",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e179",
                            "bcl:num": "1",
                            "bcl:text": "Royal Roads University is continued as a corporation and is composed of the board and convocation."
                        },
                        {
                            "@id": "d2e188",
                            "bcl:num": "2",
                            "bcl:text": "The university has the powers and capacity of a natural person of full capacity."
                        },
                        {
                            "@id": "d2e197",
                            "bcl:num": "3",
                            "bcl:text": "The university is an agent of the government for the purpose of leasing land for use as a campus for the university."
                        },
                        {
                            "@id": "d2e207",
                            "bcl:num": "4",
                            "bcl:text": "The university has the power in its own name to grant degrees and to award certificates and diplomas established in accordance with this Act."
                        },
                        {
                            "@id": "d2e216",
                            "bcl:num": "5",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/02057_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Business Corporations Act"
                                },
                                "#text": "The  does not apply to the university, but on the recommendation of the minister, the Minister of Finance, by regulation, may declare that all or part of that Act applies to the university."
                            }
                        },
                        {
                            "@id": "d2e228",
                            "bcl:num": "6",
                            "bcl:text": "The employees of the Royal Roads University Society, on and after July\u00a014,\u00a01995, continue as employees of the university."
                        }
                    ]
                },
                {
                    "@id": "d2e238",
                    "bcl:marginalnote": "Composition of convocation",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e246",
                            "bcl:num": "1",
                            "bcl:text": "The convocation of the university is continued and is composed of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e255",
                                    "bcl:num": "a",
                                    "bcl:text": "the chancellor, who is chair of the convocation,"
                                },
                                {
                                    "@id": "d2e264",
                                    "bcl:num": "b",
                                    "bcl:text": "the president,"
                                },
                                {
                                    "@id": "d2e274",
                                    "bcl:num": "c",
                                    "bcl:text": "the members of the program and research council,"
                                },
                                {
                                    "@id": "d2e283",
                                    "bcl:num": "d",
                                    "bcl:text": "the professors,"
                                },
                                {
                                    "@id": "d2e292",
                                    "bcl:num": "e",
                                    "bcl:text": "graduates of the university, and"
                                },
                                {
                                    "@id": "d2e301",
                                    "bcl:num": "f",
                                    "bcl:text": "persons whose names are added to the roll of the convocation by the board."
                                }
                            ]
                        },
                        {
                            "@id": "d2e310",
                            "bcl:num": "2",
                            "bcl:text": "Ten members of the convocation constitute a quorum for the transaction of business."
                        },
                        {
                            "@id": "d2e319",
                            "bcl:num": "3",
                            "bcl:text": "A meeting of the convocation may be held for the purposes of conferring degrees, including honorary degrees, for awarding diplomas and certificates of proficiency granted by the university and for additional purposes the board may specify."
                        },
                        {
                            "@id": "d2e329",
                            "bcl:num": "4",
                            "bcl:text": "The registrar is the secretary of the convocation and must establish and keep up to date the roll of the convocation."
                        },
                        {
                            "@id": "d2e338",
                            "bcl:num": "5",
                            "bcl:text": "The convocation may establish a fee to be paid by its members to defray the necessary expenses of the convocation."
                        },
                        {
                            "@id": "d2e347",
                            "bcl:num": "6",
                            "bcl:text": "The board may make rules governing the procedure for the transaction of business by the convocation."
                        }
                    ]
                },
                {
                    "@id": "d2e358",
                    "bcl:marginalnote": "Composition of the board of governors",
                    "bcl:num": "5",
                    "bcl:text": "The board of governors of the university is composed of",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e369",
                            "bcl:num": "a",
                            "bcl:text": "the president,"
                        },
                        {
                            "@id": "d2e378",
                            "bcl:num": "b",
                            "bcl:text": "a professor elected by the professors,"
                        },
                        {
                            "@id": "d2e388",
                            "bcl:num": "c",
                            "bcl:text": "up to 6 persons appointed by the Lieutenant Governor in Council,"
                        },
                        {
                            "@id": "d2e397",
                            "bcl:num": "d",
                            "bcl:text": "a student elected by the students,"
                        },
                        {
                            "@id": "d2e406",
                            "bcl:num": "e",
                            "bcl:text": "an employee, who is not a professor, elected by the employees of the university who are not professors, and"
                        },
                        {
                            "@id": "d2e415",
                            "bcl:num": "f",
                            "bcl:text": "up to 2 persons, who are not employees of the university, appointed by the board."
                        }
                    ]
                },
                {
                    "@id": "d2e425",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "5.1",
                    "bcl:text": "[Repealed 2018-36-2.]"
                },
                {
                    "@id": "d2e474",
                    "bcl:marginalnote": "Term of office on the board",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e482",
                            "bcl:num": "1",
                            "bcl:text": "An appointed member of the board, other than the president, holds office for a term of up to 3\u00a0years as specified in the appointment."
                        },
                        {
                            "@id": "d2e491",
                            "bcl:num": "2",
                            "bcl:text": "An elected member of the board, other than one elected by the students, holds office for a term of 3\u00a0years."
                        },
                        {
                            "@id": "d2e500",
                            "bcl:num": "3",
                            "bcl:text": "A member of the board elected under section 5 (d) holds office for one year."
                        },
                        {
                            "@id": "d2e510",
                            "bcl:num": "4",
                            "bcl:text": "Despite subsections (1) to (3), a member elected or appointed under section 5 (b), (c), (d), (e) or (f) continues in office until a successor is elected or appointed."
                        },
                        {
                            "@id": "d2e519",
                            "bcl:num": "5",
                            "bcl:text": "The president continues as a member of the board for so long as the president continues in office."
                        }
                    ]
                },
                {
                    "@id": "d2e529",
                    "bcl:marginalnote": "Removal from office",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e537",
                            "bcl:num": "1",
                            "bcl:text": "Despite section 6 (1), the Lieutenant Governor in Council may, at any time, remove from office a member of the board appointed under section 5 (c)."
                        },
                        {
                            "@id": "d2e546",
                            "bcl:num": "2",
                            "bcl:text": "Despite section 6 (1), the board may, at any time by a 2/3 majority of its members, remove from office a member of the board appointed under section 5 (f)."
                        },
                        {
                            "@id": "d2e555",
                            "bcl:num": "3",
                            "bcl:text": "Unless excused by resolution of the board, a member is deemed to have vacated the member's seat if the member has not attended at least 1/2 the number of regular board meetings in a year."
                        },
                        {
                            "@id": "d2e565",
                            "bcl:num": "4",
                            "bcl:text": [
                                "Despite section 6, the Lieutenant Governor in Council may, on a resolution passed by the vote of at least a 2/3 majority of the members of the board, remove from office a member of the board",
                                "if the board is satisfied that the person should be removed for cause."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e574",
                                    "bcl:num": "a",
                                    "bcl:text": "elected under section 5 (b), (d) or (e), or"
                                },
                                {
                                    "@id": "d2e583",
                                    "bcl:num": "b",
                                    "bcl:text": "appointed under section 5 (c)"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e596",
                    "bcl:marginalnote": "Vacancies on the board",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e604",
                            "bcl:num": "1",
                            "bcl:text": "A vacancy on the board that arises because a term in office is not completed may be filled for the balance of the term in the same manner as for the original appointment or election."
                        },
                        {
                            "@id": "d2e613",
                            "bcl:num": "2",
                            "bcl:text": "A vacancy on the board does not impair the authority of the remaining members of the board to act."
                        }
                    ]
                },
                {
                    "@id": "d2e623",
                    "bcl:marginalnote": "Meetings of the board",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e631",
                            "bcl:num": "1",
                            "bcl:text": "The board must meet at least once every 3\u00a0months and as often as is necessary to transact the business of the board."
                        },
                        {
                            "@id": "d2e640",
                            "bcl:num": "2",
                            "bcl:text": "Five members of the board constitute a quorum for the transaction of business."
                        },
                        {
                            "@id": "d2e649",
                            "bcl:num": "3",
                            "bcl:text": "The chair has the same right of voting as the other members of the board, and, in the case of a tie vote on a motion, the motion is lost, and the chair must so declare."
                        }
                    ]
                },
                {
                    "@id": "d2e660",
                    "bcl:marginalnote": "Powers and duties of the board",
                    "bcl:num": "10",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96468_01",
                            "@xlink:type": "locator",
                            "in:doc": "University Act"
                        },
                        "#text": "The board has the duties and may exercise the powers of the board of governors or senate of a university under the  except those powers and duties given to the president by this Act."
                    }
                },
                {
                    "@id": "d2e675",
                    "bcl:marginalnote": "Chancellor",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e683",
                            "bcl:num": "1",
                            "bcl:text": "The chair of the board is the chancellor of the university."
                        },
                        {
                            "@id": "d2e692",
                            "bcl:num": "2",
                            "bcl:text": "The president is the vice chancellor of the university."
                        },
                        {
                            "@id": "d2e701",
                            "bcl:num": "3",
                            "bcl:text": "All degrees of the university are conferred by the chancellor."
                        }
                    ]
                },
                {
                    "@id": "d2e711",
                    "bcl:marginalnote": "President",
                    "bcl:num": "12",
                    "bcl:subsection": [
                        {
                            "@id": "d2e719",
                            "bcl:num": "1",
                            "bcl:text": "There must be a president of the university, who is its chief executive officer and who must generally supervise and direct the academic work of the university."
                        },
                        {
                            "@id": "d2e728",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting the generality of subsection (1), the president has power, in consultation with the academic council,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e737",
                                    "bcl:num": "a",
                                    "bcl:text": "to set academic and other qualifications for admission of students to the university, including the recognition of prior experience,"
                                },
                                {
                                    "@id": "d2e747",
                                    "bcl:num": "b",
                                    "bcl:text": "to set conditions for examinations, including the qualifications that must be met in order to take examinations, and how examinations must be conducted and the results of examinations must be assessed and reported,"
                                },
                                {
                                    "@id": "d2e756",
                                    "bcl:num": "c",
                                    "bcl:text": "within priorities established by the board, to set curriculum content for courses of study, instruction and educational programs,"
                                },
                                {
                                    "@id": "d2e765",
                                    "bcl:num": "d",
                                    "bcl:text": "to award fellowships, scholarships, exhibitions, bursaries and prizes,"
                                },
                                {
                                    "@id": "d2e774",
                                    "bcl:num": "e",
                                    "bcl:text": "to set terms for student withdrawal from courses, programs and the university,"
                                },
                                {
                                    "@id": "d2e783",
                                    "bcl:num": "f",
                                    "bcl:text": "to set academic standards and standards for determining academic standing or grades,"
                                },
                                {
                                    "@id": "d2e792",
                                    "bcl:num": "g",
                                    "bcl:text": "to set criteria for awarding certificates and diplomas and granting degrees, and"
                                },
                                {
                                    "@id": "d2e802",
                                    "bcl:num": "h",
                                    "bcl:text": "to set criteria for recognition of academic excellence."
                                }
                            ]
                        },
                        {
                            "@id": "d2e811",
                            "bcl:num": "3",
                            "bcl:text": "Without limiting the generality of subsection (1), the president has the power",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e820",
                                    "bcl:num": "a",
                                    "bcl:text": "to recommend appointments, promotions and removal of professors, members of the administrative staff and officers and other employees of the university,"
                                },
                                {
                                    "@id": "d2e829",
                                    "bcl:num": "b",
                                    "bcl:text": "to establish the committees the president considers necessary or advisable, and"
                                },
                                {
                                    "@id": "d2e838",
                                    "bcl:num": "c",
                                    "bcl:text": "to deal with other matters delegated to the president by the board."
                                }
                            ]
                        },
                        {
                            "@id": "d2e847",
                            "bcl:num": "4",
                            "bcl:text": "The president may delegate a power under subsection (2) to the academic council."
                        },
                        {
                            "@id": "d2e857",
                            "bcl:num": "5",
                            "bcl:text": "The president is a member of all standing committees of the board except the standing committee on appeals."
                        },
                        {
                            "@id": "d2e866",
                            "bcl:num": "6",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96468_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "University Act"
                                },
                                "#text": "Sections 60 to 62 of the  apply to the president."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e879",
                    "bcl:marginalnote": "Registrar",
                    "bcl:num": "13",
                    "bcl:subsection": [
                        {
                            "@id": "d2e887",
                            "bcl:num": "1",
                            "bcl:text": "The registrar must keep the records of the university and perform the duties that the board may require."
                        },
                        {
                            "@id": "d2e896",
                            "bcl:num": "2",
                            "bcl:text": "The registrar is the secretary of the convocation but has no right as secretary to vote."
                        }
                    ]
                },
                {
                    "@id": "d2e906",
                    "bcl:marginalnote": "Program and research council",
                    "bcl:num": "14",
                    "bcl:subsection": [
                        {
                            "@id": "d2e914",
                            "bcl:num": "1",
                            "bcl:text": "The program and research council consists of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e923",
                                    "bcl:num": "a",
                                    "bcl:text": "the president, who is its chair,"
                                },
                                {
                                    "@id": "d2e932",
                                    "bcl:num": "b",
                                    "bcl:text": "the chair of the academic council, and"
                                },
                                {
                                    "@id": "d2e942",
                                    "bcl:num": "c",
                                    "bcl:text": "other members appointed to the council by the board."
                                }
                            ]
                        },
                        {
                            "@id": "d2e951",
                            "bcl:num": "2",
                            "bcl:text": "At least 2/3 of the members of the program and research council must not be employees of the university."
                        },
                        {
                            "@id": "d2e960",
                            "bcl:num": "3",
                            "bcl:text": "The program and research council advises the board on instructional program and research priorities, program objectives and desirable learning outcomes."
                        }
                    ]
                },
                {
                    "@id": "d2e970",
                    "bcl:marginalnote": "Academic council",
                    "bcl:num": "15",
                    "bcl:subsection": [
                        {
                            "@id": "d2e978",
                            "bcl:num": "1",
                            "bcl:text": "Subject to subsection (4), the registrar, after consulting representative groups of professors, students and other employees of the university, must establish the size and composition of the academic council and the length of term that a member may serve on the academic council."
                        },
                        {
                            "@id": "d2e987",
                            "bcl:num": "2",
                            "bcl:text": "Subject to subsection (4), the academic council consists of persons elected in a manner specified by the registrar to represent professors, students and other employees of the university."
                        },
                        {
                            "@id": "d2e996",
                            "bcl:num": "3",
                            "bcl:text": "At least 1/2 of the members of the academic council, not counting members appointed under subsection (4), must be professors."
                        },
                        {
                            "@id": "d2e1006",
                            "bcl:num": "4",
                            "bcl:text": "The president may appoint one or 2 additional members to the academic council and set the length of term they are to serve and, if an appointment is made under this subsection, the size and composition of the academic council change accordingly."
                        },
                        {
                            "@id": "d2e1015",
                            "bcl:num": "5",
                            "bcl:text": "The role of the academic council is to consult, as described in section 12, with the president and to exercise powers delegated to the academic council under section 12 (4)."
                        }
                    ]
                },
                {
                    "@id": "d2e1026",
                    "bcl:marginalnote": {
                        "in:doc": "University Act",
                        "#text": "Application of the"
                    },
                    "bcl:num": "16",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96468_01",
                            "@xlink:type": "locator",
                            "in:doc": "University Act"
                        },
                        "#text": "Sections 29, 30, 31, 33, 48, 49, 50, 52, 53, 57, 58, 70,\u00a0 70.1 and 71 of the  apply to the university."
                    }
                },
                {
                    "@id": "d2e1043",
                    "bcl:marginalnote": "Taxation",
                    "bcl:num": "17",
                    "bcl:text": "The university is not liable to taxation except to the extent that the government is liable."
                },
                {
                    "@id": "d2e1055",
                    "bcl:marginalnote": "Protection against action",
                    "bcl:num": "18",
                    "bcl:subsection": [
                        {
                            "@id": "d2e1063",
                            "bcl:num": "1",
                            "bcl:text": [
                                "No action for damages because of anything done or omitted in good faith under this Act",
                                "may be brought against a member of the board, the academic council, the program and research council or a committee established by the board or against an officer or employee of the university."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e1072",
                                    "bcl:num": "a",
                                    "bcl:text": "in the performance or purported performance of any duty, or"
                                },
                                {
                                    "@id": "d2e1081",
                                    "bcl:num": "b",
                                    "bcl:text": "in the exercise or purported exercise of any power"
                                }
                            ]
                        },
                        {
                            "@id": "d2e1094",
                            "bcl:num": "2",
                            "bcl:text": "Subsection (1) does not absolve the university from vicarious liability for an act or omission for which it would be vicariously liable if this section were not in force."
                        }
                    ]
                },
                {
                    "@id": "d2e1104",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act",
                        "#text": "does not apply"
                    },
                    "bcl:num": "19",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5 of the  does not apply to this Act or a regulation made under it."
                    }
                }
            ]
        }
    }
