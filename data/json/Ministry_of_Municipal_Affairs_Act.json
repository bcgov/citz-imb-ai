        "@id": "00_96308_01",
        "act:title": "Ministry of Municipal Affairs Act",
        "act:chapter": "308",
        "act:yearenacted": "1996",
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "ministry",
                        "#text": "In this Act,  means the ministry referred to in section 2."
                    }
                },
                {
                    "@id": "d2e30",
                    "bcl:marginalnote": "Ministry",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e38",
                            "bcl:num": "1",
                            "bcl:text": "There is to be a ministry of the public service of British Columbia called the Ministry of Municipal Affairs."
                        },
                        {
                            "@id": "d2e47",
                            "bcl:num": "2",
                            "bcl:text": "The minister is to preside over and be responsible to the Lieutenant Governor in Council for the direction of the ministry."
                        },
                        {
                            "@id": "d2e56",
                            "bcl:num": "3",
                            "bcl:text": "The minister may establish branches or divisions of the ministry that the minister considers advisable."
                        },
                        {
                            "@id": "d2e66",
                            "bcl:num": "4",
                            "bcl:text": "Each year the minister must make to the Lieutenant Governor and lay before the Legislative Assembly a report on municipalities in British Columbia."
                        }
                    ]
                },
                {
                    "@id": "d2e76",
                    "bcl:marginalnote": "Deputy and employees",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e84",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Act"
                                },
                                "#text": "A deputy minister of the ministry, and other employees required to carry out the proper business of the ministry, may be appointed under the ."
                            }
                        },
                        {
                            "@id": "d2e96",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Act"
                                },
                                "#text": "Despite the , but with the approval of the Lieutenant Governor in Council, the minister may engage and retain persons that the minister considers necessary as consultants, experts or specialists, and may set their remuneration."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e109",
                    "bcl:marginalnote": "Purposes and functions of ministry",
                    "bcl:num": "4",
                    "bcl:text": "The purposes and functions of the ministry are, under the direction of the minister,",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e120",
                            "bcl:num": "a",
                            "bcl:text": "to be the medium of communication between municipalities and the Lieutenant Governor in Council, and"
                        },
                        {
                            "@id": "d2e129",
                            "bcl:num": "b",
                            "bcl:text": "to perform other duties and functions the Lieutenant Governor in Council may give to it."
                        }
                    ]
                }
            ]
        }
    }
}