        "@id": "00_96205_01",
        "act:title": "Hotel Guest Registration Act",
        "act:chapter": "205",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "712470149/96205/tlc96205_f",
            "act:tlc": "tlc96205"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "constable",
                                "#text": "includes an officer or constable of the Provincial police;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "hotel",
                                "#text": "includes an inn or building in which private rooms are maintained for the accommodation of the public;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "keeper",
                                "#text": "means the person operating, managing or in charge of a hotel."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e55",
                    "bcl:marginalnote": "Guest register",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e63",
                            "bcl:num": "1",
                            "bcl:text": "A keeper of a hotel must provide and keep a suitable guest register for the registration of all persons provided with sleeping, housekeeping, camping or other accommodation at the hotel, and all those guests must be registered in it."
                        },
                        {
                            "@id": "d2e72",
                            "bcl:num": "2",
                            "bcl:text": "On the arrival of a guest the keeper must require the guest to enter in the register, or must enter for the guest, the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e81",
                                    "bcl:num": "a",
                                    "bcl:text": "the name and home address of the guest and of all other persons in the guest's party;"
                                },
                                {
                                    "@id": "d2e91",
                                    "bcl:num": "b",
                                    "bcl:text": "the date of the arrival;"
                                },
                                {
                                    "@id": "d2e100",
                                    "bcl:num": "c",
                                    "bcl:text": "if the guest is travelling by motor vehicle,",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e109",
                                            "bcl:num": "i",
                                            "bcl:text": "the trade name of the motor vehicle, and"
                                        },
                                        {
                                            "@id": "d2e118",
                                            "bcl:num": "ii",
                                            "bcl:text": "the licence number, and other identifying letters or characters appearing on the official number plate carried on it, including the name of the province, state or country in which the number plate was issued."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e127",
                            "bcl:num": "3",
                            "bcl:text": "On the departure of the guest, the keeper must enter the date of departure in the register."
                        }
                    ]
                },
                {
                    "@id": "d2e137",
                    "bcl:marginalnote": "Duty of guest to provide information",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e145",
                            "bcl:num": "1",
                            "bcl:text": "On arriving at any hotel and applying for accommodation of a character described in section\u00a02, a guest must provide to the keeper at the hotel the registration information necessary to complete the registration in accordance with section\u00a02."
                        },
                        {
                            "@id": "d2e154",
                            "bcl:num": "2",
                            "bcl:text": "A guest must not be provided with accommodation until the information has been provided."
                        }
                    ]
                },
                {
                    "@id": "d2e164",
                    "bcl:marginalnote": "Inspection of records",
                    "bcl:num": "4",
                    "bcl:text": "The registration records must be open at all times for inspection by a constable."
                },
                {
                    "@id": "d2e176",
                    "bcl:marginalnote": "Offence and penalty",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e184",
                            "bcl:num": "1",
                            "bcl:text": "A person who contravenes this Act commits an offence."
                        },
                        {
                            "@id": "d2e193",
                            "bcl:num": "2",
                            "bcl:text": "A person who commits an offence under subsection (1) is liable on conviction to a penalty of not more than $25."
                        }
                    ]
                },
                {
                    "@id": "d2e204",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "6",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                    }
                }
            ]
        }
    }
}