        "@id": "00_98024_01",
        "act:title": "BC Online Act",
        "act:chapter": "24",
        "act:yearenacted": "1998",
        "act:assentedto": "July 30, 1998",
        "act:currency": {
            "act:tlcDirPath": "1944036832/98024/tlc98024_f",
            "act:tlc": "E3tlc98024"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": {
                                "in:term": "BC Online",
                                "#text": "means the system that enables information or service transactions by electronic means and that is known as BC Online;"
                            }
                        },
                        {
                            "@id": "d2e38",
                            "bcl:text": {
                                "in:term": "operator",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e53",
                                    "bcl:num": "a",
                                    "bcl:text": "a person other than the government that under an agreement referred to in section\u00a02 is authorized to operate BC Online, or"
                                },
                                {
                                    "@id": "d1e62",
                                    "bcl:num": "b",
                                    "bcl:text": "if no person other than the government is authorized under an agreement referred to in section 2 to operate BC Online, the government."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e48",
                    "bcl:marginalnote": "Agreement for operator to retain fees",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e56",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96138_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Financial Administration Act"
                                },
                                "#text": "Despite the , Treasury\n          Board may authorize a person that enters into an agreement to operate BC Online to retain,\n          as consideration for the payments to the government by the person under the agreement, all\n          or part of the money to be levied and collected under the enactments specified by the\n          regulations."
                            }
                        },
                        {
                            "@id": "d2e68",
                            "bcl:num": "2",
                            "bcl:text": "An operator other than the government is",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e77",
                                    "bcl:num": "a",
                                    "bcl:text": "an agent of the government for the purpose of receiving money on behalf of and\n            remitting to the government that portion of the money collected by the person that is\n            not to be retained by that person under an agreement authorized under subsection\n            (1), and"
                                },
                                {
                                    "@id": "d2e87",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/03002_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Auditor General\n                Act"
                                        },
                                        "#text": "an agency of the government for the purposes of the  in respect of money collected under an agreement under\n              subsection\n              (1)."
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e143",
                    "bcl:marginalnote": "When operator fees are payable to government",
                    "bcl:num": "2.1",
                    "bcl:text": "If the government is the operator of BC Online, the following are payable to the government:",
                    "bcl:paragraph": [
                        {
                            "@id": "d1e154",
                            "bcl:num": "a",
                            "bcl:text": "money payable under an enactment to the operator of BC Online;"
                        },
                        {
                            "@id": "d1e163",
                            "bcl:num": "b",
                            "bcl:text": "money described as an operator fee or operator charge in an enactment specified in the regulations."
                        }
                    ]
                },
                {
                    "@id": "d2e100",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e108",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041\n          of the ."
                            }
                        },
                        {
                            "@id": "d2e120",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e206",
                                    "bcl:num": "a",
                                    "bcl:text": "specifying those enactments for which and the circumstances in which, despite the enactment, money to be paid to the government or to a public officer for a service or information may be collected by and retained in whole or in part by an operator other than the government under an agreement under this Act;"
                                },
                                {
                                    "@id": "d1e215",
                                    "bcl:num": "b",
                                    "bcl:text": "specifying those enactments for which and the circumstances in which money to be paid under the enactment for a service or information is payable to the government under section 2.1 when the government is the operator of BC Online."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e130",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "4",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in\n        Council."
                }
            ]
        }
    }
}