        "@id": "00_96258_01",
        "act:title": "Legislative Assembly Management Committee Act",
        "act:chapter": "258",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "76470131/96258/tlc96258_f",
            "act:tlc": "E2tlc96258"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "additional party",
                                "#text": "means a political party with 2 or more members in the Legislative Assembly but does not include the government party or official opposition party;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "chair of the Government Caucus",
                                "#text": "means the member of the Legislative Assembly designated as such by the government party;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "chair of the Official Opposition Caucus",
                                "#text": "means the member of the Legislative Assembly designated as such by the official opposition party;"
                            }
                        },
                        {
                            "@id": "d2e54",
                            "bcl:text": {
                                "in:term": "committee",
                                "#text": "means the Legislative Assembly Management Committee continued by section\u00a02;"
                            }
                        },
                        {
                            "@id": "d2e63",
                            "bcl:text": {
                                "in:term": "Confederation Garden Park",
                                "#text": "means the park described in the Schedule;"
                            }
                        },
                        {
                            "@id": "d2e72",
                            "bcl:text": {
                                "in:term": "Government House Leader",
                                "#text": "means the member of the Executive Council named as such by the Premier;"
                            }
                        },
                        {
                            "@id": "d2e81",
                            "bcl:text": {
                                "in:term": "legislative grounds",
                                "#text": "means the area bounded by Belleville, Menzies, Superior and Government Streets in the City of Victoria, British Columbia;"
                            }
                        },
                        {
                            "@id": "d2e90",
                            "bcl:text": {
                                "in:term": "Legislative Precinct",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e100",
                                    "bcl:num": "a",
                                    "bcl:text": "the Parliament Buildings,"
                                },
                                {
                                    "@id": "d2e109",
                                    "bcl:num": "a.1",
                                    "bcl:text": "the legislative grounds and Confederation Garden Park,"
                                },
                                {
                                    "@id": "d2e118",
                                    "bcl:num": "b",
                                    "bcl:text": "other buildings in Victoria or parts of them that are from time to time occupied and used by members of the Legislative Assembly for the purpose of their parliamentary duties including any premises from time to time occupied by officers and staff of the Legislative Assembly, and"
                                },
                                {
                                    "@id": "d2e127",
                                    "bcl:num": "c",
                                    "bcl:text": "other land or buildings or both, other than constituency offices, designated by minute of the committee;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e136",
                            "bcl:text": {
                                "in:term": "Opposition House Leader",
                                "#text": "means the member of the Legislative Assembly named as such by the Leader of the Official Opposition;"
                            }
                        },
                        {
                            "@id": "d2e145",
                            "bcl:text": {
                                "in:term": "Speaker",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96066_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Constitution Act"
                                },
                                "#text": "means, subject to section 6, the person holding office as such under section\u00a037 of the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e158",
                    "bcl:marginalnote": "Continuation of the committee",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e166",
                            "bcl:num": "1",
                            "bcl:text": "The Legislative Assembly Management Committee is continued consisting of the following members of the Legislative Assembly:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e175",
                                    "bcl:num": "a",
                                    "bcl:text": "the Speaker;"
                                },
                                {
                                    "@id": "d2e184",
                                    "bcl:num": "b",
                                    "bcl:text": "the minister;"
                                },
                                {
                                    "@id": "d2e194",
                                    "bcl:num": "c",
                                    "bcl:text": "the Government House Leader;"
                                },
                                {
                                    "@id": "d2e203",
                                    "bcl:num": "d",
                                    "bcl:text": "the chair of the Government Caucus;"
                                },
                                {
                                    "@id": "d2e212",
                                    "bcl:num": "e",
                                    "bcl:text": "the Opposition House Leader;"
                                },
                                {
                                    "@id": "d2e221",
                                    "bcl:num": "f",
                                    "bcl:text": "the chair of the Official Opposition Caucus;"
                                },
                                {
                                    "@id": "d2e230",
                                    "bcl:num": "g",
                                    "bcl:text": "one member appointed from each additional party by the members of that party;"
                                },
                                {
                                    "@id": "d2e239",
                                    "bcl:num": "h",
                                    "bcl:text": "for each member appointed under paragraph (g) one additional government member from the Government Caucus appointed by the Government House Leader."
                                }
                            ]
                        },
                        {
                            "@id": "d2e249",
                            "bcl:num": "2",
                            "bcl:text": "The members of the committee referred to in subsection (1) (g) and (h) must be appointed within 45 days from the final voting day for the general election that preceded the Parliament."
                        },
                        {
                            "@id": "d2e258",
                            "bcl:num": "3",
                            "bcl:text": "The first meeting of the committee must be held within 14 days of the appointment of the members referred to in subsection (1) (g) and (h)."
                        },
                        {
                            "@id": "d2e267",
                            "bcl:num": "4",
                            "bcl:text": "A member of the committee referred to in subsection (1) (b) to (h) may appoint a designate to take the member's place at a meeting of the committee."
                        },
                        {
                            "@id": "d2e276",
                            "bcl:num": "5",
                            "bcl:text": "The Speaker is the chair of the committee and in the Speaker's absence the Deputy Speaker may act as chair and, with respect to the business of the committee, exercise the powers of the Speaker."
                        },
                        {
                            "@id": "d2e285",
                            "bcl:num": "6",
                            "bcl:text": "A quorum of the committee is 5 members of the committee consisting of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e294",
                                    "bcl:num": "a",
                                    "bcl:text": "the Speaker, or in the Speaker's absence, the Deputy Speaker,"
                                },
                                {
                                    "@id": "d2e304",
                                    "bcl:num": "b",
                                    "bcl:text": "3 of the persons referred to in subsection (1) (b), (c), (d) or (h), and"
                                },
                                {
                                    "@id": "d2e313",
                                    "bcl:num": "c",
                                    "bcl:text": "one of the persons referred to in subsection (1) (e), (f) or (g)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e322",
                            "bcl:num": "7",
                            "bcl:text": "Each member of the committee other than the chair has a vote, and if the votes are equal the chair has a deciding vote."
                        },
                        {
                            "@id": "d2e331",
                            "bcl:num": "8",
                            "bcl:text": "The members of the committee or their designates must attend all meetings of the committee as and when called by the chair, unless prevented from doing so by illness or for other unavoidable reason."
                        }
                    ]
                },
                {
                    "@id": "d2e341",
                    "bcl:marginalnote": "Powers and duties of the committee",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e349",
                            "bcl:num": "1",
                            "bcl:text": "The committee has jurisdiction to deal with all matters affecting",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e358",
                                    "bcl:num": "a",
                                    "bcl:text": "subject to any other enactment and any rules of conduct established by the Legislative Assembly, policies for the administration of the Legislative Assembly and for the conduct of the members of the Legislative Assembly,"
                                },
                                {
                                    "@id": "d2e367",
                                    "bcl:num": "b",
                                    "bcl:text": "the provision of facilities and services, including allocation within the Legislative Precinct, that are required for the effective functioning of the Legislative Assembly,"
                                },
                                {
                                    "@id": "d2e377",
                                    "bcl:num": "c",
                                    "bcl:text": "the appointment, supervision and management of staff of the Legislative Assembly, other than permanent officers of the Legislative Assembly,"
                                },
                                {
                                    "@id": "d2e386",
                                    "bcl:num": "d",
                                    "bcl:text": "review of estimates of expenditure for the Legislative Assembly for Vote\u00a01 including the preparation of forecasts and analyses of expenditures and commitments of the Legislative Assembly,"
                                },
                                {
                                    "@id": "d2e395",
                                    "bcl:num": "d.1",
                                    "bcl:text": "payments of Capital City allowance to members of the Legislative Assembly,"
                                },
                                {
                                    "@id": "d2e404",
                                    "bcl:num": "d.2",
                                    "bcl:text": "[Repealed 2007-23-16.]"
                                },
                                {
                                    "@id": "d2e413",
                                    "bcl:num": "d.3",
                                    "bcl:text": "the voluntary group registered retirement savings plan that was established by the committee for members of the Legislative Assembly,"
                                },
                                {
                                    "@id": "d2e422",
                                    "bcl:num": "e",
                                    "bcl:text": "payments to members of the Legislative Assembly to defray expenses in the performance of their duties, including",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e432",
                                            "bcl:num": "i",
                                            "bcl:text": "expenses for residence in the Capital Regional District during the legislative session and for any additional periods specified by the committee,"
                                        },
                                        {
                                            "@id": "d2e441",
                                            "bcl:num": "ii",
                                            "bcl:text": "protocol expenses,"
                                        },
                                        {
                                            "@id": "d2e450",
                                            "bcl:num": "iii",
                                            "bcl:text": "travel and associated expenses of the members and persons accompanying the members, and"
                                        },
                                        {
                                            "@id": "d2e459",
                                            "bcl:num": "iv",
                                            "bcl:text": "expenses for service on legislative committees when the Legislative Assembly is not sitting,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e468",
                                    "bcl:num": "f",
                                    "bcl:text": "payments or services to members for constituency offices, including payments or services for staffing, maintaining the offices, communication expenses and travel expenses,"
                                },
                                {
                                    "@id": "d2e477",
                                    "bcl:num": "f.1",
                                    "bcl:text": "a severance allowance for persons when they cease to be members of the Legislative Assembly, and for this purpose may establish a severance plan that sets out the circumstances in which such persons will be eligible for the allowance, the amounts of the allowance payments, and any other matter related to severance,"
                                },
                                {
                                    "@id": "d2e487",
                                    "bcl:num": "f.2",
                                    "bcl:text": "when and how",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e496",
                                            "bcl:num": "i",
                                            "bcl:text": "payments referred to in paragraphs (d.1), (e), (f) and (f.1) are required to be provided by the government, and"
                                        },
                                        {
                                            "@id": "d2e505",
                                            "bcl:num": "ii",
                                            "bcl:text": "amounts required to be contributed by the government under the terms of the plan described in paragraph (d.3) are to be paid, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e514",
                                    "bcl:num": "g",
                                    "bcl:text": "other matters necessary for the efficient and effective operation and management of the Legislative Assembly."
                                }
                            ]
                        },
                        {
                            "@id": "d2e523",
                            "bcl:num": "1.1",
                            "bcl:text": "[Repealed 2007-23-16.]"
                        },
                        {
                            "@id": "d2e532",
                            "bcl:num": "1.2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96215_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Income Tax Act"
                                },
                                "#text": "Despite the , a Capital City allowance payable to a member under subsection (1) (d.1) is deemed not to be wages within the meaning of that Act, and not to form part of the income of that member for any purpose of that Act."
                            }
                        },
                        {
                            "@id": "d2e545",
                            "bcl:num": "2",
                            "bcl:text": "Subsection (1) (b) does not empower the committee to allocate space or provide services within the Legislative Precinct that are necessary for",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e554",
                                    "bcl:num": "a",
                                    "bcl:text": "ministerial offices,"
                                },
                                {
                                    "@id": "d2e563",
                                    "bcl:num": "b",
                                    "bcl:text": "ministerial administration and support staff, or"
                                },
                                {
                                    "@id": "d2e572",
                                    "bcl:num": "c",
                                    "bcl:text": "the functioning of the Executive Council."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e582",
                    "bcl:marginalnote": "Powers and duties of the Speaker",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e590",
                            "bcl:num": "1",
                            "bcl:text": "Subject to any direction of the committee, the Speaker is responsible for the day to day administration of the Legislative Assembly."
                        },
                        {
                            "@id": "d2e599",
                            "bcl:num": "1.1",
                            "bcl:text": "In accordance with the regulations, the Speaker is responsible for the",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e608",
                                    "bcl:num": "a",
                                    "bcl:text": "provision of security within the Legislative Precinct, and"
                                },
                                {
                                    "@id": "d2e618",
                                    "bcl:num": "b",
                                    "bcl:text": "management of the use and enjoyment of the Legislative Precinct by the public and by other persons."
                                }
                            ]
                        },
                        {
                            "@id": "d2e627",
                            "bcl:num": "2",
                            "bcl:text": "The committee may delegate any of its powers to the Speaker."
                        }
                    ]
                },
                {
                    "@id": "d2e637",
                    "bcl:marginalnote": "Proceedings and business",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e645",
                            "bcl:num": "1",
                            "bcl:text": "The committee may determine its own procedures."
                        },
                        {
                            "@id": "d2e654",
                            "bcl:num": "2",
                            "bcl:text": "The committee speaks by minute duly adopted by the committee."
                        },
                        {
                            "@id": "d2e663",
                            "bcl:num": "3",
                            "bcl:text": "The committee may authorize payment of reasonable and actual expenses incurred by its members",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e673",
                                    "bcl:num": "a",
                                    "bcl:text": "for attendance at meetings of the committee while the Legislative Assembly is adjourned or prorogued, or"
                                },
                                {
                                    "@id": "d2e682",
                                    "bcl:num": "b",
                                    "bcl:text": "while engaged in the work of the committee while the Legislative Assembly is adjourned or prorogued."
                                }
                            ]
                        },
                        {
                            "@id": "d2e691",
                            "bcl:num": "4",
                            "bcl:text": "The committee must have its accounts or financial procedures examined and reported on each fiscal year by a qualified person or firm appointed by the committee."
                        },
                        {
                            "@id": "d2e700",
                            "bcl:num": "5",
                            "bcl:text": "A member of the public service is not eligible to be appointed under subsection (4)."
                        },
                        {
                            "@id": "d2e709",
                            "bcl:num": "6",
                            "bcl:text": "The Auditor General may examine the accounts and financial procedures of the committee and report to the Speaker at the times that the Auditor General considers appropriate."
                        },
                        {
                            "@id": "d2e718",
                            "bcl:num": "7",
                            "bcl:text": "Subsection (6) does not restrict the Auditor General from reporting to the Legislative Assembly on any other matter that the Auditor General considers to be in the public interest including the matters within the jurisdiction of the committee under section 3."
                        },
                        {
                            "@id": "d2e728",
                            "bcl:num": "8",
                            "bcl:text": "The committee must promptly file its minutes and the reports referred to in subsections\u00a0(4) and (6) with the Clerk of the Legislative Assembly who must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e737",
                                    "bcl:num": "a",
                                    "bcl:text": "make the minutes and reports available to any person for inspection without charge and during normal business hours, and"
                                },
                                {
                                    "@id": "d2e746",
                                    "bcl:num": "b",
                                    "bcl:text": "provide a copy of the minutes and reports on payment of a reasonable copying charge."
                                }
                            ]
                        },
                        {
                            "@id": "d2e755",
                            "bcl:num": "9",
                            "bcl:text": "The committee must report annually to the Legislative Assembly on the decisions made by the committee during the previous year."
                        },
                        {
                            "@id": "d2e764",
                            "bcl:num": "10",
                            "bcl:text": "The report under subsection (9) must include the reports referred to in subsections (4) and (6)."
                        }
                    ]
                },
                {
                    "@id": "d2e775",
                    "bcl:marginalnote": "Dissolution of Legislative Assembly",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e783",
                            "bcl:num": "1",
                            "bcl:text": "After final voting day for a general election, the person holding the office of Speaker immediately before final voting day is deemed for the purposes of this Act to continue in office as Speaker until a Speaker designate is named."
                        },
                        {
                            "@id": "d2e792",
                            "bcl:num": "2",
                            "bcl:text": "[Repealed 2011-13-125.]"
                        },
                        {
                            "@id": "d2e801",
                            "bcl:num": "3",
                            "bcl:text": "A Speaker designate is deemed to be Speaker for the purposes of this Act."
                        },
                        {
                            "@id": "d2e811",
                            "bcl:num": "4",
                            "bcl:text": "[Repealed 2011-13-125.]"
                        }
                    ]
                },
                {
                    "@id": "d2e821",
                    "bcl:marginalnote": "Appropriation",
                    "bcl:num": "6.1",
                    "bcl:text": "Money required to be provided by or paid on behalf of the government under this Act must be provided or paid by the Minister of Finance from money appropriated for that purpose by the Legislative Assembly or, in the absence of\u00a0 an adequate appropriation for that purpose, from the consolidated revenue fund."
                },
                {
                    "@id": "d2e833",
                    "bcl:marginalnote": "Conflicts",
                    "bcl:num": "7",
                    "bcl:text": [
                        "If there is any conflict or inconsistency between",
                        {
                            "bcl:link": {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96138_01",
                                "@xlink:type": "locator",
                                "in:doc": "Financial Administration Act"
                            },
                            "#text": "then, despite the , this Act or the minute of the committee prevails."
                        }
                    ],
                    "bcl:paragraph": [
                        {
                            "@id": "d2e844",
                            "bcl:num": "a",
                            "bcl:text": "this Act or a minute of the committee issued under this Act, and"
                        },
                        {
                            "@id": "d2e853",
                            "bcl:num": "b",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96138_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Financial Administration Act"
                                },
                                "#text": "the  or any regulation or directive made or given under it,"
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e873",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e881",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e890",
                                    "bcl:num": "a",
                                    "bcl:text": "providing for the security of the Legislative Precinct;"
                                },
                                {
                                    "@id": "d2e899",
                                    "bcl:num": "b",
                                    "bcl:text": "regulating, permitting or prohibiting use of the Legislative Precinct by the public or by other persons."
                                }
                            ]
                        },
                        {
                            "@id": "d2e909",
                            "bcl:num": "2",
                            "bcl:text": "The Lieutenant Governor in Council may make regulations establishing penalties for failure to comply with the regulations made under this section."
                        }
                    ]
                }
            ],
            "bcl:schedule": {
                "bcl:scheduletitle": "Schedule",
                "bcl:lefttext": [
                    {
                        "in:strong": "CONFEDERATION GARDEN PARK"
                    },
                    "All those parcels of land in the City of Victoria with the following legal descriptions:"
                ],
                "bcl:indent1": [
                    {
                        "in:br": null,
                        "#text": "Parcel Identifier: 009-386-980 Lot 890, Victoria City"
                    },
                    {
                        "in:br": null,
                        "#text": "Parcel Identifier: 009-387-021 Lot 891, Victoria City"
                    },
                    {
                        "in:br": null,
                        "#text": "Parcel Identifier: 009-387-030 Lot 894, Victoria City"
                    },
                    {
                        "in:br": null,
                        "#text": "Parcel Identifier: 009-387-056 Lot 995, Victoria City"
                    }
                ]
            }
        }
    }
}