        "@id": "00_96172_01",
        "act:title": "Good Samaritan Act",
        "act:chapter": "172",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "553593740/96172/tlc96172_f",
            "act:tlc": "tlc96172"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "No liability for emergency aid unless gross negligence",
                    "bcl:num": "1",
                    "bcl:text": "A person who renders emergency medical services or aid to an ill, injured or\n        unconscious person, at the immediate scene of an accident or emergency that has caused the\n        illness, injury or unconsciousness, is not liable for damages for injury to or death of that\n        person caused by the person's act or omission in rendering the medical services or aid\n        unless that person is grossly negligent."
                },
                {
                    "@id": "d2e27",
                    "bcl:marginalnote": "Exceptions",
                    "bcl:num": "2",
                    "bcl:text": "Section\n          1 does not apply if the person rendering the medical services or aid",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e38",
                            "bcl:num": "a",
                            "bcl:text": "is employed expressly for that purpose, or"
                        },
                        {
                            "@id": "d2e47",
                            "bcl:num": "b",
                            "bcl:text": "does so with a view to gain."
                        }
                    ]
                },
                {
                    "@id": "d2e57",
                    "bcl:marginalnote": {
                        "in:doc": "Health Care (Consent) and Care Facility (Admission) Act"
                    },
                    "bcl:num": "3",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96181_01",
                            "@xlink:type": "locator",
                            "in:doc": "Health Care (Consent) and Care Facility (Admission) Act"
                        },
                        "#text": "The \n        does not affect anything in this Act."
                    }
                }
            ]
        }
