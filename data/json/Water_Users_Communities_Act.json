                        {
                            "@id": "d0e591",
                            "bcl:marginalnote": {
                                "in:doc": "Water Sustainability Act",
                                "#text": "Application of"
                            },
                            "bcl:num": "100.1",
                            "bcl:subsection": [
                                {
                                    "@id": "d0e599",
                                    "bcl:num": "1",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/14015",
                                            "@xlink:type": "locator",
                                            "in:doc": "Water Sustainability Act"
                                        },
                                        "#text": "The following provisions of the  apply for the purposes of this Act:"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d0e611",
                                            "bcl:num": "a",
                                            "bcl:text": {
                                                "in:desc": "[entry warrant]",
                                                "#text": "section 90 ;"
                                            }
                                        },
                                        {
                                            "@id": "d0e623",
                                            "bcl:num": "b",
                                            "bcl:text": {
                                                "in:desc": "[appeals to appeal board]",
                                                "#text": "section 105 ;"
                                            }
                                        },
                                        {
                                            "@id": "d0e635",
                                            "bcl:num": "c",
                                            "bcl:text": {
                                                "in:desc": "[general offences]",
                                                "#text": "section 106 (1) ;"
                                            }
                                        },
                                        {
                                            "@id": "d0e647",
                                            "bcl:num": "d",
                                            "bcl:text": {
                                                "in:desc": "[records and reporting]",
                                                "#text": "section 116 ;"
                                            }
                                        },
                                        {
                                            "@id": "d0e659",
                                            "bcl:num": "e",
                                            "bcl:text": {
                                                "in:desc": "[delivery and publication of documents and information]",
                                                "#text": "section 117 ;"
                                            }
                                        },
                                        {
                                            "@id": "d0e671",
                                            "bcl:num": "f",
                                            "bcl:text": {
                                                "in:desc": "[restriction on proceedings respecting decisions under Act]",
                                                "#text": "section 120 ;"
                                            }
                                        },
                                        {
                                            "@id": "d0e683",
                                            "bcl:num": "g",
                                            "bcl:text": "a prescribed provision."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d0e693",
                                    "bcl:num": "2",
                                    "bcl:text": {
                                        "in:desc": [
                                            "[inquiry powers]",
                                            "[maintenance of order at hearings]",
                                            "[contempt proceeding for uncooperative person]"
                                        ],
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/14015",
                                            "@xlink:type": "locator",
                                            "in:doc": "Water Sustainability Act"
                                        },
                                        "#text": "If it appears to the comptroller that the proper determination of a matter within the comptroller's jurisdiction in relation to a water users' community requires a public other hearing, sections 95 , 96  and 97  of the  apply."
                                    }
                                },
                                {
                                    "@id": "d0e702",
                                    "bcl:num": "3",
                                    "bcl:text": {
                                        "in:desc": "[protection of officials]",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/14015",
                                            "@xlink:type": "locator",
                                            "in:doc": "Water Sustainability Act"
                                        },
                                        "#text": "Section 119  of the  applies to the persons named in that provision in relation to anything done or omitted"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d0e710",
                                            "bcl:num": "a",
                                            "bcl:text": "in the performance or intended performance of any duty under this Act, or"
                                        },
                                        {
                                            "@id": "d0e719",
                                            "bcl:num": "b",
                                            "bcl:text": "in the exercise or intended exercise of any power under this Act."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d0e730",
                            "bcl:marginalnote": "Regulations",
                            "bcl:num": "101",
                            "bcl:subsection": [
                                {
                                    "@id": "d0e738",
                                    "bcl:num": "1",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96238_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Interpretation Act"
                                        },
                                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                                    }
                                },
                                {
                                    "@id": "d0e747",
                                    "bcl:num": "2",
                                    "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d0e755",
                                            "bcl:num": "a",
                                            "bcl:text": "respecting the form and content of assessment rolls and notices required in relation to assessment rolls,"
                                        },
                                        {
                                            "@id": "d0e764",
                                            "bcl:num": "b",
                                            "bcl:text": "defining words or phrases used but not defined in this Act, and"
                                        },
                                        {
                                            "@id": "d0e773",
                                            "bcl:num": "c",
                                            "bcl:text": "respecting any matter for which regulations are contemplated by this Act."
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}