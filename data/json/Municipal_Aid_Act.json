        "@id": "00_96324_01",
        "act:title": "Municipal Aid Act",
        "act:chapter": "324",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1325524918/96324/tlc96324_f",
            "act:tlc": "E2tlc96324"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "improvements",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96020_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Assessment Act"
                                },
                                "#text": "means improvements as defined in the ;"
                            }
                        },
                        {
                            "@id": "d2e38",
                            "bcl:text": {
                                "in:term": "land",
                                "#text": "does not include"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e48",
                                    "bcl:num": "a",
                                    "bcl:text": "improvements,"
                                },
                                {
                                    "@id": "d2e57",
                                    "bcl:num": "b",
                                    "bcl:text": "mines or minerals belonging to the government, or"
                                },
                                {
                                    "@id": "d2e66",
                                    "bcl:num": "c",
                                    "bcl:text": "mines or minerals for which title in fee simple has been registered in the records of the land title office;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e75",
                            "bcl:text": {
                                "in:term": "land title office",
                                "#text": "means the land title office for the land title district where the municipality or the land is located;"
                            }
                        },
                        {
                            "@id": "d2e84",
                            "bcl:text": {
                                "in:term": "Provincial land",
                                "#text": "means land of which the government is the registered owner, but does not include land"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e93",
                                    "bcl:num": "a",
                                    "bcl:text": "that forms part of an undertaking to conserve, irrigate, reclaim, rehabilitate or reforest land,"
                                },
                                {
                                    "@id": "d2e103",
                                    "bcl:num": "b",
                                    "bcl:text": "that is a park, monument or historic site,"
                                },
                                {
                                    "@id": "d2e112",
                                    "bcl:num": "c",
                                    "bcl:text": "under the control, management or administration of the British Columbia Hydro and Power Authority, the British Columbia Railway Company, the Workers' Compensation Board, or a corporation, commission, board or agency specified by the Lieutenant Governor in Council,"
                                },
                                {
                                    "@id": "d2e121",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/04044_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Transportation Act"
                                        },
                                        "#text": "that forms part of a highway under the , or a road, street, lane or right of way designed or intended for use by the general public, or a place or passage way to which the public has access or is invited, or gravel pit or quarry,"
                                    }
                                },
                                {
                                    "@id": "d2e133",
                                    "bcl:num": "e",
                                    "bcl:text": "leased or occupied by a person from whom a municipality may levy and collect property taxes by reason of the person's interest in or occupation of the land or improvements on the land,"
                                },
                                {
                                    "@id": "d2e142",
                                    "bcl:num": "f",
                                    "bcl:text": "that is vacant, except if designated for use or used for a specific purpose by the government,"
                                },
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "g",
                                    "bcl:text": "that forms part of a forest nursery, tree farm licence or access road, or"
                                },
                                {
                                    "@id": "d2e161",
                                    "bcl:num": "h",
                                    "bcl:text": "specifically exempted from this definition by the Lieutenant Governor in Council."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e171",
                    "bcl:marginalnote": "Grants",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e179",
                            "bcl:num": "1",
                            "bcl:text": "At the times and in the manner the Lieutenant Governor in Council may prescribe, the minister must in each year pay from the consolidated revenue fund to each municipality a grant equal to the product obtained by multiplying the assessed value of Provincial land and improvements on it in the municipality by the rate, including debt, fixed by the municipality in that year for general municipal and regional district taxation purposes."
                        },
                        {
                            "@id": "d2e188",
                            "bcl:num": "2",
                            "bcl:text": "The assessed values of Provincial land and improvements on it to be used for the calculation of grants under subsection (1) must be determined by the British Columbia Assessment Authority as at December 31 of the preceding year and the British Columbia Assessment Authority must certify the assessed values so determined to the minister on or before April 15 in each year."
                        },
                        {
                            "@id": "d2e197",
                            "bcl:num": "3",
                            "bcl:text": "If, as a result of the change in the method of determining the grant, the grant payable under subsection\u00a0(1) is less than the grant paid to the municipality in 1977, subsection\u00a0(1) does not apply and instead the minister must pay from the consolidated revenue fund a grant equal to the grant paid to the municipality on Provincial land and improvements on it in 1977."
                        },
                        {
                            "@id": "d2e207",
                            "bcl:num": "4",
                            "bcl:text": "The Lieutenant Governor in Council may specify a portion of any land or improvements to be a park, monument or historic site under paragraph\u00a0(b) of the definition of \"Provincial land\" in section\u00a01."
                        }
                    ]
                },
                {
                    "@id": "d2e217",
                    "bcl:marginalnote": "Grants additional to others",
                    "bcl:num": "3",
                    "bcl:text": "The grant payable under section 2 is in addition to and not in substitution for money otherwise payable under another Act."
                },
                {
                    "@id": "d2e229",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e237",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e249",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e258",
                                    "bcl:num": "a",
                                    "bcl:text": "defining any expression used but not defined in this Act;"
                                },
                                {
                                    "@id": "d2e268",
                                    "bcl:num": "b",
                                    "bcl:text": "extending the time for complying with a provision of this Act;"
                                },
                                {
                                    "@id": "d2e277",
                                    "bcl:num": "c",
                                    "bcl:text": "providing for the payment by the minister of any amounts to a municipality."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}