        "act:title": "Financial Information Act",
        "act:chapter": "140",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1198514681/96140/tlc96140_f",
            "act:tlc": "E3tlc96140"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e32",
                            "bcl:text": {
                                "in:term": "corporation",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e41",
                                    "bcl:num": "a",
                                    "bcl:text": "a corporation, association, board, commission or society to which a grant or advance may be made, or the borrowings of which may be guaranteed by the government, under the authority of the enactments in Schedule\u00a01, or"
                                },
                                {
                                    "@id": "d2e51",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96138_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Financial Administration Act"
                                        },
                                        "#text": "a public body, as defined in section 1 of the , that is listed in Schedule\u00a02;"
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e63",
                            "bcl:text": {
                                "in:term": "minister",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e72",
                                    "bcl:num": "a",
                                    "bcl:text": "in respect of the corporations referred to in paragraph (a) of the definition of \"corporation\", the minister who administers the Acts in Schedule 1, or"
                                },
                                {
                                    "@id": "d2e81",
                                    "bcl:num": "b",
                                    "bcl:text": "in respect of the corporations in Schedule 2, the minister designated by the Lieutenant Governor in Council."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e91",
                    "bcl:marginalnote": "Statement of financial information",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e99",
                            "bcl:num": "1",
                            "bcl:text": "A corporation must prepare statements of financial information in accordance with this section in a form and containing information prescribed by the Lieutenant Governor in Council."
                        },
                        {
                            "@id": "d2e108",
                            "bcl:num": "2",
                            "bcl:text": "Within 3 months after the end of each fiscal year of a corporation, it must prepare a statement of financial information for that fiscal year that includes the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e117",
                                    "bcl:num": "a",
                                    "bcl:text": "a statement of assets and liabilities;"
                                },
                                {
                                    "@id": "d2e127",
                                    "bcl:num": "b",
                                    "bcl:text": "an operational statement;"
                                },
                                {
                                    "@id": "d2e136",
                                    "bcl:num": "c",
                                    "bcl:text": "a schedule of debts;"
                                },
                                {
                                    "@id": "d2e145",
                                    "bcl:num": "d",
                                    "bcl:text": "a schedule of guarantee and indemnity agreements."
                                }
                            ]
                        },
                        {
                            "@id": "d2e154",
                            "bcl:num": "3",
                            "bcl:text": "Within 6 months after the end of each fiscal year of a corporation, it must prepare a statement of financial information for that fiscal year that includes the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e163",
                                    "bcl:num": "a",
                                    "bcl:text": "a schedule showing",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e172",
                                            "bcl:num": "i",
                                            "bcl:text": "in respect of each employee earning more than a prescribed amount, the total remuneration paid to the employee and total amount paid for the employee's expenses, and"
                                        },
                                        {
                                            "@id": "d2e182",
                                            "bcl:num": "ii",
                                            "bcl:text": "a consolidated total of all remuneration paid to all other employees;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e191",
                                    "bcl:num": "b",
                                    "bcl:text": "a schedule showing",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e200",
                                            "bcl:num": "i",
                                            "bcl:text": "the total amount paid to each supplier of goods or services during the fiscal year that is greater than a prescribed amount, and"
                                        },
                                        {
                                            "@id": "d2e209",
                                            "bcl:num": "ii",
                                            "bcl:text": "a consolidated total of all other payments made to suppliers of goods or services during that fiscal year."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e218",
                            "bcl:num": "4",
                            "bcl:text": "A corporation must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e227",
                                    "bcl:num": "a",
                                    "bcl:text": "keep in its office copies of the financial information statements prepared under this section, and"
                                },
                                {
                                    "@id": "d2e237",
                                    "bcl:num": "b",
                                    "bcl:text": "make a copy available at its head office during usual business hours for inspection by any person."
                                }
                            ]
                        },
                        {
                            "@id": "d2e246",
                            "bcl:num": "5",
                            "bcl:text": "On the request of the minister and without charge, a corporation must supply the statements of financial information prepared under this section to the minister or to any person whom the Minister of Finance requests be supplied with that statement."
                        },
                        {
                            "@id": "d2e255",
                            "bcl:num": "6",
                            "bcl:text": "If requested by a member of the public, a corporation must provide a copy of a statement of financial information prepared under this section on payment of the prescribed fee."
                        }
                    ]
                },
                {
                    "@id": "d2e265",
                    "bcl:marginalnote": "Additional information that must be provided on request",
                    "bcl:num": "3",
                    "bcl:text": "On request of the minister, the Minister of Finance or a committee of the Executive Council that is designated by the Executive Council, a corporation must provide to the requesting minister or committee",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e276",
                            "bcl:num": "a",
                            "bcl:text": "its strategic plans, business plans, capital and operating budgets, as requested by that minister or committee, and"
                        },
                        {
                            "@id": "d2e285",
                            "bcl:num": "b",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96138_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Financial Administration Act"
                                },
                                "#text": "any other requested information in respect of the corporation in relation to matters covered by this Act or section 4.1 of the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e298",
                    "bcl:marginalnote": "Minister may order audit if corporation does not comply",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e306",
                            "bcl:num": "1",
                            "bcl:text": "If a corporation neglects or refuses to comply with this Act, the minister or the Minister of Finance may appoint a person to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e315",
                                    "bcl:num": "a",
                                    "bcl:text": "audit and examine the records, bank accounts and financial information of the corporation, and"
                                },
                                {
                                    "@id": "d2e324",
                                    "bcl:num": "b",
                                    "bcl:text": "prepare and make available to the public, as the applicable minister directs, a statement of financial information required under section 2 for the fiscal year in respect of which the corporation has neglected or refused to prepare it."
                                }
                            ]
                        },
                        {
                            "@id": "d2e334",
                            "bcl:num": "2",
                            "bcl:text": "If an audit and examination is authorized under subsection (1), a corporation and every officer and employee of it must take all necessary steps to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e343",
                                    "bcl:num": "a",
                                    "bcl:text": "make available the facilities and records of the corporation, and"
                                },
                                {
                                    "@id": "d2e352",
                                    "bcl:num": "b",
                                    "bcl:text": "assist in the conduct of the audit and examination."
                                }
                            ]
                        },
                        {
                            "@id": "d2e361",
                            "bcl:num": "3",
                            "bcl:text": "A person who hinders or obstructs the person conducting the audit and examination under subsection (1) during the course of its conduct commits an offence."
                        },
                        {
                            "@id": "d2e370",
                            "bcl:num": "4",
                            "bcl:text": "All charges and fees of the person who conducts an audit and examination under subsection (1) may be paid out of the consolidated revenue fund."
                        },
                        {
                            "@id": "d2e379",
                            "bcl:num": "5",
                            "bcl:text": "On payment under subsection (4), the amount that was paid is a debt due to the government from the corporation that was audited and examined."
                        }
                    ]
                },
                {
                    "@id": "d2e389",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e397",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e409",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e418",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribing the financial information to be contained in statements and schedules specified in section 2 that must be provided by any corporation or class of corporation;"
                                },
                                {
                                    "@id": "d2e428",
                                    "bcl:num": "b",
                                    "bcl:text": "determining the minimum financial limits and classifications for the reporting under section 2 (3) (a) and (b);"
                                },
                                {
                                    "@id": "d2e437",
                                    "bcl:num": "c",
                                    "bcl:text": "prescribing fees for the purposes of section 2 (6);"
                                },
                                {
                                    "@id": "d2e446",
                                    "bcl:num": "d",
                                    "bcl:text": "adding additional Acts to Schedule 1 and additional corporations, as defined in paragraph (b) of the definition of \"corporation\", to Schedule 2."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e457",
                    "bcl:marginalnote": "Directives",
                    "bcl:num": "6",
                    "bcl:text": "The Minister of Finance may issue directives",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e468",
                            "bcl:num": "a",
                            "bcl:text": "providing for the form and manner of providing public access to financial information held by the government and any corporation, and"
                        },
                        {
                            "@id": "d2e477",
                            "bcl:num": "b",
                            "bcl:text": "respecting compliance by corporations with this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e487",
                    "bcl:marginalnote": "Transitional for new corporations",
                    "bcl:num": "7",
                    "bcl:text": "If the Lieutenant Governor in Council makes a regulation under section 5 (2) (d) adding an Act to Schedule 1 or a corporation to Schedule 2, a corporation that is affected by the regulation is not required to comply with this Act in respect of the fiscal year that it was in at the time the regulation became effective."
                }
            ],
