        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_06019_01",
        "act:title": "Apology Act",
        "act:chapter": "19",
        "act:yearenacted": "2006",
        "act:assentedto": "May 18, 2006",
        "act:currency": {
            "act:tlcDirPath": "524872423/06019/tlc06019_f",
            "act:tlc": "E3tlc06019"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": {
                                "in:term": "apology",
                                "#text": "means an expression of sympathy or regret, a statement that one\n          is sorry or any other words or actions indicating contrition or commiseration, whether or\n          not the words or actions admit or imply an admission of fault in connection with the\n          matter to which the words or actions relate;"
                            }
                        },
                        {
                            "@id": "d2e38",
                            "bcl:text": {
                                "in:term": "court",
                                "#text": "includes a tribunal, an arbitrator and any other person who is\n          acting in a judicial or quasi-judicial capacity."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e48",
                    "bcl:marginalnote": "Effect of apology on liability",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e56",
                            "bcl:num": "1",
                            "bcl:text": "An apology made by or on behalf of a person in connection with any\n          matter",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e65",
                                    "bcl:num": "a",
                                    "bcl:text": "does not constitute an express or implied admission of fault or liability by the\n            person in connection with that matter,"
                                },
                                {
                                    "@id": "d2e74",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/12013_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Limitation\n                Act"
                                        },
                                        "#text": "does not constitute an acknowledgement of liability in relation to that matter\n            for the purposes of section 24 of the ,"
                                    }
                                },
                                {
                                    "@id": "d2e87",
                                    "bcl:num": "c",
                                    "bcl:text": "does not, despite any wording to the contrary in any contract of insurance and\n            despite any other enactment, void, impair or otherwise affect any insurance coverage\n            that is available, or that would, but for the apology, be available, to the person in\n            connection with that matter, and"
                                },
                                {
                                    "@id": "d2e96",
                                    "bcl:num": "d",
                                    "bcl:text": "must not be taken into account in any determination of fault or liability in\n            connection with that matter."
                                }
                            ]
                        },
                        {
                            "@id": "d2e105",
                            "bcl:num": "2",
                            "bcl:text": "Despite any other enactment, evidence of an apology made by or on behalf of a\n          person in connection with any matter is not admissible in any court as evidence of the\n          fault or liability of the person in connection with that matter."
                        }
                    ]
                },
                {
                    "@id": "d2e115",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "3",
                    "bcl:text": "This Act comes into force on the date of Royal Assent."
                }
            ]
        }
    }
}