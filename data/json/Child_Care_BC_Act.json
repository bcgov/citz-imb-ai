        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_01004_01",
        "act:title": "Child Care BC Act",
        "act:chapter": "4",
        "act:yearenacted": "2001",
        "act:assentedto": "March 29, 2001",
        "act:currency": {
            "act:tlcDirPath": "781755088/01004/tlc01004_f",
            "act:tlc": "E3tlc01004"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": {
                                "in:term": "child care",
                                "#text": "means the care and supervision of a child in a child care setting or other facility, other than"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e38",
                                    "bcl:num": "a",
                                    "bcl:text": "by the child's parent, or"
                                },
                                {
                                    "@id": "d2e48",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96412_00",
                                                "@xlink:type": "locator",
                                                "in:doc": "School Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96216_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Independent School Act"
                                            }
                                        ],
                                        "#text": "while the child is attending an educational program provided under the , the  or a law of a treaty first nation in relation to kindergarten to grade 12 education;"
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e63",
                            "bcl:text": {
                                "in:term": "child care grant",
                                "#text": "means a payment made for any of the following purposes:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e72",
                                    "bcl:num": "a",
                                    "bcl:text": "to facilitate the operation of a child care setting;"
                                },
                                {
                                    "@id": "d2e81",
                                    "bcl:num": "b",
                                    "bcl:text": "to facilitate the operation of other child care facilities and services specified by regulation;"
                                },
                                {
                                    "@id": "d2e90",
                                    "bcl:num": "c",
                                    "bcl:text": "to improve the quality of child care;"
                                },
                                {
                                    "@id": "d2e99",
                                    "bcl:num": "d",
                                    "bcl:text": "to improve access to affordable child care;"
                                },
                                {
                                    "@id": "d2e109",
                                    "bcl:num": "e",
                                    "bcl:text": "to develop or operate programs and services that in any other way promote the purposes of this Act;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e118",
                            "bcl:text": {
                                "in:term": "child care provider",
                                "#text": "means a person or organization operating a child care setting;"
                            }
                        },
                        {
                            "@id": "d2e127",
                            "bcl:text": {
                                "in:term": "child care setting",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/02075_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Community Care and Assisted Living Act"
                                },
                                "#text": "means any setting in which child care is provided in a facility licensed under the \u00a0to provide child care;"
                            }
                        },
                        {
                            "@id": "d2e139",
                            "bcl:text": {
                                "in:term": "parent",
                                "#text": "includes a person with whom a child resides and who stands in place of a parent of the child."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e149",
                    "bcl:marginalnote": "Provincial Child Care Council",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e157",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:term": "council",
                                "#text": "In this section,  means the Provincial Child Care Council continued under this Act."
                            }
                        },
                        {
                            "@id": "d2e169",
                            "bcl:num": "2",
                            "bcl:text": "The council may make recommendations",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e178",
                                    "bcl:num": "a",
                                    "bcl:text": "to the minister about child care under this Act, and"
                                },
                                {
                                    "@id": "d2e188",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96026_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Child Care Subsidy Act"
                                        },
                                        "#text": "to the minister responsible for the  about child care subsidies under that Act."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e200",
                            "bcl:num": "3",
                            "bcl:text": "The council consists of at least 14 and not more than 21 members, each of whom is appointed by the minister and one or more of whom is designated by the minister to chair council meetings."
                        },
                        {
                            "@id": "d2e209",
                            "bcl:num": "4",
                            "bcl:text": "The minister may set the term of office of any member of the council."
                        },
                        {
                            "@id": "d2e218",
                            "bcl:num": "5",
                            "bcl:text": "The minister may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e227",
                                    "bcl:num": "a",
                                    "bcl:text": "reimburse the members for reasonable travelling and out of pocket expenses necessarily incurred by them in attending council meetings, and"
                                },
                                {
                                    "@id": "d2e236",
                                    "bcl:num": "b",
                                    "bcl:text": "pay the members a fee set by the minister in accordance with the general directives of Treasury Board."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e246",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "3-5",
                    "bcl:text": "[Repealed 2001-32-2.]"
                },
                {
                    "@id": "d2e258",
                    "bcl:marginalnote": "Child care grants",
                    "bcl:num": "6",
                    "bcl:text": "The minister may, in the minister's sole discretion, pay child care grants and may specify the terms and conditions to be included in written agreements for the purposes of child care grants."
                },
                {
                    "@id": "d2e270",
                    "bcl:marginalnote": "Overpayments and repayments",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e278",
                            "bcl:num": "1",
                            "bcl:text": "If a child care grant is paid to a child care provider or other person who is not eligible for that child care grant, that child care provider or other person is liable to repay to the government the amount for which the child care provider or other person was not eligible."
                        },
                        {
                            "@id": "d2e287",
                            "bcl:num": "2",
                            "bcl:text": "An amount that a child care provider or other person is liable to repay under subsection\u00a0(1) is a debt due to the government and may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e296",
                                    "bcl:num": "a",
                                    "bcl:text": "be recovered by it in a court of competent jurisdiction, or"
                                },
                                {
                                    "@id": "d2e306",
                                    "bcl:num": "b",
                                    "bcl:text": "be deducted by it from any subsequent child care grant."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e317",
                    "bcl:marginalnote": "Agreements",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e325",
                            "bcl:num": "1",
                            "bcl:text": "Subject to subsection (2), the minister may enter into a written agreement with any person or group of persons."
                        },
                        {
                            "@id": "d2e334",
                            "bcl:num": "2",
                            "bcl:text": "With the prior approval of the Lieutenant Governor in Council, the minister may enter into any of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e343",
                                    "bcl:num": "a",
                                    "bcl:text": "an agreement with the government of Canada, or an agency of that government, about financial arrangements or other matters relating to this Act;"
                                },
                                {
                                    "@id": "d2e353",
                                    "bcl:num": "b",
                                    "bcl:text": "a reciprocal agreement with the government of another province of Canada, or an agency of that government, respecting child care programs;"
                                },
                                {
                                    "@id": "d2e362",
                                    "bcl:num": "c",
                                    "bcl:text": "an information-sharing agreement with",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e371",
                                            "bcl:num": "i",
                                            "bcl:text": "the government of Canada or an agency of that government,"
                                        },
                                        {
                                            "@id": "d2e380",
                                            "bcl:num": "ii",
                                            "bcl:text": "the government of a province or other jurisdiction in Canada or an agency of that government,"
                                        },
                                        {
                                            "@id": "d2e389",
                                            "bcl:num": "iii",
                                            "bcl:text": "the government of a state of the United States, or an agency of that government,"
                                        },
                                        {
                                            "@id": "d2e398",
                                            "bcl:num": "iv",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/96165_00",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Freedom of Information and Protection of Privacy Act"
                                                },
                                                "#text": "a public body as defined in the , or"
                                            }
                                        },
                                        {
                                            "@id": "d2e411",
                                            "bcl:num": "v",
                                            "bcl:text": "a legal entity representing an aboriginal community."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e420",
                            "bcl:num": "3",
                            "bcl:text": "An information-sharing agreement may only be entered into under subsection (2) for the purposes of the administration of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e429",
                                    "bcl:num": "a",
                                    "bcl:text": "this Act, or"
                                },
                                {
                                    "@id": "d2e438",
                                    "bcl:num": "b",
                                    "bcl:text": "a social benefit program operated by a government, agency, public body or legal entity referred to in subsection (2) (c)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e447",
                            "bcl:num": "4",
                            "bcl:text": {
                                "in:term": "information-sharing agreement",
                                "#text": "In this section,  includes a data-matching agreement but does not include an agreement to share"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e459",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96165_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Freedom of Information and Protection of Privacy Act"
                                        },
                                        "#text": "personal information as defined in the ,"
                                    }
                                },
                                {
                                    "@id": "d2e472",
                                    "bcl:num": "b",
                                    "bcl:text": "information obtained by the minister for the purposes of another Act administered by the minister, or"
                                },
                                {
                                    "@id": "d2e481",
                                    "bcl:num": "c",
                                    "bcl:text": "information obtained by the minister pursuant to an agreement under this section."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e491",
                    "bcl:marginalnote": "Offence of supplying false or misleading information",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e499",
                            "bcl:num": "1",
                            "bcl:text": "A person commits an offence who, in order to obtain a child care grant, supplies information that is false or misleading with respect to a material fact."
                        },
                        {
                            "@id": "d2e508",
                            "bcl:num": "2",
                            "bcl:text": "A person does not commit an offence under subsection (1) if, at the time the information was supplied, the person did not know that it was false or misleading and, with the exercise of reasonable diligence, could not have known that it was false or misleading."
                        },
                        {
                            "@id": "d2e517",
                            "bcl:num": "3",
                            "bcl:text": "A person who commits an offence under this section is liable on conviction to a fine of not more than $2 000 or to imprisonment for not more than 6 months or to both."
                        },
                        {
                            "@id": "d2e527",
                            "bcl:num": "4",
                            "bcl:text": "In addition, the court may order a person convicted of an offence under this section to pay the government all or part of any amount that person received under this Act as a result of committing the offence."
                        }
                    ]
                },
                {
                    "@id": "d2e537",
                    "bcl:marginalnote": "Other provisions relating to offences",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e545",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96338_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Offence Act"
                                },
                                "#text": "Section 5 of the  does not apply to this Act or the regulations."
                            }
                        },
                        {
                            "@id": "d2e557",
                            "bcl:num": "2",
                            "bcl:text": "The time limit for laying an information for an offence under this Act is 12 months after the facts on which the information is based first came to the minister's attention."
                        },
                        {
                            "@id": "d2e566",
                            "bcl:num": "3",
                            "bcl:text": "A document purporting to have been issued by the minister, certifying the date on which the minister became aware of the facts on which the information is based,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e576",
                                    "bcl:num": "a",
                                    "bcl:text": "is admissible without proof of the signature or official character of the person appearing to have signed the certificate, and"
                                },
                                {
                                    "@id": "d2e585",
                                    "bcl:num": "b",
                                    "bcl:text": "is proof of the certified facts unless there is evidence to the contrary."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e595",
                    "bcl:marginalnote": "Delegation of minister's powers and duties",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e603",
                            "bcl:num": "1",
                            "bcl:text": "Subject to the regulations, the minister may delegate to any person or class of persons any or all of the minister's powers, duties and functions under this Act, except",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e612",
                                    "bcl:num": "a",
                                    "bcl:text": "the power to enter into an agreement under section 8 (2), and"
                                },
                                {
                                    "@id": "d2e621",
                                    "bcl:num": "b",
                                    "bcl:text": "the power to prescribe forms."
                                }
                            ]
                        },
                        {
                            "@id": "d2e631",
                            "bcl:num": "2",
                            "bcl:text": "A delegation of the powers, duties or functions of the minister must be in writing and may include any limits or conditions the minister considers advisable."
                        }
                    ]
                },
                {
                    "@id": "d2e641",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "12",
                    "bcl:subsection": [
                        {
                            "@id": "d2e649",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                            }
                        },
                        {
                            "@id": "d2e661",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e670",
                                    "bcl:num": "a",
                                    "bcl:text": "specifying other child care facilities and services for the purposes of paragraph (b) of the definition of \"child care grant\";"
                                },
                                {
                                    "@id": "d2e680",
                                    "bcl:num": "b",
                                    "bcl:text": "respecting applications for child care grants and the information, authorizations and verifications that must be supplied in support of an application;"
                                },
                                {
                                    "@id": "d2e689",
                                    "bcl:num": "c",
                                    "bcl:text": "governing eligibility for child care grants, including the types of child care for which, and the age limits of the children for whom, child care grants may be paid;"
                                },
                                {
                                    "@id": "d2e698",
                                    "bcl:num": "d",
                                    "bcl:text": "regulating when and how child care grants are paid;"
                                },
                                {
                                    "@id": "d2e707",
                                    "bcl:num": "e",
                                    "bcl:text": "[Repealed 2001-32-3.]"
                                },
                                {
                                    "@id": "d2e716",
                                    "bcl:num": "f",
                                    "bcl:text": "respecting the provision, in child care settings, of services to children with special needs;"
                                },
                                {
                                    "@id": "d2e725",
                                    "bcl:num": "g",
                                    "bcl:text": "respecting terms and conditions that are to be included in information-sharing agreements under section 8 (2);"
                                },
                                {
                                    "@id": "d2e735",
                                    "bcl:num": "h",
                                    "bcl:text": "prescribing how accounts are to be submitted to the minister and the information to be supplied with those accounts;"
                                },
                                {
                                    "@id": "d2e744",
                                    "bcl:num": "i",
                                    "bcl:text": "prescribing the records to be kept and the reports to be made to the minister under this Act;"
                                },
                                {
                                    "@id": "d2e753",
                                    "bcl:num": "j",
                                    "bcl:text": "governing investigations and audits to determine eligibility for child care grants or to ensure compliance with this Act, the regulations and the terms of a child care grant;"
                                },
                                {
                                    "@id": "d2e762",
                                    "bcl:num": "k",
                                    "bcl:text": "respecting the delegation of the powers, duties and functions of the minister;"
                                },
                                {
                                    "@id": "d2e771",
                                    "bcl:num": "l",
                                    "bcl:text": "defining any word or expression used in this Act or the regulations."
                                },
                                {
                                    "@id": "d2e780",
                                    "bcl:num": "m",
                                    "bcl:text": "[Repealed 2001-32-3.]"
                                }
                            ]
                        },
                        {
                            "@id": "d2e790",
                            "bcl:num": "3",
                            "bcl:text": "In making regulations under this Act, the Lieutenant Governor in Council may do one or more of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e799",
                                    "bcl:num": "a",
                                    "bcl:text": "delegate a matter to a person;"
                                },
                                {
                                    "@id": "d2e808",
                                    "bcl:num": "b",
                                    "bcl:text": "confer a discretion on a person;"
                                },
                                {
                                    "@id": "d2e817",
                                    "bcl:num": "c",
                                    "bcl:text": "make different regulations for different categories of child care providers or other persons, or for different types of child care or child care settings."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e827",
                    "bcl:marginalnote": "Forms",
                    "bcl:num": "13",
                    "bcl:text": "The minister may do either or both of the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e838",
                            "bcl:num": "a",
                            "bcl:text": "prescribe forms for use under this Act;"
                        },
                        {
                            "@id": "d2e847",
                            "bcl:num": "b",
                            "bcl:text": "specify forms for use under this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e858",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "14-17",
                    "bcl:text": "[Repealed 2001-32-4.]"
                },
                {
                    "@id": "d2e870",
                    "bcl:marginalnote": "Spent",
                    "bcl:num": {
                        "in:em": "18-24"
                    },
                    "bcl:text": {
                        "in:em": "[Consequential amendments. Spent. 2001-4-18 to 24.]"
                    }
                }
            ],
            "bcl:schedule": {
                "@id": "d0e908",
                "bcl:scheduletitle": "Schedule",
                "bcl:centertext": "[Schedule repealed 2001-32-5.]"
            }
        }
    }
}