        "@id": "00_14001_01",
        "act:title": "Provincial Capital Commission Dissolution Act",
        "act:chapter": "1",
        "act:yearenacted": "2014",
        "act:assentedto": "March 24, 2014",
        "act:currency": {
            "act:tlcDirPath": "1922970521/001400101/00e31400101",
            "act:tlc": "E3tlc14001"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "authority",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04044_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Transportation Act"
                                },
                                "#text": ", except in section 7 (1) (b) (i) and (2) (b) (i), means the BC Transportation Financing Authority continued under section 25 of the ;"
                            }
                        },
                        {
                            "@id": "d2e49",
                            "bcl:text": {
                                "in:term": "Belleville wharves",
                                "#text": "means the land identified by regulation under section 3 (1) as comprising the Belleville wharves;"
                            }
                        },
                        {
                            "@id": "d2e61",
                            "bcl:text": {
                                "in:term": "commission",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96043rep_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Capital Commission Act"
                                },
                                "#text": "means the Provincial Capital Commission continued under section 2 (1) of the  as it read immediately before its repeal by this Act."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e75",
                    "bcl:marginalnote": "Dissolution of commission and transfer of rights, property, assets, obligations and liabilities",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e85",
                            "bcl:num": "1",
                            "bcl:text": "The commission is dissolved."
                        },
                        {
                            "@id": "d2e96",
                            "bcl:num": "2",
                            "bcl:text": "The appointment of each member of the commission is rescinded."
                        },
                        {
                            "@id": "d2e107",
                            "bcl:num": "3",
                            "bcl:text": "All rights, property and assets of the commission are transferred to and vested in the government."
                        },
                        {
                            "@id": "d2e119",
                            "bcl:num": "4",
                            "bcl:text": "All obligations and liabilities of the commission are transferred to and assumed by the government."
                        },
                        {
                            "@id": "d2e130",
                            "bcl:num": "5",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Act"
                                },
                                "#text": "Any person employed by the commission immediately before the coming into force of this section and who was hired under the  is employed by the government and any service of that person with the commission is deemed to be service with the government."
                            }
                        },
                        {
                            "@id": "d2e144",
                            "bcl:num": "6",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96043rep_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Capital Commission Act"
                                },
                                "#text": "If, as part of an agreement between the commission and the council of a municipality under section 10 (4) and (5) of the  as it read immediately before its repeal by this Act, the council has limited its power or the power of succeeding councils to legislate in respect of matters contained in the agreement, the municipality is bound by the undertaking until the earlier of the following:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e158",
                                    "bcl:num": "a",
                                    "bcl:text": "the date on which, under the terms of the agreement between the commission and the council, the undertaking expires;"
                                },
                                {
                                    "@id": "d2e169",
                                    "bcl:num": "b",
                                    "bcl:text": "the date on which the minister waives the undertaking on behalf of the government."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e180",
                    "bcl:marginalnote": "Transfer of Belleville wharves to the authority",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e189",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may, by regulation, identify land owned or held by the commission immediately before the coming into force of section 2 as comprising the Belleville wharves."
                        },
                        {
                            "@id": "d2e200",
                            "bcl:num": "2",
                            "bcl:text": "Despite section 2 (3), the Belleville wharves are transferred to and vested in the authority."
                        },
                        {
                            "@id": "d2e211",
                            "bcl:num": "3",
                            "bcl:text": "Despite section 2 (3), all rights, property and assets of the commission that the minister considers relate primarily to the Belleville wharves or to operations on the Belleville wharves are transferred to and vested in the authority, with the exception of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e222",
                                    "bcl:num": "a",
                                    "bcl:text": "land;"
                                },
                                {
                                    "@id": "d2e234",
                                    "bcl:num": "b",
                                    "bcl:text": "rights, property and assets of the commission that the minister considers relate primarily to the employment of a person whose employment is transferred to the government under section 2 (5)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e245",
                            "bcl:num": "4",
                            "bcl:text": "Despite section 2 (4), all obligations and liabilities of the commission that the minister considers relate primarily to the Belleville wharves or to operations on the Belleville wharves are transferred to and assumed by the authority, with the exception of obligations and liabilities that the minister considers relate primarily to the employment of a person whose employment is transferred to the government under section 2 (5)."
                        }
                    ]
                },
                {
                    "@id": "d2e256",
                    "bcl:marginalnote": "Transfers between government and the authority",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e265",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may, by regulation, transfer any rights, property, assets, obligations or liabilities that were transferred to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e276",
                                    "bcl:num": "a",
                                    "bcl:text": "the government under section 2 (3) or (4) to the authority, or"
                                },
                                {
                                    "@id": "d2e287",
                                    "bcl:num": "b",
                                    "bcl:text": "the authority under section 3 (2), (3) or (4) to the government."
                                }
                            ]
                        },
                        {
                            "@id": "d2e298",
                            "bcl:num": "2",
                            "bcl:text": "Any rights, property or assets transferred under subsection (1)",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e310",
                                    "bcl:num": "a",
                                    "bcl:text": "to the government are vested in the government, and"
                                },
                                {
                                    "@id": "d2e321",
                                    "bcl:num": "b",
                                    "bcl:text": "to the authority are vested in the authority."
                                }
                            ]
                        },
                        {
                            "@id": "d2e332",
                            "bcl:num": "3",
                            "bcl:text": "Any obligations or liabilities transferred under subsection (1)",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e343",
                                    "bcl:num": "a",
                                    "bcl:text": "to the government are assumed by the government, and"
                                },
                                {
                                    "@id": "d2e354",
                                    "bcl:num": "b",
                                    "bcl:text": "to the authority are assumed by the authority."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e365",
                    "bcl:marginalnote": "Records",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e374",
                            "bcl:num": "1",
                            "bcl:text": "For certainty, assets, rights and property transferred to the government or to the authority under this Act include records and parts of records."
                        },
                        {
                            "@id": "d2e385",
                            "bcl:num": "2",
                            "bcl:text": "Subject to subsection (3), a reference to the commission in any record that creates, evidences or otherwise relates to a right, property, asset, obligation or liability that is",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e396",
                                    "bcl:num": "a",
                                    "bcl:text": "transferred from the commission to the government under this Act is deemed to be a reference to the government,"
                                },
                                {
                                    "@id": "d2e407",
                                    "bcl:num": "b",
                                    "bcl:text": "transferred from the commission to the authority under this Act is deemed to be a reference to the authority,"
                                },
                                {
                                    "@id": "d2e419",
                                    "bcl:num": "c",
                                    "bcl:text": "transferred from the government to the authority under this Act is deemed to be a reference to the authority, and"
                                },
                                {
                                    "@id": "d2e430",
                                    "bcl:num": "d",
                                    "bcl:text": "transferred from the authority to the government under this Act is deemed to be a reference to the government."
                                }
                            ]
                        },
                        {
                            "@id": "d2e441",
                            "bcl:num": "3",
                            "bcl:text": "If, under this Act, a part of a right, property, asset, obligation or liability is transferred to the government or to the authority, any record that creates, evidences or otherwise relates to that right, property, asset, obligation or liability is deemed to be amended to reflect the interest of the government or authority, as applicable, in that right, property, asset, obligation or liability."
                        }
                    ]
                },
                {
                    "@id": "d2e453",
                    "bcl:marginalnote": "How transfer of rights, property and assets takes effect",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e462",
                            "bcl:num": "1",
                            "bcl:text": "Despite any other enactment, a transfer and vesting effected under section 2 (3), 3 (2) or (3) or 4 (1) and (2) takes effect",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e473",
                                    "bcl:num": "a",
                                    "bcl:text": "without the execution or issue of any record,"
                                },
                                {
                                    "@id": "d2e484",
                                    "bcl:num": "b",
                                    "bcl:text": "without any registration or filing of this Act or any other record in or with any registry or other office,"
                                },
                                {
                                    "@id": "d2e495",
                                    "bcl:num": "c",
                                    "bcl:text": "despite any prohibition on all or any part of the transfer,"
                                },
                                {
                                    "@id": "d2e507",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96250_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Land Title Act"
                                        },
                                        "#text": "whether or not a duplicate certificate of indefeasible title has been issued by the registrar under the , and"
                                    }
                                },
                                {
                                    "@id": "d2e521",
                                    "bcl:num": "e",
                                    "bcl:text": "despite the absence of any consent or approval that is or may be required for all or any part of the transfer."
                                }
                            ]
                        },
                        {
                            "@id": "d2e532",
                            "bcl:num": "2",
                            "bcl:text": "In any record in or by which the government or the authority deals with a right, property or asset transferred by this Act, it is sufficient to cite this Act as effecting and confirming the transfer from the commission to the government or to the authority, as applicable, of the title to the right, property or asset and the vesting of that title in the government or the authority."
                        }
                    ]
                },
                {
                    "@id": "d2e543",
                    "bcl:marginalnote": "Dealing with transferred rights, property and assets",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e552",
                            "bcl:num": "1",
                            "bcl:text": "If a right, property or asset transferred to the government under section 2 (3) or 4 (1) (b) is registered or recorded in the name of the commission or the authority,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e563",
                                    "bcl:num": "a",
                                    "bcl:text": "the government may, in its own name,",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e574",
                                            "bcl:num": "i",
                                            "bcl:text": "effect a transfer, charge, encumbrance or other dealing with the right, property or asset, and"
                                        },
                                        {
                                            "@id": "d2e585",
                                            "bcl:num": "ii",
                                            "bcl:text": "execute any record required to give effect to that transfer, charge, encumbrance or other dealing, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e597",
                                    "bcl:num": "b",
                                    "bcl:text": [
                                        "an official",
                                        "must give the record the same effect as if it had been duly executed by the commission."
                                    ],
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e608",
                                            "bcl:num": "i",
                                            "bcl:text": "who has authority over a registry or other office, including, without limitation, the personal property registry and a land title office, in which title to or interests in the right, property or asset is registered or recorded, and"
                                        },
                                        {
                                            "@id": "d2e619",
                                            "bcl:num": "ii",
                                            "bcl:text": "to whom a record referred to in paragraph (a) (ii) executed by or on behalf of the government is submitted in support of the transfer, charge, encumbrance or other dealing"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e634",
                            "bcl:num": "2",
                            "bcl:text": "If a right, property or asset transferred to the authority under section 3 (2) or (3) or 4 (1) (a) is registered or recorded in the name of the commission or the government,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e645",
                                    "bcl:num": "a",
                                    "bcl:text": "the authority may, in its own name,",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e657",
                                            "bcl:num": "i",
                                            "bcl:text": "effect a transfer, charge, encumbrance or other dealing with the right, property or asset, and"
                                        },
                                        {
                                            "@id": "d2e668",
                                            "bcl:num": "ii",
                                            "bcl:text": "execute any record required to give effect to that transfer, charge, encumbrance or other dealing, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e679",
                                    "bcl:num": "b",
                                    "bcl:text": [
                                        "an official",
                                        "must give the record the same effect as if it had been duly executed by the commission."
                                    ],
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e690",
                                            "bcl:num": "i",
                                            "bcl:text": "who has authority over a registry or other office, including, without limitation, the personal property registry and a land title office, in which title to or interests in the right, property or asset is registered or recorded, and"
                                        },
                                        {
                                            "@id": "d2e701",
                                            "bcl:num": "ii",
                                            "bcl:text": "to whom a record referred to in paragraph (a) (ii) executed by or on behalf of the authority is submitted in support of the transfer, charge, encumbrance or other dealing"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e716",
                    "bcl:marginalnote": "Transfer is not a default",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e725",
                            "bcl:num": "1",
                            "bcl:text": "Despite any provision to the contrary in a record, the transfer to the government or to the authority of a right, property, asset, obligation or liability under section\u00a02, 3 or 4 does not constitute a breach or contravention of, or an event of default under, the record and, without limiting this, does not entitle any person who has an interest in the right, property, asset, obligation or liability to claim any damages, compensation or other remedy."
                        },
                        {
                            "@id": "d2e736",
                            "bcl:num": "2",
                            "bcl:text": "Section 2 (2) and (5) must not be construed as a breach of any contract, agreement or order relating to the appointment or employment of a person and no legal proceeding for damages lies or may be commenced or maintained as a result of a rescission of appointment or transfer of employment under this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e747",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e756",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                            }
                        },
                        {
                            "@id": "d2e770",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e781",
                                    "bcl:num": "a",
                                    "bcl:text": "defining any word or expression used but not defined in this Act;"
                                },
                                {
                                    "@id": "d2e792",
                                    "bcl:num": "b",
                                    "bcl:text": "prescribing additional functions or activities to be carried out or engaged in by the minister or the government;"
                                },
                                {
                                    "@id": "d2e804",
                                    "bcl:num": "c",
                                    "bcl:text": "respecting any other matter or thing that the Lieutenant Governor in Council considers necessary or advisable to carry out the intent of this Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e815",
                            "bcl:num": "3",
                            "bcl:text": "A regulation may not be made under this Act after December 31, 2015."
                        }
                    ]
                },
                {
                    "@id": "d2e976",
                    "bcl:marginalnote": "Repeal",
                    "bcl:num": "20",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96043rep_01",
                            "@xlink:type": "locator",
                            "in:doc": "Capital Commission Act"
                        },
                        "#text": "The , R.S.B.C. 1996, c. 43, is repealed."
                    }
                },
                {
                    "@id": "d2e998",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "21",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in Council."
                }
            ],
