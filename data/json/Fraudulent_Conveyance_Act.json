        "@id": "00_96163_01",
        "act:title": "Fraudulent Conveyance Act",
        "act:chapter": "163",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1198514681/96163/1059570960",
            "act:tlc": "E2tlc96163"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Fraudulent conveyance to avoid debt or duty of others",
                    "bcl:num": "1",
                    "bcl:text": [
                        "If made to delay, hinder or defraud creditors and others of their just and lawful remedies",
                        "is void and of no effect against a person or the person's assignee or personal representative whose rights and obligations are or might be disturbed, hindered, delayed or defrauded, despite a pretence or other matter to the contrary."
                    ],
                    "bcl:paragraph": [
                        {
                            "@id": "d2e26",
                            "bcl:num": "a",
                            "bcl:text": "a disposition of property, by writing or otherwise,"
                        },
                        {
                            "@id": "d2e35",
                            "bcl:num": "b",
                            "bcl:text": "a bond,"
                        },
                        {
                            "@id": "d2e45",
                            "bcl:num": "c",
                            "bcl:text": "a proceeding, or"
                        },
                        {
                            "@id": "d2e54",
                            "bcl:num": "d",
                            "bcl:text": "an order"
                        }
                    ]
                },
                {
                    "@id": "d2e67",
                    "bcl:marginalnote": "Application of Act",
                    "bcl:num": "2",
                    "bcl:text": "This Act does not apply to a disposition of property for good consideration and in good faith lawfully transferred to a person who, at the time of the transfer, has no notice or knowledge of collusion or fraud."
                }
            ]
        }
    }
}