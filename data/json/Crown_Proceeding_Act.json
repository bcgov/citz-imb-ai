        "@id": "00_96089_01",
        "act:title": "Crown Proceeding Act",
        "act:chapter": "89",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "781755088/96089/tlc96089_f",
            "act:tlc": "E2tlc96089"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e32",
                            "bcl:text": {
                                "in:term": "agent",
                                "#text": ", when used in relation to the government, includes an independent contractor employed by the government;"
                            }
                        },
                        {
                            "@id": "d2e41",
                            "bcl:text": {
                                "in:term": "Crown",
                                "#text": "means Her Majesty the Queen in right of British Columbia;"
                            }
                        },
                        {
                            "@id": "d2e51",
                            "bcl:text": {
                                "in:term": "officer of the government",
                                "#text": "includes a minister of the government and an employee of the government;"
                            }
                        },
                        {
                            "@id": "d2e60",
                            "bcl:text": {
                                "in:term": "order",
                                "#text": "includes a judgment, decree, rule, award and declaration;"
                            }
                        },
                        {
                            "@id": "d2e69",
                            "bcl:text": {
                                "in:term": "person",
                                "#text": "does not include the government;"
                            }
                        },
                        {
                            "@id": "d2e78",
                            "bcl:text": {
                                "in:term": "proceeding against the government",
                                "#text": "includes a claim by way of set off or counterclaim raised in proceedings by the government, an interpleader proceeding to which the government is a party, and a proceeding in which the government is a garnishee."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e88",
                    "bcl:marginalnote": "Liability of government",
                    "bcl:num": "2",
                    "bcl:text": "Subject to this Act,",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e99",
                            "bcl:num": "a",
                            "bcl:text": "proceeding against the government by way of petition of right is abolished,"
                        },
                        {
                            "@id": "d2e108",
                            "bcl:num": "b",
                            "bcl:text": "a claim against the government that, if this Act had not been passed, might be enforced by petition of right, subject to the grant of a fiat by the Lieutenant Governor, may be enforced as of right by proceeding against the government in accordance with this Act, without the grant of a fiat by the Lieutenant Governor,"
                        },
                        {
                            "@id": "d2e118",
                            "bcl:num": "c",
                            "bcl:text": "the government is subject to all the liabilities to which it would be liable if it were a person, and"
                        },
                        {
                            "@id": "d2e127",
                            "bcl:num": "d",
                            "bcl:text": "the law relating to indemnity and contribution is enforceable by and against the government for any liability to which it is subject, as if the government were a person."
                        }
                    ]
                },
                {
                    "@id": "d2e137",
                    "bcl:marginalnote": "Limitations on proceedings and liabilities",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e145",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/19001_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Workers Compensation Act"
                                },
                                "#text": "This Act is subject to the  and does not apply to any of the following:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e157",
                                    "bcl:num": "a",
                                    "bcl:text": "proceedings under",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e166",
                                            "bcl:num": "i",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/96215_00",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Income Tax Act"
                                                },
                                                "#text": "the ,"
                                            }
                                        },
                                        {
                                            "@id": "d2e179",
                                            "bcl:num": "ii",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/96073_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Corporation Capital Tax Act"
                                                },
                                                "#text": "the , or"
                                            }
                                        },
                                        {
                                            "@id": "d2e191",
                                            "bcl:num": "iii",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/96277_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Logging Tax Act"
                                                },
                                                "#text": "the ;"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e203",
                                    "bcl:num": "b",
                                    "bcl:text": "assurance fund proceedings under land title legislation;"
                                },
                                {
                                    "@id": "d2e212",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96135_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Federal Courts Jurisdiction Act"
                                        },
                                        "#text": "proceedings to which the  applies."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e224",
                            "bcl:num": "2",
                            "bcl:text": "Nothing in section 2 does any of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e233",
                                    "bcl:num": "a",
                                    "bcl:text": "authorizes proceedings against the government for anything done or omitted to be done by a person acting in good faith while discharging or purporting to discharge responsibilities",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e243",
                                            "bcl:num": "i",
                                            "bcl:text": "of a judicial nature vested in the person, or"
                                        },
                                        {
                                            "@id": "d2e252",
                                            "bcl:num": "ii",
                                            "bcl:text": "that the person has in connection with the execution of judicial process;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e261",
                                    "bcl:num": "b",
                                    "bcl:text": "subjects the government to greater liability for the acts or omissions of an independent contractor employed by the government than that to which the government would be subject for those acts or omissions if it were a person;"
                                },
                                {
                                    "@id": "d2e270",
                                    "bcl:num": "c",
                                    "bcl:text": "affects the right of the government to intervene in proceedings affecting its rights, property or profits;"
                                },
                                {
                                    "@id": "d2e279",
                                    "bcl:num": "d",
                                    "bcl:text": "authorizes proceedings against the government for a cause of action that is enforceable against a corporation or other agency owned or controlled by the government;"
                                },
                                {
                                    "@id": "d2e288",
                                    "bcl:num": "e",
                                    "bcl:text": "authorizes proceedings against the government for anything done in the proper enforcement of the criminal law or the penal provisions of an Act;"
                                },
                                {
                                    "@id": "d2e298",
                                    "bcl:num": "f",
                                    "bcl:text": "subjects the government, in its capacity as a highway authority, to any greater liability than that to which a municipal corporation is subject in that capacity."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e308",
                    "bcl:marginalnote": "Institution of claims in the Supreme Court",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e316",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96443_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Supreme Court Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96050_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Class Proceedings Act"
                                    }
                                ],
                                "#text": "Subject to this Act, all proceedings against the government in the Supreme Court must be instituted and proceeded with under the  and, if applicable, under the ."
                            }
                        },
                        {
                            "@id": "d2e331",
                            "bcl:num": "2",
                            "bcl:text": "In proceedings against the government, the trial must be without a jury."
                        }
                    ]
                },
                {
                    "@id": "d2e341",
                    "bcl:marginalnote": "Institution of claims in the Provincial Court",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e349",
                            "bcl:num": "1",
                            "bcl:text": "Without limiting section 4 but subject to subsections (3) and (4) of this section, proceedings may be brought against the government in the Provincial Court."
                        },
                        {
                            "@id": "d2e358",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96430_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Small Claims Act"
                                },
                                "#text": "Subject to this Act, all proceedings against the government in the Provincial Court must be instituted and proceeded with under the ."
                            }
                        },
                        {
                            "@id": "d2e370",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96430_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Small Claims Act"
                                },
                                "#text": "Nothing in this Act extends the jurisdiction of the Provincial Court beyond the jurisdiction available to it under section 3 of the ."
                            }
                        },
                        {
                            "@id": "d2e383",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96430_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Small Claims Act"
                                },
                                "#text": "In a proceeding against the government under the , the Provincial Court does not have jurisdiction over"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e395",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96068_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Constitutional Question Act"
                                        },
                                        "#text": "a matter for which notice under section 8 of the  is required, or"
                                    }
                                },
                                {
                                    "@id": "d2e407",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/const/page-15.html#docCont",
                                            "@xlink:type": "locator",
                                            "in:doc": "Canadian Charter of Rights and Freedoms"
                                        },
                                        "#text": "a matter involving the ."
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e442",
                    "bcl:marginalnote": "Institution of claims in the Civil Resolution Tribunal",
                    "bcl:num": "5.1",
                    "bcl:subsection": [
                        {
                            "@id": "d1e450",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:term": "civil resolution tribunal",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/12025_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Civil Resolution Tribunal Act"
                                },
                                "#text": "In this section,  means the Civil Resolution Tribunal established under the ."
                            }
                        },
                        {
                            "@id": "d1e466",
                            "bcl:num": "2",
                            "bcl:text": {
                                "in:desc": "[government as party]",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/12025_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Civil Resolution Tribunal Act"
                                },
                                "#text": "Without limiting section 4, but subject to subsections (4) and (5) of this section and to section 9  of the , claims may be resolved or adjudicated against the government in the civil resolution tribunal."
                            }
                        },
                        {
                            "@id": "d1e482",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/12025_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Civil Resolution Tribunal Act"
                                },
                                "#text": "Subject to this Act, all proceedings against the government in the civil resolution tribunal must be instituted and proceeded with under the ."
                            }
                        },
                        {
                            "@id": "d1e496",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/12025_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Civil Resolution Tribunal Act"
                                },
                                "#text": "Nothing in this Act extends the jurisdiction of the civil resolution tribunal beyond the jurisdiction available to it under the ."
                            }
                        },
                        {
                            "@id": "d1e509",
                            "bcl:num": "5",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/12025_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Civil Resolution Tribunal Act"
                                },
                                "#text": "In a proceeding against the government under the , the civil resolution tribunal does not have jurisdiction over"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e521",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96068_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Constitutional Question Act"
                                        },
                                        "#text": "a matter for which notice under section 8 of the  is required, or"
                                    }
                                },
                                {
                                    "@id": "d1e534",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/const/page-15.html#docCont",
                                            "@xlink:type": "locator",
                                            "in:doc": "Canadian Charter of Rights and Freedoms"
                                        },
                                        "#text": "a matter involving the ."
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e421",
                    "bcl:marginalnote": "Appeals and stays of proceedings",
                    "bcl:num": "6",
                    "bcl:text": "Subject to this Act, all enactments and rules of court for appeals and stays of proceedings apply to proceedings against the government and proceedings in which the government is a party."
                },
                {
                    "@id": "d2e433",
                    "bcl:marginalnote": "Designation of government",
                    "bcl:num": "7",
                    "bcl:text": "In proceedings under this Act, the government must be designated \"Her Majesty the Queen in right of the Province of British Columbia\"."
                },
                {
                    "@id": "d2e445",
                    "bcl:marginalnote": "Service on government",
                    "bcl:num": "8",
                    "bcl:text": "A document to be served on the government",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e456",
                            "bcl:num": "a",
                            "bcl:text": "must be served on the Attorney General at the Ministry of Attorney General in the City of Victoria, and"
                        },
                        {
                            "@id": "d2e465",
                            "bcl:num": "b",
                            "bcl:text": "is sufficiently served if",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d2e475",
                                    "bcl:num": "i",
                                    "bcl:text": "left there during office hours with a solicitor on the staff of the Attorney General at Victoria, or"
                                },
                                {
                                    "@id": "d2e484",
                                    "bcl:num": "ii",
                                    "bcl:text": "mailed by registered mail to the Deputy Attorney General at Victoria."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e494",
                    "bcl:marginalnote": "Discovery and inspection of documents",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e502",
                            "bcl:num": "1",
                            "bcl:text": "In proceedings against the government and proceedings in which the government is a party, if there are, in the rules of the court in which the proceedings are brought, rules relating to one or more of discovery and inspection of documents, examinations for discovery and interrogatories, those rules apply as if the government were a corporation."
                        },
                        {
                            "@id": "d2e511",
                            "bcl:num": "2",
                            "bcl:text": "Subsection (1) does not affect a rule of law that authorizes or requires the withholding of a document, or the refusal to answer a question, on the ground that the disclosure of the document or the answering of the question would be injurious to the public interest."
                        },
                        {
                            "@id": "d2e520",
                            "bcl:num": "3",
                            "bcl:text": "If the government claims that the disclosure of the document or the answering of the question would be injurious to the public interest, the court may, after holding an inquiry it considers necessary and reasonable, and on finding that the public interest in the administration of justice should prevail over the public interest in withholding the document or answering the question, order, subject to conditions or restrictions it considers appropriate, production and discovery of the document or that the question be answered."
                        }
                    ]
                },
                {
                    "@id": "d2e530",
                    "bcl:marginalnote": "Interpleader",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e538",
                            "bcl:num": "1",
                            "bcl:text": "Even if an application for relief is made by a sheriff or bailiff or other similar officer, the government may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e547",
                                    "bcl:num": "a",
                                    "bcl:text": "obtain relief by way of interpleader proceedings in the same manner as a person may obtain relief by way of those proceedings, and"
                                },
                                {
                                    "@id": "d2e556",
                                    "bcl:num": "b",
                                    "bcl:text": "be made a party to the proceedings in the same manner as a person may be made a party to them."
                                }
                            ]
                        },
                        {
                            "@id": "d2e566",
                            "bcl:num": "2",
                            "bcl:text": "Subject to this Act, the interpleader provisions in the Supreme Court Civil Rules apply to the proceedings."
                        }
                    ]
                },
                {
                    "@id": "d2e576",
                    "bcl:marginalnote": "Rights of parties and authority of the court",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e584",
                            "bcl:num": "1",
                            "bcl:text": "In proceedings against the government and proceedings in which the government is a party, the rights of the parties must, subject to this Act, be as nearly as possible the same as in a proceeding between persons, and the court may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e593",
                                    "bcl:num": "a",
                                    "bcl:text": "make an order, including an order as to costs, that it may make in proceedings between persons, and"
                                },
                                {
                                    "@id": "d2e602",
                                    "bcl:num": "b",
                                    "bcl:text": "otherwise give the appropriate relief that the case may require."
                                }
                            ]
                        },
                        {
                            "@id": "d2e612",
                            "bcl:num": "2",
                            "bcl:text": "If, in proceedings against the government, relief is sought that might, in proceedings between persons, be granted by way of injunction or specific performance, the court",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e621",
                                    "bcl:num": "a",
                                    "bcl:text": "must not grant an injunction or make an order for specific performance against the government, and"
                                },
                                {
                                    "@id": "d2e630",
                                    "bcl:num": "b",
                                    "bcl:text": "may make an order declaring the rights of the parties instead of an injunction or an order for specific performance."
                                }
                            ]
                        },
                        {
                            "@id": "d2e639",
                            "bcl:num": "3",
                            "bcl:text": "A person must not make use",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e648",
                                    "bcl:num": "a",
                                    "bcl:text": "of a set off or counterclaim in proceedings by the government for the recovery of taxes, duties or penalties, or"
                                },
                                {
                                    "@id": "d2e657",
                                    "bcl:num": "b",
                                    "bcl:text": "in proceedings of any nature by the government, of a set off or counterclaim arising out of a right or claim to repayment for taxes, duties or penalties."
                                }
                            ]
                        },
                        {
                            "@id": "d2e667",
                            "bcl:num": "4",
                            "bcl:text": "In a proceeding, the court",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e676",
                                    "bcl:num": "a",
                                    "bcl:text": "must not grant an injunction or make an order against an officer of the government if the effect of granting the injunction or making the order would be to give relief against the government that could not have been obtained in proceedings against the government, and"
                                },
                                {
                                    "@id": "d2e685",
                                    "bcl:num": "b",
                                    "bcl:text": "may make an order declaring the rights of the parties instead of granting the injunction or making the order."
                                }
                            ]
                        },
                        {
                            "@id": "d2e694",
                            "bcl:num": "5",
                            "bcl:text": "Without leave of the court, a person must not make use of a set off or counterclaim in proceedings by the government, unless the subject matter of the set off or counterclaim relates to a matter under the administration of the particular government ministry for which the proceedings are brought by the government."
                        },
                        {
                            "@id": "d2e703",
                            "bcl:num": "6",
                            "bcl:text": "In proceedings against the government in which the recovery of land or other property is claimed, the court",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e712",
                                    "bcl:num": "a",
                                    "bcl:text": "must not make an order for the recovery of the land or the delivery of the property, and"
                                },
                                {
                                    "@id": "d2e722",
                                    "bcl:num": "b",
                                    "bcl:text": "may, instead, make an order declaring that the claimant is entitled, as against the government, to land or property or to possession of it."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e733",
                    "bcl:marginalnote": "Interest on judgments",
                    "bcl:num": "12",
                    "bcl:text": "A judgment debt due to or from the government bears interest in the same way as a judgment debt due from one person to another."
                },
                {
                    "@id": "d2e745",
                    "bcl:marginalnote": "Certificate of judgment",
                    "bcl:num": "13",
                    "bcl:subsection": [
                        {
                            "@id": "d2e753",
                            "bcl:num": "1",
                            "bcl:text": "Subject to this Act, if in proceedings against the government and proceedings in which the government is a party, an order for costs or other order is made by a court against the government, the proper officer of the court must, on application, issue a certificate."
                        },
                        {
                            "@id": "d2e762",
                            "bcl:num": "2",
                            "bcl:text": "If the court directs, a separate certificate must be issued for the costs, if any, ordered to be paid to the applicant."
                        },
                        {
                            "@id": "d2e771",
                            "bcl:num": "3",
                            "bcl:text": "A certificate issued under this section may be served on the person named in the record as the solicitor, or as the person acting as solicitor, for the government."
                        },
                        {
                            "@id": "d2e781",
                            "bcl:num": "4",
                            "bcl:text": "If the order provides for the payment of money by way of damages or otherwise, or of costs, the certificate must state the amount payable, and the Minister of Finance must, subject to this Act, pay out of the consolidated revenue fund to the person entitled, or to the person's order, the amount appearing by the certificate to be due, together with the interest, if any, lawfully due."
                        },
                        {
                            "@id": "d2e790",
                            "bcl:num": "5",
                            "bcl:text": "The court which makes an order or a court to which an appeal against the order lies may direct that, pending an appeal or otherwise, payment of the whole of the amount payable, or any part is suspended and, if the certificate has not been issued, may order the direction to be inserted in it."
                        },
                        {
                            "@id": "d2e799",
                            "bcl:num": "6",
                            "bcl:text": "An execution or attachment or process of that nature must not be issued out of a court for enforcing payment by the government of money or costs."
                        }
                    ]
                },
                {
                    "@id": "d2e809",
                    "bcl:marginalnote": "Certificate of settlement",
                    "bcl:num": "14",
                    "bcl:subsection": [
                        {
                            "@id": "d2e817",
                            "bcl:num": "1",
                            "bcl:text": [
                                "If a claim is made against the government and the Attorney General certifies, either before or after proceedings authorized by this Act have been commenced, that",
                                "the Minister of Finance must pay that amount to the person making the claim."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e826",
                                    "bcl:num": "a",
                                    "bcl:text": "the Attorney General considers that the claim, if pursued, could result in an order referred to in section 13 (4) for the payment of money by the government, and"
                                },
                                {
                                    "@id": "d2e835",
                                    "bcl:num": "b",
                                    "bcl:text": "it is in the public interest to settle the claim in an amount set out in the certificate,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e848",
                            "bcl:num": "2",
                            "bcl:text": "If a proceeding authorized by this Act has been commenced and the Attorney General certifies that it is in the public interest to make payment into court, the Minister of Finance must pay into court the amount set out in the certificate."
                        },
                        {
                            "@id": "d2e857",
                            "bcl:num": "3",
                            "bcl:text": "[Repealed 1998-42-4.]"
                        },
                        {
                            "@id": "d2e866",
                            "bcl:num": "4",
                            "bcl:text": "Money paid by the Minister of Finance under this section must be paid out of the consolidated revenue fund."
                        }
                    ]
                },
                {
                    "@id": "d2e876",
                    "bcl:marginalnote": "Report to Legislative Assembly",
                    "bcl:num": "15",
                    "bcl:text": "The Attorney General must prepare in each fiscal year a report respecting the money paid out in the preceding fiscal year under sections 13 (4) and 14 (4) and lay the report before the Legislative Assembly as soon as practicable."
                },
                {
                    "@id": "d2e931",
                    "bcl:marginalnote": "Rights of government to rely on statutes",
                    "bcl:num": "16",
                    "bcl:subsection": [
                        {
                            "@id": "d2e939",
                            "bcl:num": "1",
                            "bcl:text": "This Act does not prejudice the right of the government to take advantage of an Act."
                        },
                        {
                            "@id": "d2e948",
                            "bcl:num": "2",
                            "bcl:text": "In proceedings against the government, an Act that could, if the proceedings were between persons, be relied on by the defendant as a defence to the proceedings, whether in whole or in part, or otherwise, may, subject to an express provision to the contrary, be relied on by the government."
                        }
                    ]
                }
            ]
        }
    }
}