        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96145_01",
        "act:title": "Firearm Act",
        "act:chapter": "145",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1198514681/96145/tlc96145_f",
            "act:tlc": "E3tlc96145"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "carry",
                                "#text": "includes store, or have in possession in an aircraft, boat, motor\n          vehicle or motor vehicle trailer, other than a public conveyance, whether the aircraft,\n          boat or motor vehicle is or is not used as temporary or permanent living\n          quarters;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "chief provincial firearms officer",
                                "#text": "means the person designated in\n          writing by the Attorney General as the chief provincial firearms officer;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "conservation officer",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/03053_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Environmental Management\n          Act"
                                },
                                "#text": "means a conservation officer defined in section 1\n          (1) of the ;"
                            }
                        },
                        {
                            "@id": "d2e57",
                            "bcl:text": {
                                "in:term": "firearm",
                                "#text": "includes any gun using, as a propellant, compressed air,\n          explosives or gas;"
                            }
                        },
                        {
                            "@id": "d2e66",
                            "bcl:text": {
                                "in:term": "permit",
                                "#text": "means a written authority issued by the chief provincial\n          firearms officer or by a person authorized by the chief provincial firearms\n          officer."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e76",
                    "bcl:marginalnote": "Permits for indoor shooting ranges",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e84",
                            "bcl:num": "1",
                            "bcl:text": [
                                "Despite",
                                "the chief provincial firearms officer may issue a permit authorizing a person to\n          establish and maintain an indoor shooting range and to discharge a firearm in the indoor\n          shooting range."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e93",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96488_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Wildlife Act"
                                        },
                                        "#text": "a regulation made under section 108 (2) (n) or (o) of the , or"
                                    }
                                },
                                {
                                    "@id": "d2e105",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "in:desc": "[fundamental powers \u2014 firearms]",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/03026_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Community Charter"
                                        },
                                        "#text": "a bylaw under section 8 (5)\u00a0 of the\n              ,"
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e124",
                            "bcl:num": "2",
                            "bcl:text": "If a permit is issued under subsection (1), the chief provincial firearms officer\n          may do one or more of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e133",
                                    "bcl:num": "a",
                                    "bcl:text": "attach conditions;"
                                },
                                {
                                    "@id": "d2e142",
                                    "bcl:num": "b",
                                    "bcl:text": "restrict the kinds of firearms that may be discharged;"
                                },
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "c",
                                    "bcl:text": "restrict the kinds of projectiles that may be discharged;"
                                },
                                {
                                    "@id": "d2e160",
                                    "bcl:num": "d",
                                    "bcl:text": "restrict the operation of the permit to a use ancillary to the trade or calling\n            of the permit holder;"
                                },
                                {
                                    "@id": "d2e170",
                                    "bcl:num": "e",
                                    "bcl:text": "restrict the application of the permit to premises owned or occupied by the\n            permit holder;"
                                },
                                {
                                    "@id": "d2e179",
                                    "bcl:num": "f",
                                    "bcl:text": "extend the application of the permit to other persons when they are on the\n            premises specified in the permit with the consent of the permit holder."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e189",
                    "bcl:marginalnote": "Exercise of care for safety of others",
                    "bcl:num": "3",
                    "bcl:text": "A person who is in possession or control of a firearm must exercise care for the\n        safety of other persons or property."
                },
                {
                    "@id": "d2e201",
                    "bcl:marginalnote": "Search without warrant",
                    "bcl:num": "4",
                    "bcl:text": "Without a warrant, a conservation officer or peace officer may do one or more of the\n        following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e212",
                            "bcl:num": "a",
                            "bcl:text": "search a person the conservation officer or peace officer suspects of possessing a\n          firearm in contravention of this Act;"
                        },
                        {
                            "@id": "d2e221",
                            "bcl:num": "b",
                            "bcl:text": "stop and search a conveyance mentioned in section\u00a09 in or on which the\n          conservation officer or peace officer suspects a firearm is being carried in contravention\n          of this Act;"
                        },
                        {
                            "@id": "d2e231",
                            "bcl:num": "c",
                            "bcl:text": "seize the firearm, and dispose of it under this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e241",
                    "bcl:marginalnote": "Arrest of person in act of committing offence",
                    "bcl:num": "5",
                    "bcl:text": "Without a warrant, a conservation officer or constable may arrest a person the\n        conservation officer or constable finds in the act of contravening this Act or the\n        regulations."
                },
                {
                    "@id": "d2e254",
                    "bcl:marginalnote": "Persons prohibited from carrying firearm",
                    "bcl:num": "6",
                    "bcl:text": "A person designated in the regulations is prohibited from carrying or discharging a\n        firearm, except under the terms of a permit."
                },
                {
                    "@id": "d2e266",
                    "bcl:marginalnote": "Duty to produce permit",
                    "bcl:num": "7",
                    "bcl:text": "A person who holds a permit under this Act must produce it on the request of a\n        conservation officer or constable."
                },
                {
                    "@id": "d2e278",
                    "bcl:marginalnote": "Confiscation of firearm",
                    "bcl:num": "8",
                    "bcl:text": "A firearm seized under this Act may be taken before a justice, and, on proof to the\n        satisfaction of the justice that the firearm was at the time of seizure being carried or\n        used in contravention of this Act, the justice may order the firearm confiscated and order\n        its sale, destruction or other disposition."
                },
                {
                    "@id": "d2e290",
                    "bcl:marginalnote": "Offence",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e298",
                            "bcl:num": "1",
                            "bcl:text": "Unless authorized by the regulations or a permit, a person must not discharge,\n          carry or have in the person's possession, in or on a railway car, hand car or other\n          vehicle on a railway, or in or on a motor vehicle, wagon, sleigh, aircraft, bicycle or\n          other conveyance, a firearm containing live ammunition in its breech or in its\n          magazine."
                        },
                        {
                            "@id": "d2e307",
                            "bcl:num": "2",
                            "bcl:text": "A person who contravenes subsection (1) commits an offence."
                        }
                    ]
                },
                {
                    "@id": "d2e317",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e325",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041\n          of the ."
                            }
                        },
                        {
                            "@id": "d2e337",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may\n          make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e346",
                                    "bcl:num": "a",
                                    "bcl:text": "requiring described persons to pass an examination on knowledge and proficiency\n            in the safe handling of firearms;"
                                },
                                {
                                    "@id": "d2e356",
                                    "bcl:num": "b",
                                    "bcl:text": "exempting other described persons from passing an examination on knowledge and\n            proficiency in the safe handling of firearms."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}