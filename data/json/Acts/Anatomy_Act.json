        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96013_01",
        "act:title": "Anatomy Act",
        "act:chapter": "13",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "524872423/96013/tlc96013_f",
            "act:tlc": "E2tlc96013"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "body",
                        "#text": "In this Act,  means the body of a deceased person"
                    },
                    "bcl:paragraph": [
                        {
                            "@id": "d2e29",
                            "bcl:num": "a",
                            "bcl:text": "found publicly exposed,"
                        },
                        {
                            "@id": "d2e38",
                            "bcl:num": "b",
                            "bcl:text": "who immediately before death was supported in and by a public institution or an\n          institution receiving financial aid from the government, or"
                        },
                        {
                            "@id": "d2e48",
                            "bcl:num": "c",
                            "bcl:text": "in respect of which disposition would have to be provided at public\n          expense."
                        }
                    ]
                },
                {
                    "@id": "d2e58",
                    "bcl:marginalnote": "Unclaimed bodies",
                    "bcl:num": "2",
                    "bcl:text": "A body must be placed immediately under the control of the minister if",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e69",
                            "bcl:num": "a",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04035_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Cremation, Interment and Funeral Services Act"
                                },
                                "#text": "within 48 hours after death or after being found, the body is not claimed by a\n          relative, friend or person entitled to control the disposition of the body under section 5\n          of the ,\n          and"
                            }
                        },
                        {
                            "@id": "d2e81",
                            "bcl:num": "b",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/07015_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Coroners\n            Act"
                                },
                                "#text": "a coroner authorizes the release of the body under the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e94",
                    "bcl:marginalnote": "Notice to minister",
                    "bcl:num": "3",
                    "bcl:text": "The person in charge of an institution referred to in section 1 (b), the undertaker, or\n        other person having charge of the body must promptly give notice of the death and of the\n        particulars required by regulation, to the minister or the nominee of the minister for that\n        purpose."
                },
                {
                    "@id": "d2e106",
                    "bcl:marginalnote": "Use of unclaimed body for anatomical research",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e114",
                            "bcl:num": "1",
                            "bcl:text": "If the body is not claimed by a person referred to in section 2 (a)\n          within 3 months after death or after being found, the minister may, solely for the\n          advancement of anatomical science or instruction, issue an order permitting the use of the\n          body by",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e123",
                                    "bcl:num": "a",
                                    "bcl:text": "the medical faculty of the University of British Columbia,"
                                },
                                {
                                    "@id": "d2e132",
                                    "bcl:num": "b",
                                    "bcl:text": "the person in charge of another school of medicine approved by the Lieutenant\n            Governor in Council,"
                                },
                                {
                                    "@id": "d2e142",
                                    "bcl:num": "c",
                                    "bcl:text": "a school of chiropractic, or"
                                },
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "d",
                                    "bcl:text": "a medical practitioner who satisfies the minister of the medical practitioner's\n            need for the body."
                                }
                            ]
                        },
                        {
                            "@id": "d2e160",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04035_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Cremation, Interment and\n              Funeral Services Act"
                                },
                                "#text": "If the body is claimed by a person referred to in section 2 (a) within the 3 month\n          period, the minister must release the body to that person on being satisfied that the body\n          will be disposed of in accordance with the ."
                            }
                        },
                        {
                            "@id": "d2e172",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04035_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Cremation, Interment and Funeral Services Act"
                                },
                                "#text": "If the body is not required for anatomical science or instruction purposes, the\n          minister must require the person who has charge of the body to dispose of it in accordance\n          with the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e185",
                    "bcl:marginalnote": "Registration of death",
                    "bcl:num": "5",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96479_01",
                            "@xlink:type": "locator",
                            "in:doc": "Vital Statistics Act"
                        },
                        "#text": "Before delivery of a body to a person described in section\u00a04, the minister must\n        register the death under the ."
                    }
                },
                {
                    "@id": "d2e201",
                    "bcl:marginalnote": "Disposition after use",
                    "bcl:num": "6",
                    "bcl:text": "When a body is no longer required for the purposes set out in section 4 (1),\n        the person who has charge of the body must",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e212",
                            "bcl:num": "a",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04035_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Cremation, Interment and Funeral Services Act"
                                },
                                "#text": "arrange for the disposition of the body in accordance with the , at the\n          person's expense, and"
                            }
                        },
                        {
                            "@id": "d2e224",
                            "bcl:num": "b",
                            "bcl:text": "promptly notify the minister of the manner, time and place of the\n          disposition."
                        }
                    ]
                },
                {
                    "@id": "d2e234",
                    "bcl:marginalnote": "Direction in will",
                    "bcl:num": "7",
                    "bcl:text": "If a person by will records objection to the use of the person's body under this\n        Act, this Act may not be invoked to claim the body of that deceased person."
                },
                {
                    "@id": "d2e246",
                    "bcl:marginalnote": "Coroner",
                    "bcl:num": "8",
                    "bcl:text": "Nothing in this Act abridges the power or duty of a coroner."
                },
                {
                    "@id": "d2e258",
                    "bcl:marginalnote": "Offence and penalty",
                    "bcl:num": "9",
                    "bcl:text": "A person who contravenes a provision of this Act commits an offence and is liable on\n        conviction to a fine of not less than $50 or more than $100."
                },
                {
                    "@id": "d2e270",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e278",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041\n          of the ."
                            }
                        },
                        {
                            "@id": "d2e290",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may\n          prescribe fees for anything done or permitted to be done under this Act."
                        }
                    ]
                }
            ]
        }
    }
}