        "@id": "00_96365_01",
        "act:title": "Plant Protection Act",
        "act:chapter": "365",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1922970521/96365/tlc96365_f",
            "act:tlc": "E2tlc96365"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "inspector",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96296_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Ministry of Agriculture and Food Act"
                                },
                                "#text": "means an inspector appointed under the ;"
                            }
                        },
                        {
                            "@id": "d2e38",
                            "bcl:text": {
                                "in:term": "plant",
                                "#text": "includes all members of the vegetable kingdom and a part or product of a plant;"
                            }
                        },
                        {
                            "@id": "d2e48",
                            "bcl:text": {
                                "in:term": "treatment",
                                "#text": "includes the application or manipulation of cultural, chemical or biological practices."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e58",
                    "bcl:marginalnote": "Application of Act",
                    "bcl:num": "2",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/P-14.8/index.html",
                            "@xlink:type": "locator",
                            "in:doc": "Plant Protection Act"
                        },
                        "#text": "This Act does not apply to matters specifically regulated under the  (Canada)."
                    }
                },
                {
                    "@id": "d2e73",
                    "bcl:marginalnote": "Powers and duties of inspectors",
                    "bcl:num": "3",
                    "bcl:text": "To carry out duties under this Act, an inspector may do one or more of the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e84",
                            "bcl:num": "a",
                            "bcl:text": "enter premises at any reasonable time for an inspection under this Act;"
                        },
                        {
                            "@id": "d2e93",
                            "bcl:num": "b",
                            "bcl:text": "inspect the premises, a plant, root medium or container;"
                        },
                        {
                            "@id": "d2e103",
                            "bcl:num": "c",
                            "bcl:text": "detain or order the detention of a plant, root medium or container;"
                        },
                        {
                            "@id": "d2e112",
                            "bcl:num": "d",
                            "bcl:text": "carry out or direct the carrying out of treatment;"
                        },
                        {
                            "@id": "d2e121",
                            "bcl:num": "e",
                            "bcl:text": "on the order of the minister, confiscate or destroy a plant, root medium or container;"
                        },
                        {
                            "@id": "d2e130",
                            "bcl:num": "f",
                            "bcl:text": "carry out other duties and exercise other powers prescribed in the regulations."
                        }
                    ]
                },
                {
                    "@id": "d2e140",
                    "bcl:marginalnote": "Costs of treatment, confiscation or destruction of plants",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e148",
                            "bcl:num": "1",
                            "bcl:text": "The minister may order that the costs of treatment, confiscation or destruction be paid by the person or persons who have a direct interest in the land or plants."
                        },
                        {
                            "@id": "d2e157",
                            "bcl:num": "2",
                            "bcl:text": "For the purposes of subsection (1), the inspector must record the costs and make a certificate setting them out."
                        }
                    ]
                },
                {
                    "@id": "d2e167",
                    "bcl:marginalnote": "Recovery of cost",
                    "bcl:num": "5",
                    "bcl:text": "A certificate made under section 4 (2) may be filed in a court registry and may be enforced as if it were an order of the court for recovery of the amount set out in the certificate."
                },
                {
                    "@id": "d2e180",
                    "bcl:marginalnote": "Appeal",
                    "bcl:num": "6",
                    "bcl:text": "A person adversely affected by an act or decision of an inspector under this Act may appeal to the minister in the prescribed manner."
                },
                {
                    "@id": "d2e192",
                    "bcl:marginalnote": "Offences",
                    "bcl:num": "7",
                    "bcl:text": "A person who does either of the following commits an offence:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e203",
                            "bcl:num": "a",
                            "bcl:text": "fails to comply with an order or direction of the minister or an inspector under this Act;"
                        },
                        {
                            "@id": "d2e212",
                            "bcl:num": "b",
                            "bcl:text": "interferes with an inspector carrying out duties under this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e222",
                    "bcl:marginalnote": "Regulations to prevent deleterious spreading",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e230",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "In order to prevent the spread in British Columbia of an insect, pest or disease destructive to plants, the Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e242",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e251",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribing the type or manner of treatment and who must carry it out;"
                                },
                                {
                                    "@id": "d2e261",
                                    "bcl:num": "b",
                                    "bcl:text": "providing for collection, from the owner, of the expenses of treatment, and prescribing a method or system for that collection;"
                                },
                                {
                                    "@id": "d2e270",
                                    "bcl:num": "c",
                                    "bcl:text": "prohibiting the sale or providing for the confiscation or destruction of a plant, root medium or container that is infested or infected or suspected of being infested or infected with an insect, pest or disease destructive to plants, or that is damaged by frost or otherwise injured;"
                                },
                                {
                                    "@id": "d2e279",
                                    "bcl:num": "d",
                                    "bcl:text": "providing for reporting the discovery of a destructive insect, pest or disease and for obtaining and sending specimens;"
                                },
                                {
                                    "@id": "d2e288",
                                    "bcl:num": "e",
                                    "bcl:text": "setting fees payable to the government for inspection or other service under the regulations;"
                                },
                                {
                                    "@id": "d2e297",
                                    "bcl:num": "f",
                                    "bcl:text": "establishing quarantine areas in British Columbia and regulating or prohibiting the moving of a plant, root medium or container from or into a quarantine area."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}