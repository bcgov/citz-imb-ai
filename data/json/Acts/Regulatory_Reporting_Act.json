        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_11028_01",
        "act:title": "Regulatory Reporting Act",
        "act:chapter": "28",
        "act:yearenacted": "2011",
        "act:assentedto": "November 24, 2011",
        "act:currency": {
            "act:tlcDirPath": "286269762/11028/1196876819",
            "act:tlc": "E2tlc11028"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Minister to publish report",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e26",
                            "bcl:num": "1",
                            "bcl:text": "On or before June 30 in each year, the minister must publish a report respecting the government's regulatory reform initiatives that meets the requirements set out in subsection (2)."
                        },
                        {
                            "@id": "d2e35",
                            "bcl:num": "2",
                            "bcl:text": "The report must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e44",
                                    "bcl:num": "a",
                                    "bcl:text": "cover the 12-month period ending on March 31 of the year in which the report is published, and"
                                },
                                {
                                    "@id": "d2e54",
                                    "bcl:num": "b",
                                    "bcl:text": "include the information required by the regulations."
                                }
                            ]
                        },
                        {
                            "@id": "d2e63",
                            "bcl:num": "3",
                            "bcl:text": "The report must be published in a manner that can reasonably be expected to bring the report to the attention of the public."
                        },
                        {
                            "@id": "d2e72",
                            "bcl:num": "4",
                            "bcl:text": "If the minister determines that the report will not be published by the date referred to in subsection (1), on or before that date the minister must make public a written statement giving the reasons for the non-compliance."
                        }
                    ]
                },
                {
                    "@id": "d2e82",
                    "bcl:marginalnote": "Legal proceedings",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e90",
                            "bcl:num": "1",
                            "bcl:text": "No action or other proceeding may be brought in respect of an obligation established under this Act."
                        },
                        {
                            "@id": "d2e99",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96338_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Offence Act"
                                },
                                "#text": "Section 5 of the  does not apply to this Act or the regulations."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e112",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e120",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e132",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e141",
                                    "bcl:num": "a",
                                    "bcl:text": "respecting the information that must be included in a report;"
                                },
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "b",
                                    "bcl:text": "respecting the methodology by which regulatory reform initiatives are to be assessed;"
                                },
                                {
                                    "@id": "d2e160",
                                    "bcl:num": "c",
                                    "bcl:text": "respecting the enactments that are relevant for the purposes of assessing regulatory reform initiatives."
                                }
                            ]
                        },
                        {
                            "@id": "d2e169",
                            "bcl:num": "3",
                            "bcl:text": "In making a regulation under this Act, the Lieutenant Governor in Council may do one or more of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e178",
                                    "bcl:num": "a",
                                    "bcl:text": "delegate a matter to a person;"
                                },
                                {
                                    "@id": "d2e187",
                                    "bcl:num": "b",
                                    "bcl:text": "confer a discretion on a person;"
                                },
                                {
                                    "@id": "d2e196",
                                    "bcl:num": "c",
                                    "bcl:text": "make different regulations for different enactments or regulatory reform initiatives, or classes of enactments or regulatory reform initiatives;"
                                },
                                {
                                    "@id": "d2e206",
                                    "bcl:num": "d",
                                    "bcl:text": "establish or define classes of enactments or regulatory reform initiatives."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e216",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "4",
                    "bcl:text": "This Act comes into force on the date of Royal Assent."
                }
            ]
        }
    }
}