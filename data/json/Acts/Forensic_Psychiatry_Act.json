        "@id": "00_96156_01",
        "act:title": "Forensic Psychiatry Act",
        "act:chapter": "156",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1198514681/96156/tlc96156_f",
            "act:tlc": "E2tlc96156"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e32",
                            "bcl:text": {
                                "in:term": "commission",
                                "#text": "means the Forensic Psychiatric Services Commission;"
                            }
                        },
                        {
                            "@id": "d2e41",
                            "bcl:text": {
                                "in:term": "forensic psychiatry",
                                "#text": "includes psychiatric consultation, assessment, therapy or treatment services provided to the courts or to other components of the administration of justice, and \"forensic psychiatric\" has a corresponding meaning;"
                            }
                        },
                        {
                            "@id": "d2e51",
                            "bcl:text": {
                                "in:term": "minister",
                                "#text": "includes a person designated in writing by the minister."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e61",
                    "bcl:marginalnote": "Commission continued",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e69",
                            "bcl:num": "1",
                            "bcl:text": "The Forensic Psychiatric Services Commission is continued as a corporation consisting of at least 5 members appointed by the Lieutenant Governor in Council to hold office during pleasure."
                        },
                        {
                            "@id": "d2e78",
                            "bcl:num": "2",
                            "bcl:text": "Each member must be reimbursed for reasonable travelling and other out of pocket expenses necessarily incurred by the member in discharging the member's duties, and, in addition, may be paid and may accept remuneration for the member's services as the Lieutenant Governor in Council determines."
                        },
                        {
                            "@id": "d2e87",
                            "bcl:num": "3",
                            "bcl:text": "A majority of the members constitutes a quorum."
                        }
                    ]
                },
                {
                    "@id": "d2e97",
                    "bcl:marginalnote": "Chair and vice chair",
                    "bcl:num": "3",
                    "bcl:text": "The Lieutenant Governor in Council must designate one of the members as the chair and one other member as vice chair."
                },
                {
                    "@id": "d2e109",
                    "bcl:marginalnote": "Attendance of executive director at commission meetings",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e117",
                            "bcl:num": "1",
                            "bcl:text": "By resolution, the commission may authorize the executive director to attend meetings of the commission and act as secretary of the commission."
                        },
                        {
                            "@id": "d2e126",
                            "bcl:num": "2",
                            "bcl:text": "The executive director is not entitled to vote at meetings of the commission."
                        }
                    ]
                },
                {
                    "@id": "d2e136",
                    "bcl:marginalnote": "Function of commission",
                    "bcl:num": "5",
                    "bcl:text": "The functions of the commission are:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e147",
                            "bcl:num": "a",
                            "bcl:text": "to provide forensic psychiatric services to the courts in British Columbia and to give expert forensic psychiatric evidence;"
                        },
                        {
                            "@id": "d2e156",
                            "bcl:num": "b",
                            "bcl:text": "to provide forensic psychiatric services for",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d2e166",
                                    "bcl:num": "i",
                                    "bcl:text": "accused persons remanded for psychiatric examination,"
                                },
                                {
                                    "@id": "d2e175",
                                    "bcl:num": "ii",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                                "@xlink:type": "locator",
                                                "in:doc": "Criminal Code"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96288_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Mental Health Act"
                                            }
                                        ],
                                        "#text": "persons held at the direction of the Lieutenant Governor in Council under the  or the ,"
                                    }
                                },
                                {
                                    "@id": "d2e190",
                                    "bcl:num": "iii",
                                    "bcl:text": "persons in need of psychiatric care or assessment while in custody, and"
                                },
                                {
                                    "@id": "d2e199",
                                    "bcl:num": "iv",
                                    "bcl:text": "persons held under a court order;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e208",
                            "bcl:num": "c",
                            "bcl:text": "to provide in-patient and outpatient treatment for persons referred to in paragraph\u00a0(b) and other persons the minister may designate;"
                        },
                        {
                            "@id": "d2e217",
                            "bcl:num": "d",
                            "bcl:text": "to plan, organize and conduct, either alone or with other persons and organizations,",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d2e227",
                                    "bcl:num": "i",
                                    "bcl:text": "research respecting the diagnosis, treatment and care of forensic psychiatric cases, and"
                                },
                                {
                                    "@id": "d2e236",
                                    "bcl:num": "ii",
                                    "bcl:text": "educational programs respecting the diagnosis, treatment and care of forensic psychiatric cases;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e245",
                            "bcl:num": "e",
                            "bcl:text": "to consult with ministries, departments and agencies of the federal and provincial governments, and municipal departments or agencies, mental health centres and other persons or organizations about the advancement of the objectives set out in this section;"
                        },
                        {
                            "@id": "d2e254",
                            "bcl:num": "f",
                            "bcl:text": "to perform other duties, responsibilities, research and educational programs respecting forensic psychiatry as directed by the Lieutenant Governor in Council."
                        }
                    ]
                },
                {
                    "@id": "d2e265",
                    "bcl:marginalnote": "Commission as agent of the government",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e273",
                            "bcl:num": "1",
                            "bcl:text": "The commission is, for all purposes, an agent of the government."
                        },
                        {
                            "@id": "d2e282",
                            "bcl:num": "2",
                            "bcl:text": "The commission may, as agent, carry out its duties and exercise its powers under this Act in its own name and may, with the prior approval of the Lieutenant Governor in Council, acquire land, hold land in its own name and dispose of land."
                        }
                    ]
                },
                {
                    "@id": "d2e292",
                    "bcl:marginalnote": "Staff",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e300",
                            "bcl:num": "1",
                            "bcl:text": "The commission may appoint officers and employees the commission considers necessary for this Act, and may determine their duties."
                        },
                        {
                            "@id": "d2e309",
                            "bcl:num": "2",
                            "bcl:text": "The Lieutenant Governor in Council may appoint an executive director of the commission, to be appointed during pleasure, and may fix the executive director's remuneration."
                        },
                        {
                            "@id": "d2e318",
                            "bcl:num": "3",
                            "bcl:text": "The commission may engage and retain persons it considers necessary as consultants, experts or specialists, and may fix their remuneration."
                        }
                    ]
                },
                {
                    "@id": "d2e328",
                    "bcl:marginalnote": {
                        "in:doc": "Business Corporations Act",
                        "#text": "not to apply"
                    },
                    "bcl:num": "8",
                    "bcl:text": {
                        "bcl:link": [
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/02057_00",
                                "@xlink:type": "locator",
                                "in:doc": "Business Corporations Act"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/02057_00",
                                "@xlink:type": "locator",
                                "in:doc": "Business Corporations Act"
                            }
                        ],
                        "#text": "The  does not apply to the commission, but the Lieutenant Governor in Council may prescribe that the  or part of it applies to the commission."
                    }
                },
                {
                    "@id": "d2e349",
                    "bcl:marginalnote": "Limitation of liability",
                    "bcl:num": "9",
                    "bcl:text": "No member or employee of the commission, and no person acting under this Act or the commission, is personally liable for loss or damage suffered by a person by reason of anything done or omitted to be done in good faith in the exercise or purported exercise of any powers given by this Act."
                },
                {
                    "@id": "d2e361",
                    "bcl:marginalnote": "Agreements",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e369",
                            "bcl:num": "1",
                            "bcl:text": "For this Act, the commission may enter into agreements it considers advisable with one or more of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e378",
                                    "bcl:num": "a",
                                    "bcl:text": "a municipality;"
                                },
                                {
                                    "@id": "d2e387",
                                    "bcl:num": "b",
                                    "bcl:text": "a regional district;"
                                },
                                {
                                    "@id": "d2e397",
                                    "bcl:num": "c",
                                    "bcl:text": "an agent of the government;"
                                },
                                {
                                    "@id": "d2e406",
                                    "bcl:num": "d",
                                    "bcl:text": "a ministry of the government;"
                                },
                                {
                                    "@id": "d2e415",
                                    "bcl:num": "e",
                                    "bcl:text": "any other persons or agencies."
                                }
                            ]
                        },
                        {
                            "@id": "d2e424",
                            "bcl:num": "2",
                            "bcl:text": "With the approval of the Lieutenant Governor in Council, the commission may enter into agreements with Canada or a province, or their agents or departments."
                        }
                    ]
                },
                {
                    "@id": "d2e434",
                    "bcl:marginalnote": "Audit",
                    "bcl:num": "10.1",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/03002_01",
                            "@xlink:type": "locator",
                            "in:doc": "Auditor General Act"
                        },
                        "#text": "Unless the Auditor General is appointed in accordance with the  as the auditor of the commission, the commission must appoint an auditor to audit the accounts of the commission at least once each year."
                    }
                },
                {
                    "@id": "d2e450",
                    "bcl:marginalnote": "Annual report",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e458",
                            "bcl:num": "1",
                            "bcl:text": "The commission must submit annually to the minister",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e467",
                                    "bcl:num": "a",
                                    "bcl:text": "a report respecting the operation of the commission, and"
                                },
                                {
                                    "@id": "d2e476",
                                    "bcl:num": "b",
                                    "bcl:text": "a financial statement showing the financial operations of the commission for the preceding fiscal year of the government."
                                }
                            ]
                        },
                        {
                            "@id": "d2e486",
                            "bcl:num": "2",
                            "bcl:text": "The report and financial statement must be laid before the Legislature within 15\u00a0days after the opening of the first session in the following calendar year."
                        }
                    ]
                },
                {
                    "@id": "d2e496",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "12",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                    }
                }
            ]
        }
    }
}