        "act:title": "B.C. Pavilion Corporation Act",
        "act:chapter": "33",
        "act:yearenacted": "2022",
        "act:assentedto": "November 3, 2022",
        "act:currency": {
            "act:tlcDirPath": "1944036832/960434895/2105940606",
            "act:tlc": "E3tlc22033"
        },
        "act:content": {
            "bcl:part": [
                {
                    "@id": "d1e22",
                    "bcl:num": "1",
                    "bcl:text": "B.C. Pavilion Corporation",
                    "bcl:section": [
                        {
                            "@id": "d1e26",
                            "bcl:marginalnote": "Definition",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:term": "company",
                                "#text": "In this Part,  means B.C. Pavilion Corporation."
                            }
                        },
                        {
                            "@id": "d1e43",
                            "bcl:marginalnote": "Company as agent of the government",
                            "bcl:num": "2",
                            "bcl:subsection": [
                                {
                                    "@id": "d1e49",
                                    "bcl:num": "1",
                                    "bcl:text": "The company is an agent of the government and may exercise its powers only as an agent of the government."
                                },
                                {
                                    "@id": "d1e56",
                                    "bcl:num": "2",
                                    "bcl:text": "The company is bound by the laws of British Columbia only to the extent that the government is bound."
                                },
                                {
                                    "@id": "d1e63",
                                    "bcl:num": "3",
                                    "bcl:text": "The company has the same immunities in relation to property held by the company as the government has in relation to property held by the government."
                                },
                                {
                                    "@id": "d1e71",
                                    "bcl:num": "4",
                                    "bcl:text": "The company may, on behalf of the government,",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e77",
                                            "bcl:num": "a",
                                            "bcl:text": "exercise its powers and perform its duties in its own name, and"
                                        },
                                        {
                                            "@id": "d1e84",
                                            "bcl:num": "b",
                                            "bcl:text": "acquire property and deal with and dispose of property held by it without reference to the government."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e92",
                                    "bcl:num": "5",
                                    "bcl:text": "All property owned or acquired by the company",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e98",
                                            "bcl:num": "a",
                                            "bcl:text": "belongs to the government,"
                                        },
                                        {
                                            "@id": "d1e105",
                                            "bcl:num": "b",
                                            "bcl:text": "is held by the company on behalf of the government, and"
                                        },
                                        {
                                            "@id": "d1e112",
                                            "bcl:num": "c",
                                            "bcl:text": "despite any other enactment, must be administered by the company without reference to the government."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d1e121",
                            "bcl:marginalnote": "Shares of company",
                            "bcl:num": "3",
                            "bcl:subsection": [
                                {
                                    "@id": "d1e127",
                                    "bcl:num": "1",
                                    "bcl:text": "The minister may, with the prior approval of the Lieutenant Governor in Council and on terms and conditions the minister considers advisable,",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e133",
                                            "bcl:num": "a",
                                            "bcl:text": "purchase or otherwise acquire shares, notes, bonds, debentures or other securities of the company,"
                                        },
                                        {
                                            "@id": "d1e140",
                                            "bcl:num": "b",
                                            "bcl:text": "convert any shares, notes, bonds, debentures or other securities of the company that are held by the government into other shares, notes, bonds, debentures or other securities or other debt of the company, or"
                                        },
                                        {
                                            "@id": "d1e147",
                                            "bcl:num": "c",
                                            "bcl:text": "convert any debt owed by the company to the government into shares, notes, bonds, debentures or other securities or other debt of the company."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e155",
                                    "bcl:num": "2",
                                    "bcl:text": "Shares purchased or otherwise acquired under subsection (1) must be registered in the name of the minister and the minister must hold those shares on behalf of the government."
                                },
                                {
                                    "@id": "d1e162",
                                    "bcl:num": "3",
                                    "bcl:text": "The minister may, with the prior approval of the Lieutenant Governor in Council and on terms and conditions the Lieutenant Governor in Council directs, grant or advance money to the company."
                                },
                                {
                                    "@id": "d1e170",
                                    "bcl:num": "4",
                                    "bcl:text": "All rights exercisable by the government as shareholder in the company, including the right to appoint a proxy, are exercisable by the minister."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e23",
                    "bcl:num": "2",
                    "bcl:text": "British Columbia Enterprise Corporation",
                    "bcl:section": [
                        {
                            "@id": "d1e27",
                            "bcl:marginalnote": "Dissolution of British Columbia Enterprise Corporation",
                            "bcl:num": "4",
                            "bcl:subsection": [
                                {
                                    "@id": "d1e191",
                                    "bcl:num": "1",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/02057_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Business Corporations Act"
                                        },
                                        "#text": "Despite the , the British Columbia Enterprise Corporation is dissolved."
                                    }
                                },
                                {
                                    "@id": "d1e202",
                                    "bcl:num": "2",
                                    "bcl:text": "On dissolution under this section, the British Columbia Enterprise Corporation ceases to exist for any purpose."
                                },
                                {
                                    "@id": "d1e209",
                                    "bcl:num": "3",
                                    "bcl:text": "The Registrar of Companies must",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e215",
                                            "bcl:num": "a",
                                            "bcl:text": "issue a certificate of dissolution showing the date on which the British Columbia Enterprise Corporation is dissolved, and"
                                        },
                                        {
                                            "@id": "d1e222",
                                            "bcl:num": "b",
                                            "bcl:text": "publish, on a website maintained by or on behalf of the government, a notice that the British Columbia Enterprise Corporation has been dissolved."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d1e231",
                            "bcl:marginalnote": "Transfer of assets of British Columbia Enterprise Corporation",
                            "bcl:num": "5",
                            "bcl:subsection": [
                                {
                                    "@id": "d1e237",
                                    "bcl:num": "1",
                                    "bcl:text": "Despite any enactment or law to the contrary, all of the British Columbia Enterprise Corporation's rights, property and assets are transferred to and vested in the government."
                                },
                                {
                                    "@id": "d1e244",
                                    "bcl:num": "2",
                                    "bcl:text": "Despite any enactment or law to the contrary,",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e250",
                                            "bcl:num": "a",
                                            "bcl:text": "the transfer and vesting under subsection (1) take effect without",
                                            "bcl:subparagraph": [
                                                {
                                                    "@id": "d1e256",
                                                    "bcl:num": "i",
                                                    "bcl:text": "the execution or issue of any record, or"
                                                },
                                                {
                                                    "@id": "d1e263",
                                                    "bcl:num": "ii",
                                                    "bcl:text": "any registration or filing of this Act or any other record in or with any registry or other office,"
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d1e271",
                                            "bcl:num": "b",
                                            "bcl:text": "the transfer and vesting under subsection (1) take effect despite",
                                            "bcl:subparagraph": [
                                                {
                                                    "@id": "d1e277",
                                                    "bcl:num": "i",
                                                    "bcl:text": "any prohibition on all or any part of the transfer, and"
                                                },
                                                {
                                                    "@id": "d1e284",
                                                    "bcl:num": "ii",
                                                    "bcl:text": "the absence of any consent or approval that is or may be required for all or any part of the transfer,"
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d1e292",
                                            "bcl:num": "c",
                                            "bcl:text": "if any right, property or asset referred to in subsection (1) is registered or otherwise recorded in the name of the British Columbia Enterprise Corporation, that registration or record may remain but is deemed, for all purposes of this and all other enactments and law, to reflect that the right, property or asset is owned by and vested in the government, and"
                                        },
                                        {
                                            "@id": "d1e300",
                                            "bcl:num": "d",
                                            "bcl:text": "in any record in or by which the government deals with a right, property or asset referred to in subsection (1), it is sufficient to cite this Act as effecting and confirming the transfer from the British Columbia Enterprise Corporation to the government of title to the right, property or asset and the vesting of that title in the government."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e308",
                                    "bcl:num": "3",
                                    "bcl:text": "For the purposes of this section, assets that become assets of the government under this section include records and parts of records, and, without limiting this, all of the records and parts of records of the British Columbia Enterprise Corporation are transferred to and become the records of the government on the coming into force of this Act."
                                }
                            ]
                        },
                        {
                            "@id": "d1e316",
                            "bcl:marginalnote": "Transfer of liabilities of British Columbia Enterprise Corporation",
                            "bcl:num": "6",
                            "bcl:text": "All obligations and liabilities of the British Columbia Enterprise Corporation",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e324",
                                    "bcl:num": "a",
                                    "bcl:text": "are transferred to and assumed by the government,"
                                },
                                {
                                    "@id": "d1e331",
                                    "bcl:num": "b",
                                    "bcl:text": "become the government's obligations and liabilities, and"
                                },
                                {
                                    "@id": "d1e339",
                                    "bcl:num": "c",
                                    "bcl:text": "may be enforced against the government as if the government had incurred them."
                                }
                            ]
                        },
                        {
                            "@id": "d1e348",
                            "bcl:marginalnote": "Effect of transfer",
                            "bcl:num": "7",
                            "bcl:text": "Despite any provision to the contrary in a record, the transfer to the government of a right, property or asset under section 5 or an obligation or liability under section 6 does not constitute a breach or contravention of, or an event of default under, the record and, without limiting this, does not entitle any person who has an interest in the right, property, asset, obligation or liability to claim any damages, compensation or other remedy."
                        },
                        {
                            "@id": "d1e357",
                            "bcl:marginalnote": "Shares of British Columbia Enterprise Corporation",
                            "bcl:num": "8",
                            "bcl:text": "Any shares in the British Columbia Enterprise Corporation are cancelled."
                        },
                        {
                            "@id": "d1e122",
                            "bcl:marginalnote": "Commencement",
                            "bcl:num": "10",
                            "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in Council."
                        }
                    ],
                    "bcl:conseqhead": {
                        "bcl:text": "Repeal",
                        "bcl:num": "9",
                        "bcl:conseqnote": {
                            "bcl:editorialnote": {
                                "in:em": "[Note: See Table of Legislative Changes for the status of section 9.]"
                            }
