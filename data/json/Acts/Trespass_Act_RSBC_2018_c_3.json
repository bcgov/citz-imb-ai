        "@id": "18003",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "act:title": {
            "@titleOverride": "Trespass Act [RSBC 2018] c. 3",
            "#text": "Trespass Act"
        },
        "act:chapter": "3",
        "act:yearenacted": {
            "@revised": "RSBC",
            "#text": "2018"
        },
        "act:deposited": "Deposited with Clerk of the Legislative Assembly on August 20, 2018",
        "act:currency": {
            "act:tlcDirPath": "1089244767/1090266266/1267063239",
            "act:tlc": "E3tlc18003"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d1e29",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d1e41",
                            "bcl:text": {
                                "in:term": "authorized person",
                                "#text": "means a person authorized by an occupier of premises to exercise a power or perform a duty of the occupier under this Act;"
                            }
                        },
                        {
                            "@id": "d1e49",
                            "bcl:text": {
                                "in:term": "enclosed land",
                                "#text": "includes land that is"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e56",
                                    "bcl:num": "a",
                                    "bcl:text": "surrounded by a lawful fence,"
                                },
                                {
                                    "@id": "d1e65",
                                    "bcl:num": "b",
                                    "bcl:text": "surrounded by a natural boundary,"
                                },
                                {
                                    "@id": "d1e74",
                                    "bcl:num": "c",
                                    "bcl:text": "surrounded by a lawful fence and a natural boundary, or"
                                },
                                {
                                    "@id": "d1e83",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "in:desc": "[methods of posting or giving notice]",
                                        "#text": "posted, in accordance with section 4 (1) , with signs prohibiting trespass;"
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d1e97",
                            "bcl:text": {
                                "in:term": "lawful fence",
                                "#text": "means a lawful fence as defined by regulation;"
                            }
                        },
                        {
                            "@id": "d1e105",
                            "bcl:text": {
                                "in:term": "occupier",
                                "#text": ", in relation to premises, means the following:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e112",
                                    "bcl:num": "a",
                                    "bcl:text": [
                                        "in the case of premises that are",
                                        "a person entitled to maintain an action for trespass in respect of those premises;"
                                    ],
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e120",
                                            "bcl:num": "i",
                                            "bcl:text": "land, including enclosed land, foreshore and land covered by water, or"
                                        },
                                        {
                                            "@id": "d1e129",
                                            "bcl:num": "ii",
                                            "bcl:text": "property described in paragraph (b) (i) of the definition of \"premises\","
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e142",
                                    "bcl:num": "b",
                                    "bcl:text": "in the case of premises that are property described in paragraph (b) (ii) or (iii) of the definition of \"premises\", a person lawfully entitled to possession of those premises;"
                                },
                                {
                                    "@id": "d1e151",
                                    "bcl:num": "c",
                                    "bcl:text": "in the case of premises that are water, a person described in paragraph (a) of this definition in relation to the land under the water;"
                                },
                                {
                                    "@id": "d1e160",
                                    "bcl:num": "d",
                                    "bcl:text": "in any case, a person who has",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e168",
                                            "bcl:num": "i",
                                            "bcl:text": "responsibility for and control over the condition of the premises or the activities carried out on or in the premises, or"
                                        },
                                        {
                                            "@id": "d1e177",
                                            "bcl:num": "ii",
                                            "bcl:text": "control over persons allowed to enter the premises;"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d1e188",
                            "bcl:text": {
                                "in:term": "owner",
                                "#text": ", in relation to land, means a person registered in the land title office as the owner of the estate in fee simple of the land;"
                            }
                        },
                        {
                            "@id": "d1e196",
                            "bcl:text": {
                                "in:term": "premises",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e203",
                                    "bcl:num": "a",
                                    "bcl:text": "land, including",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e211",
                                            "bcl:num": "i",
                                            "bcl:text": "enclosed land, and"
                                        },
                                        {
                                            "@id": "d1e220",
                                            "bcl:num": "ii",
                                            "bcl:text": "foreshore and land covered by water, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e230",
                                    "bcl:num": "b",
                                    "bcl:text": "anything on the land, including",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e238",
                                            "bcl:num": "i",
                                            "bcl:text": "a building or other permanent structure, including a building or permanent structure designed or used for shelter for livestock,"
                                        },
                                        {
                                            "@id": "d1e247",
                                            "bcl:num": "ii",
                                            "bcl:text": "a ship or vessel, train, railway car, vehicle or aircraft, except while in operation,"
                                        },
                                        {
                                            "@id": "d1e256",
                                            "bcl:num": "iii",
                                            "bcl:text": "a trailer or a portable structure designed or used as a residence, for shelter, including shelter for livestock, or to house a business, and"
                                        },
                                        {
                                            "@id": "d1e266",
                                            "bcl:num": "iv",
                                            "bcl:text": "water;"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d1e277",
                            "bcl:text": {
                                "in:term": "vehicle",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96318_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Motor Vehicle Act"
                                },
                                "#text": "has the same meaning as in the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d1e290",
                    "bcl:marginalnote": "Trespass prohibited",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d1e298",
                            "bcl:num": "1",
                            "bcl:text": "Subject to section 3, a person who does any of the following commits an offence:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e306",
                                    "bcl:num": "a",
                                    "bcl:text": "enters premises that are enclosed land;"
                                },
                                {
                                    "@id": "d1e315",
                                    "bcl:num": "b",
                                    "bcl:text": "enters premises after the person has had notice from an occupier of the premises or an authorized person that the entry is prohibited;"
                                },
                                {
                                    "@id": "d1e324",
                                    "bcl:num": "c",
                                    "bcl:text": "engages in activity on or in premises after the person has had notice from an occupier of the premises or an authorized person that the activity is prohibited."
                                }
                            ]
                        },
                        {
                            "@id": "d1e334",
                            "bcl:num": "2",
                            "bcl:text": "A person found on or in premises that are enclosed land is presumed to be on or in the premises without the consent of an occupier of the premises or an authorized person."
                        },
                        {
                            "@id": "d1e343",
                            "bcl:num": "3",
                            "bcl:text": [
                                "Subject to section 3, a person who has been directed, either orally or in writing, by an occupier of premises or an authorized person to",
                                "commits an offence if the person"
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e351",
                                    "bcl:num": "a",
                                    "bcl:text": "leave the premises, or"
                                },
                                {
                                    "@id": "d1e360",
                                    "bcl:num": "b",
                                    "bcl:text": "stop engaging in an activity on or in the premises"
                                },
                                {
                                    "@id": "d1e373",
                                    "bcl:num": "c",
                                    "bcl:text": "does not leave the premises or stop the activity, as applicable, as soon as practicable after receiving the direction, or"
                                },
                                {
                                    "@id": "d1e382",
                                    "bcl:num": "d",
                                    "bcl:text": "re-enters the premises or resumes the activity on or in the premises, as applicable."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e393",
                    "bcl:marginalnote": "Defences to trespass charge",
                    "bcl:num": "3",
                    "bcl:text": "A person may not be convicted of an offence under section 2 in relation to premises if the person's action or inaction, as applicable to the offence, was with",
                    "bcl:paragraph": [
                        {
                            "@id": "d1e404",
                            "bcl:num": "a",
                            "bcl:text": "the consent of an occupier of the premises or an authorized person,"
                        },
                        {
                            "@id": "d1e413",
                            "bcl:num": "b",
                            "bcl:text": "other lawful authority, or"
                        },
                        {
                            "@id": "d1e423",
                            "bcl:num": "c",
                            "bcl:text": "colour of right."
                        }
                    ]
                },
                {
                    "@id": "d1e433",
                    "bcl:marginalnote": "Methods of posting or giving notice",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d1e441",
                            "bcl:num": "1",
                            "bcl:text": "For the purposes of paragraph (d) of the definition of \"enclosed land\" in section 1, signs must be posted so that, in daylight and under normal weather conditions, from the approach to each ordinary point of access to the enclosed land,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e449",
                                    "bcl:num": "a",
                                    "bcl:text": "a sign is clearly visible,"
                                },
                                {
                                    "@id": "d1e458",
                                    "bcl:num": "b",
                                    "bcl:text": "if the sign contains writing, the writing is clearly legible, and"
                                },
                                {
                                    "@id": "d1e467",
                                    "bcl:num": "c",
                                    "bcl:text": "if the sign uses graphic representation, the graphic representation is clearly visible."
                                }
                            ]
                        },
                        {
                            "@id": "d1e477",
                            "bcl:num": "2",
                            "bcl:text": {
                                "in:desc": "[notice from occupier or authorized person]",
                                "#text": "For the purposes of section 2 (1) (b) or (c) , notice may be given"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e488",
                                    "bcl:num": "a",
                                    "bcl:text": "orally or in writing, or"
                                },
                                {
                                    "@id": "d1e497",
                                    "bcl:num": "b",
                                    "bcl:text": "by means of a sign posted at or near an ordinary point of access to the premises so that, in daylight and under normal weather conditions, from the approach to the ordinary point of access, the sign satisfies the requirements of subsection (1) of this section."
                                }
                            ]
                        },
                        {
                            "@id": "d1e507",
                            "bcl:num": "3",
                            "bcl:text": [
                                "A sign, posted in accordance with subsection (2) (b), that",
                                "is sufficient for the purpose of giving notice that the activity is prohibited."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e515",
                                    "bcl:num": "a",
                                    "bcl:text": "names an activity and has an oblique line drawn through the name, or"
                                },
                                {
                                    "@id": "d1e524",
                                    "bcl:num": "b",
                                    "bcl:text": "shows a graphic representation of an activity and has an oblique line drawn through the graphic representation"
                                }
                            ]
                        },
                        {
                            "@id": "d1e538",
                            "bcl:num": "4",
                            "bcl:text": "In a prosecution for an offence under section 2 (1), proof that a sign that complies with subsection (1) or (2) (b) of this section, as applicable, was posted at the ordinary point of access used by the defendant to enter the premises is sufficient for the purpose of establishing, as applicable, that",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e546",
                                    "bcl:num": "a",
                                    "bcl:text": "the premises are enclosed land, or"
                                },
                                {
                                    "@id": "d1e555",
                                    "bcl:num": "b",
                                    "bcl:text": "notice was given for the purpose of section 2 (1) (b) or (c)."
                                }
                            ]
                        },
                        {
                            "@id": "d1e565",
                            "bcl:num": "5",
                            "bcl:text": "Notice given under this section may relate to all or a part of premises and different notices may be given or posted in relation to different parts of premises."
                        }
                    ]
                },
                {
                    "@id": "d1e576",
                    "bcl:marginalnote": "Offence to remove, alter or deface posted signs",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d1e584",
                            "bcl:num": "1",
                            "bcl:text": "A person, other than an occupier or authorized person, must not remove, alter or deface signs posted for the purpose of section 4 (1) or (2) (b)."
                        },
                        {
                            "@id": "d1e593",
                            "bcl:num": "2",
                            "bcl:text": "A person who contravenes subsection (1) commits an offence."
                        }
                    ]
                },
                {
                    "@id": "d1e603",
                    "bcl:marginalnote": "Trespasser must give name and address",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d1e611",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:desc": "[trespass prohibited]",
                                "#text": "On the demand of an occupier of premises, or of an authorized person, who has reasonable grounds to believe that a person is on or in the premises, or was on or in the premises, in contravention of section 2 (1) or (3) , the person must provide the person's correct name and address to the occupier or authorized person."
                            }
                        },
                        {
                            "@id": "d1e623",
                            "bcl:num": "2",
                            "bcl:text": "A person who contravenes subsection (1) commits an offence."
                        },
                        {
                            "@id": "d1e632",
                            "bcl:num": "3",
                            "bcl:text": "A person who contravenes subsection (1) and remains on or in the premises commits an offence."
                        }
                    ]
                },
                {
                    "@id": "d1e642",
                    "bcl:marginalnote": "Arrest without warrant",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d1e650",
                            "bcl:num": "1",
                            "bcl:text": "In this section, \"peace officer\" means",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e658",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96238_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Interpretation Act"
                                        },
                                        "#text": "a peace officer, as described in paragraph (c) of the definition of \"peace officer\" in section 29 of the , or"
                                    }
                                },
                                {
                                    "@id": "d1e671",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/03053_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Environmental Management Act"
                                        },
                                        "#text": "a conservation officer, as defined in section 1 (1) of the ."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d1e685",
                            "bcl:num": "2",
                            "bcl:text": {
                                "in:desc": "[trespass prohibited]",
                                "#text": "A peace officer may arrest without warrant a person found on or in premises if the peace officer believes on reasonable and probable grounds that the person is committing an offence under section 2  in relation to the premises."
                            }
                        },
                        {
                            "@id": "d1e697",
                            "bcl:num": "3",
                            "bcl:text": "If a peace officer believes on reasonable and probable grounds that a person has committed an offence under section 2 and has recently departed from the premises, the peace officer may arrest the person without warrant if",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e705",
                                    "bcl:num": "a",
                                    "bcl:text": "the person refuses to give the person's name and address to the peace officer on demand, or"
                                },
                                {
                                    "@id": "d1e714",
                                    "bcl:num": "b",
                                    "bcl:text": "the peace officer believes on reasonable and probable grounds that the name or address given by the person to the peace officer is false."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e725",
                    "bcl:marginalnote": "Court may order compensation",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d1e733",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:desc": [
                                    "[trespass prohibited]",
                                    "[offence to remove, alter or deface posted signs]"
                                ],
                                "#text": "The Provincial Court, on application by an occupier of premises or another person injured, may order a person convicted of an offence under section 2  or 5 (2)  in relation to those premises to pay restitution for the damage or loss sustained by the occupier or other person as a result of the commission of the offence."
                            }
                        },
                        {
                            "@id": "d1e748",
                            "bcl:num": "2",
                            "bcl:text": "If an order is made under subsection (1) against a defendant, no action for damage for trespass lies against the defendant for the damage or loss sustained by the occupier or other person as a result of the commission of the offence."
                        }
                    ]
                },
                {
                    "@id": "d1e758",
                    "bcl:marginalnote": "Prosecution not defeated by variation in lawful fence",
                    "bcl:num": "9",
                    "bcl:text": {
                        "in:desc": "[entry onto enclosed land]",
                        "#text": "The prosecution of a person for an offence under section 2 (1) (a)  is not defeated only because"
                    },
                    "bcl:paragraph": [
                        {
                            "@id": "d1e772",
                            "bcl:num": "a",
                            "bcl:text": "the lawful fence is not of a uniform height, or"
                        },
                        {
                            "@id": "d1e781",
                            "bcl:num": "b",
                            "bcl:text": "the spaces between the bars, boards or rails of the lawful fence, or any of them, are larger than 150 mm."
                        }
                    ]
                },
                {
                    "@id": "d1e791",
                    "bcl:marginalnote": "Owners in rural area responsible for lawful fence",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d1e799",
                            "bcl:num": "1",
                            "bcl:text": "Unless otherwise agreed, the owners of adjoining land in a rural area must make, keep up and repair the lawful fence and any natural boundary between their respective land."
                        },
                        {
                            "@id": "d1e808",
                            "bcl:num": "2",
                            "bcl:text": "Each of the owners is liable to the other for 1/2 of any cost reasonably incurred for the purposes of subsection (1)."
                        },
                        {
                            "@id": "d1e817",
                            "bcl:num": "3",
                            "bcl:text": "This section is not binding on the government."
                        },
                        {
                            "@id": "d1e827",
                            "bcl:num": "4",
                            "bcl:text": "This section does not apply in",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e842",
                                    "bcl:num": "a",
                                    "bcl:text": "treaty lands, or"
                                },
                                {
                                    "@id": "d1e851",
                                    "bcl:num": "b",
                                    "bcl:text": "Nisg\u0331a'a Lands."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e838",
                    "bcl:marginalnote": "Section 5 of the Offence Act does not apply",
                    "bcl:num": "11",
                    "bcl:text": {
                        "in:desc": "[general offence to contravene legislation]",
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5  of the  does not apply to this Act or the regulations."
                    }
                },
                {
                    "@id": "d1e857",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "12",
                    "bcl:subsection": [
                        {
                            "@id": "d1e865",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:desc": "[powers to make regulations]",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41  of the ."
                            }
                        },
                        {
                            "@id": "d1e881",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may, by regulation, do one or more of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e889",
                                    "bcl:num": "a",
                                    "bcl:text": "define a lawful fence for the purposes of this Act in the area described in the regulation;"
                                },
                                {
                                    "@id": "d1e898",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96395_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Railway Act"
                                        },
                                        "#text": "define a lawful fence for the purpose of dividing the right of way, grounds or property of a railway company to which the  applies from other land, whether belonging to the railway company or not;"
                                    }
                                },
                                {
                                    "@id": "d1e911",
                                    "bcl:num": "c",
                                    "bcl:text": "define a lawful fence for the purpose of protecting any stack of hay or grain."
                                }
                            ]
                        }
                    ]
                }
            ],
            "bcl:conseqhead": {
                "bcl:text": "Revision Schedule \u2014 Amendment to Other Act",
