        "@id": "00_03050_01",
        "act:title": "Business Number Act",
        "act:chapter": "50",
        "act:yearenacted": "2003",
        "act:assentedto": "October 23, 2003",
        "act:currency": {
            "act:tlcDirPath": "1944036832/03050/tlc03050_f",
            "act:tlc": "E2tlc03050"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "business entity",
                                "#text": "means a person or organization, whether or not\n          incorporated, that provides information to a public body in respect of a business or\n          non-profit undertaking carried on or to be carried on by the person or\n          organization;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "business information",
                                "#text": "means the following information about a\n          business entity:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e45",
                                    "bcl:num": "a",
                                    "bcl:text": "the name of the entity and any operating or business names used by\n            it;"
                                },
                                {
                                    "@id": "d2e54",
                                    "bcl:num": "b",
                                    "bcl:text": "the legal structure of the entity;"
                                },
                                {
                                    "@id": "d2e63",
                                    "bcl:num": "c",
                                    "bcl:text": "the mailing and delivery address of the entity;"
                                },
                                {
                                    "@id": "d2e72",
                                    "bcl:num": "d",
                                    "bcl:text": "if the entity is a corporation,",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e81",
                                            "bcl:num": "i",
                                            "bcl:text": "the date of its incorporation,"
                                        },
                                        {
                                            "@id": "d2e90",
                                            "bcl:num": "ii",
                                            "bcl:text": "the jurisdiction under whose laws it is incorporated and its incorporation\n              number in that jurisdiction,"
                                        },
                                        {
                                            "@id": "d2e100",
                                            "bcl:num": "iii",
                                            "bcl:text": "its registration number in British Columbia if it is incorporated in a\n              jurisdiction other than British Columbia, and"
                                        },
                                        {
                                            "@id": "d2e109",
                                            "bcl:num": "iv",
                                            "bcl:text": "the names of its directors;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e118",
                                    "bcl:num": "e",
                                    "bcl:text": "if the entity is an unincorporated organization other than a partnership, the\n            name of at least one individual who alone or together with others is responsible for the\n            management of the business or affairs of the organization;"
                                },
                                {
                                    "@id": "d2e127",
                                    "bcl:num": "f",
                                    "bcl:text": "any other prescribed information;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e136",
                            "bcl:text": {
                                "in:term": "designated enactment",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e145",
                                    "bcl:num": "a",
                                    "bcl:text": "except in section 2, section 10.1, or"
                                },
                                {
                                    "@id": "d2e155",
                                    "bcl:num": "b",
                                    "bcl:text": "an enactment or a portion of an enactment designated by regulation;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e164",
                            "bcl:text": {
                                "in:term": "public body",
                                "#text": "means, except in section 10.1, a body that has\n          entered into an agreement or arrangement with the minister under section\u00a04."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e174",
                    "bcl:marginalnote": "Relationship of Act to designated enactments",
                    "bcl:num": "2",
                    "bcl:text": "If a provision of this Act is inconsistent or in conflict with a provision of a\n        designated enactment, the provision of this Act prevails unless the regulations or the\n        designated enactment expressly provide that the designated enactment, or a provision of it,\n        applies despite this Act."
                },
                {
                    "@id": "d2e186",
                    "bcl:marginalnote": "System of business numbers",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e194",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may, by regulation, establish or adopt a system\n          of business numbers for identifying business entities."
                        },
                        {
                            "@id": "d2e203",
                            "bcl:num": "2",
                            "bcl:text": "The minister may enter into an agreement with the government of Canada or an agent\n          of the government of Canada for the purpose of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e212",
                                    "bcl:num": "a",
                                    "bcl:text": "establishing or adopting a system of business numbers under subsection\n              (1), and"
                                },
                                {
                                    "@id": "d2e222",
                                    "bcl:num": "b",
                                    "bcl:text": "integrating or coordinating the system established or adopted with any system of\n            business numbers established by the government of Canada or an agent of the government\n            of Canada."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e232",
                    "bcl:marginalnote": "Public body agreements",
                    "bcl:num": "4",
                    "bcl:text": "The minister may enter into an agreement or arrangement with one or more of the\n        following bodies respecting the use by the body of the system of business numbers\n        established or adopted under section 3:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e243",
                            "bcl:num": "a",
                            "bcl:text": "a ministry of the government of British Columbia or an agent of the\n          government;"
                        },
                        {
                            "@id": "d2e252",
                            "bcl:num": "b",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96138_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Financial Administration\n              Act"
                                },
                                "#text": "a government corporation, as defined in the ;"
                            }
                        },
                        {
                            "@id": "d2e265",
                            "bcl:num": "c",
                            "bcl:text": "a municipality or regional district;"
                        },
                        {
                            "@id": "d2e274",
                            "bcl:num": "d",
                            "bcl:text": "a board, commission, association or other body designated by\n          regulation."
                        }
                    ]
                },
                {
                    "@id": "d2e284",
                    "bcl:marginalnote": "Collection of business information \u2014 form and manner",
                    "bcl:num": "5",
                    "bcl:text": [
                        "If a business entity",
                        "the public body may require the business entity to provide business information to\n        the public body in the form and manner required by that public body."
                    ],
                    "bcl:paragraph": [
                        {
                            "@id": "d2e295",
                            "bcl:num": "a",
                            "bcl:text": "provides a public body with information under a designated enactment,\n          or"
                        },
                        {
                            "@id": "d2e304",
                            "bcl:num": "b",
                            "bcl:text": "supplies or intends to supply goods or services to a public body,"
                        }
                    ]
                },
                {
                    "@id": "d2e319",
                    "bcl:marginalnote": "Disclosure of business information",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e327",
                            "bcl:num": "1",
                            "bcl:text": "If a public body receives business information from a business entity, the public\n          body, for the purposes of this Act,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e336",
                                    "bcl:num": "a",
                                    "bcl:text": "must disclose the information to the minister, and"
                                },
                                {
                                    "@id": "d2e345",
                                    "bcl:num": "b",
                                    "bcl:text": "may disclose the information to the government of Canada or an agent of the\n            government of Canada."
                                }
                            ]
                        },
                        {
                            "@id": "d2e355",
                            "bcl:num": "2",
                            "bcl:text": "If a public body has possession of business information about a business entity\n          that was created by the public body or was received from the business entity under a\n          designated enactment before the enactment was designated,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e364",
                                    "bcl:num": "a",
                                    "bcl:text": "the public body may use the information in its possession for the purposes of\n            this Act, and"
                                },
                                {
                                    "@id": "d2e373",
                                    "bcl:num": "b",
                                    "bcl:text": "subsection (1) applies to the public body in respect of that\n            information."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e383",
                    "bcl:marginalnote": "Use of business number",
                    "bcl:num": "7",
                    "bcl:text": [
                        "When a business entity",
                        "the public body may require the business entity to provide its business\n        number."
                    ],
                    "bcl:paragraph": [
                        {
                            "@id": "d2e394",
                            "bcl:num": "a",
                            "bcl:text": "provides a public body with information under a designated enactment,\n          or"
                        },
                        {
                            "@id": "d2e403",
                            "bcl:num": "b",
                            "bcl:text": "supplies or intends to supply goods or services to a public body,"
                        }
                    ]
                },
                {
                    "@id": "d2e417",
                    "bcl:marginalnote": "Information system",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e425",
                            "bcl:num": "1",
                            "bcl:text": "The minister may establish and manage an information system for the purpose\n          of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e434",
                                    "bcl:num": "a",
                                    "bcl:text": "receiving and storing business information disclosed to the minister under\n            section\u00a06,"
                                },
                                {
                                    "@id": "d2e443",
                                    "bcl:num": "b",
                                    "bcl:text": "integrating and updating business information in respect of business entities,\n            and"
                                },
                                {
                                    "@id": "d2e453",
                                    "bcl:num": "c",
                                    "bcl:text": "disclosing business information in the system in accordance with this\n            Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e462",
                            "bcl:num": "2",
                            "bcl:text": "The minister may disclose business information that is stored in the information\n          system to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e471",
                                    "bcl:num": "a",
                                    "bcl:text": "a public body, in accordance with the agreement or arrangement under section\u00a04,\n            for the purpose of",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e480",
                                            "bcl:num": "i",
                                            "bcl:text": "correcting or updating the information in the information system or in the\n              possession of the public body, or"
                                        },
                                        {
                                            "@id": "d2e489",
                                            "bcl:num": "ii",
                                            "bcl:text": "administering or enforcing a designated enactment, or"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e498",
                                    "bcl:num": "b",
                                    "bcl:text": "the government of Canada or an agent of the government of Canada, in accordance\n            with an agreement under section\u00a03."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e508",
                    "bcl:marginalnote": "Fees",
                    "bcl:num": "9",
                    "bcl:text": "The minister may require a public body to pay the minister a prescribed\n        fee."
                },
                {
                    "@id": "d2e520",
                    "bcl:marginalnote": "Delegation",
                    "bcl:num": "10",
                    "bcl:text": "The minister may delegate to any person any of the minister's powers, duties or\n        functions under this Act except the power to enter into an agreement or an arrangement under\n          section 3\n          (2) or 4."
                },
                {
                    "@id": "d2e532",
                    "bcl:marginalnote": "Collection of business information \u2014 electronic\n        identifier",
                    "bcl:num": "10.1",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96165_00",
                            "@xlink:type": "locator",
                            "in:doc": "Freedom of Information and\n            Protection of Privacy Act"
                        },
                        "#text": "If a business entity applies to the minister for an electronic identifier to be used\n        to access services provided by a public body, as defined in the , the minister may require the business\n        entity to provide business information to the minister for the purpose of authenticating the\n        identity of that business entity."
                    }
                },
                {
                    "@id": "d2e548",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act",
                        "#text": "Application of"
                    },
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e558",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96338_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Offence Act"
                                },
                                "#text": "Section\n            5 of the  does not apply to this Act\n          or the regulations."
                            }
                        },
                        {
                            "@id": "d2e570",
                            "bcl:num": "2",
                            "bcl:text": "A person who supplies false or misleading business information to a public body\n          commits an offence and is liable",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e579",
                                    "bcl:num": "a",
                                    "bcl:text": "in the case of a corporation, to a fine of not more than $5\u00a0000, and"
                                },
                                {
                                    "@id": "d2e589",
                                    "bcl:num": "b",
                                    "bcl:text": "in the case of an individual, to a fine of not more than $2\u00a0000."
                                }
                            ]
                        },
                        {
                            "@id": "d2e598",
                            "bcl:num": "3",
                            "bcl:text": "A person does not commit an offence under subsection (2) if, at the time the\n          information was supplied, the person did not know that it was false or misleading and,\n          with the exercise of reasonable diligence, could not have known that it was false or\n          misleading."
                        }
                    ]
                },
                {
                    "@id": "d2e608",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "12",
                    "bcl:subsection": [
                        {
                            "@id": "d2e616",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041\n          of the ."
                            }
                        },
                        {
                            "@id": "d2e628",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may\n          make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e637",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribing information for the purposes of the definition of \"business\n            information\";"
                                },
                                {
                                    "@id": "d2e647",
                                    "bcl:num": "b",
                                    "bcl:text": "designating enactments or portions of enactments for the purposes of this\n            Act;"
                                },
                                {
                                    "@id": "d2e656",
                                    "bcl:num": "c",
                                    "bcl:text": "prescribing designated enactments, or provisions of them, that apply despite\n            this Act;"
                                },
                                {
                                    "@id": "d2e665",
                                    "bcl:num": "d",
                                    "bcl:text": "designating boards, commissions, associations or other bodies as public\n            bodies;"
                                },
                                {
                                    "@id": "d2e674",
                                    "bcl:num": "e",
                                    "bcl:text": "prescribing fees payable to the minister."
                                }
                            ]
                        },
                        {
                            "@id": "d2e683",
                            "bcl:num": "3",
                            "bcl:text": "In making regulations under this Act, the Lieutenant Governor in Council\n          may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e692",
                                    "bcl:num": "a",
                                    "bcl:text": "establish different classes of public bodies, business entities or designated\n            enactments, and"
                                },
                                {
                                    "@id": "d2e702",
                                    "bcl:num": "b",
                                    "bcl:text": "make different regulations for different public bodies, business entities or\n            designated enactments or for different classes of public bodies, business entities or\n            designated enactments."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e814",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "17",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in\n        Council."
                }
            ],
