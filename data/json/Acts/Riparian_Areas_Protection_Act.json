        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e25",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "local government",
                        "#text": "In this Act,  means"
                    },
                    "bcl:paragraph": [
                        {
                            "@id": "d0e42",
                            "bcl:num": "a",
                            "bcl:text": "the council of a municipality,"
                        },
                        {
                            "@id": "d0e51",
                            "bcl:num": "b",
                            "bcl:text": "the board of a regional district, and"
                        },
                        {
                            "@id": "d0e60",
                            "bcl:num": "c",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96239_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Islands Trust Act"
                                },
                                "#text": "a local trust committee as defined in section 1 of the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e162",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "2-4",
                    "bcl:text": "[Repealed 2014-15-163.]"
                },
