{
    "act:act": {
        "@xmlns:act": "http://www.gov.bc.ca/2013/legislation/act",
        "@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance",
        "@xmlns:bcl": "http://www.gov.bc.ca/2013/bclegislation",
        "@xmlns:xlink": "http://www.w3.org/1999/xlink",
        "@xmlns:in": "http://www.qp.gov.bc.ca/2013/inline",
        "@xmlns:fun": "http://www.bclaws.ca/xslt/functions",
        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96134_01",
        "act:title": "Farming and Fishing Industries Development Act",
        "act:chapter": "134",
        "act:yearenacted": "1996",
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "aquatic plants",
                                "#text": "includes any parts, products or by-products of these plants;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "commodity",
                                "#text": "means a product derived from plants or animals, including parts, products or by-products, and fish or aquatic plants, that are raised or gathered for profit;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "council",
                                "#text": "means a council established under section\u00a02;"
                            }
                        },
                        {
                            "@id": "d2e54",
                            "bcl:text": {
                                "in:term": "fish",
                                "#text": "means an aquatic animal, including aquatic invertebrates, and any parts, products or by-products of such an animal;"
                            }
                        },
                        {
                            "@id": "d2e63",
                            "bcl:text": {
                                "in:term": "fund",
                                "#text": "means a fund established under section\u00a02;"
                            }
                        },
                        {
                            "@id": "d2e72",
                            "bcl:text": {
                                "in:term": "producer",
                                "#text": "includes a gatherer of plants or animals."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e82",
                    "bcl:marginalnote": "Plan, council and fund",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e90",
                            "bcl:num": "1",
                            "bcl:text": "Before the minister may establish a fund under this Act to promote the interests of all producers of a commodity, producers of that commodity must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e99",
                                    "bcl:num": "a",
                                    "bcl:text": "obtain the minister's approval to a plan for",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e108",
                                            "bcl:num": "i",
                                            "bcl:text": "informing the producers about",
                                            "bcl:clause": [
                                                {
                                                    "@id": "d2e118",
                                                    "bcl:num": "A",
                                                    "bcl:text": "the proposed fund, levy and council,"
                                                },
                                                {
                                                    "@id": "d2e127",
                                                    "bcl:num": "B",
                                                    "bcl:text": "whether there will be any provision for refunding all or part of the levy, and"
                                                },
                                                {
                                                    "@id": "d2e136",
                                                    "bcl:num": "C",
                                                    "bcl:text": "any other related matters that the minister requires, and"
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d2e145",
                                            "bcl:num": "ii",
                                            "bcl:text": "determining whether the producers of the commodity support the proposals, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e154",
                                    "bcl:num": "b",
                                    "bcl:text": "in accordance with the approved plan, satisfy the minister that the producers of the commodity support the proposals in the plan."
                                }
                            ]
                        },
                        {
                            "@id": "d2e163",
                            "bcl:num": "2",
                            "bcl:text": "The minister may require different levels of support for",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e173",
                                    "bcl:num": "a",
                                    "bcl:text": "different plans, or"
                                },
                                {
                                    "@id": "d2e182",
                                    "bcl:num": "b",
                                    "bcl:text": "different proposals in the same plan."
                                }
                            ]
                        },
                        {
                            "@id": "d2e191",
                            "bcl:num": "3",
                            "bcl:text": "The plan must meet the minimum requirements established by regulation respecting the content of the proposals and the method for informing producers about the proposals and for determining whether they support the proposals."
                        },
                        {
                            "@id": "d2e200",
                            "bcl:num": "4",
                            "bcl:text": "Subject to subsection (5), on being satisfied that there is producer support, the minister may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e209",
                                    "bcl:num": "a",
                                    "bcl:text": "appoint a council composed of",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e218",
                                            "bcl:num": "i",
                                            "bcl:text": "one or more representatives of the government, at least one of whom must be a representative of the ministry which administers this Act,"
                                        },
                                        {
                                            "@id": "d2e228",
                                            "bcl:num": "ii",
                                            "bcl:text": "producers of the commodity in sufficient numbers to constitute a majority of the council, and"
                                        },
                                        {
                                            "@id": "d2e237",
                                            "bcl:num": "iii",
                                            "bcl:text": "one or more persons who the minister considers represent people involved in",
                                            "bcl:clause": [
                                                {
                                                    "@id": "d2e246",
                                                    "bcl:num": "A",
                                                    "bcl:text": "the supply of goods or services to the producers, or"
                                                },
                                                {
                                                    "@id": "d2e255",
                                                    "bcl:num": "B",
                                                    "bcl:text": "the processing, distribution or consumption of the commodity, and"
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e264",
                                    "bcl:num": "b",
                                    "bcl:text": "establish and name a fund for that commodity."
                                }
                            ]
                        },
                        {
                            "@id": "d2e273",
                            "bcl:num": "5",
                            "bcl:text": [
                                "If a plan",
                                "the minister must comply with the plan's proposals about the appointment or election of producer members to the council."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e283",
                                    "bcl:num": "a",
                                    "bcl:text": "is supported by the producers,"
                                },
                                {
                                    "@id": "d2e292",
                                    "bcl:num": "b",
                                    "bcl:text": "is approved by the minister, and"
                                },
                                {
                                    "@id": "d2e301",
                                    "bcl:num": "c",
                                    "bcl:text": "establishes a method by which the producer members of a council are to be chosen by election, by appointment or partly by election and partly by appointment,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e313",
                            "bcl:num": "6",
                            "bcl:text": "If, in relation to a commodity, a council and fund are established under this section,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e322",
                                    "bcl:num": "a",
                                    "bcl:text": "the council is responsible to the minister for the administration of the fund, and"
                                },
                                {
                                    "@id": "d2e332",
                                    "bcl:num": "b",
                                    "bcl:text": "the management, administration and control of the fund are vested in the council."
                                }
                            ]
                        },
                        {
                            "@id": "d2e341",
                            "bcl:num": "7",
                            "bcl:text": "If a council exists on July 24, 1992,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e350",
                                    "bcl:num": "a",
                                    "bcl:text": "the council, the fund it administers and the regulation that relates to the council and the fund are continued,"
                                },
                                {
                                    "@id": "d2e359",
                                    "bcl:num": "b",
                                    "bcl:text": "section\u00a05 applies as if the Lieutenant Governor in Council has prescribed a regulation that allows a refund,"
                                },
                                {
                                    "@id": "d2e368",
                                    "bcl:num": "c",
                                    "bcl:text": "a plan is not required in respect of the commodity that relates to the council and subsection (1) does not apply to the producers of that commodity, and"
                                },
                                {
                                    "@id": "d2e377",
                                    "bcl:num": "d",
                                    "bcl:text": "the council may present to the minister a plan for determining producer support for a levy that is not refundable or for any proposal that producers may present to the minister under subsection (1), and this Act applies as if the plan were presented by the producers of the commodity."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e387",
                    "bcl:marginalnote": "Powers of a council",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e395",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "A council is a corporation and, subject to subsections (2) and (3), has all the powers of a corporation under section\u00a017 of the ."
                            }
                        },
                        {
                            "@id": "d2e404",
                            "bcl:num": "2",
                            "bcl:text": "The Lieutenant Governor in Council may make regulations",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e413",
                                    "bcl:num": "a",
                                    "bcl:text": "restricting the powers of a council under subsection (1), and"
                                },
                                {
                                    "@id": "d2e423",
                                    "bcl:num": "b",
                                    "bcl:text": "authorizing a council to exercise powers in addition to the powers under subsection (1)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e432",
                            "bcl:num": "3",
                            "bcl:text": "A council may not enter into an agreement to co-operate with or act as agent of any entity established by an Act or regulation of Canada or of any province or territory, without the approval of the minister."
                        }
                    ]
                },
                {
                    "@id": "d2e442",
                    "bcl:marginalnote": "Revenue and expenditure",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e450",
                            "bcl:num": "1",
                            "bcl:text": "Subject to the approval of the Lieutenant Governor in Council, a council must establish a levy or class of levy that at the time and in the manner specified in the regulations must be paid by producers or a class of producers of the commodity for which the fund was established."
                        },
                        {
                            "@id": "d2e459",
                            "bcl:num": "2",
                            "bcl:text": "The council may pay out of the fund the amounts it considers appropriate to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e468",
                                    "bcl:num": "a",
                                    "bcl:text": "pay an expense approved by the minister as being necessary for or incidental to the administration of this Act in relation to the fund, or"
                                },
                                {
                                    "@id": "d2e478",
                                    "bcl:num": "b",
                                    "bcl:text": "pay to a person, including a person representing the producers of a commodity, a sum to",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e487",
                                            "bcl:num": "i",
                                            "bcl:text": "benefit and promote the industry in British Columbia in respect of a commodity, or"
                                        },
                                        {
                                            "@id": "d2e496",
                                            "bcl:num": "ii",
                                            "bcl:text": "conduct or support research or educational programs in British Columbia in respect of the development and promotion of a commodity."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e505",
                            "bcl:num": "3",
                            "bcl:text": "The Lieutenant Governor in Council, by regulation, may prohibit a council from making payment for purposes specified in the regulations."
                        }
                    ]
                },
                {
                    "@id": "d2e515",
                    "bcl:marginalnote": "Refund of levy",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e523",
                            "bcl:num": "1",
                            "bcl:text": "If the Lieutenant Governor in Council has prescribed a regulation that allows a refund of a levy or class of levy, a producer who has paid to a council a levy established under section 4 (1) may apply to the council to have the levy refunded",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e532",
                                    "bcl:num": "a",
                                    "bcl:text": "as prescribed by the minister, and"
                                },
                                {
                                    "@id": "d2e541",
                                    "bcl:num": "b",
                                    "bcl:text": "not later than January 31 in the year following the year that the producer paid the levy."
                                }
                            ]
                        },
                        {
                            "@id": "d2e551",
                            "bcl:num": "2",
                            "bcl:text": "On receiving an application in compliance with subsection (1), the council must refund the levy to the applicant."
                        }
                    ]
                },
                {
                    "@id": "d2e562",
                    "bcl:marginalnote": "Audits",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e570",
                            "bcl:num": "1",
                            "bcl:text": "For the purpose of ensuring compliance with this Act and the regulations, any person authorized in writing by the council may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e579",
                                    "bcl:num": "a",
                                    "bcl:text": "at any reasonable time, enter the business premises of a person required to collect and remit levies, and"
                                },
                                {
                                    "@id": "d2e588",
                                    "bcl:num": "b",
                                    "bcl:text": "inspect records relating to that requirement."
                                }
                            ]
                        },
                        {
                            "@id": "d2e598",
                            "bcl:num": "2",
                            "bcl:text": "A person required to collect and remit levies under this Act must make the records referred to in subsection (1) available for inspection."
                        }
                    ]
                },
                {
                    "@id": "d2e608",
                    "bcl:marginalnote": "Annual report",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e616",
                            "bcl:num": "1",
                            "bcl:text": "Within 3 months of the end of a council's financial year, each council must make to the minister a report of its business and affairs during that year."
                        },
                        {
                            "@id": "d2e625",
                            "bcl:num": "2",
                            "bcl:text": "A report under subsection (1) must contain",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e634",
                                    "bcl:num": "a",
                                    "bcl:text": "a balance sheet,"
                                },
                                {
                                    "@id": "d2e644",
                                    "bcl:num": "b",
                                    "bcl:text": "a statement of revenue and expenditures, and"
                                },
                                {
                                    "@id": "d2e653",
                                    "bcl:num": "c",
                                    "bcl:text": "other particulars the minister requires."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e663",
                    "bcl:marginalnote": "Annual general meeting",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e671",
                            "bcl:num": "1",
                            "bcl:text": "A council must hold an annual general meeting in accordance with the regulations."
                        },
                        {
                            "@id": "d2e680",
                            "bcl:num": "2",
                            "bcl:text": "A person who is required to pay or collect the levy may attend the annual general meeting, but only a person who is required to pay the levy may vote unless a regulation provides otherwise."
                        }
                    ]
                },
                {
                    "@id": "d2e690",
                    "bcl:marginalnote": "Offence and penalty",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e698",
                            "bcl:num": "1",
                            "bcl:text": "A person who fails to comply with or contravenes this Act commits an offence."
                        },
                        {
                            "@id": "d2e707",
                            "bcl:num": "2",
                            "bcl:text": "A person who commits an offence is liable on conviction",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e716",
                                    "bcl:num": "a",
                                    "bcl:text": "to a fine of not more than $500, if the person is a corporation, and"
                                },
                                {
                                    "@id": "d2e726",
                                    "bcl:num": "b",
                                    "bcl:text": "to a fine of not more than $200, if the person is an individual."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e736",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e744",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e756",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e765",
                                    "bcl:num": "a",
                                    "bcl:text": "establishing the time and manner for payment of a levy established under section\u00a04\u00a0(1);"
                                },
                                {
                                    "@id": "d2e775",
                                    "bcl:num": "b",
                                    "bcl:text": "requiring one or more of the following persons to collect the levy established under section 4 (1) in the manner and within the time prescribed and to remit the amount collected, less any prescribed commission, to a prescribed person in the manner and within the time prescribed:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e784",
                                            "bcl:num": "i",
                                            "bcl:text": "a producer of the commodity;"
                                        },
                                        {
                                            "@id": "d2e793",
                                            "bcl:num": "ii",
                                            "bcl:text": "a distributor of the commodity;"
                                        },
                                        {
                                            "@id": "d2e802",
                                            "bcl:num": "iii",
                                            "bcl:text": "the first person who purchases the commodity from the producer;"
                                        },
                                        {
                                            "@id": "d2e811",
                                            "bcl:num": "iv",
                                            "bcl:text": "a person who supplies goods or services to the producer;"
                                        },
                                        {
                                            "@id": "d2e820",
                                            "bcl:num": "v",
                                            "bcl:text": "any other person involved in the production, processing, distribution or retailing of the commodity;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e830",
                                    "bcl:num": "c",
                                    "bcl:text": "authorizing a council to charge interest, at a rate determined by the council from time to time, on an amount that has not been remitted within the time prescribed under paragraph (b);"
                                },
                                {
                                    "@id": "d2e839",
                                    "bcl:num": "d",
                                    "bcl:text": "respecting section 4 (2);"
                                },
                                {
                                    "@id": "d2e848",
                                    "bcl:num": "e",
                                    "bcl:text": "exempting a class of producers from payment of a levy, a class of levy or all levies;"
                                },
                                {
                                    "@id": "d2e857",
                                    "bcl:num": "f",
                                    "bcl:text": "providing for refunds of levies;"
                                },
                                {
                                    "@id": "d2e866",
                                    "bcl:num": "g",
                                    "bcl:text": "establishing practices and procedures for a council;"
                                },
                                {
                                    "@id": "d2e875",
                                    "bcl:num": "h",
                                    "bcl:text": "requiring a council to report particulars of its operations in a manner and at times specified by the regulations;"
                                },
                                {
                                    "@id": "d2e885",
                                    "bcl:num": "i",
                                    "bcl:text": "respecting the minimum requirements referred to in section 2 (3);"
                                },
                                {
                                    "@id": "d2e894",
                                    "bcl:num": "j",
                                    "bcl:text": "respecting the calling of annual general meetings by a council and the matters required to be dealt with and the conduct of business and votes at those meetings;"
                                },
                                {
                                    "@id": "d2e903",
                                    "bcl:num": "k",
                                    "bcl:text": "respecting business plans and operational guidelines for councils;"
                                },
                                {
                                    "@id": "d2e912",
                                    "bcl:num": "l",
                                    "bcl:text": "respecting the election of council members;"
                                },
                                {
                                    "@id": "d2e921",
                                    "bcl:num": "m",
                                    "bcl:text": "respecting procedures that can be used by persons who are entitled to vote at annual general meetings to dissolve a council and distribute the fund and the council's assets;"
                                },
                                {
                                    "@id": "d2e930",
                                    "bcl:num": "n",
                                    "bcl:text": "respecting a plan, including implementing a proposal in a plan."
                                }
                            ]
                        },
                        {
                            "@id": "d2e940",
                            "bcl:num": "3",
                            "bcl:text": "A regulation made under subsection (1) or (2) may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e949",
                                    "bcl:num": "a",
                                    "bcl:text": "make different provisions for different commodities, councils, classes of producers or persons who may be subject to a levy,"
                                },
                                {
                                    "@id": "d2e958",
                                    "bcl:num": "b",
                                    "bcl:text": "authorize a council or person to exercise a discretionary power, and"
                                },
                                {
                                    "@id": "d2e967",
                                    "bcl:num": "c",
                                    "bcl:text": "delegate a matter to a council or person."
                                }
                            ]
                        },
                        {
                            "@id": "d2e976",
                            "bcl:num": "4",
                            "bcl:text": "The Lieutenant Governor in Council may make regulations",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e985",
                                    "bcl:num": "a",
                                    "bcl:text": "authorizing a council to exercise a power or perform a duty conferred on it under an Act or regulation of Canada, and"
                                },
                                {
                                    "@id": "d2e995",
                                    "bcl:num": "b",
                                    "bcl:text": "granting to an entity established by an Act or regulation of Canada some or all of the powers and duties that a council has under this Act or that a council may be given by a regulation made under this Act."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}