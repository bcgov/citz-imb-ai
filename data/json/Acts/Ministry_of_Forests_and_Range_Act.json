        "@xmlns:fun": "http://www.bclaws.ca/xslt/functions",
        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96300_01",
        "act:title": "Ministry of Forests and Range Act",
        "act:chapter": "300",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1325524918/96300/tlc96300_f",
            "act:tlc": "E3tlc96300"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Ministry continued",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e23",
                            "bcl:num": "1",
                            "bcl:text": "The ministry of the public service of British Columbia called the Ministry of Forests and Range is continued."
                        },
                        {
                            "@id": "d2e32",
                            "bcl:num": "2",
                            "bcl:text": "The minister is to preside over and be responsible to the Lieutenant Governor in Council for the direction of the\n          ministry."
                        },
                        {
                            "@id": "d2e41",
                            "bcl:num": "3",
                            "bcl:text": "The minister",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e51",
                                    "bcl:num": "a",
                                    "bcl:text": "is to continue a forest service, and"
                                },
                                {
                                    "@id": "d2e60",
                                    "bcl:num": "b",
                                    "bcl:text": "may establish other branches or divisions as the minister considers advisable."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e70",
                    "bcl:marginalnote": "Deputy and employees",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e78",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Act"
                                },
                                "#text": "The following persons may be appointed under the :"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e90",
                                    "bcl:num": "a",
                                    "bcl:text": "a deputy minister;"
                                },
                                {
                                    "@id": "d2e99",
                                    "bcl:num": "b",
                                    "bcl:text": "a chief forester;"
                                },
                                {
                                    "@id": "d2e109",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96157_00",
                                                "@xlink:type": "locator",
                                                "in:doc": "Forest Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/04071_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Range Act"
                                            }
                                        ],
                                        "#text": "a regional manager for a forest region established under the  and a range district established under the\n            ;"
                                    }
                                },
                                {
                                    "@id": "d2e124",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96157_00",
                                                "@xlink:type": "locator",
                                                "in:doc": "Forest Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/04071_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Range Act"
                                            }
                                        ],
                                        "#text": "a district manager for a forest district established under the  and the part of a range district established\n          under the  that covers the same area as the forest district;"
                                    }
                                },
                                {
                                    "@id": "d2e139",
                                    "bcl:num": "d.1",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96157_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Forest Act"
                                        },
                                        "#text": "a timber sales manager for a BC timber sales business area established under the , or if no BC timber sales\n          business area is established, for the Province;"
                                    }
                                },
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "e",
                                    "bcl:text": "other employees required to carry out the functions of the ministry."
                                }
                            ]
                        },
                        {
                            "@id": "d2e160",
                            "bcl:num": "2",
                            "bcl:text": "The minister",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e169",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96385_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Service Act"
                                        },
                                        "#text": "may, despite the , engage and retain consultants, experts or specialists and fix their\n          remuneration,"
                                    }
                                },
                                {
                                    "@id": "d2e182",
                                    "bcl:num": "b",
                                    "bcl:text": "must establish a forest research council and one or more logging contractor clause advisory committees, and"
                                },
                                {
                                    "@id": "d2e191",
                                    "bcl:num": "c",
                                    "bcl:text": "may establish other committees or councils to advise the minister with respect to any matter included in the minister's duties, powers\n          and functions."
                                }
                            ]
                        },
                        {
                            "@id": "d2e200",
                            "bcl:num": "3",
                            "bcl:text": "A person serving on a committee or council established under subsection (2) is entitled to be paid necessary and reasonable travelling\n          and living expenses while performing the person's duties and in addition may be paid remuneration as the minister determines."
                        },
                        {
                            "@id": "d2e209",
                            "bcl:num": "4",
                            "bcl:text": "The minister may designate one or more employees of the ministry to act temporarily in the place of the chief forester, a timber sales manager, a regional manager or a district manager."
                        },
                        {
                            "@id": "d2e218",
                            "bcl:num": "5",
                            "bcl:text": "[Repealed 2011-13-106.]"
                        },
                        {
                            "@id": "d2e227",
                            "bcl:num": "6",
                            "bcl:text": "The timber sales manager may designate one or more employees of the ministry to act temporarily in his or her place as a timber sales\n          manager."
                        }
                    ]
                },
                {
                    "@id": "d2e237",
                    "bcl:marginalnote": "Minister's duties",
                    "bcl:num": "3",
                    "bcl:text": "The duties, powers and functions of the minister include all matters relating to forest and range resources in British Columbia that are not,\n        by law or by order of the Lieutenant Governor in Council, assigned to another minister, ministry, branch or agency of the government."
                },
                {
                    "@id": "d2e249",
                    "bcl:marginalnote": "Purposes and functions of ministry",
                    "bcl:num": "4",
                    "bcl:text": "The purposes and functions of the ministry are, under the direction of the minister, to do the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e260",
                            "bcl:num": "a",
                            "bcl:text": "encourage maximum productivity of the forest and range resources in British Columbia;"
                        },
                        {
                            "@id": "d2e269",
                            "bcl:num": "b",
                            "bcl:text": "manage, protect and conserve the forest and range resources of the government, having regard to the immediate and long term economic and\n          social benefits they may confer on British Columbia;"
                        },
                        {
                            "@id": "d2e279",
                            "bcl:num": "c",
                            "bcl:text": "plan the use of the forest and range resources of the government, so that the production of timber and forage, the harvesting of timber,\n          the grazing of livestock and the realization of fisheries, wildlife, water, outdoor recreation and other natural resource values are coordinated and\n          integrated, in consultation and cooperation with other ministries and agencies of the government and with the private sector;"
                        },
                        {
                            "@id": "d2e288",
                            "bcl:num": "d",
                            "bcl:text": [
                                "encourage a vigorous, efficient and world competitive",
                                "in British Columbia;"
                            ],
                            "bcl:subparagraph": [
                                {
                                    "@id": "d2e297",
                                    "bcl:num": "i",
                                    "bcl:text": "timber processing industry, and"
                                },
                                {
                                    "@id": "d2e306",
                                    "bcl:num": "ii",
                                    "bcl:text": "ranching sector"
                                }
                            ]
                        },
                        {
                            "@id": "d2e318",
                            "bcl:num": "e",
                            "bcl:text": "assert the financial interest of the government in its forest and range resources in a systematic and equitable manner."
                        }
                    ]
                },
                {
                    "@id": "d2e328",
                    "bcl:marginalnote": "Acquisition and disposition of land",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e336",
                            "bcl:num": "1",
                            "bcl:text": "To carry out the duties, powers and functions of the minister, on behalf of the government, the minister may acquire\n          land."
                        },
                        {
                            "@id": "d2e345",
                            "bcl:num": "2",
                            "bcl:text": "The minister may dispose of an interest in land, other than the fee simple, and may dispose of the government's rights under a licence\n          to occupy or permit to use land if",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e354",
                                    "bcl:num": "a",
                                    "bcl:text": "the interest or rights, as the case may be, have previously been acquired by the minister,"
                                },
                                {
                                    "@id": "d2e364",
                                    "bcl:num": "b",
                                    "bcl:text": "the land has located on it, or was acquired with the intention of locating on it, improvements, and"
                                },
                                {
                                    "@id": "d2e373",
                                    "bcl:num": "c",
                                    "bcl:text": "the disposition of the interest or rights, as the case may be, is necessary for the management of land remaining under the management of\n          the minister."
                                }
                            ]
                        },
                        {
                            "@id": "d2e382",
                            "bcl:num": "3",
                            "bcl:text": "Notice of an acquisition of land or disposition of Crown land under this section must be given to the Surveyor General within 30\u00a0days\n          after completion."
                        }
                    ]
                },
                {
                    "@id": "d2e393",
                    "bcl:marginalnote": "Agreements and grants",
                    "bcl:num": "6",
                    "bcl:text": "The minister may",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e404",
                            "bcl:num": "a",
                            "bcl:text": "enter into an agreement or arrangement with any person or province or with Canada relating to a matter included in the minister's duties,\n          powers and functions, and"
                        },
                        {
                            "@id": "d2e413",
                            "bcl:num": "b",
                            "bcl:text": "grant money to organizations engaged in forest research or education."
                        }
                    ]
                },
                {
                    "@id": "d1e379",
                    "bcl:marginalnote": "Minister may publish prescribed information\n        or documents",
                    "bcl:num": "6.1",
                    "bcl:text": {
                        "in:desc": "[disclosure harmful to personal privacy]",
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96165_00",
                            "@xlink:type": "locator",
                            "in:doc": "Freedom of Information and Protection of Privacy Act"
                        },
                        "#text": "Without limiting any other power the minister may have to disclose information, the minister may, in accordance with the regulations, publish online or by other means any prescribed information or documents or any prescribed classes of information or documents relating to the administration of a prescribed enactment for which the minister is responsible, other than personal information that, if disclosed, would constitute an unreasonable invasion of personal privacy as described in section 22\u00a0(2) to\u00a0(4)  of the ."
                    }
                },
                {
                    "@id": "d2e423",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "7-10",
                    "bcl:text": "[Repealed 2003-32-38.]"
                },
                {
                    "@id": "d2e435",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d1e483",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d1e500",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e508",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribing information or documents or classes of information or documents that may be published under section\u00a06.1;"
                                },
                                {
                                    "@id": "d1e517",
                                    "bcl:num": "b",
                                    "bcl:text": "respecting the publication of information or documents or classes of information or documents under section\u00a06.1, including prescribing the criteria to be applied in determining whether to publish information or documents or classes of information or documents and the manner of publication;"
                                },
                                {
                                    "@id": "d1e526",
                                    "bcl:num": "c",
                                    "bcl:text": "prescribing enactments for the purposes of section\u00a06.1."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}