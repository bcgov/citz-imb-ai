        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96471_01",
        "act:title": "University Foundations Act",
        "act:chapter": "471",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "7900609/96471/tlc96471_f",
            "act:tlc": "E3tlc96471"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e32",
                            "bcl:text": {
                                "in:term": "board",
                                "#text": "means the board of a foundation;"
                            }
                        },
                        {
                            "@id": "d2e41",
                            "bcl:text": {
                                "in:term": "foundation",
                                "#text": "means a foundation listed in section 2\n          (1)."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e51",
                    "bcl:marginalnote": "Foundations continued",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e59",
                            "bcl:num": "1",
                            "bcl:text": "The following foundations are continued as corporations:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e68",
                                    "bcl:num": "a",
                                    "bcl:text": "The University of British Columbia Foundation;"
                                },
                                {
                                    "@id": "d2e77",
                                    "bcl:num": "b",
                                    "bcl:text": "Simon Fraser University Foundation;"
                                },
                                {
                                    "@id": "d2e87",
                                    "bcl:num": "c",
                                    "bcl:text": "Foundation for the University of Victoria;"
                                },
                                {
                                    "@id": "d2e96",
                                    "bcl:num": "d",
                                    "bcl:text": "University of Northern British Columbia Foundation;"
                                },
                                {
                                    "@id": "d2e105",
                                    "bcl:num": "e",
                                    "bcl:text": "Royal Roads University Foundation."
                                }
                            ]
                        },
                        {
                            "@id": "d2e114",
                            "bcl:num": "2",
                            "bcl:text": "A foundation referred to in subsection (1) consists of a board of 5 members\n          appointed by the board of governors of the relevant university."
                        },
                        {
                            "@id": "d2e123",
                            "bcl:num": "3",
                            "bcl:text": "The term of office of a member appointed under subsection (2) is 3\n          years."
                        },
                        {
                            "@id": "d2e132",
                            "bcl:num": "4",
                            "bcl:text": "A person may be reappointed but must not be a member for more than 6 consecutive\n          years."
                        },
                        {
                            "@id": "d2e142",
                            "bcl:num": "5",
                            "bcl:text": "Members serve without remuneration other than the payment of expenses incurred in\n          discharging their duties under this Act."
                        },
                        {
                            "@id": "d2e151",
                            "bcl:num": "6",
                            "bcl:text": "[Repealed 2003-48-37.]"
                        },
                        {
                            "@id": "d2e160",
                            "bcl:num": "7",
                            "bcl:text": "The board of governors of the relevant university must designate as the chair one\n          of the members of the board of the foundation."
                        },
                        {
                            "@id": "d2e169",
                            "bcl:num": "8",
                            "bcl:text": "A vacancy in the membership of a board does not impair the power of the remaining\n          members to act."
                        },
                        {
                            "@id": "d2e178",
                            "bcl:num": "9",
                            "bcl:text": "A board may, by bylaw,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e187",
                                    "bcl:num": "a",
                                    "bcl:text": "determine its own procedure,"
                                },
                                {
                                    "@id": "d2e197",
                                    "bcl:num": "b",
                                    "bcl:text": "provide for the regulation and conduct of its meetings, and"
                                },
                                {
                                    "@id": "d2e206",
                                    "bcl:num": "c",
                                    "bcl:text": "elect an acting chair in the absence of the chair."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e216",
                    "bcl:marginalnote": "Foundations are agents of the government",
                    "bcl:num": "3",
                    "bcl:text": "Each foundation is for all purposes an agent of the government."
                },
                {
                    "@id": "d2e228",
                    "bcl:marginalnote": "Capital of foundations",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e236",
                            "bcl:num": "1",
                            "bcl:text": "The capital of each foundation is one share with a par value of $100."
                        },
                        {
                            "@id": "d2e245",
                            "bcl:num": "2",
                            "bcl:text": "The share in each foundation must be issued to and registered in the name of the\n          Minister of Finance and must be held by that minister on behalf of the\n          government."
                        }
                    ]
                },
                {
                    "@id": "d2e255",
                    "bcl:marginalnote": "Purposes and powers",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e263",
                            "bcl:num": "1",
                            "bcl:text": "The purposes of each foundation are as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e272",
                                    "bcl:num": "a",
                                    "bcl:text": "to develop, foster and encourage public knowledge and awareness of the relevant\n            university and the benefits to the people of British Columbia in connection with that\n            university;"
                                },
                                {
                                    "@id": "d2e281",
                                    "bcl:num": "b",
                                    "bcl:text": "to encourage, facilitate and carry out programs and activities that will\n            directly or indirectly increase the financial support of, or confer a benefit on, the\n            foundation for support of the relevant university and programs in which that university\n            is involved;"
                                },
                                {
                                    "@id": "d2e291",
                                    "bcl:num": "c",
                                    "bcl:text": "to receive, manage and invest funds and property of every nature and kind from\n            any source for the establishment, operation and maintenance of the foundation and to\n            further the purposes of the foundation."
                                }
                            ]
                        },
                        {
                            "@id": "d2e300",
                            "bcl:num": "2",
                            "bcl:text": "Each foundation has the powers and capacity of a natural person of full\n          capacity."
                        },
                        {
                            "@id": "d2e309",
                            "bcl:num": "3",
                            "bcl:text": "Some or all of the accumulated capital of a university that is available for\n          investment, whether it belongs outright to the university or is held in trust, may be\n          transferred to the relevant foundation as the board of governors of that university may\n          direct and, on being transferred, vests in that foundation subject to conditions the board\n          of governors may specify at the time of transfer."
                        },
                        {
                            "@id": "d2e318",
                            "bcl:num": "4",
                            "bcl:text": "If capital that is transferred under subsection (3) arose from a gift,\n          devise or bequest to the university, the foundation is subject to any conditions in the\n          gift, devise or bequest to the same extent as the university."
                        },
                        {
                            "@id": "d2e327",
                            "bcl:num": "5",
                            "bcl:text": "A foundation to which capital has been transferred under subsection (3)\n          may transfer the capital back to the university from which it was received."
                        }
                    ]
                },
                {
                    "@id": "d2e338",
                    "bcl:marginalnote": "Bylaws",
                    "bcl:num": "6",
                    "bcl:text": "A board may establish the bylaws of the foundation."
                },
                {
                    "@id": "d2e350",
                    "bcl:marginalnote": "Borrowing",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e358",
                            "bcl:num": "1",
                            "bcl:text": "On behalf of and in the name of the foundation, a board may raise or secure the\n          payment or repayment of money in the manner it decides."
                        },
                        {
                            "@id": "d2e367",
                            "bcl:num": "2",
                            "bcl:text": "In particular but without limiting subsection (1), a board may raise\n          or secure the payment or repayment of money by the issue of debentures."
                        }
                    ]
                },
                {
                    "@id": "d2e377",
                    "bcl:marginalnote": "Investment powers",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e385",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96464_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Trustee Act"
                                },
                                "#text": "Subject to a contrary intent expressed in a gift, devise, bequest or trust,\n          section\u00a015 of the  does not apply to\n          investments made by each foundation, and a board may make investments that a prudent\n          person would make."
                            }
                        },
                        {
                            "@id": "d2e397",
                            "bcl:num": "2",
                            "bcl:text": "If money is transferred to a foundation by a university, subsection (1)\n          applies to the investment of that money."
                        }
                    ]
                },
                {
                    "@id": "d2e407",
                    "bcl:marginalnote": "Liability of members",
                    "bcl:num": "9",
                    "bcl:text": "A member of a foundation is not personally liable for loss or damage suffered by a\n        person as a result of anything done in good faith in the exercise of a power given by this\n        Act."
                },
                {
                    "@id": "d2e419",
                    "bcl:marginalnote": "Investment counsel",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e427",
                            "bcl:num": "1",
                            "bcl:text": "A foundation may employ the services of investment counsel and set their\n          remuneration."
                        },
                        {
                            "@id": "d2e436",
                            "bcl:num": "2",
                            "bcl:text": "Investments or reinvestments must be made under the direction of the board or by\n          the investment counsel subject to the approval of the board."
                        }
                    ]
                },
                {
                    "@id": "d2e446",
                    "bcl:marginalnote": "Distribution of funds and property",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e454",
                            "bcl:num": "1",
                            "bcl:text": "A board may determine by resolution the manner in which the funds and property\n          available in each year are to be used and distributed for the benefit of the university\n          and its programs, faculty and students."
                        },
                        {
                            "@id": "d2e463",
                            "bcl:num": "2",
                            "bcl:text": "In making a determination under subsection (1), the board must be governed by the\n          provisions of any gift, devise, bequest or trust or any conditions in a transfer under\n            section 5\n            (3)."
                        },
                        {
                            "@id": "d2e472",
                            "bcl:num": "3",
                            "bcl:text": "If, in the opinion of a board, the directions, terms or trusts imposed by a donor,\n          settlor, transferor or\n          will-maker\n          are no longer in the best interests of the foundation, the board may apply to a judge of\n          the Supreme Court for an order authorizing such variation of the directions, terms or\n          trusts as the court, having the intent of the donor, settlor, transferor or\n          will-maker\n          in mind, considers will better further both that intent and the best interests of the\n          foundation."
                        },
                        {
                            "@id": "d2e482",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96464_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Trustee Act"
                                },
                                "#text": "Sections 86 and 87 of the  apply to the application\n          referred to in subsection (3)."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e496",
                    "bcl:marginalnote": "Staff",
                    "bcl:num": "12",
                    "bcl:text": "A board may",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e507",
                            "bcl:num": "a",
                            "bcl:text": "appoint the officers and employees it considers necessary, and"
                        },
                        {
                            "@id": "d2e516",
                            "bcl:num": "b",
                            "bcl:text": "by resolution determine the terms and conditions of their employment."
                        }
                    ]
                },
                {
                    "@id": "d2e526",
                    "bcl:marginalnote": "Annual audit required",
                    "bcl:num": "13",
                    "bcl:text": {
                        "bcl:link": [
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/03002_01",
                                "@xlink:type": "locator",
                                "in:doc": "Auditor\n            General Act"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/02057_00",
                                "@xlink:type": "locator",
                                "in:doc": "Business\n            Corporations Act"
                            }
                        ],
                        "#text": "Unless the Auditor General is appointed in accordance with the  as the auditor of a foundation, the board must appoint\n        an auditor who is authorized to be the auditor of a company under sections 205 and 206 of the  to audit the accounts of the foundation at least\n        once each year."
                    }
                },
                {
                    "@id": "d2e544",
                    "bcl:marginalnote": "Exemption from property taxes",
                    "bcl:num": "14",
                    "bcl:text": {
                        "bcl:link": [
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/03026_00",
                                "@xlink:type": "locator",
                                "in:doc": "Community\n        Charter"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/r15001_00",
                                "@xlink:type": "locator",
                                "in:doc": "Local Government\n            Act"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/vanch_00",
                                "@xlink:type": "locator",
                                "in:doc": "Vancouver Charter"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96448_01",
                                "@xlink:type": "locator",
                                "in:doc": "Taxation\n            (Rural Area) Act"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96412_00",
                                "@xlink:type": "locator",
                                "in:doc": "School\n          Act"
                            }
                        ],
                        "#text": "Property vested in a foundation is exempt from taxation under the , the , the , the  and the  if the property is being used for educational purposes in\n        connection with a program operated by the relevant university."
                    }
                },
                {
                    "@id": "d2e571",
                    "bcl:marginalnote": {
                        "in:doc": "Business Corporations Act",
                        "#text": "does not apply"
                    },
                    "bcl:num": "15",
                    "bcl:subsection": [
                        {
                            "@id": "d2e582",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/02057_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Business Corporations\n              Act"
                                },
                                "#text": "Subject to an order under subsection (2), the  does not apply to the foundations continued under this\n          Act."
                            }
                        },
                        {
                            "@id": "d2e594",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/02057_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Business Corporations Act"
                                },
                                "#text": "The Lieutenant Governor in Council may, by order, direct that some or all of the\n             does apply."
                            }
                        }
                    ]
                }
            ]
        }
    }
}