{
    "act:act": {
        "@xmlns:act": "http://www.gov.bc.ca/2013/legislation/act",
        "@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance",
        "@xmlns:bcl": "http://www.gov.bc.ca/2013/bclegislation",
        "@xmlns:xlink": "http://www.w3.org/1999/xlink",
        "@xmlns:in": "http://www.qp.gov.bc.ca/2013/inline",
        "@xmlns:fun": "http://www.bclaws.ca/xslt/functions",
        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96474_01",
        "act:title": "Vancouver Island Natural Gas Pipeline Act",
        "act:chapter": "474",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1418513667/96474/tlc96474_f",
            "act:tlc": "E3tlc96474"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "local distribution utility",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96473_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Utilities Commission Act"
                                },
                                "#text": "means a public utility, as defined by section\u00a01 of the , that operates a system, connected directly to the pipeline, for the transmission, sale or delivery of natural gas;"
                            }
                        },
                        {
                            "@id": "d2e38",
                            "bcl:text": {
                                "in:term": "natural gas",
                                "#text": "means all fluid hydrocarbons, both before and after processing, which are not defined as petroleum, and includes hydrogen sulphide contained in them;"
                            }
                        },
                        {
                            "@id": "d2e48",
                            "bcl:text": {
                                "in:term": "petroleum",
                                "#text": "means crude petroleum and all other hydrocarbons, regardless of gravity, that are or can be recovered in liquid form from underground through a well by ordinary production methods;"
                            }
                        },
                        {
                            "@id": "d2e57",
                            "bcl:text": {
                                "in:term": "pipeline",
                                "#text": "means the Vancouver Island Natural Gas Pipeline as defined by section\u00a02;"
                            }
                        },
                        {
                            "@id": "d2e66",
                            "bcl:text": {
                                "in:term": "proponent",
                                "#text": "means the Pacific Coast Energy Corporation."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e76",
                    "bcl:marginalnote": "Pipeline",
                    "bcl:num": "2",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96473_01",
                            "@xlink:type": "locator",
                            "in:doc": "Utilities Commission Act"
                        },
                        "#text": "The natural gas pipeline facilities on the mainland of British Columbia, in the Strait of Georgia and on Vancouver Island, including connected works and undertakings owned by the proponent, all as described in the proponent's application for an energy project certificate under the , are to be known as the Vancouver Island Natural Gas Pipeline."
                    }
                },
                {
                    "@id": "d2e91",
                    "bcl:marginalnote": "Agreements with Canada, etc.",
                    "bcl:num": "3",
                    "bcl:text": [
                        "The minister may enter into one or more agreements with",
                        "with respect to the funding, construction and operation of the pipeline, the granting of service areas and any other matter relating to this Act."
                    ],
                    "bcl:paragraph": [
                        {
                            "@id": "d2e102",
                            "bcl:num": "a",
                            "bcl:text": "Canada,"
                        },
                        {
                            "@id": "d2e111",
                            "bcl:num": "b",
                            "bcl:text": "the proponent,"
                        },
                        {
                            "@id": "d2e121",
                            "bcl:num": "c",
                            "bcl:text": "one or more local distribution utilities,"
                        },
                        {
                            "@id": "d2e130",
                            "bcl:num": "d",
                            "bcl:text": "Westcoast Energy Inc.,"
                        },
                        {
                            "@id": "d2e139",
                            "bcl:num": "e",
                            "bcl:text": "Alberta Energy Company Ltd.,"
                        },
                        {
                            "@id": "d2e148",
                            "bcl:num": "f",
                            "bcl:text": "BC Gas Inc.,"
                        },
                        {
                            "@id": "d2e157",
                            "bcl:num": "g",
                            "bcl:text": "Centra Gas British Columbia Inc.,"
                        },
                        {
                            "@id": "d2e166",
                            "bcl:num": "h",
                            "bcl:text": "Westcoast Power Holdings Inc.,"
                        },
                        {
                            "@id": "d2e176",
                            "bcl:num": "i",
                            "bcl:text": "CGBC Holdings Inc., or"
                        },
                        {
                            "@id": "d2e185",
                            "bcl:num": "j",
                            "bcl:text": "any other person approved by the Lieutenant Governor in Council"
                        }
                    ]
                },
                {
                    "@id": "d2e198",
                    "bcl:marginalnote": "Provincial financial assistance",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e206",
                            "bcl:num": "1",
                            "bcl:text": "The minister may, to facilitate construction of the pipeline, make grants or loans to the proponent not exceeding $25 million in the aggregate on terms and conditions that may be specified in an agreement under section 3 (a)."
                        },
                        {
                            "@id": "d2e215",
                            "bcl:num": "2",
                            "bcl:text": "Amounts, not exceeding $25 million in the aggregate, may be paid out of the consolidated revenue fund for the purposes of grants or loans under this section."
                        }
                    ]
                },
                {
                    "@id": "d2e225",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "5",
                    "bcl:text": "[Repealed 2014-31-13.]"
                },
                {
                    "@id": "d2e253",
                    "bcl:marginalnote": "Conversions assistance program",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e261",
                            "bcl:num": "1",
                            "bcl:text": "Subject to the regulations, the minister must establish a program to grant financial assistance to persons to assist in the conversion of oil, propane or other fuel fired appliances to the use of natural gas as a fuel."
                        },
                        {
                            "@id": "d2e270",
                            "bcl:num": "2",
                            "bcl:text": "A cumulative total, not exceeding $55\u00a0million, may be paid out of the consolidated revenue fund for the purposes of the program established under this section."
                        }
                    ]
                },
                {
                    "@id": "d2e280",
                    "bcl:marginalnote": "Application of utility statutes",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e288",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96473_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Utilities Commission Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96170_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Gas Utility Act"
                                    }
                                ],
                                "#text": "The  and the  apply to the proponent and a local distribution utility except to the extent otherwise provided in this section or in a regulation under this section."
                            }
                        },
                        {
                            "@id": "d2e303",
                            "bcl:num": "2",
                            "bcl:text": "The Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e312",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96473_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Utilities Commission Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96170_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Gas Utility Act"
                                            }
                                        ],
                                        "#text": "ordering that prescribed provisions of the  or of the  do not apply in respect of"
                                    },
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e328",
                                            "bcl:num": "i",
                                            "bcl:text": "the proponent,"
                                        },
                                        {
                                            "@id": "d2e337",
                                            "bcl:num": "ii",
                                            "bcl:text": "the local distribution utilities, or"
                                        },
                                        {
                                            "@id": "d2e346",
                                            "bcl:num": "iii",
                                            "bcl:text": "a particular local distribution utility;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e355",
                                    "bcl:num": "b",
                                    "bcl:text": "prescribing limitations and conditions for the purposes of a regulation under paragraph (a)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e364",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96473_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Utilities Commission Act"
                                },
                                "#text": "Despite Parts 3 and 6 of the , the Lieutenant Governor in Council may issue directions to the British Columbia Utilities Commission, specifying one or more of the following:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e376",
                                    "bcl:num": "a",
                                    "bcl:text": "the factors, criteria and guidelines that the commission must or must not use in regulating and fixing rates for the proponent or a local distribution utility;"
                                },
                                {
                                    "@id": "d2e386",
                                    "bcl:num": "b",
                                    "bcl:text": "classes of customers of the proponent or of a local distribution utility, according to volume of natural gas taken, location, date of application for natural gas service, type of premises or on any other basis the Lieutenant Governor in Council considers appropriate;"
                                },
                                {
                                    "@id": "d2e395",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96473_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Utilities Commission Act"
                                        },
                                        "#text": "the rates that may be permitted to be charged under the  by the proponent to its customers or by a local distribution utility to its customers, and, in specifying rates under this paragraph, the Lieutenant Governor in Council may differentiate among the classes of customers specified under paragraph (b);"
                                    }
                                },
                                {
                                    "@id": "d2e407",
                                    "bcl:num": "d",
                                    "bcl:text": "limitations or principles that must be applied by the commission in fixing or varying the rates charged by the proponent to its customers or by a local distribution utility to its customers, and, for any specification of limitations or principles under this paragraph, differentiating, or requiring or empowering the commission to differentiate, among the classes of customers specified under paragraph (b);"
                                },
                                {
                                    "@id": "d2e416",
                                    "bcl:num": "e",
                                    "bcl:text": "for all or part of any year since the commencement of operation of the pipeline, one or more of the following:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e425",
                                            "bcl:num": "i",
                                            "bcl:text": "the cost of service of the proponent or a local distribution utility;"
                                        },
                                        {
                                            "@id": "d2e434",
                                            "bcl:num": "ii",
                                            "bcl:text": "the manner of determining the proponent's or a local distribution utility's cost of service;"
                                        },
                                        {
                                            "@id": "d2e444",
                                            "bcl:num": "iii",
                                            "bcl:text": "the components, factors and considerations that must or must not be taken into account in making a determination under subparagraph (ii);"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e453",
                                    "bcl:num": "f",
                                    "bcl:text": "an order that has been made by the British Columbia Utilities Commission and is or may be relevant to the proponent, one or more local distribution utilities, or both, and doing either or both of the following:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e462",
                                            "bcl:num": "i",
                                            "bcl:text": "requiring the commission to apply or to refrain from applying that order or a specified portion or aspect of that order to the proponent, one or more local distribution utilities, or both;"
                                        },
                                        {
                                            "@id": "d2e471",
                                            "bcl:num": "ii",
                                            "bcl:text": "directing the commission as to the extent or manner in which it must or must not apply that order or a specified portion or aspect of that order to the proponent, one or more local distribution utilities, or both."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e480",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96473_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Utilities Commission Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96170_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Gas Utility Act"
                                    }
                                ],
                                "#text": "Despite the  and the ,"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e495",
                                    "bcl:num": "a",
                                    "bcl:text": "the British Columbia Utilities Commission must comply with a direction issued under subsection (3) of this section, and"
                                },
                                {
                                    "@id": "d2e505",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96473_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Utilities Commission Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96170_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Gas Utility Act"
                                            }
                                        ],
                                        "#text": "if a direction issued under subsection (3) of this section is inconsistent or in conflict with the  or the , the direction prevails."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e520",
                            "bcl:num": "5",
                            "bcl:text": "[Repealed 2014-31-14.]"
                        }
                    ]
                },
                {
                    "@id": "d2e536",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "8",
                    "bcl:text": "The Lieutenant Governor in Council may make regulations respecting the implementation of the conversion assistance program under section\u00a06, including regulations respecting eligibility for assistance under that program."
                }
            ]
        }
    }
}