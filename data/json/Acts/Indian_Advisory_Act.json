        "@id": "00_96217_01",
        "act:title": "Indian Advisory Act",
        "act:chapter": "217",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "111685340/96217/tlc96217_f",
            "act:tlc": "E2tlc96217"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "committee",
                                "#text": "means the British Columbia Indian Advisory Committee established under this Act;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "director",
                                "#text": "means the director appointed for this Act;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "Indian",
                                "#text": "means a person of the North American Indian race, resident in British Columbia."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e55",
                    "bcl:marginalnote": "Advisory Committee",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e63",
                            "bcl:num": "1",
                            "bcl:text": "For the purposes of this Act, the Lieutenant Governor in Council may establish a committee to be known as the British Columbia Indian Advisory Committee, and to consist of a chair and the number of other members the Lieutenant Governor in Council determines."
                        },
                        {
                            "@id": "d2e72",
                            "bcl:num": "2",
                            "bcl:text": "The chair and other members of the committee are to be appointed by the Lieutenant Governor in Council."
                        },
                        {
                            "@id": "d2e81",
                            "bcl:num": "3",
                            "bcl:text": "For the purposes of this Act, the chair may make an order requiring a person to do either or both of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e91",
                                    "bcl:num": "a",
                                    "bcl:text": "attend, in person or by electronic means, before the chair to answer questions on oath or affirmation, or in any other manner;"
                                },
                                {
                                    "@id": "d2e100",
                                    "bcl:num": "b",
                                    "bcl:text": "produce for the chair a record or thing in the person's possession or control."
                                }
                            ]
                        },
                        {
                            "@id": "d2e109",
                            "bcl:num": "4",
                            "bcl:text": "The chair may apply to the Supreme Court for an order",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e118",
                                    "bcl:num": "a",
                                    "bcl:text": "directing a person to comply with an order made under subsection (3), or"
                                },
                                {
                                    "@id": "d2e127",
                                    "bcl:num": "b",
                                    "bcl:text": "directing any directors and officers of a person to cause the person to comply with an order made under subsection (3)."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e137",
                    "bcl:marginalnote": "Contempt proceeding for uncooperative person",
                    "bcl:num": "2.1",
                    "bcl:text": "The failure or refusal of a person subject to an order under section 2 to do any of the following makes the person, on application to the Supreme Court by the chair of the committee, liable to be committed for contempt as if in breach of an order or judgment of the Supreme Court:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e148",
                            "bcl:num": "a",
                            "bcl:text": "attend before the chair;"
                        },
                        {
                            "@id": "d2e157",
                            "bcl:num": "b",
                            "bcl:text": "take an oath or make an affirmation;"
                        },
                        {
                            "@id": "d2e167",
                            "bcl:num": "c",
                            "bcl:text": "answer questions;"
                        },
                        {
                            "@id": "d2e176",
                            "bcl:num": "d",
                            "bcl:text": "produce records or things in the person's possession or control."
                        }
                    ]
                },
                {
                    "@id": "d2e186",
                    "bcl:marginalnote": "Duties of committee",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e194",
                            "bcl:num": "1",
                            "bcl:text": "The committee must advise the minister on all matters regarding the status and rights of Indians."
                        },
                        {
                            "@id": "d2e203",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the committee must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e212",
                                    "bcl:num": "a",
                                    "bcl:text": "consider matters referred to it by the minister, and"
                                },
                                {
                                    "@id": "d2e222",
                                    "bcl:num": "b",
                                    "bcl:text": "report its findings and recommendations to the minister."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e232",
                    "bcl:marginalnote": "Expenses of members",
                    "bcl:num": "4",
                    "bcl:text": "A member of the committee is entitled to be paid the actual and reasonable expenses incurred by the member in the discharge of duties."
                },
                {
                    "@id": "d2e245",
                    "bcl:marginalnote": "Employment of staff",
                    "bcl:num": "5",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96385_01",
                            "@xlink:type": "locator",
                            "in:doc": "Public Service Act"
                        },
                        "#text": "Officers and employees necessary to administer this Act may be appointed, under the ."
                    }
                },
                {
                    "@id": "d2e260",
                    "bcl:marginalnote": "Duties of director",
                    "bcl:num": "6",
                    "bcl:text": "The director must:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e271",
                            "bcl:num": "a",
                            "bcl:text": "act as secretary to the committee;"
                        },
                        {
                            "@id": "d2e280",
                            "bcl:num": "b",
                            "bcl:text": "collect and correlate information relating to Indians;"
                        },
                        {
                            "@id": "d2e290",
                            "bcl:num": "c",
                            "bcl:text": "collaborate with other ministries of British Columbia and of Canada in the compilation of information relating to Indians;"
                        },
                        {
                            "@id": "d2e299",
                            "bcl:num": "d",
                            "bcl:text": "study and inquire into questions relating to civil rights of Indians and other matters affecting them as may be designated by the minister;"
                        },
                        {
                            "@id": "d2e308",
                            "bcl:num": "e",
                            "bcl:text": "submit to the minister reports of the director's studies and inquiries, together with recommendations the director believes proper;"
                        },
                        {
                            "@id": "d2e317",
                            "bcl:num": "f",
                            "bcl:text": "each year make a report to the minister, to be laid before the Legislative Assembly, for the year ended on the previous last day of December on the activities of the committee and the director."
                        }
                    ]
                },
                {
                    "@id": "d2e327",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "7",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                    }
                }
            ]
        }
    }
