        "@id": "00_96087_01",
        "act:title": "Crown Counsel Act",
        "act:chapter": "87",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "781755088/96087/tlc96087_f",
            "act:tlc": "E3tlc96087"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "ADAG",
                                "#text": "means the Assistant Deputy Attorney General, Criminal Justice Branch;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "Branch",
                                "#text": "means the Criminal Justice Branch of the Ministry of Attorney General;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "offence",
                                "#text": "means an offence"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e54",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Criminal Code"
                                        },
                                        "#text": "under the  or any other enactment of Canada with respect to which the Attorney General of British Columbia may initiate and conduct a prosecution, and"
                                    }
                                },
                                {
                                    "@id": "d2e66",
                                    "bcl:num": "b",
                                    "bcl:text": "under an enactment of British Columbia."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e76",
                    "bcl:marginalnote": "Functions and responsibilities of the Criminal Justice Branch",
                    "bcl:num": "2",
                    "bcl:text": "The Branch has the following functions and responsibilities:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e87",
                            "bcl:num": "a",
                            "bcl:text": "to approve and conduct, on behalf of the Crown, all prosecutions of offences in British Columbia;"
                        },
                        {
                            "@id": "d2e96",
                            "bcl:num": "b",
                            "bcl:text": "to initiate and conduct, on behalf of the Crown, all appeals and other proceedings in respect of any prosecution of an offence in British Columbia;"
                        },
                        {
                            "@id": "d2e106",
                            "bcl:num": "c",
                            "bcl:text": "to conduct, on behalf of the Crown, any appeal or other proceeding in respect of a prosecution of an offence, in which the Crown is named as a respondent;"
                        },
                        {
                            "@id": "d2e115",
                            "bcl:num": "d",
                            "bcl:text": "to advise the government on all criminal law matters;"
                        },
                        {
                            "@id": "d2e124",
                            "bcl:num": "e",
                            "bcl:text": "to develop policies and procedures in respect of the administration of criminal justice in British Columbia;"
                        },
                        {
                            "@id": "d2e133",
                            "bcl:num": "f",
                            "bcl:text": "to provide liaison with the media and affected members of the public on all matters respecting approval and conduct of prosecutions of offences or related appeals;"
                        },
                        {
                            "@id": "d2e142",
                            "bcl:num": "g",
                            "bcl:text": "any other function or responsibility assigned to the Branch by the Attorney General."
                        }
                    ]
                },
                {
                    "@id": "d2e152",
                    "bcl:marginalnote": "Assistant Deputy Attorney General",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e160",
                            "bcl:num": "1",
                            "bcl:text": "The ADAG is charged with the administration of the Branch and with carrying out the functions and responsibilities of the Branch under section\u00a02."
                        },
                        {
                            "@id": "d2e169",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                    "@xlink:type": "locator",
                                    "in:doc": "Criminal Code"
                                },
                                "#text": "The ADAG is designated, for purposes of section\u00a02 of the , as a lawful deputy of the Attorney General."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e182",
                    "bcl:marginalnote": "Responsibilities of Crown counsel",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e190",
                            "bcl:num": "1",
                            "bcl:text": "The ADAG may designate as \"Crown counsel\" any individual or class of individual who is lawfully entitled to practise law in British Columbia."
                        },
                        {
                            "@id": "d2e199",
                            "bcl:num": "2",
                            "bcl:text": "Each Crown counsel is authorized to represent the Crown before all courts in relation to the prosecution of offences."
                        },
                        {
                            "@id": "d2e208",
                            "bcl:num": "3",
                            "bcl:text": "Subject to the directions of the ADAG or another Crown counsel designated by the ADAG, each Crown counsel is authorized to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e218",
                                    "bcl:num": "a",
                                    "bcl:text": "examine all relevant information and documents and, following the examination, to approve for prosecution any offence or offences that Crown counsel considers appropriate,"
                                },
                                {
                                    "@id": "d2e227",
                                    "bcl:num": "b",
                                    "bcl:text": "conduct the prosecutions approved, and"
                                },
                                {
                                    "@id": "d2e236",
                                    "bcl:num": "c",
                                    "bcl:text": "supervise prosecutions of offences that are being initiated or conducted by individuals who are not Crown counsel and, if the interests of justice require, to intervene and to conduct those prosecutions."
                                }
                            ]
                        },
                        {
                            "@id": "d2e245",
                            "bcl:num": "4",
                            "bcl:text": "The Attorney General may establish an appeal process under which law enforcement officials may appeal the determination of any Crown counsel or special prosecutor not to approve a prosecution."
                        }
                    ]
                },
                {
                    "@id": "d2e255",
                    "bcl:marginalnote": "British Columbia Crown Counsel Association Agreement",
                    "bcl:num": "4.1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e263",
                            "bcl:num": "1",
                            "bcl:text": "In this section:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e272",
                                    "bcl:text": {
                                        "in:term": "BCCCA",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/15018_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Societies Act"
                                        },
                                        "#text": "means the British Columbia Crown Counsel Association, a society under the ;"
                                    }
                                },
                                {
                                    "@id": "d2e284",
                                    "bcl:text": {
                                        "in:term": "Crown counsel",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96385_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Service Act"
                                        },
                                        "#text": "means an individual described in section 4 (1) who is an \"employee\" as defined in section 1 of the \u00a0but does not include"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e297",
                                            "bcl:num": "a",
                                            "bcl:text": "the Assistant Deputy Attorney General,"
                                        },
                                        {
                                            "@id": "d2e306",
                                            "bcl:num": "b",
                                            "bcl:text": "the Director, Special Justice Programs,"
                                        },
                                        {
                                            "@id": "d2e315",
                                            "bcl:num": "c",
                                            "bcl:text": "the Executive Director, Criminal Justice Branch,"
                                        },
                                        {
                                            "@id": "d2e324",
                                            "bcl:num": "d",
                                            "bcl:text": "the Regional Crown counsel,"
                                        },
                                        {
                                            "@id": "d2e333",
                                            "bcl:num": "e",
                                            "bcl:text": "the Deputy Regional Crown counsel,"
                                        },
                                        {
                                            "@id": "d2e342",
                                            "bcl:num": "f",
                                            "bcl:text": "the Director, Criminal Appeals,"
                                        },
                                        {
                                            "@id": "d2e352",
                                            "bcl:num": "g",
                                            "bcl:text": "the Director, Legal Services,"
                                        },
                                        {
                                            "@id": "d2e361",
                                            "bcl:num": "h",
                                            "bcl:text": "the Communications Officer,"
                                        },
                                        {
                                            "@id": "d2e370",
                                            "bcl:num": "i",
                                            "bcl:text": "the Director, Policy and Legislation,"
                                        },
                                        {
                                            "@id": "d2e379",
                                            "bcl:num": "j",
                                            "bcl:text": "the Deputy Director, Commercial Crime,"
                                        },
                                        {
                                            "@id": "d2e388",
                                            "bcl:num": "k",
                                            "bcl:text": "the Deputy Director, Criminal Appeals, and"
                                        },
                                        {
                                            "@id": "d2e397",
                                            "bcl:num": "l",
                                            "bcl:text": "the persons in other positions specified by agreement of the employer and the BCCCA;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e407",
                                    "bcl:text": {
                                        "in:term": "employer",
                                        "#text": "means the government represented by the BC Public Service Agency."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e416",
                            "bcl:num": "2",
                            "bcl:text": "The BCCCA is the exclusive bargaining agent for all Crown counsel and is authorized to enter into agreements with the employer which must include all matters affecting wages or salary, hours of work and other working conditions, except the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e425",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96385_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Service Act"
                                        },
                                        "#text": "the principle of merit and its application in the appointment and promotion of employees, subject to section 4 (3) of the ;"
                                    }
                                },
                                {
                                    "@id": "d2e437",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/99044_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Sector Pension Plans Act"
                                        },
                                        "#text": "a matter included under the ;"
                                    }
                                },
                                {
                                    "@id": "d2e449",
                                    "bcl:num": "c",
                                    "bcl:text": "the organization, establishment or administration of the ministries and branches of the government, except the effect of reductions in establishment of employees, which must be negotiated by the parties;"
                                },
                                {
                                    "@id": "d2e458",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96385_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Service Act"
                                        },
                                        "#text": "the application of the system of classification of positions or job evaluation under the ;"
                                    }
                                },
                                {
                                    "@id": "d2e471",
                                    "bcl:num": "e",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96388_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Service Labour Relations Act"
                                        },
                                        "#text": "the procedures and methods of training or retraining of all employees not affected by section 15 of the , other than training programs administered with a branch or ministry that apply to one occupational group only."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e483",
                            "bcl:num": "3",
                            "bcl:text": "The employer and the BCCCA must bargain collectively in good faith and make every reasonable effort to conclude agreements referred to in subsection (2)."
                        }
                    ]
                },
                {
                    "@id": "d2e494",
                    "bcl:marginalnote": "Directions from Attorney General on specific prosecutions",
                    "bcl:num": "5",
                    "bcl:text": "If the Attorney General or Deputy Attorney General gives the ADAG a direction with respect to the approval or conduct of any specific prosecution or appeal, that direction must be",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e505",
                            "bcl:num": "a",
                            "bcl:text": "given in writing to the ADAG, and"
                        },
                        {
                            "@id": "d2e514",
                            "bcl:num": "b",
                            "bcl:text": "published in the Gazette."
                        }
                    ]
                },
                {
                    "@id": "d2e524",
                    "bcl:marginalnote": "Policy directive from Attorney General",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e532",
                            "bcl:num": "1",
                            "bcl:text": "If the Attorney General or Deputy Attorney General wishes to issue a directive respecting the Criminal Justice Branch policy on the approval or conduct of prosecutions, that directive must be given in writing to the ADAG and, in the discretion of the ADAG, may be published in the Gazette."
                        },
                        {
                            "@id": "d2e541",
                            "bcl:num": "2",
                            "bcl:text": "If the Attorney General or Deputy Attorney General wishes to issue a directive respecting the administration of the Branch, that directive must, if requested by the ADAG, be given in writing and may, in the discretion of the ADAG, be published in the Gazette."
                        }
                    ]
                },
                {
                    "@id": "d2e551",
                    "bcl:marginalnote": "Special prosecutors",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e559",
                            "bcl:num": "1",
                            "bcl:text": "If the ADAG considers it is in the public interest, the ADAG may appoint a lawyer, who is not employed in the Ministry of Attorney General, as a special prosecutor."
                        },
                        {
                            "@id": "d2e568",
                            "bcl:num": "2",
                            "bcl:text": "A special prosecutor must carry out the special prosecutor's mandate, as set out in writing by the ADAG, and in particular must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e577",
                                    "bcl:num": "a",
                                    "bcl:text": "examine all relevant information and documents and report to the ADAG with respect to the approval and conduct of any specific prosecution, and"
                                },
                                {
                                    "@id": "d2e587",
                                    "bcl:num": "b",
                                    "bcl:text": "carry out any other responsibilities respecting the initiation and conduct of a specific prosecution."
                                }
                            ]
                        },
                        {
                            "@id": "d2e596",
                            "bcl:num": "3",
                            "bcl:text": "If the ADAG appoints a special prosecutor, the ADAG must advise the Deputy Attorney General",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e605",
                                    "bcl:num": "a",
                                    "bcl:text": "that a special prosecutor has been appointed, and"
                                },
                                {
                                    "@id": "d2e614",
                                    "bcl:num": "b",
                                    "bcl:text": "the name of the special prosecutor."
                                }
                            ]
                        },
                        {
                            "@id": "d2e623",
                            "bcl:num": "4",
                            "bcl:text": "If, after a special prosecutor receives the mandate under subsection (2), the Attorney General, Deputy Attorney General or ADAG gives a direction to a special prosecutor in respect of any matter within the mandate of the special prosecutor, that direction must be given in writing and be published in the Gazette."
                        },
                        {
                            "@id": "d2e632",
                            "bcl:num": "5",
                            "bcl:text": "Subject to the mandate given to the special prosecutor by the ADAG or to a directive referred to in subsection (4), the decision of a special prosecutor with respect to any matter within the special prosecutor's mandate is final, but a decision not to approve a prosecution may be appealed by a law enforcement officer under the process established by section\u00a04\u00a0(4)."
                        }
                    ]
                },
                {
                    "@id": "d2e642",
                    "bcl:marginalnote": "Delay in publication",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e650",
                            "bcl:num": "1",
                            "bcl:text": "The Attorney General, Deputy Attorney General or ADAG may direct publication in the Gazette of those matters referred to in section\u00a05 or 7 be delayed if to do so would be in the interests of the administration of justice."
                        },
                        {
                            "@id": "d2e659",
                            "bcl:num": "2",
                            "bcl:text": "A delay under subsection (1) must not extend beyond the completion of the prosecution or matter or any related prosecution or matter."
                        }
                    ]
                }
            ]
        }
    }
}