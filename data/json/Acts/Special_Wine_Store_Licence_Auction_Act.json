        "@id": "15020",
        "act:title": "Special Wine Store Licence Auction Act",
        "act:chapter": "20",
        "act:yearenacted": "2015",
        "act:assentedto": "May 14, 2015",
        "act:currency": {
            "act:tlcDirPath": "1527898742/15020a/15020t",
            "act:tlc": "E3tlc15020"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d1e20",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d1e28",
                            "bcl:num": "1",
                            "bcl:text": "In this Act:",
                            "bcl:definition": [
                                {
                                    "@id": "d1e36",
                                    "bcl:text": {
                                        "in:term": "auction",
                                        "#text": "means an auction conducted under this Act;"
                                    }
                                },
                                {
                                    "@id": "d1e44",
                                    "bcl:text": {
                                        "in:term": "auction price",
                                        "#text": "means the amount, determined under the auction\n            procedures, that a successful bidder must pay for the right to apply for a special wine\n            store licence;"
                                    }
                                },
                                {
                                    "@id": "d1e52",
                                    "bcl:text": {
                                        "in:term": "auction procedures",
                                        "#text": "means the procedures referred to in\n            section 5 (1);"
                                    }
                                },
                                {
                                    "@id": "d1e61",
                                    "bcl:text": {
                                        "in:term": "general manager's list",
                                        "#text": "means the list of successful bidders\n            that the general manager keeps in accordance with section 7;"
                                    }
                                },
                                {
                                    "@id": "d1e69",
                                    "bcl:text": {
                                        "in:term": "grocery store",
                                        "#text": "means a store that"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e76",
                                            "bcl:num": "a",
                                            "bcl:text": "is primarily engaged in retailing food and non-alcoholic beverages that are\n              specified in the regulations, and"
                                        },
                                        {
                                            "@id": "d1e85",
                                            "bcl:num": "b",
                                            "bcl:text": "has an area of at least 929 square metres;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e95",
                                    "bcl:text": {
                                        "in:term": "record of unsuccessful bidders",
                                        "#text": "means the record of\n            unsuccessful bidders that the general manager keeps in accordance with section\n            8;"
                                    }
                                },
                                {
                                    "@id": "d1e103",
                                    "bcl:text": {
                                        "in:term": "special wine store licence",
                                        "#text": "means a licence that authorizes\n            the licensee"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e110",
                                            "bcl:num": "a",
                                            "bcl:text": "to sell wine in respect of which the naturally occurring sugar used in the\n              fermentation process comes from only",
                                            "bcl:subparagraph": [
                                                {
                                                    "@id": "d1e118",
                                                    "bcl:num": "i",
                                                    "bcl:text": "plant products grown in British Columbia,"
                                                },
                                                {
                                                    "@id": "d1e127",
                                                    "bcl:num": "ii",
                                                    "bcl:text": "honey produced from beehives located in British Columbia, or"
                                                },
                                                {
                                                    "@id": "d1e136",
                                                    "bcl:num": "iii",
                                                    "bcl:text": "milk from animals located in British Columbia,"
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d1e146",
                                            "bcl:num": "b",
                                            "bcl:text": "to sell cider in respect of which the naturally occurring sugar used in the\n              fermentation process comes only from plant products grown in British\n              Columbia,"
                                        },
                                        {
                                            "@id": "d1e155",
                                            "bcl:num": "c",
                                            "bcl:text": "to sell sake in respect of which the rice used in its production is grown only\n              in British Columbia, and"
                                        },
                                        {
                                            "@id": "d1e164",
                                            "bcl:num": "d",
                                            "bcl:text": "to sell the wine, cider and sake from any location approved by the general\n              manager within a specified grocery store;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e174",
                                    "bcl:text": {
                                        "in:term": "successful bidder",
                                        "#text": "means a bidder whose bid at an auction is\n            successful as determined under the auction procedures, and includes a bidder who is\n            added to the general manager's list in accordance with section 11."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d1e183",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/15019",
                                    "@xlink:type": "locator",
                                    "in:doc": "Liquor Control and Licensing Act"
                                },
                                "#text": "The definitions in the  apply\n          to this Act."
                            }
                        }
                    ]
                },
                {
                    "@id": "d1e197",
                    "bcl:marginalnote": "Auctions",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d1e205",
                            "bcl:num": "1",
                            "bcl:text": "The general manager may conduct one or more auctions to receive bids for the right\n          to apply for a special wine store licence."
                        },
                        {
                            "@id": "d1e214",
                            "bcl:num": "2",
                            "bcl:text": "Bids may be accepted under this Act in respect of only a prescribed number of\n          special wine store licences."
                        }
                    ]
                },
                {
                    "@id": "d1e224",
                    "bcl:marginalnote": "Right to apply for special wine store licence",
                    "bcl:num": "3",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/15019",
                            "@xlink:type": "locator",
                            "in:doc": "Liquor Control and Licensing Act"
                        },
                        "#text": "Only a successful bidder on the general manager's list for a specified grocery store\n        may apply under the  for a\n        special wine store licence for that grocery store."
                    }
                },
                {
                    "@id": "d1e240",
                    "bcl:marginalnote": "Requirements for bidders",
                    "bcl:num": "4",
                    "bcl:text": "The general manager must not accept a bid from a bidder unless",
                    "bcl:paragraph": [
                        {
                            "@id": "d1e251",
                            "bcl:num": "a",
                            "bcl:text": "the bidder specifies an existing or proposed grocery store from which wine, cider\n          and sake are intended to be sold,"
                        },
                        {
                            "@id": "d1e260",
                            "bcl:num": "b",
                            "bcl:text": "the bidder submits a deposit in the prescribed amount by certified cheque or in\n          another prescribed form,"
                        },
                        {
                            "@id": "d1e270",
                            "bcl:num": "c",
                            "bcl:text": "the bid is equal to or greater than the minimum bid established by the auction\n          procedures, and"
                        },
                        {
                            "@id": "d1e279",
                            "bcl:num": "d",
                            "bcl:text": "the bidder satisfies any other requirement of the auction procedures."
                        }
                    ]
                },
                {
                    "@id": "d1e290",
                    "bcl:marginalnote": "Auction procedures",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d1e298",
                            "bcl:num": "1",
                            "bcl:text": "An auction must be conducted in accordance with procedures established\n          by",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e306",
                                    "bcl:num": "a",
                                    "bcl:text": "the regulations, and"
                                },
                                {
                                    "@id": "d1e315",
                                    "bcl:num": "b",
                                    "bcl:text": "the rules made by the general manager under section 16."
                                }
                            ]
                        },
                        {
                            "@id": "d1e325",
                            "bcl:num": "2",
                            "bcl:text": "The general manager must post, in advance of an auction, the auction procedures on\n          a publicly accessible website maintained by or on behalf of the minister."
                        }
                    ]
                },
                {
                    "@id": "d1e335",
                    "bcl:marginalnote": "Conduct of auctions",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d1e343",
                            "bcl:num": "1",
                            "bcl:text": "The general manager is responsible for the conduct of an auction."
                        },
                        {
                            "@id": "d1e352",
                            "bcl:num": "2",
                            "bcl:text": "The general manager may enter into agreements authorizing a person or organization\n          that has expertise in conducting auctions to conduct, under the supervision of the general\n          manager, all or a part of an auction."
                        }
                    ]
                },
                {
                    "@id": "d1e362",
                    "bcl:marginalnote": "General manager's list",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d1e370",
                            "bcl:num": "1",
                            "bcl:text": "The general manager must keep a list of all successful bidders, together with the\n          grocery store specified in the bid of each successful bidder."
                        },
                        {
                            "@id": "d1e379",
                            "bcl:num": "2",
                            "bcl:text": "The number of grocery stores specified on the list must not exceed the prescribed\n          number of special wine store licences for which bids may be accepted."
                        },
                        {
                            "@id": "d1e388",
                            "bcl:num": "3",
                            "bcl:text": "The general manager must substitute, on the list, a different existing or proposed\n          grocery store in respect of a bid of a successful bidder if the successful\n          bidder",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e396",
                                    "bcl:num": "a",
                                    "bcl:text": "submits an application in a form acceptable to the general manager requesting\n            the substitution, and"
                                },
                                {
                                    "@id": "d1e405",
                                    "bcl:num": "b",
                                    "bcl:text": "pays the prescribed fee."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e416",
                    "bcl:marginalnote": "Record of unsuccessful bidders",
                    "bcl:num": "8",
                    "bcl:text": "The general manager must keep a record of",
                    "bcl:paragraph": [
                        {
                            "@id": "d1e427",
                            "bcl:num": "a",
                            "bcl:text": "all bidders who met the requirements set out in section 4, but were unsuccessful,\n          and"
                        },
                        {
                            "@id": "d1e436",
                            "bcl:num": "b",
                            "bcl:text": "the grocery store specified in each unsuccessful bid."
                        }
                    ]
                },
                {
                    "@id": "d1e446",
                    "bcl:marginalnote": "Payment of auction price",
                    "bcl:num": "9",
                    "bcl:text": "No special wine store licence may be issued to a successful bidder on the general\n        manager's list unless the auction price in respect of the bid has been paid within the\n        prescribed time after the bidder has been notified by the general manager that the bidder's\n        application for the special wine store licence has been approved."
                },
                {
                    "@id": "d1e458",
                    "bcl:marginalnote": "Removal from general manager's list",
                    "bcl:num": "10",
                    "bcl:text": "The general manager must remove a successful bidder and the grocery store associated\n        with the bid of the successful bidder from the general manager's list in the following\n        circumstances:",
                    "bcl:paragraph": [
                        {
                            "@id": "d1e469",
                            "bcl:num": "a",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/15019",
                                    "@xlink:type": "locator",
                                    "in:doc": "Liquor Control and Licensing Act"
                                },
                                "#text": "the successful bidder has not submitted, within the prescribed time, a complete\n          application or fees under the  for a\n          special wine store licence for that grocery store;"
                            }
                        },
                        {
                            "@id": "d1e482",
                            "bcl:num": "b",
                            "bcl:text": "the successful bidder has not paid the auction price in respect of the bid of that\n          successful bidder within the prescribed time after being notified by the general manager\n          that the successful bidder's application for a special wine store licence for that grocery\n          store has been approved;"
                        },
                        {
                            "@id": "d1e492",
                            "bcl:num": "c",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/15019",
                                    "@xlink:type": "locator",
                                    "in:doc": "Liquor Control and\n              Licensing Act"
                                },
                                "#text": "the successful bidder's application for a special wine store licence for that\n          grocery store is refused under the ;"
                            }
                        },
                        {
                            "@id": "d1e505",
                            "bcl:num": "d",
                            "bcl:text": "the successful bidder requests the general manager to do so."
                        }
                    ]
                },
                {
                    "@id": "d1e516",
                    "bcl:marginalnote": "Addition to general manager's list",
                    "bcl:num": "11",
                    "bcl:text": "If the general manager removes a successful bidder from the general manager's list,\n        the general manager must add to the general manager's list the bidder on the record of\n        unsuccessful bidders having the highest priority, as determined under the auction\n        procedures, together with the grocery store specified in the bid of that bidder."
                },
                {
                    "@id": "d1e528",
                    "bcl:marginalnote": "Forfeiture of deposit",
                    "bcl:num": "12",
                    "bcl:text": "Subject to any prescribed exceptions, the deposit of a successful bidder submitted\n        in respect of a grocery store is forfeited to the government if the bidder and grocery store\n        are removed from the general manager's list."
                },
                {
                    "@id": "d1e540",
                    "bcl:marginalnote": "Return of deposit",
                    "bcl:num": "13",
                    "bcl:subsection": [
                        {
                            "@id": "d1e548",
                            "bcl:num": "1",
                            "bcl:text": "The general manager must return a deposit submitted by a bidder in respect of a\n          grocery store if",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e556",
                                    "bcl:num": "a",
                                    "bcl:text": "the bidder is on the record of unsuccessful bidders and has requested the return\n            of the deposit, or"
                                },
                                {
                                    "@id": "d1e565",
                                    "bcl:num": "b",
                                    "bcl:text": "the bidder is on the record of unsuccessful bidders and the prescribed number of\n            special wine store licences have been issued."
                                }
                            ]
                        },
                        {
                            "@id": "d1e575",
                            "bcl:num": "2",
                            "bcl:text": "If a deposit is returned to an unsuccessful bidder under subsection (1) (a), the\n          general manager must remove the bidder and the grocery store from the record of\n          unsuccessful bidders and the unsuccessful bidder may no longer be added to the general\n          manager's list in respect of that bid."
                        }
                    ]
                },
                {
                    "@id": "d1e585",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act"
                    },
                    "bcl:num": "14",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5 of the  does not apply to this Act or\n        the regulations."
                    }
                },
                {
                    "@id": "d1e602",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "15",
                    "bcl:subsection": [
                        {
                            "@id": "d1e610",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41\n          of the ."
                            }
                        },
                        {
                            "@id": "d1e623",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make\n          regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e631",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribing the number of special wine store licences in respect of which bids\n            may be accepted under this Act;"
                                },
                                {
                                    "@id": "d1e640",
                                    "bcl:num": "b",
                                    "bcl:text": "specifying the types of food and non-alcoholic beverages for the purposes of the\n            definition of \"grocery store\";"
                                },
                                {
                                    "@id": "d1e649",
                                    "bcl:num": "c",
                                    "bcl:text": "prescribing the amount of deposits submitted under section 4 (b);"
                                },
                                {
                                    "@id": "d1e659",
                                    "bcl:num": "d",
                                    "bcl:text": "respecting the additional forms of deposits that may be submitted under section\n            4 (b);"
                                },
                                {
                                    "@id": "d1e668",
                                    "bcl:num": "e",
                                    "bcl:text": "prescribing the fee referred to in section 7 (3) (b);"
                                },
                                {
                                    "@id": "d1e677",
                                    "bcl:num": "f",
                                    "bcl:text": "respecting procedures for the conduct of an auction, including",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e685",
                                            "bcl:num": "i",
                                            "bcl:text": "how to determine successful bids,"
                                        },
                                        {
                                            "@id": "d1e694",
                                            "bcl:num": "ii",
                                            "bcl:text": "how to calculate the amount that a successful bidder must pay for the right to\n              apply for a special wine store licence,"
                                        },
                                        {
                                            "@id": "d1e703",
                                            "bcl:num": "iii",
                                            "bcl:text": "how to determine the priority of unsuccessful bidders on the record of\n              unsuccessful bidders, and"
                                        },
                                        {
                                            "@id": "d1e713",
                                            "bcl:num": "iv",
                                            "bcl:text": "any contractual rights or obligations of the government or a bidder arising on\n              acceptance of a bid at the auction;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e723",
                                    "bcl:num": "g",
                                    "bcl:text": "prescribing the time periods for the purposes of sections 9 and 10 (a)\n            and\u00a0(b);"
                                },
                                {
                                    "@id": "d1e732",
                                    "bcl:num": "h",
                                    "bcl:text": "providing for exceptions to the forfeiture of deposits under section\n            12;"
                                },
                                {
                                    "@id": "d1e741",
                                    "bcl:num": "i",
                                    "bcl:text": "remedying any difficulty encountered in the conduct of an auction or in the\n            administration of this Act."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e752",
                    "bcl:marginalnote": "Power to make rules",
                    "bcl:num": "16",
                    "bcl:text": "The general manager may make rules respecting procedures for the conduct of an\n        auction, including",
                    "bcl:paragraph": [
                        {
                            "@id": "d1e763",
                            "bcl:num": "a",
                            "bcl:text": "how to determine successful bids,"
                        },
                        {
                            "@id": "d1e772",
                            "bcl:num": "b",
                            "bcl:text": "how to calculate the amount that a successful bidder must pay for the right to\n          apply for a special wine store licence,"
                        },
                        {
                            "@id": "d1e782",
                            "bcl:num": "c",
                            "bcl:text": "how to determine the priority of unsuccessful bidders on the record of\n          unsuccessful bidders, and"
                        },
                        {
                            "@id": "d1e791",
                            "bcl:num": "d",
                            "bcl:text": "any contractual rights or obligations of the government or a bidder arising on\n          acceptance of a bid at the auction."
                        }
                    ]
                },
                {
                    "@id": "d1e802",
                    "bcl:marginalnote": "Regulations prevail",
                    "bcl:num": "17",
                    "bcl:text": "If there is any conflict between the rules made by the general manager and the\n        regulations, the regulations prevail."
                },
                {
                    "@id": "d1e910",
                    "bcl:marginalnote": "Repeal by regulation",
                    "bcl:num": "19",
                    "bcl:text": "This Act may be repealed by regulation of the Lieutenant Governor in\n        Council."
                },
                {
                    "@id": "d1e924",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "20",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in\n        Council."
                }
            ],
