        "@id": "00_96080_01",
        "act:title": "Court Rules Act",
        "act:chapter": "80",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "781755088/96080/tlc96080_f",
            "act:tlc": "E3tlc96080"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Rules of Court",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e29",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may, by regulation, make rules that the Lieutenant Governor in Council considers necessary or advisable governing the conduct of proceedings in the Court of Appeal, the Supreme Court and the Provincial Court."
                        },
                        {
                            "@id": "d2e38",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the rules may govern one or more of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e47",
                                    "bcl:num": "a",
                                    "bcl:text": "practice and procedure in each of those courts;"
                                },
                                {
                                    "@id": "d2e57",
                                    "bcl:num": "b",
                                    "bcl:text": "the means by which particular facts may be proved and the mode by which evidence may be given;"
                                },
                                {
                                    "@id": "d2e66",
                                    "bcl:num": "b.1",
                                    "bcl:text": "appearances and applications by telephone or other means of telecommunication before each of those courts;"
                                },
                                {
                                    "@id": "d2e75",
                                    "bcl:num": "b.2",
                                    "bcl:text": "records in each of those courts, including the use of records in electronic or any other format;"
                                },
                                {
                                    "@id": "d2e84",
                                    "bcl:num": "c",
                                    "bcl:text": "costs and their review;"
                                },
                                {
                                    "@id": "d2e93",
                                    "bcl:num": "d",
                                    "bcl:text": "the establishment and collection of fees for services and duties provided by the government or employees of the government or by other persons;"
                                },
                                {
                                    "@id": "d2e102",
                                    "bcl:num": "e",
                                    "bcl:text": "the establishment and payment of fees and allowances payable to witnesses, including witnesses for the Crown, jurors and other persons for services performed or attendances made in any of the courts in British Columbia;"
                                },
                                {
                                    "@id": "d2e112",
                                    "bcl:num": "f",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96006_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Adult Guardianship Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96223_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Infants Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96251_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Land Title Inquiry Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96349_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Patients Property Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96370_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Power of Attorney Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/09013_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Wills, Estates and Succession Act"
                                            }
                                        ],
                                        "#text": "all matters arising under the , Part 1 of the , the , the , Parts 2 and 3 of the , and the ;"
                                    }
                                },
                                {
                                    "@id": "d2e140",
                                    "bcl:num": "g",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/03029_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Enforcement of Canadian Judgments and Decrees Act"
                                        },
                                        "#text": "all matters arising under the , including cancellation of the registration of a judgment;"
                                    }
                                },
                                {
                                    "@id": "d2e152",
                                    "bcl:num": "h",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/05029_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Civil Forfeiture Act"
                                        },
                                        "#text": "all matters arising under the ;"
                                    }
                                },
                                {
                                    "@id": "d1e173",
                                    "bcl:num": "i",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/12025_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Civil Resolution Tribunal Act"
                                        },
                                        "#text": "all matters arising, in relation to court process, as a result of the  or any regulation or rule under that Act, including providing that a decision of the civil resolution tribunal be treated like an offer to settle for penalty purposes."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e164",
                            "bcl:num": "3",
                            "bcl:text": "In addition, the rules may make provision for the service of documents that start a proceeding, documents that add a new party to a proceeding and other documents out of British Columbia."
                        },
                        {
                            "@id": "d2e173",
                            "bcl:num": "4",
                            "bcl:text": "Rules under subsection (3) may be different for the service of documents that start a proceeding, documents that add a new party to a proceeding and other documents",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e182",
                                    "bcl:num": "a",
                                    "bcl:text": "within Canada, or"
                                },
                                {
                                    "@id": "d2e192",
                                    "bcl:num": "b",
                                    "bcl:text": "outside of Canada."
                                }
                            ]
                        },
                        {
                            "@id": "d2e201",
                            "bcl:num": "5",
                            "bcl:text": "In addition, in relation to the Court of Appeal, the rules may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e210",
                                    "bcl:num": "a",
                                    "bcl:text": "govern the introduction of evidence in the court, and"
                                },
                                {
                                    "@id": "d2e219",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96077_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Court of Appeal Act"
                                        },
                                        "#text": "vary the application of all or part of the  in respect of cross appeals."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e231",
                            "bcl:num": "6",
                            "bcl:text": "In addition, in relation to the Supreme Court, the rules may govern all matters governed by the Rules of Court as they stood on June 30, 2010."
                        },
                        {
                            "@id": "d1e271",
                            "bcl:num": "6.1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96430_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Small Claims Act"
                                },
                                "#text": "In addition, in relation to the Provincial Court, the rules may make provision for an application, other than a claim under the , arising under an enactment that gives the Provincial Court jurisdiction to determine the application."
                            }
                        },
                        {
                            "@id": "d2e240",
                            "bcl:num": "7",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96430_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Small Claims Act"
                                },
                                "#text": "In addition, in relation to the Provincial Court, the rules may make provision for the enforcement, by any means, of judgments given and summonses issued under the  including rules"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e253",
                                    "bcl:num": "a",
                                    "bcl:text": "authorizing",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e262",
                                            "bcl:num": "i",
                                            "bcl:text": "the examination of a judgment debtor or a representative of the judgment debtor to determine the ability of the debtor to pay a judgment,"
                                        },
                                        {
                                            "@id": "d2e271",
                                            "bcl:num": "ii",
                                            "bcl:text": "the court, after an examination referred to in subparagraph (i), to make orders permitting the judgment to be paid by instalments or within a time specified by the court, and"
                                        },
                                        {
                                            "@id": "d2e280",
                                            "bcl:num": "iii",
                                            "bcl:text": "committal, for a maximum period that the rules may specify, for the failure of a judgment debtor to comply with an order referred to in subparagraph\u00a0(ii),"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e289",
                                    "bcl:num": "b",
                                    "bcl:text": "respecting seizure and sale of the judgment debtor's goods, and"
                                },
                                {
                                    "@id": "d2e298",
                                    "bcl:num": "c",
                                    "bcl:text": "respecting garnishment before and after judgment."
                                }
                            ]
                        },
                        {
                            "@id": "d2e308",
                            "bcl:num": "8",
                            "bcl:text": "In addition, in relation to the Provincial Court and the Supreme Court, the rules may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e317",
                                    "bcl:num": "a",
                                    "bcl:text": "permit or require, or provide to the court or to the parties to a proceeding the ability to permit or require, mediation to be included as part of a proceeding, whether or not the mediation is provided by or in the court, and"
                                },
                                {
                                    "@id": "d2e326",
                                    "bcl:num": "b",
                                    "bcl:text": "govern the conduct of, and all procedures relating to, the mediation."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e336",
                    "bcl:marginalnote": "Economical litigation",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e344",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96079_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Court Order Interest Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make rules under section 1 (1), (2) and (5) for the expeditious and efficient conduct of proceedings if the amount claimed is $100\u00a0000 or less, exclusive of interest, or of interest under the ."
                            }
                        },
                        {
                            "@id": "d2e356",
                            "bcl:num": "2",
                            "bcl:text": "Rules referred to in subsection (1) may provide for different practice and procedure, and for different practice and procedure for different classes of proceedings, with respect to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e365",
                                    "bcl:num": "a",
                                    "bcl:text": "form and commencement of proceedings,"
                                },
                                {
                                    "@id": "d2e375",
                                    "bcl:num": "b",
                                    "bcl:text": "interlocutory matters, and"
                                },
                                {
                                    "@id": "d2e384",
                                    "bcl:num": "c",
                                    "bcl:text": "any other matter with respect to which rules may be made under section\u00a01\u00a0(1),\u00a0(2) or (6)."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e394",
                    "bcl:marginalnote": "Rules for money in court",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e402",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may make rules for one or more of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e411",
                                    "bcl:num": "a",
                                    "bcl:text": "keeping of accounts for money in court, their form and the particulars to be included in them;"
                                },
                                {
                                    "@id": "d2e420",
                                    "bcl:num": "b",
                                    "bcl:text": "procedure and forms for payment into and out of court;"
                                },
                                {
                                    "@id": "d2e430",
                                    "bcl:num": "c",
                                    "bcl:text": "facilitating the court business and practice for the custody, care and disposal of money in court or belonging to suitors;"
                                },
                                {
                                    "@id": "d2e439",
                                    "bcl:num": "d",
                                    "bcl:text": "management, control and disposal of money in court and interest on it;"
                                },
                                {
                                    "@id": "d2e448",
                                    "bcl:num": "e",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96138_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Financial Administration Act"
                                        },
                                        "#text": "investment of money in court in investments permitted for a trust fund under section 40 (4) of the  and crediting of earnings from the investments to the money in court;"
                                    }
                                },
                                {
                                    "@id": "d1e451",
                                    "bcl:num": "f",
                                    "bcl:text": "respecting the security to be provided by a personal representative, other than a small estate declarant, for the administration of an estate."
                                }
                            ]
                        },
                        {
                            "@id": "d2e460",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96138_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Financial Administration Act"
                                },
                                "#text": "If there is a conflict between the  or a directive made under that Act and a rule made under subsection (1), that Act or the directive prevails."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e473",
                    "bcl:marginalnote": "Rules for disclosure in family matters",
                    "bcl:num": "4",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/11025_01",
                            "@xlink:type": "locator",
                            "in:doc": "Family Law Act"
                        },
                        "#text": "Without limiting section 1, the Lieutenant Governor in Council may make rules for the disclosure of information in proceedings under the , including rules requiring a corporation or partnership in which a party to the proceeding has a legal or beneficial interest to disclose financial statements or other information."
                    }
                },
                {
                    "@id": "d2e488",
                    "bcl:marginalnote": "Regulations of official reporters",
                    "bcl:num": "5",
                    "bcl:text": "After consultation with the Chief Justice of the Supreme Court, the Attorney General may make regulations as follows:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e499",
                            "bcl:num": "a",
                            "bcl:text": "respecting qualifications of official reporters or any class of official reporters;"
                        },
                        {
                            "@id": "d2e508",
                            "bcl:num": "b",
                            "bcl:text": "prescribing the functions and duties of official reporters or any class of official reporters;"
                        },
                        {
                            "@id": "d2e518",
                            "bcl:num": "c",
                            "bcl:text": "prescribing fees that are payable to official reporters or any class of official reporters by persons, including the Crown, in respect of transcripts and copies of transcripts of proceedings in all the courts in British Columbia, examinations for discovery and other services requested by those persons;"
                        },
                        {
                            "@id": "d2e527",
                            "bcl:num": "d",
                            "bcl:text": "respecting the form, content and delivery of transcripts."
                        }
                    ]
                },
                {
                    "@id": "d2e538",
                    "bcl:marginalnote": "Consultation and recommendations",
                    "bcl:num": "6",
                    "bcl:text": "The Lieutenant Governor in Council must not make a rule under sections\u00a01 to\u00a04 unless the Lieutenant Governor in Council has received the recommendation of the Attorney General after the Attorney General has consulted with the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e549",
                            "bcl:num": "a",
                            "bcl:text": "the Chief Justice of British Columbia, in relation to rules governing the Court of Appeal;"
                        },
                        {
                            "@id": "d2e558",
                            "bcl:num": "b",
                            "bcl:text": "the Chief Justice of the Supreme Court, in relation to rules governing the Supreme Court;"
                        },
                        {
                            "@id": "d2e568",
                            "bcl:num": "c",
                            "bcl:text": "the Chief Judge of the Provincial Court, in relation to rules governing the Provincial Court."
                        }
                    ]
                }
            ]
        }
    }
}