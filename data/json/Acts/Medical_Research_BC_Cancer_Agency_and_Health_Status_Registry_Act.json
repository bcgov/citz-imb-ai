        "act:title": "Medical Research (BC Cancer Agency) and Health Status Registry Act",
        "act:chapter": "1",
        "act:yearenacted": "2018",
        "act:deposited": "Deposited with Clerk of the Legislative Assembly on August 20, 2018",
        "act:currency": {
            "act:tlcDirPath": "1325524918/1915149325/224184340",
            "act:tlc": "E3tlc18001"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d1e29",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d1e41",
                            "bcl:text": {
                                "in:term": "BC Cancer Agency",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/15018_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Societies Act"
                                },
                                "#text": "means the British Columbia Cancer Agency Branch, a society incorporated under the  and that reports to the Provincial Health Services Authority;"
                            }
                        },
                        {
                            "@id": "d1e53",
                            "bcl:text": {
                                "in:term": "Health Status Registry",
                                "#text": "means the Health Status Registry continued under section 5 (1);"
                            }
                        },
                        {
                            "@id": "d1e62",
                            "bcl:text": {
                                "in:term": "request",
                                "#text": "means a request made under section 2 (1) or 5 (2), as applicable."
                            }
                        }
                    ]
                },
                {
                    "@id": "d1e71",
                    "bcl:marginalnote": "Request for research information",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d1e79",
                            "bcl:num": "1",
                            "bcl:text": "The BC Cancer Agency may request any person to provide the agency with prescribed information or records, or classes of information or records, if there are reasonable grounds to believe that",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e87",
                                    "bcl:num": "a",
                                    "bcl:text": "the information or records will facilitate medical research, and"
                                },
                                {
                                    "@id": "d1e96",
                                    "bcl:num": "b",
                                    "bcl:text": "the benefit to the public of the research justifies the request."
                                }
                            ]
                        },
                        {
                            "@id": "d1e106",
                            "bcl:num": "2",
                            "bcl:text": "Subject to any other enactment, a person to whom a request is made under subsection (1) must comply with the request in the manner and at the times requested if the information or records are within the person's possession or control."
                        },
                        {
                            "@id": "d1e115",
                            "bcl:num": "3",
                            "bcl:text": "The minister may make regulations prescribing the information or records, or classes of information or records, that may be requested under this section."
                        }
                    ]
                },
                {
                    "@id": "d1e125",
                    "bcl:marginalnote": "Disclosure of research information",
                    "bcl:num": "3",
                    "bcl:text": "A person must not disclose information or records the person has obtained under section 2 to another person except as follows:",
                    "bcl:paragraph": [
                        {
                            "@id": "d1e136",
                            "bcl:num": "a",
                            "bcl:text": "to a person engaged in medical research, whether or not the person is engaged in medical research for the BC Cancer Agency, for the purpose of medical research;"
                        },
                        {
                            "@id": "d1e145",
                            "bcl:num": "b",
                            "bcl:text": "in court proceedings related to this Act or a regulation;"
                        },
                        {
                            "@id": "d1e155",
                            "bcl:num": "c",
                            "bcl:text": "under an agreement that",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d1e163",
                                    "bcl:num": "i",
                                    "bcl:text": "is between the BC Cancer Agency and a government, government agency or another organization engaged in medical research,"
                                },
                                {
                                    "@id": "d1e172",
                                    "bcl:num": "ii",
                                    "bcl:text": "relates to medical research, and"
                                },
                                {
                                    "@id": "d1e181",
                                    "bcl:num": "iii",
                                    "bcl:text": "provides for the disclosure of information or records to that government, government agency or other organization;"
                                }
                            ]
                        },
                        {
                            "@id": "d1e191",
                            "bcl:num": "d",
                            "bcl:text": "for the purpose of compiling statistical information by a government, government agency or other organization, if the information is compiled to facilitate medical research."
                        }
                    ]
                },
                {
                    "@id": "d1e201",
                    "bcl:marginalnote": "Immunity from legal proceedings",
                    "bcl:num": "4",
                    "bcl:text": "An action for damages does not lie for anything done or omitted in good faith in the exercise or purported exercise of a power conferred under section 2 or 3 or the performance or purported performance of a duty imposed under section 2 or 3."
                },
                {
                    "@id": "d1e213",
                    "bcl:marginalnote": "Request for registry information",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d1e221",
                            "bcl:num": "1",
                            "bcl:text": "The Health Status Registry is continued for the purpose of recording and classifying, for statistical or health research purposes, information concerning one or more of the following matters:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e229",
                                    "bcl:num": "a",
                                    "bcl:text": "congenital anomalies;"
                                },
                                {
                                    "@id": "d1e238",
                                    "bcl:num": "b",
                                    "bcl:text": "genetic conditions;"
                                },
                                {
                                    "@id": "d1e247",
                                    "bcl:num": "c",
                                    "bcl:text": "chronic disabling conditions of individuals."
                                }
                            ]
                        },
                        {
                            "@id": "d1e257",
                            "bcl:num": "2",
                            "bcl:text": "A person acting on behalf of the Health Status Registry may request any person to provide the registry with information or records concerning the matters listed in subsection (1) if there are reasonable grounds to believe that",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e265",
                                    "bcl:num": "a",
                                    "bcl:text": "the information will facilitate the purpose of the registry, and"
                                },
                                {
                                    "@id": "d1e274",
                                    "bcl:num": "b",
                                    "bcl:text": "the likely benefit to the public justifies the request."
                                }
                            ]
                        },
                        {
                            "@id": "d1e284",
                            "bcl:num": "3",
                            "bcl:text": "A person to whom a request is made under subsection (2) must comply with the request in the manner and at the times requested if the information or record is within the person's possession or control."
                        }
                    ]
                },
                {
                    "@id": "d1e295",
                    "bcl:marginalnote": "Disclosure of registry information",
                    "bcl:num": "6",
                    "bcl:text": "A person acting on behalf of the Health Status Registry must not communicate personally identifying information obtained under section 5 to persons who are not acting on behalf of the registry except to the extent necessary for the purpose stated in section 5 (1)."
                },
                {
                    "@id": "d1e307",
                    "bcl:marginalnote": "Dispute of request",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d1e315",
                            "bcl:num": "1",
                            "bcl:text": "A person aggrieved by a request may apply to the Supreme Court for a review of the request."
                        },
                        {
                            "@id": "d1e324",
                            "bcl:num": "2",
                            "bcl:text": "An application under subsection (1) suspends the request until the court makes an order under subsection (3)."
                        },
                        {
                            "@id": "d1e333",
                            "bcl:num": "3",
                            "bcl:text": "On a review of a request, the court may order the cancellation of the request or make any other order it considers appropriate."
                        }
                    ]
                },
                {
                    "@id": "d1e343",
                    "bcl:marginalnote": "Offences",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d1e351",
                            "bcl:num": "1",
                            "bcl:text": "A person who makes a request other than as authorized under section 2 (1) or 5 (2) commits an offence."
                        },
                        {
                            "@id": "d1e360",
                            "bcl:num": "2",
                            "bcl:text": "A person who contravenes any of sections 2 (2), 3, 5 (3) and 6 commits an offence."
                        },
                        {
                            "@id": "d1e369",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96338_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Offence Act"
                                },
                                "#text": "Section 5 of the  does not apply to this Act."
                            }
                        }
                    ]
                }
            ],
