        "@id": "00_03022_01",
        "act:title": "Procurement Services Act",
        "act:chapter": "22",
        "act:yearenacted": "2003",
        "act:assentedto": "April 10, 2003",
        "act:currency": {
            "act:tlcDirPath": "1922970521/03022/tlc03022_f",
            "act:tlc": "tlc03022"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": {
                                "in:term": "government organization",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00023_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Budget Transparency and Accountability Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d2e41",
                            "bcl:text": [
                                {
                                    "in:term": "local public body",
                                    "#text": "means"
                                },
                                {
                                    "bcl:link": [
                                        {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96165_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Freedom of Information and Protection of Privacy Act"
                                        },
                                        {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/00023_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Budget Transparency and Accountability Act"
                                        }
                                    ],
                                    "#text": "as defined in Schedule 1 of the , and includes an organization to which a grant or advance of public money is made but does not include an organization that, under section 24 (2) (d) of the , is prescribed as being included in the government reporting entity;"
                                }
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e51",
                                    "bcl:num": "a",
                                    "bcl:text": "a local government body,"
                                },
                                {
                                    "@id": "d2e60",
                                    "bcl:num": "b",
                                    "bcl:text": "a health care body, or"
                                },
                                {
                                    "@id": "d2e69",
                                    "bcl:num": "c",
                                    "bcl:text": "an educational body,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e87",
                            "bcl:text": {
                                "in:term": "minister",
                                "#text": "means the minister responsible for the administration of this Act;"
                            }
                        },
                        {
                            "@id": "d2e96",
                            "bcl:text": {
                                "in:term": "participating jurisdiction",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e106",
                                    "bcl:num": "a",
                                    "bcl:text": "the government of Canada or an agency of it,"
                                },
                                {
                                    "@id": "d2e115",
                                    "bcl:num": "b",
                                    "bcl:text": "the government of another province or an agency of it, or"
                                },
                                {
                                    "@id": "d2e124",
                                    "bcl:num": "c",
                                    "bcl:text": "a first nation or an agency of it."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e134",
                    "bcl:marginalnote": "Duties and powers of the minister",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e142",
                            "bcl:num": "1",
                            "bcl:text": "The minister may do the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "a",
                                    "bcl:text": "acquire and assist in acquiring personal property, other than intangible personal property, for the government, government organizations, local public bodies and participating jurisdictions;"
                                },
                                {
                                    "@id": "d2e160",
                                    "bcl:num": "b",
                                    "bcl:text": "acquire and assist in acquiring intangible personal property for the government and assist government organizations, local public bodies and participating jurisdictions in acquiring intangible personal property;"
                                },
                                {
                                    "@id": "d2e170",
                                    "bcl:num": "c",
                                    "bcl:text": "contract on behalf of the government for services, including services respecting the construction of buildings and other works;"
                                },
                                {
                                    "@id": "d2e179",
                                    "bcl:num": "d",
                                    "bcl:text": "assist government organizations, local public bodies and participating jurisdictions in contracting for services, including services respecting the construction of buildings and other works;"
                                },
                                {
                                    "@id": "d2e188",
                                    "bcl:num": "e",
                                    "bcl:text": "direct the establishment, maintenance and operation of depots or warehouses in which personal property may be stored and from which it may be distributed;"
                                },
                                {
                                    "@id": "d2e197",
                                    "bcl:num": "f",
                                    "bcl:text": "dispose and assist in disposing, of personal property of the government, government organizations, local public bodies, and participating jurisdictions;"
                                },
                                {
                                    "@id": "d2e206",
                                    "bcl:num": "g",
                                    "bcl:text": "carry out prescribed responsibilities."
                                }
                            ]
                        },
                        {
                            "@id": "d2e215",
                            "bcl:num": "2",
                            "bcl:text": "The minister may carry out an activity described in subsection (1) for a person other than the government, a government organization, a local public body or a participating jurisdiction, if",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e225",
                                    "bcl:num": "a",
                                    "bcl:text": "the person provides personal property or services to the government, a government organization, a local public body or another, and"
                                },
                                {
                                    "@id": "d2e234",
                                    "bcl:num": "b",
                                    "bcl:text": "the minister considers that, as a result of carrying out the activity, the government, a government organization or a local public body saves money or a public benefit is otherwise achieved."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e244",
                    "bcl:marginalnote": "Best practices",
                    "bcl:num": "3",
                    "bcl:text": [
                        "The minister may recommend to government, government organizations and local public bodies",
                        "that promote fair and open procurement, competition, demand aggregation, value for money, transparency and accountability."
                    ],
                    "bcl:paragraph": [
                        {
                            "@id": "d2e255",
                            "bcl:num": "a",
                            "bcl:text": "practices,"
                        },
                        {
                            "@id": "d2e264",
                            "bcl:num": "b",
                            "bcl:text": "the form and content of agreements, and"
                        },
                        {
                            "@id": "d2e274",
                            "bcl:num": "c",
                            "bcl:text": "arrangements"
                        }
                    ]
                },
                {
                    "@id": "d2e287",
                    "bcl:marginalnote": "Agreements, fees and charges",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e295",
                            "bcl:num": "1",
                            "bcl:text": "For any of the purposes under this Act, the minister, on behalf of the government,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e304",
                                    "bcl:num": "a",
                                    "bcl:text": "may make agreements and arrangements with government organizations, local public bodies, participating jurisdictions and others, and"
                                },
                                {
                                    "@id": "d2e313",
                                    "bcl:num": "b",
                                    "bcl:text": "may set fees or charges to be paid by government organizations, local public bodies, participating jurisdictions and others for services provided under this Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e323",
                            "bcl:num": "2",
                            "bcl:text": "The discretion under subsection (1) (b) includes the discretion to set fees or charges that",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e332",
                                    "bcl:num": "a",
                                    "bcl:text": "apply generally or to specific",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e341",
                                            "bcl:num": "i",
                                            "bcl:text": "persons, organizations, things or transactions, or"
                                        },
                                        {
                                            "@id": "d2e350",
                                            "bcl:num": "ii",
                                            "bcl:text": "classes of persons, organizations, things or transactions, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e359",
                                    "bcl:num": "b",
                                    "bcl:text": "may differ for different",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e368",
                                            "bcl:num": "i",
                                            "bcl:text": "persons, organizations, things or transactions, or"
                                        },
                                        {
                                            "@id": "d2e378",
                                            "bcl:num": "ii",
                                            "bcl:text": "classes of persons, organizations, things or transactions."
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e388",
                    "bcl:marginalnote": "Delegation by minister",
                    "bcl:num": "5",
                    "bcl:text": "The minister",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e399",
                            "bcl:num": "a",
                            "bcl:text": "may delegate a power or duty of the minister under this Act to any person, and"
                        },
                        {
                            "@id": "d2e408",
                            "bcl:num": "b",
                            "bcl:text": "may vary or revoke a delegation under this section."
                        }
                    ]
                },
                {
                    "@id": "d2e419",
                    "bcl:marginalnote": "Regulations",
                    "bcl:num": "6",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                    }
                },
                {
                    "@id": "d2e434",
                    "bcl:marginalnote": "Spent",
                    "bcl:num": {
                        "in:em": "7-12"
                    },
                    "bcl:text": {
                        "in:em": "[Consequential amendments and repeal. Spent. 2003-22-7 to 12.]"
                    }
                }
            ]
        }
    }
}