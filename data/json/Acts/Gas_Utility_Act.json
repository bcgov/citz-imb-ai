        "@id": "00_96170_01",
        "act:title": "Gas Utility Act",
        "act:chapter": "170",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "553593740/96170/tlc96170_f",
            "act:tlc": "E3tlc96170"
        },
        "act:content": {
            "bcl:section": {
                "@id": "d2e21",
                "bcl:marginalnote": "Definitions",
                "bcl:num": "1",
                "bcl:text": "In this Act:",
                "bcl:definition": [
                    {
                        "@id": "d2e32",
                        "bcl:text": {
                            "in:term": "commission",
                            "bcl:link": {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96473_01",
                                "@xlink:type": "locator",
                                "in:doc": "Utilities Commission Act"
                            },
                            "#text": "means the British Columbia Utilities Commission under the ;"
                        }
                    },
                    {
                        "@id": "d2e44",
                        "bcl:text": {
                            "in:term": "gas",
                            "#text": "includes natural, manufactured and mixed gas and liquefied petroleum gas;"
                        }
                    },
                    {
                        "@id": "d2e54",
                        "bcl:text": {
                            "in:term": "gas utility",
                            "bcl:link": {
                                "@resource": "leg",
                                "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/N-7/index.html",
                                "@xlink:type": "locator",
                                "in:doc": "National Energy Board Act"
                            },
                            "#text": "means a person that owns or operates in British Columbia equipment or facilities for the production, generation, storage, transmission, sale, delivery or furnishing of gas for the production of light, heat, cold or power to or for the public or a corporation for compensation, but does not include a company within the meaning of that word as defined in the \u00a0(Canada);"
                        }
                    },
                    {
                        "@id": "d2e66",
                        "bcl:text": {
                            "in:term": "land",
                            "#text": "includes"
                        },
                        "bcl:paragraph": [
                            {
                                "@id": "d2e75",
                                "bcl:num": "a",
                                "bcl:text": "an easement or privilege in, to, on, under, over or in respect of land, and"
                            },
                            {
                                "@id": "d2e84",
                                "bcl:num": "b",
                                "bcl:text": "foreshore and land covered by water;"
                            }
                        ]
                    },
                    {
                        "@id": "d2e93",
                        "bcl:text": {
                            "in:term": "owner",
                            "#text": "means a person who is registered in a land title office as the owner of land or of a charge on land, whether entitled to it in the person's own right or in a representative capacity or otherwise, and, subject to the payment to the government of any unpaid purchase money, includes a purchaser of Crown land and a pre-emptor of Crown land and any person entitled to the minerals or timber in or on or a lease to Crown land;"
                        }
                    },
                    {
                        "@id": "d2e102",
                        "bcl:text": {
                            "in:term": "registrar",
                            "bcl:link": {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96250_00",
                                "@xlink:type": "locator",
                                "in:doc": "Land Title Act"
                            },
                            "#text": "means the registrar under the \u00a0for the land title district in which the affected land is located."
                        }
                    }
                ]
            },
            "bcl:part": [
                {
                    "@id": "d2e115",
                    "bcl:num": "1",
                    "bcl:section": [
                        {
                            "@id": "d2e121",
                            "bcl:marginalnote": "Authority and power of gas utilities",
                            "bcl:num": "2",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e129",
                                    "bcl:num": "1",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96473_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Utilities Commission Act"
                                        },
                                        "#text": "A gas utility that on April 14, 1954 was carrying on business as a gas utility in a municipality or rural area is authorized and empowered, subject to the , to carry on its business as a gas utility in the municipality or rural area."
                                    }
                                },
                                {
                                    "@id": "d2e141",
                                    "bcl:num": "2",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96473_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Utilities Commission Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96473_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Utilities Commission Act"
                                            }
                                        ],
                                        "#text": "A gas utility to which a certificate of public convenience and necessity is granted after April\u00a014, 1954 under the  or the legislation that preceded it is authorized and empowered, subject to the , to carry on its business as a gas utility in the municipality or rural area mentioned in the certificate."
                                    }
                                },
                                {
                                    "@id": "d2e156",
                                    "bcl:num": "3",
                                    "bcl:text": "Without limiting subsection (1) or (2), a gas utility authorized under either of those subsections may do one or all of the following:",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e166",
                                            "bcl:num": "a",
                                            "bcl:text": "produce, generate, store, mix, transmit, distribute, deliver, furnish, sell and take delivery of gas;"
                                        },
                                        {
                                            "@id": "d2e175",
                                            "bcl:num": "b",
                                            "bcl:text": "construct, develop, renew, alter, repair, maintain, operate and use property for any of those purposes;"
                                        },
                                        {
                                            "@id": "d2e184",
                                            "bcl:num": "c",
                                            "bcl:text": "place, construct, renew, alter, repair, maintain, operate and use its pipes and other equipment and appliances for mixing, transmitting, distributing, delivering, furnishing and taking delivery of gas on, along, across, over or under any public street, lane, square, park, public place, bridge, viaduct, subway or watercourse",
                                            "bcl:subparagraph": [
                                                {
                                                    "@id": "d2e193",
                                                    "bcl:num": "i",
                                                    "bcl:text": "in a municipality, on the conditions that the gas utility and the municipality agree to,"
                                                },
                                                {
                                                    "@id": "d2e202",
                                                    "bcl:num": "ii",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "/legislation/04044_01",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Transportation Act"
                                                        },
                                                        "#text": "in a rural area that is neither treaty lands nor Nisg\u0331a'a Lands, on the conditions that the minister charged with the administration of the  approves,"
                                                    }
                                                },
                                                {
                                                    "@id": "d2e214",
                                                    "bcl:num": "iii",
                                                    "bcl:text": "in treaty lands, as applicable under the final agreement,",
                                                    "bcl:clause": [
                                                        {
                                                            "@id": "d2e224",
                                                            "bcl:num": "A",
                                                            "bcl:text": "on the conditions the treaty first nation and gas utility agree to,"
                                                        },
                                                        {
                                                            "@id": "d2e233",
                                                            "bcl:num": "B",
                                                            "bcl:text": "on notice to the treaty first nation, or"
                                                        },
                                                        {
                                                            "@id": "d2e242",
                                                            "bcl:num": "C",
                                                            "bcl:text": "if, on receiving notice under clause (B), a work plan is required by the treaty first nation, as set out in a work plan approved by the treaty first nation, or"
                                                        }
                                                    ]
                                                },
                                                {
                                                    "@id": "d2e246",
                                                    "bcl:num": "iv",
                                                    "bcl:text": "in Nisg\u0331a'a Lands, on the conditions that the gas utility and the Nisg\u0331a'a Nation or Nisg\u0331a'a Village, as applicable, agree to."
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e252",
                            "bcl:marginalnote": "Matters under former Act",
                            "bcl:num": "3",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e260",
                                    "bcl:num": "1",
                                    "bcl:text": {
                                        "in:doc": "Energy Act",
                                        "#text": "A certificate, order, approval, rule, regulation, endorsement or decision made or deemed to have been made in respect of a gas utility by the British Columbia Energy Commission under the , R.S.B.C. 1979, c.\u00a0108, and that was in force on September\u00a011,\u00a01980, continues in force until it expires or is suspended, cancelled, repealed or amended, and is deemed to be made by the British Columbia Utilities Commission under this Act."
                                    }
                                },
                                {
                                    "@id": "d2e272",
                                    "bcl:num": "2",
                                    "bcl:text": {
                                        "in:doc": "Energy Act",
                                        "#text": "A filing, return or report respecting a gas utility, made or deemed to have been made to the Energy Commission under the , R.S.B.C. 1979, c.\u00a0108, before September\u00a011,\u00a01980, is deemed to have been made to the British Columbia Utilities Commission under this Act."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e285",
                            "bcl:marginalnote": "Contractual rights preserved",
                            "bcl:num": "4",
                            "bcl:text": "Nothing in this Act limits, restricts or annuls the rights and privileges of a gas utility under an existing contract between it and a municipality under a bylaw of a municipality or under an Act."
                        }
                    ]
                },
                {
                    "@id": "d2e298",
                    "bcl:num": "2",
                    "bcl:section": [
                        {
                            "@id": "d2e304",
                            "bcl:marginalnote": "Definition",
                            "bcl:num": "5",
                            "bcl:text": {
                                "in:term": "utility",
                                "#text": "In this Part,  means a gas utility authorized under section 2 to carry on its business as a gas utility."
                            }
                        },
                        {
                            "@id": "d2e319",
                            "bcl:marginalnote": "Right to expropriate land",
                            "bcl:num": "6",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96125_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Expropriation Act"
                                },
                                "#text": "A utility may expropriate any land in British Columbia reasonably required for its undertaking, and, in that event, the  applies."
                            }
                        },
                        {
                            "@id": "d2e334",
                            "bcl:marginalnote": "Power to enter and use land in certain cases",
                            "bcl:num": "7",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e342",
                                    "bcl:num": "1",
                                    "bcl:text": "If, in the opinion of the commission, a delay in starting the construction of any works is not in the public interest or would cause unnecessary inconvenience or expense to the utility, the commission may authorize the utility to enter and use the land for constructing and maintaining the works, once the utility has deposited with the commission security in a form and amount the commission considers adequate to indemnify the owner for damage the owner might sustain by construction of the works."
                                },
                                {
                                    "@id": "d2e351",
                                    "bcl:num": "2",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96125_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Expropriation Act"
                                        },
                                        "#text": "If the utility exercises its authority to enter and use the land, the utility must, within a reasonable time, expropriate or otherwise acquire the land required, and, in that event, the  applies."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e364",
                            "bcl:marginalnote": "Offence",
                            "bcl:num": "8",
                            "bcl:text": "A person who hinders or prevents entry on land or entry on or use of land under section\u00a07 commits an offence."
                        },
                        {
                            "@id": "d2e376",
                            "bcl:marginalnote": "Power to make regulations",
                            "bcl:num": "9",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        }
                    ]
                }
            ]
        }
    }
}