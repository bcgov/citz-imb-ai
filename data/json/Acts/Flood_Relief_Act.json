        "@id": "00_96151_01",
        "act:title": "Flood Relief Act",
        "act:chapter": "151",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1198514681/96151/tlc96151_f",
            "act:tlc": "E2tlc96151"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Authority for flood control measures",
                    "bcl:num": "1",
                    "bcl:text": "The Lieutenant Governor in Council may",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e26",
                            "bcl:num": "a",
                            "bcl:text": "enter into agreements with any public authority in British Columbia for relief and rehabilitation because of flood conditions or other circumstances attributable to them;"
                        },
                        {
                            "@id": "d2e35",
                            "bcl:num": "b",
                            "bcl:text": "contribute or lend to a public authority a proportion of the cost of measures undertaken by the public authority with the approval of the Lieutenant Governor in Council for relief or rehabilitation in flood areas;"
                        },
                        {
                            "@id": "d2e45",
                            "bcl:num": "c",
                            "bcl:text": "enter into agreements with Canada for payment of a portion of the cost incurred by British Columbia, by municipal authorities in the Fraser Valley and by departments and agencies of Canada in repairing, strengthening, constructing and reconstructing dikes in the valley on the basis that Canada bears 75% of the cost."
                        }
                    ]
                },
                {
                    "@id": "d2e55",
                    "bcl:marginalnote": "Municipal powers",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e63",
                            "bcl:num": "1",
                            "bcl:text": "A municipality located in an area in British Columbia defined as a flood relief area by the Lieutenant Governor in Council may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e72",
                                    "bcl:num": "a",
                                    "bcl:text": "enter into an agreement with British Columbia approved by the Lieutenant Governor in Council,"
                                },
                                {
                                    "@id": "d2e81",
                                    "bcl:num": "b",
                                    "bcl:text": "do all things necessary for or incidental to carrying out the agreement,"
                                },
                                {
                                    "@id": "d2e91",
                                    "bcl:num": "c",
                                    "bcl:text": "defray the costs of the agreement as part of the ordinary expenditures of the municipality or from money borrowed for the agreement, and"
                                },
                                {
                                    "@id": "d2e100",
                                    "bcl:num": "d",
                                    "bcl:text": "initiate, undertake and execute any work or undertaking within the scope of any agreement entered into by the municipality under this Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e109",
                            "bcl:num": "2",
                            "bcl:text": "Subsection (1) applies despite any other Act and although the municipality may not have submitted the matter to or obtained the approval of the electors of the municipality."
                        }
                    ]
                },
                {
                    "@id": "d2e119",
                    "bcl:marginalnote": "Boards for flood areas",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e127",
                            "bcl:num": "1",
                            "bcl:text": "For flood areas, the Lieutenant Governor in Council may do any of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e136",
                                    "bcl:num": "a",
                                    "bcl:text": "establish and name boards considered necessary;"
                                },
                                {
                                    "@id": "d2e145",
                                    "bcl:num": "b",
                                    "bcl:text": "confer on a board powers necessary to carry out this Act;"
                                },
                                {
                                    "@id": "d2e155",
                                    "bcl:num": "c",
                                    "bcl:text": "appoint persons to a board and set their remuneration."
                                }
                            ]
                        },
                        {
                            "@id": "d2e164",
                            "bcl:num": "2",
                            "bcl:text": "A board is a corporation and an agent of the government."
                        },
                        {
                            "@id": "d2e173",
                            "bcl:num": "3",
                            "bcl:text": "A board may appoint required employees and set and pay their remuneration."
                        },
                        {
                            "@id": "d2e182",
                            "bcl:num": "4",
                            "bcl:text": "The members of a board hold office during pleasure."
                        },
                        {
                            "@id": "d2e191",
                            "bcl:num": "5",
                            "bcl:text": "The employees hold office during the pleasure of the board."
                        }
                    ]
                },
                {
                    "@id": "d2e201",
                    "bcl:marginalnote": "Report and audit",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e209",
                            "bcl:num": "1",
                            "bcl:text": "A board must submit a report of its transactions to and at the times required by the Lieutenant Governor in Council."
                        },
                        {
                            "@id": "d2e218",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/03002_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Auditor General Act"
                                },
                                "#text": "Unless the Auditor General is appointed in accordance with the  as the auditor of the board, the Lieutenant Governor in Council must appoint an auditor to audit the accounts of the board at least once each year."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e231",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "5",
                    "bcl:text": "[Repealed 2003-22-8.]"
                },
                {
                    "@id": "d2e244",
                    "bcl:marginalnote": "Power to direct payment",
                    "bcl:num": "6",
                    "bcl:text": "In addition to all other money to be spent under any other Act, the Lieutenant Governor in Council may direct that money required for the purposes of this Act and to pay all costs of the administration of this Act be expended from the consolidated revenue fund."
                },
                {
                    "@id": "d2e256",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e264",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e276",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e285",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribing the duties and functions of a board;"
                                },
                                {
                                    "@id": "d2e295",
                                    "bcl:num": "b",
                                    "bcl:text": "prescribing the measures to be taken by a board under this Act;"
                                },
                                {
                                    "@id": "d2e304",
                                    "bcl:num": "c",
                                    "bcl:text": "prescribing the nature of the damage for which aid may be given;"
                                },
                                {
                                    "@id": "d2e313",
                                    "bcl:num": "d",
                                    "bcl:text": "prescribing the extent and nature of work to be undertaken for the building of works for the prevention of flood damage."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}