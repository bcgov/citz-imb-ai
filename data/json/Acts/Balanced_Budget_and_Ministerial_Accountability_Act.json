{
    "act:act": {
        "@xmlns:act": "http://www.gov.bc.ca/2013/legislation/act",
        "@xmlns:xsi": "http://www.w3.org/2001/XMLSchema-instance",
        "@xmlns:bcl": "http://www.gov.bc.ca/2013/bclegislation",
        "@xmlns:xlink": "http://www.w3.org/1999/xlink",
        "@xmlns:in": "http://www.qp.gov.bc.ca/2013/inline",
        "@xmlns:fun": "http://www.bclaws.ca/xslt/functions",
        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_01028_01",
        "act:title": "Balanced Budget and Ministerial Accountability Act",
        "act:chapter": "28",
        "act:yearenacted": "2001",
        "act:assentedto": "August 16, 2001",
        "act:currency": {
            "act:tlcDirPath": "1944036832/01028/tlc01028_f",
            "act:tlc": "E3tlc01028"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions and interpretation",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e26",
                            "bcl:num": "1",
                            "bcl:text": "In this Act:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e35",
                                    "bcl:text": {
                                        "in:term": "government reorganization",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96066_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Constitution Act"
                                        },
                                        "#text": "means the assignment of responsibilities to members of the Executive Council made by Order in Council under any of the following provisions of the :"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e47",
                                            "bcl:num": "a",
                                            "bcl:text": {
                                                "in:desc": "[designation of minister with portfolio and ministers without portfolio]",
                                                "#text": "section 9 (2)\u00a0;"
                                            }
                                        },
                                        {
                                            "@id": "d2e60",
                                            "bcl:num": "b",
                                            "bcl:text": {
                                                "in:desc": "[transfer of powers and duties between ministers]",
                                                "#text": "section 10\u00a0;"
                                            }
                                        },
                                        {
                                            "@id": "d2e72",
                                            "bcl:num": "c",
                                            "bcl:text": {
                                                "in:desc": "[organization of ministries]",
                                                "#text": "section 13\u00a0;"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e84",
                                    "bcl:text": {
                                        "in:term": "member of the Executive Council",
                                        "#text": "includes a person who was a member of the Executive Council at any time in the applicable fiscal year;"
                                    }
                                },
                                {
                                    "@id": "d2e93",
                                    "bcl:text": {
                                        "in:term": "operating expenses",
                                        "#text": "means operating expenses accounted for in the consolidated revenue fund."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e102",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00023_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Budget Transparency and Accountability Act"
                                },
                                "#text": "In this Act, words and expressions have the same meanings as in the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e115",
                    "bcl:marginalnote": "Prohibition against deficit budgets",
                    "bcl:num": "2",
                    "bcl:text": "The main estimates for a fiscal year must not contain a forecast of a deficit for that fiscal year."
                },
                {
                    "@id": "d2e127",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "2.1",
                    "bcl:text": "[Repealed 2009-2-2.]"
                },
                {
                    "@id": "d1e152",
                    "bcl:marginalnote": "Deficits permitted for 2021\u20132022 to 2025\u20132026 fiscal years",
                    "bcl:num": "2.2",
                    "bcl:text": {
                        "in:desc": "[prohibition against deficit budgets]",
                        "#text": "The prohibition in section 2  does not apply to the main estimates for the 2021\u20132022 to 2025\u20132026 fiscal years."
                    }
                },
                {
                    "@id": "d2e139",
                    "bcl:marginalnote": "Salary holdback",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e147",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96257_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Members' Remuneration and Pensions Act"
                                },
                                "#text": "The salary otherwise payable under section 4 of the  to each member of the Executive Council must be reduced by\u00a010%."
                            }
                        },
                        {
                            "@id": "d2e159",
                            "bcl:num": "2",
                            "bcl:text": "A reduction in salary, under this section, of a member of the Executive Council is to be restored, in full or in part, to the member as provided in, and subject to, section\u00a05."
                        }
                    ]
                },
                {
                    "@id": "d2e169",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "4",
                    "bcl:text": "[Repealed 2022-11-3.]"
                },
                {
                    "@id": "d2e200",
                    "bcl:marginalnote": "Holdback for achieving individual responsibilities",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e208",
                            "bcl:num": "1",
                            "bcl:text": "The salary reduction under section 3, for any period in a fiscal year when a member of the Executive Council was a minister with portfolio responsible for operating expenses authorized by a vote, becomes due and payable to that member on the next day after the public accounts for that fiscal year are made public, if the actual amount of those operating expenses does not exceed the estimated amount of those operating expenses for that fiscal year in the main estimates, subject to any revision under section 6 (1.1), (1.2) or (1.3)."
                        },
                        {
                            "@id": "d2e217",
                            "bcl:num": "1.1",
                            "bcl:text": "[Repealed 2009-14-2.]"
                        },
                        {
                            "@id": "d2e226",
                            "bcl:num": "2",
                            "bcl:text": "[Repealed 2010-5-164.]"
                        },
                        {
                            "@id": "d2e236",
                            "bcl:num": "3",
                            "bcl:text": "The salary reduction under section 3, for any period in a fiscal year when a member of the Executive Council was without responsibilities referred to in subsection (1) of this section, becomes due and payable to that member of the Executive Council on the day after the applicable information is made public under section 6 (3) for expected results that are specified by regulation of Treasury Board, if the actual results for that fiscal year are the same or better than those expected results."
                        },
                        {
                            "@id": "d2e245",
                            "bcl:num": "4",
                            "bcl:text": [
                                "As an additional condition, if during any period in a fiscal year",
                                "no part of the salary reduction under section 3 in relation to that period becomes due and payable to the member unless all conditions under subsections (1) and (3) applicable to that member during the period are satisfied for the fiscal year."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e254",
                                    "bcl:num": "a",
                                    "bcl:text": "a member of the Executive Council held more than one portfolio, or"
                                },
                                {
                                    "@id": "d2e263",
                                    "bcl:num": "b",
                                    "bcl:text": "a member of the Executive Council had responsibilities under subsection (3) transferred to the member by regulation under section 9 (2) (b),"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e276",
                    "bcl:marginalnote": "Making public a comparison of expected and actual results",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e284",
                            "bcl:num": "1",
                            "bcl:text": "The following information for a fiscal year must be made public with the main estimates for that fiscal year:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e293",
                                    "bcl:num": "a",
                                    "bcl:text": "the estimated amount referred to in section 5 (1);"
                                },
                                {
                                    "@id": "d2e302",
                                    "bcl:num": "b",
                                    "bcl:text": "[Repealed 2010-5-165.]"
                                },
                                {
                                    "@id": "d2e312",
                                    "bcl:num": "c",
                                    "bcl:text": "the expected results referred to in section 5 (3)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e321",
                            "bcl:num": "1.1",
                            "bcl:text": [
                                "If",
                                {
                                    "in:desc": "[transferred powers, duties and functions]",
                                    "bcl:link": {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96066_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Constitution Act"
                                    },
                                    "#text": "within 90 days after that reorganization the minister must make public a statement of the information referred to in subsection (1) (a) in relation to that fiscal year, revised to reflect any transfers under section 14\u00a0 of the  of spending authority in relation to operating expenses to which section 5 (1) of this Act applies."
                                }
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e330",
                                    "bcl:num": "a",
                                    "bcl:text": "there is a government reorganization after the main estimates for a fiscal year have been presented, and"
                                },
                                {
                                    "@id": "d2e339",
                                    "bcl:num": "b",
                                    "bcl:text": "the reorganization affects a member of the Executive Council to whom section\u00a05\u00a0(1) applies,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e357",
                            "bcl:num": "1.2",
                            "bcl:text": "If supplementary estimates are presented for a fiscal year, the minister must make public with the supplementary estimates a statement of the information referred to in subsection (1) (a) in relation to that fiscal year, revised to reflect the supplementary estimates."
                        },
                        {
                            "@id": "d2e367",
                            "bcl:num": "1.3",
                            "bcl:text": "If a reallocation of spending authority in relation to operating expenses occurs during a fiscal year among members of the Executive Council under a vote that authorizes spending by more than one member, within 90 days after the reallocation the minister must make public a statement of the information referred to in subsection (1) (a) in relation to that fiscal year, revised to reflect the reallocation."
                        },
                        {
                            "@id": "d2e376",
                            "bcl:num": "2",
                            "bcl:text": "The following information for a fiscal year must be made public with the public accounts for that fiscal year:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e385",
                                    "bcl:num": "a",
                                    "bcl:text": "[Repealed 2022-11-5.]"
                                },
                                {
                                    "@id": "d2e394",
                                    "bcl:num": "b",
                                    "bcl:text": "the actual amount of those operating expenses referred to in section 5 (1);"
                                },
                                {
                                    "@id": "d2e403",
                                    "bcl:num": "c",
                                    "bcl:text": "[Repealed 2010-5-165.]"
                                },
                                {
                                    "@id": "d2e412",
                                    "bcl:num": "d",
                                    "bcl:text": "the related information required for the purposes of section 5."
                                }
                            ]
                        },
                        {
                            "@id": "d2e422",
                            "bcl:num": "3",
                            "bcl:text": "The following information for a fiscal year must be made public with the public accounts for that fiscal year, or as soon as reasonably practicable after that time, and in any case before December 31 in the year in which the public accounts for the fiscal year are made public:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e431",
                                    "bcl:num": "a",
                                    "bcl:text": "the actual results referred to in section 5 (3);"
                                },
                                {
                                    "@id": "d2e440",
                                    "bcl:num": "b",
                                    "bcl:text": "the related information required for the purposes of section 5."
                                }
                            ]
                        },
                        {
                            "@id": "d2e449",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00023_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Budget Transparency and Accountability Act"
                                },
                                "#text": "The actual results referred to in section 5 (3) may be included in the applicable annual service plan report under section 16 of the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e462",
                    "bcl:marginalnote": "Calculation of operating expenses",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e470",
                            "bcl:num": "1",
                            "bcl:text": "For the purposes of sections 5, 6 and 8, the operating expenses for a fiscal year must be determined and made public on the basis of the accounting practices used in the main estimates for the fiscal year."
                        },
                        {
                            "@id": "d2e498",
                            "bcl:num": "2",
                            "bcl:text": {
                                "in:desc": "[change in accounting policies and practices]",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00023_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Budget Transparency and Accountability Act"
                                },
                                "#text": "Subsection (1) of this section applies even if there is a change referred to in section\u00a011\u00a0(2)\u00a0(a)  of the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e517",
                    "bcl:marginalnote": "Application of Act in relation to change of government",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e525",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:term": "new Premier's appointment date",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96066_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Constitution Act"
                                },
                                "#text": "In this section,  means the date, following a general election or other event referred to in subsection (2), on which a Premier is appointed under section 9 of the ."
                            }
                        },
                        {
                            "@id": "d2e534",
                            "bcl:num": "2",
                            "bcl:text": "This section applies if the political party that forms the government after a general election or other event is different from the political party that formed the government immediately before the general election or other event."
                        },
                        {
                            "@id": "d2e580",
                            "bcl:num": "3",
                            "bcl:text": "Subject to subsection (4), for the purpose of ascertaining the payment due and payable under section 5 to a member of the Executive Council appointed to that office before the new Premier's appointment date,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e589",
                                    "bcl:num": "a",
                                    "bcl:text": "the references in sections 5 and 6 to the public accounts for a fiscal year must be read as references to",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e658",
                                            "bcl:num": "i",
                                            "bcl:text": "those public accounts for that fiscal year if the public accounts are made public before the new Premier's appointment date, or"
                                        },
                                        {
                                            "@id": "d1e667",
                                            "bcl:num": "ii",
                                            "bcl:text": "if subparagraph (i) does not apply, the most recent quarterly report for that fiscal year made public before the new Premier's appointment date, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e598",
                                    "bcl:num": "b",
                                    "bcl:text": "the amount of operating expenses for a fiscal year must be determined,",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e685",
                                            "bcl:num": "i",
                                            "bcl:text": "if paragraph (a) (i) applies, by reference to the public accounts, or"
                                        },
                                        {
                                            "@id": "d1e694",
                                            "bcl:num": "ii",
                                            "bcl:text": "if paragraph (a) (ii) applies, by reference to the operating expenses contained in the quarterly report."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d1e706",
                            "bcl:num": "4",
                            "bcl:text": "Despite sections 3 (2) and 5, if a quarterly report in respect of a fiscal year is not made public before the new Premier's appointment date, a reduction in salary under section 3, for the fiscal year, of a member of the Executive Council appointed to that office before the new Premier's appointment date is to be restored in full and is due and payable to the member on that date."
                        },
                        {
                            "@id": "d1e715",
                            "bcl:num": "5",
                            "bcl:text": "Section 3 does not apply to a member of the Executive Council appointed to that office on or after the new Premier's appointment date until a Supply Act is enacted after that date."
                        }
                    ]
                },
                {
                    "@id": "d2e608",
                    "bcl:marginalnote": "Regulations",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e616",
                            "bcl:num": "1",
                            "bcl:text": "The Treasury Board may make regulations for the purposes of section 5 (3)."
                        },
                        {
                            "@id": "d2e625",
                            "bcl:num": "2",
                            "bcl:text": "A regulation referred to in section 5 (3) may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e634",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribe differently for different members of the Executive Council or classes of members, and"
                                },
                                {
                                    "@id": "d2e644",
                                    "bcl:num": "b",
                                    "bcl:text": "if there has been a government reorganization, transfer previously assigned responsibilities to any other member of the Executive Council or establish responsibilities for a new ministerial position."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e654",
                    "bcl:marginalnote": "Spent",
                    "bcl:num": {
                        "in:em": "10"
                    },
                    "bcl:text": {
                        "in:em": "[Repeal. Spent. 2001-28-10.]"
                    }
                },
                {
                    "@id": "d2e673",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "11",
                    "bcl:text": "Sections 1 to 9 come into force on April 1, 2002."
                }
            ]
        }
    }
}