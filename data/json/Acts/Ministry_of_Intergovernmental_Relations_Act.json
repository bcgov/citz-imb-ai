        "@id": "00_96303_01",
        "act:title": "Ministry of Intergovernmental Relations Act",
        "act:chapter": "303",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1325524918/96303/tlc96303_f",
            "act:tlc": "tlc96303"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Ministry of Intergovernmental Relations",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e23",
                            "bcl:num": "1",
                            "bcl:text": "There is to be a ministry of the public service of British Columbia called the Ministry of Intergovernmental Relations."
                        },
                        {
                            "@id": "d2e32",
                            "bcl:num": "2",
                            "bcl:text": "The minister is to preside over the ministry and be responsible to the Lieutenant Governor in Council for the direction of the ministry."
                        }
                    ]
                },
                {
                    "@id": "d2e42",
                    "bcl:marginalnote": "Deputy minister",
                    "bcl:num": "2",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96385_01",
                            "@xlink:type": "locator",
                            "in:doc": "Public Service Act"
                        },
                        "#text": "One or more deputy ministers of the ministry may be appointed under the ."
                    }
                },
                {
                    "@id": "d2e57",
                    "bcl:marginalnote": "Purposes and functions of the ministry",
                    "bcl:num": "3",
                    "bcl:text": "The purposes and functions of the ministry include the duty",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e68",
                            "bcl:num": "a",
                            "bcl:text": "to coordinate the activities of, to make recommendations to, and to develop programs and policies for the Executive Council in relation to federal-provincial, interprovincial and extraprovincial affairs, and"
                        },
                        {
                            "@id": "d2e77",
                            "bcl:num": "b",
                            "bcl:text": "to act as secretariat to the Executive Council and its committees and to coordinate policy development among the ministries."
                        }
                    ]
                },
                {
                    "@id": "d2e87",
                    "bcl:marginalnote": "Agreements with other governments",
                    "bcl:num": "4",
                    "bcl:text": "With the approval of the Lieutenant Governor in Council, the minister on behalf of the government may enter into agreements with the government of Canada, the government of a province or an agent of the government of Canada or a province."
                },
                {
                    "@id": "d2e99",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "5",
                    "bcl:text": "[Repealed 2000-23-47.]"
                }
            ]
        }
    }
}