        "@id": "00_96402_01",
        "act:title": "Regulations Act",
        "act:chapter": "402",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "286269762/96402/tlc96402_f",
            "act:tlc": "E3tlc96402"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e32",
                            "bcl:text": [
                                {
                                    "in:term": "material adopted by reference",
                                    "#text": "means"
                                },
                                "that will reasonably be available to persons likely to be affected by it and is adopted or incorporated by reference into a regulation but is not attached to or accompanying the regulation;"
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e41",
                                    "bcl:num": "a",
                                    "bcl:text": "a code of, or standard set by, a provincial, national, international or any other code or standard making body, or"
                                },
                                {
                                    "@id": "d2e51",
                                    "bcl:num": "b",
                                    "bcl:text": "a map, plan, geological survey, illustration, diagram, photograph, graph or table or any other similar record or thing,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e63",
                            "bcl:text": {
                                "in:term": "registrar",
                                "#text": "means the person designated by the minister as Registrar of Regulations;"
                            }
                        },
                        {
                            "@id": "d2e72",
                            "bcl:text": [
                                {
                                    "in:term": "regulation",
                                    "bcl:link": {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96238_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Interpretation Act"
                                    },
                                    "#text": "means a regulation, as defined in the ,"
                                },
                                "but does not include"
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e84",
                                    "bcl:num": "a",
                                    "bcl:text": "made under a power in an Act where the word \"regulation\", \"regulations\", \"prescribe\", \"prescribes\" or \"prescribed\" is used in conferring the power, or"
                                },
                                {
                                    "@id": "d2e93",
                                    "bcl:num": "b",
                                    "bcl:text": "identified in the Schedule,"
                                },
                                {
                                    "@id": "d2e106",
                                    "bcl:num": "c",
                                    "bcl:text": "material adopted by reference,"
                                },
                                {
                                    "@id": "d2e115",
                                    "bcl:num": "d",
                                    "bcl:text": "a regulation adopted by reference, and"
                                },
                                {
                                    "@id": "d2e124",
                                    "bcl:num": "e",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96238_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Interpretation Act"
                                        },
                                        "#text": "a regulation, as defined in the , of a corporation unless the regulation is identified in the Schedule;"
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e136",
                            "bcl:text": {
                                "in:term": "regulation adopted by reference",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "means that portion of a regulation, as defined in the , that is adopted or incorporated by reference but that is not attached to or accompanying the regulation."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e149",
                    "bcl:marginalnote": "Examination of proposed regulation",
                    "bcl:num": "2",
                    "bcl:text": "Before a regulation is enacted, it must be submitted for examination to a person designated by the minister."
                },
                {
                    "@id": "d2e161",
                    "bcl:marginalnote": "Effect only if deposited",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e169",
                            "bcl:num": "1",
                            "bcl:text": "A regulation has no effect unless it or a copy of it is deposited with the registrar."
                        },
                        {
                            "@id": "d2e178",
                            "bcl:num": "2",
                            "bcl:text": "The registrar must not accept a regulation for deposit until the registrar is satisfied that",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e187",
                                    "bcl:num": "a",
                                    "bcl:text": "it has been examined by a person referred to in section 2, and"
                                },
                                {
                                    "@id": "d2e197",
                                    "bcl:num": "b",
                                    "bcl:text": "other prescribed criteria have been met."
                                }
                            ]
                        },
                        {
                            "@id": "d2e206",
                            "bcl:num": "3",
                            "bcl:text": "Regulations deposited with the registrar must be available for inspection during regular office hours."
                        }
                    ]
                },
                {
                    "@id": "d2e216",
                    "bcl:marginalnote": "Effect when deposited",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e224",
                            "bcl:num": "1",
                            "bcl:text": "A regulation or portion of a regulation comes into force on the date of its deposit unless",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e233",
                                    "bcl:num": "a",
                                    "bcl:text": "a later date is specified in the regulation, or"
                                },
                                {
                                    "@id": "d2e242",
                                    "bcl:num": "b",
                                    "bcl:text": "an earlier date is specified in the regulation and the Act under which the regulation is made authorizes the regulation to come into force on an earlier date."
                                }
                            ]
                        },
                        {
                            "@id": "d2e252",
                            "bcl:num": "2",
                            "bcl:text": "If the minister considers it in the public interest to do so, the minister may by regulation order that a regulation is deemed to have been deposited or filed on any specified date on or after its enactment but before its actual date of deposit and if the minister so orders, the regulation is deemed to have been deposited or filed on the specified date."
                        },
                        {
                            "@id": "d2e261",
                            "bcl:num": "3",
                            "bcl:text": "The minister may include conditions in the minister's order varying the effect of the regulation during the period between the deemed date of deposit or filing and the actual date of deposit."
                        }
                    ]
                },
                {
                    "@id": "d2e271",
                    "bcl:marginalnote": "Publication",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e279",
                            "bcl:num": "1",
                            "bcl:text": "The registrar must publish in the Gazette each regulation deposited with the registrar."
                        },
                        {
                            "@id": "d2e288",
                            "bcl:num": "2",
                            "bcl:text": [
                                "In preparing a regulation",
                                "the registrar may make changes in the regulation respecting form, style, numbering and typographical or reference errors or inaccuracies."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e297",
                                    "bcl:num": "a",
                                    "bcl:text": "for publication in the Gazette, or"
                                },
                                {
                                    "@id": "d2e307",
                                    "bcl:num": "b",
                                    "bcl:text": "for printing in any other Queen's Printer publication,"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e321",
                    "bcl:marginalnote": "Exemption from publication",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e329",
                            "bcl:num": "1",
                            "bcl:text": "The registrar may exempt a regulation from publication in the Gazette if the registrar considers that it",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e338",
                                    "bcl:num": "a",
                                    "bcl:text": "is of a length to render publication in the Gazette impracticable or unduly expensive, and"
                                },
                                {
                                    "@id": "d2e347",
                                    "bcl:num": "b",
                                    "bcl:text": "is or will be available to persons who are likely to be affected by it."
                                }
                            ]
                        },
                        {
                            "@id": "d2e357",
                            "bcl:num": "2",
                            "bcl:text": [
                                "If a regulation includes",
                                "the registrar may exempt that part of the regulation from publication."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e366",
                                    "bcl:num": "a",
                                    "bcl:text": "a code of, or standard set by, a provincial, national, international or any other code or standard making body, or"
                                },
                                {
                                    "@id": "d2e375",
                                    "bcl:num": "b",
                                    "bcl:text": "a map, plan, geological survey, illustration, diagram, photograph, graph or table or any other similar record or thing,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e387",
                            "bcl:num": "3",
                            "bcl:text": "If the registrar exempts a regulation or part of a regulation from publication, the registrar must publish in the Gazette a notice indicating where and when the exempted regulation or part of the regulation may be inspected."
                        }
                    ]
                },
                {
                    "@id": "d2e397",
                    "bcl:marginalnote": "Consequence of not publishing",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e405",
                            "bcl:num": "1",
                            "bcl:text": "A person must not be convicted of an offence against a regulation that is not published in the Gazette unless it is shown that reasonable steps had been taken by the time of the offence to bring the substance of the regulation to the notice of the public or the persons likely to be affected by it."
                        },
                        {
                            "@id": "d2e414",
                            "bcl:num": "2",
                            "bcl:text": "A person must not be convicted of an offence against a regulation adopted by reference until the regulation that adopted it or incorporated it by reference is published in the Gazette unless it is shown that reasonable steps had been taken by the time of the offence to bring the substance of the regulation adopted by reference to the notice of the public or the persons likely to be affected by it."
                        }
                    ]
                },
                {
                    "@id": "d2e424",
                    "bcl:marginalnote": "Section 7 not applicable after section 6 notice published",
                    "bcl:num": "8",
                    "bcl:text": "After publication of the notice made under section 6 (3), section 7 (1) does not apply to the regulation or portion of the regulation that is exempted from publication."
                },
                {
                    "@id": "d2e436",
                    "bcl:marginalnote": "Proof of deposit",
                    "bcl:num": "9",
                    "bcl:text": "A certificate that purports to be signed by the registrar to the effect that a regulation was deposited with the registrar on a specified date is evidence that it was deposited on the date specified."
                },
                {
                    "@id": "d2e448",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act"
                    },
                    "bcl:num": "10",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5 of the  does not apply to this Act or to regulations made under this Act."
                    }
                },
                {
                    "@id": "d2e466",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e474",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e486",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e495",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribing fees for copies of regulations provided by the registrar;"
                                },
                                {
                                    "@id": "d2e505",
                                    "bcl:num": "a.1",
                                    "bcl:text": "prescribing criteria for the purposes of section 3 (2) (b);"
                                },
                                {
                                    "@id": "d2e514",
                                    "bcl:num": "b",
                                    "bcl:text": "providing for the consolidation, revision and republication of regulations, for their coming into force and for the repeal of regulations replaced by them;"
                                },
                                {
                                    "@id": "d2e523",
                                    "bcl:num": "c",
                                    "bcl:text": "adding to the Schedule."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e534",
                    "bcl:marginalnote": "Coming into force of Acts",
                    "bcl:num": "12",
                    "bcl:text": "If an Act provides that it comes into force on proclamation, the Act or part of it may be brought into force by regulation of the Lieutenant Governor in Council."
                }
            ],
            "bcl:schedule": {
                "bcl:scheduletitle": "Schedule",
                "bcl:centertext": {
                    "in:em": "(Section 1)"
                },
                "bcl:lefttext": [
