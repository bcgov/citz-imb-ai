        "@id": "00_96275_01",
        "act:title": "Local Government Grants Act",
        "act:chapter": "275",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "76470131/96275/tlc96275_f",
            "act:tlc": "tlc96275"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Grants to local governments and related organizations",
                    "bcl:num": "1",
                    "bcl:text": "In each fiscal year of the government, the minister may, in accordance with this Act and the regulations, make",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e26",
                            "bcl:num": "a",
                            "bcl:text": "unconditional grants to municipalities and regional districts, and"
                        },
                        {
                            "@id": "d2e35",
                            "bcl:num": "b",
                            "bcl:text": "conditional grants to municipalities, regional districts and prescribed related organizations."
                        }
                    ]
                },
                {
                    "@id": "d2e45",
                    "bcl:marginalnote": "Repealed",
                    "bcl:num": "2",
                    "bcl:text": "[Repealed 1997-4-12.]"
                },
                {
                    "@id": "d2e57",
                    "bcl:marginalnote": "Unconditional grants",
                    "bcl:num": "3",
                    "bcl:text": "Without limiting section 1, the amount of a class of unconditional grants may be determined on the basis of one or more of the following, as prescribed by regulation, but subject to any minimum or maximum prescribed by regulation:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e68",
                            "bcl:num": "a",
                            "bcl:text": "a fixed amount for each municipality or regional district;"
                        },
                        {
                            "@id": "d2e77",
                            "bcl:num": "b",
                            "bcl:text": "the population of a municipality or regional district;"
                        },
                        {
                            "@id": "d2e87",
                            "bcl:num": "c",
                            "bcl:text": "the total annual expenditures or revenues of a municipality or regional district;"
                        },
                        {
                            "@id": "d2e96",
                            "bcl:num": "d",
                            "bcl:text": "the converted value of land and improvements within a municipality or regional district;"
                        },
                        {
                            "@id": "d2e105",
                            "bcl:num": "e",
                            "bcl:text": "any other prescribed basis."
                        }
                    ]
                },
                {
                    "@id": "d2e115",
                    "bcl:marginalnote": "Conditional grants",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e123",
                            "bcl:num": "1",
                            "bcl:text": "Without limiting section 1, conditional grants may be made to municipalities, regional districts and prescribed related organizations for the following purposes:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e132",
                                    "bcl:num": "a",
                                    "bcl:text": "reviewing, studying, planning or implementing matters relating to local government planning or growth management;"
                                },
                                {
                                    "@id": "d2e141",
                                    "bcl:num": "b",
                                    "bcl:text": "reviewing, studying, planning, organizing or implementing the establishment or other reorganization of local government, including any change in the functions, structures, boundaries or classifications of one or more municipalities and regional districts;"
                                },
                                {
                                    "@id": "d2e151",
                                    "bcl:num": "c",
                                    "bcl:text": "reviewing, studying, planning, or constructing water supply and distribution facilities, sewage collection and disposal facilities, major municipal highways or other infrastructure;"
                                },
                                {
                                    "@id": "d2e160",
                                    "bcl:num": "d",
                                    "bcl:text": "to share the cost of any underground installation of power, telephone or other overhead transmission lines in municipal areas, agreed to among a municipality, a public utility, including the British Columbia Hydro and Power Authority, and the government."
                                }
                            ]
                        },
                        {
                            "@id": "d2e169",
                            "bcl:num": "2",
                            "bcl:text": "Subject to approval by Treasury Board, money may be paid out of the consolidated revenue fund to satisfy conditional grant liabilities incurred under this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e179",
                    "bcl:marginalnote": "Grants to other bodies",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e187",
                            "bcl:num": "1",
                            "bcl:text": "The minister may make conditional grants referred to in section\u00a0(4)\u00a0(1)\u00a0(a) for",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e196",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96239_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Islands Trust Act"
                                        },
                                        "#text": "the purposes of section 15 of the , and"
                                    }
                                },
                                {
                                    "@id": "d2e208",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96239_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Islands Trust Act"
                                        },
                                        "#text": "planning purposes under section 29 of the , as if the local trust committees and the executive committee acting as a local trust committee were regional districts, with the grants payable to the trust council under that Act for these purposes."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e221",
                            "bcl:num": "2",
                            "bcl:text": "The minister may make conditional grants referred to in section 4 (1) (c) to a greater board."
                        }
                    ]
                },
                {
                    "@id": "d2e232",
                    "bcl:marginalnote": "Consultation with local governments",
                    "bcl:num": "6",
                    "bcl:text": "At least annually, the minister must consult with representatives of the Union of British Columbia Municipalities regarding the amount and the administration of grants under this Act."
                },
                {
                    "@id": "d2e244",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e252",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e264",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e273",
                                    "bcl:num": "a",
                                    "bcl:text": "establishing classes of grants;"
                                },
                                {
                                    "@id": "d2e283",
                                    "bcl:num": "b",
                                    "bcl:text": "establishing the amount or a maximum amount that may be paid for a class of grants;"
                                },
                                {
                                    "@id": "d2e292",
                                    "bcl:num": "c",
                                    "bcl:text": "establishing qualifications for a class of grants;"
                                },
                                {
                                    "@id": "d2e301",
                                    "bcl:num": "d",
                                    "bcl:text": "specifying conditions on which a grant may be paid and making a grant subject to further conditions specified by the minister;"
                                },
                                {
                                    "@id": "d2e310",
                                    "bcl:num": "e",
                                    "bcl:text": "establishing the amount, or a minimum or maximum amount, of a grant;"
                                },
                                {
                                    "@id": "d2e319",
                                    "bcl:num": "f",
                                    "bcl:text": "prescribing the basis on which the amount of a grant is to be determined;"
                                },
                                {
                                    "@id": "d2e328",
                                    "bcl:num": "g",
                                    "bcl:text": "prescribing an organization as a related organization, or a class of organizations as related organizations, for grants of a specified class or grants in relation to a specified purpose."
                                },
                                {
                                    "@id": "d2e338",
                                    "bcl:num": "h",
                                    "bcl:text": "[Repealed 1997-4-15.]"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e348",
                    "bcl:marginalnote": "Transitional \u2014 authority to continue payments under former Acts",
                    "bcl:num": "8",
                    "bcl:text": "Subject to approval by Treasury Board, money may be paid out of the consolidated revenue fund to satisfy liabilities incurred under one of the following Acts on the basis of an appropriation under the Act before it was repealed:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e359",
                            "bcl:num": "a",
                            "bcl:text": {
                                "in:doc": "Revenue Sharing Act",
                                "#text": "the , R.S.B.C. 1979, c. 368;"
                            }
                        },
                        {
                            "@id": "d2e371",
                            "bcl:num": "b",
                            "bcl:text": {
                                "in:doc": "Natural Gas Revenue Sharing Act",
                                "#text": "the , S.B.C. 1975, c. 51;"
                            }
                        },
                        {
                            "@id": "d2e384",
                            "bcl:num": "c",
                            "bcl:text": {
                                "in:doc": "Sewerage Facilities Assistance Act",
                                "#text": "the , S.B.C. 1974, c. 83;"
                            }
                        },
                        {
                            "@id": "d2e396",
                            "bcl:num": "d",
                            "bcl:text": {
                                "in:doc": "Municipal Treatment Plant Assistance Act",
                                "#text": "the , S.B.C. 1969, c. 25."
                            }
                        }
                    ]
                }
            ]
        }
    }
}