        "@xmlns:in": "http://www.qp.gov.bc.ca/2013/inline",
        "@xmlns:fun": "http://www.bclaws.ca/xslt/functions",
        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@id": "15029",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "act:title": "Liquefied Natural Gas Project Agreements Act",
        "act:chapter": "29",
        "act:yearenacted": "2015",
        "act:assentedto": "July 21, 2015",
        "act:currency": {
            "act:tlcDirPath": "76470131/15029/tlc15029",
            "act:tlc": "E3tlc15029"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d0e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d0e29",
                            "bcl:text": {
                                "in:term": "carbon tax change",
                                "#text": "means either or both of the following enacted after this Act comes into force:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e36",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/08040_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Carbon Tax Act"
                                        },
                                        "#text": "an amendment to the  or the regulations under that Act, if the amendment applies only with respect to liquefaction activities;"
                                    }
                                },
                                {
                                    "@id": "d0e45",
                                    "bcl:num": "b",
                                    "bcl:text": "an enactment that creates a tax that applies only to greenhouse gas emissions resulting from liquefaction activities, including a regulation under the enactment and an amendment to the enactment or regulation;"
                                }
                            ]
                        },
                        {
                            "@id": "d0e55",
                            "bcl:text": {
                                "in:term": "greenhouse gas",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/07042_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Climate Change Accountability Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d0e63",
                            "bcl:text": {
                                "in:term": "greenhouse gas regulatory change",
                                "#text": "means any or all of the following enacted after this Act comes into force:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e70",
                                    "bcl:num": "a",
                                    "bcl:text": [
                                        "an amendment to",
                                        "if the amendment applies with respect to liquefaction activities;"
                                    ],
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d0e78",
                                            "bcl:num": "i",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/14029_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Greenhouse Gas Industrial Reporting and Control Act"
                                                },
                                                "#text": "the , or"
                                            }
                                        },
                                        {
                                            "@id": "d0e87",
                                            "bcl:num": "ii",
                                            "bcl:text": "regulations under that Act enacted on or before December 31, 2015,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d0e100",
                                    "bcl:num": "b",
                                    "bcl:text": "a modification or termination of an incentive program;"
                                },
                                {
                                    "@id": "d0e109",
                                    "bcl:num": "c",
                                    "bcl:text": "an enactment that creates a regulatory scheme that applies only to greenhouse gas emissions resulting from liquefaction activities, including a regulation under the enactment and an amendment to the enactment or regulation;"
                                }
                            ]
                        },
                        {
                            "@id": "d0e119",
                            "bcl:text": {
                                "in:term": "incentive program",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e125",
                                    "bcl:num": "a",
                                    "bcl:text": "the Liquefied Natural Gas Environmental Incentive Program as set out in the document of that name laid before the Legislative Assembly on July\u00a013, 2015, and"
                                },
                                {
                                    "@id": "d0e134",
                                    "bcl:num": "b",
                                    "bcl:text": "an incentive program, in respect of liquefaction activities, substantially the same as the program referred to in paragraph (a);"
                                }
                            ]
                        },
                        {
                            "@id": "d0e144",
                            "bcl:text": {
                                "in:term": "liquefaction activities",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/14034_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Liquefied Natural Gas Income Tax Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d0e152",
                            "bcl:text": {
                                "in:term": "LNG",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/14034_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Liquefied Natural Gas Income Tax Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d0e160",
                            "bcl:text": {
                                "in:term": "LNG facility",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/14034_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Liquefied Natural Gas Income Tax Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d0e168",
                            "bcl:text": {
                                "in:term": "LNG project agreement",
                                "#text": "means an agreement that includes the provision by the government of an indemnity, as described in section 2 (1), respecting an LNG facility;"
                            }
                        },
                        {
                            "@id": "d0e176",
                            "bcl:text": {
                                "in:term": "LNG tax change",
                                "#text": "means either or both of the following enacted after this Act comes into force:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e183",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/14034_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Liquefied Natural Gas Income Tax Act"
                                        },
                                        "#text": "an amendment to the  or the regulations under that Act, other than an amendment"
                                    },
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d0e191",
                                            "bcl:num": "i",
                                            "bcl:text": "to, or the enactment of, an administrative, enforcement or anti-avoidance provision, or"
                                        },
                                        {
                                            "@id": "d0e200",
                                            "bcl:num": "ii",
                                            "bcl:text": "to correct a technical error;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d0e210",
                                    "bcl:num": "b",
                                    "bcl:text": "an enactment that creates a capital tax or an income tax or any other tax on profit derived from liquefaction activities, if the tax applies only in relation to the liquefaction activities, including a regulation under the enactment and an amendment to the enactment or regulation;"
                                }
                            ]
                        },
                        {
                            "@id": "d0e220",
                            "bcl:text": {
                                "in:term": "minister",
                                "#text": "means the Minister of Finance;"
                            }
                        },
                        {
                            "@id": "d0e228",
                            "bcl:text": [
                                {
                                    "in:term": "natural gas tax credit change",
                                    "#text": "means an amendment enacted after this Act comes into force"
                                },
                                "other than an amendment"
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e235",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96215_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Income Tax Act"
                                        },
                                        "#text": "to section 172 of the , to a regulation that prescribes a percentage for the purposes of subsection (4.1) of that section to change that percentage or to an enactment that provides substantially the same benefit as provided under that section, whether the enactment is structured as a tax credit or refund, or"
                                    }
                                },
                                {
                                    "@id": "d0e244",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/14034_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Liquefied Natural Gas Income Tax Act"
                                        },
                                        "#text": "to the  or the regulations under that Act, if the amendment results in a reduction of a benefit referred to in paragraph (a) of this definition,"
                                    }
                                },
                                {
                                    "@id": "d0e256",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96215_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Income Tax Act"
                                        },
                                        "#text": "to the description of \"B\" in section 172 (2) (b) of the"
                                    },
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d0e264",
                                            "bcl:num": "i",
                                            "bcl:text": "to change the reference to \"11%\" to a lower percentage as a consequence of an amendment to section 14 (2) or 16 (1) (b) of that Act, or"
                                        },
                                        {
                                            "@id": "d0e273",
                                            "bcl:num": "ii",
                                            "bcl:text": "to change the reference to \"11%\" to a higher percentage as a consequence of an amendment to section 14 (2) or 16 (1) (b) of that Act, if the reference to \"8%\" is also changed to a comparably higher percentage,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d0e283",
                                    "bcl:num": "d",
                                    "bcl:text": "to, or the enactment of, an administrative, enforcement or anti-avoidance provision, or"
                                },
                                {
                                    "@id": "d0e292",
                                    "bcl:num": "e",
                                    "bcl:text": "to correct a technical error;"
                                }
                            ]
                        },
                        {
                            "@id": "d0e302",
                            "bcl:text": {
                                "in:term": "tax law change",
                                "#text": "means a carbon tax change, an LNG tax change or a natural gas tax credit change."
                            }
                        }
                    ]
                },
                {
                    "@id": "d0e311",
                    "bcl:marginalnote": "LNG project agreements",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d0e319",
                            "bcl:num": "1",
                            "bcl:text": "Subject to subsections (2) to (4) and section 9, with the approval of the Lieutenant Governor in Council, the minister may, on behalf of the government, enter into an LNG project agreement under which the government provides to a person an indemnity respecting",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e327",
                                    "bcl:num": "a",
                                    "bcl:text": "the amount of additional tax paid by the person in the event of a tax law change, and"
                                },
                                {
                                    "@id": "d0e336",
                                    "bcl:num": "b",
                                    "bcl:text": "the person's direct costs of complying with a greenhouse gas regulatory change."
                                }
                            ]
                        },
                        {
                            "@id": "d0e346",
                            "bcl:num": "2",
                            "bcl:text": "An LNG project agreement must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e354",
                                    "bcl:num": "a",
                                    "bcl:text": "include a provision that the indemnity is conditional on the minister being satisfied that a final investment decision has been made respecting the LNG facility,"
                                },
                                {
                                    "@id": "d0e363",
                                    "bcl:num": "b",
                                    "bcl:text": "be in respect of only one LNG facility,"
                                },
                                {
                                    "@id": "d0e372",
                                    "bcl:num": "c",
                                    "bcl:text": "include provisions",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d0e380",
                                            "bcl:num": "i",
                                            "bcl:text": "establishing a threshold that applies for losses or expenditures attributable to tax law changes and greenhouse gas regulatory changes, and"
                                        },
                                        {
                                            "@id": "d0e389",
                                            "bcl:num": "ii",
                                            "bcl:text": "providing that the indemnity referred to in subsection (1) does not apply in relation to losses or expenditures that are less than the threshold,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d0e399",
                                    "bcl:num": "d",
                                    "bcl:text": "provide that the agreement is governed by the laws of British Columbia,"
                                },
                                {
                                    "@id": "d0e408",
                                    "bcl:num": "e",
                                    "bcl:text": "provide that the venue for any proceeding to resolve a dispute arising out of or related to the agreement must be in British Columbia,"
                                },
                                {
                                    "@id": "d0e417",
                                    "bcl:num": "f",
                                    "bcl:text": "include a provision for determining the date when the LNG facility is to be considered, for the purposes of subsection (3), to begin commercial operations, which date must not be later than the date of the first departure of LNG in commercial quantities from the LNG facility, and"
                                },
                                {
                                    "@id": "d0e426",
                                    "bcl:num": "g",
                                    "bcl:text": "include a provision that the government's financial obligation in relation to the agreement is limited solely to the indemnity referred to in subsection\u00a0(1)."
                                }
                            ]
                        },
                        {
                            "@id": "d0e436",
                            "bcl:num": "3",
                            "bcl:text": "An LNG project agreement may not be for a term that ends later than 25 years after the later of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e444",
                                    "bcl:num": "a",
                                    "bcl:text": "the effective date of the agreement;"
                                },
                                {
                                    "@id": "d0e453",
                                    "bcl:num": "b",
                                    "bcl:text": "the date the applicable LNG facility begins commercial operations."
                                }
                            ]
                        },
                        {
                            "@id": "d0e463",
                            "bcl:num": "4",
                            "bcl:text": "An LNG project agreement entered into under subsection (1) may include any other terms, conditions or limitations that the minister considers necessary or advisable, including terms limiting the applicability of the indemnity referred to in that subsection further than the applicability is limited by the definition in section 1 of \"carbon tax change\", \"greenhouse gas regulatory change\", \"LNG tax change\" or \"natural gas tax credit change\", as applicable."
                        },
                        {
                            "@id": "d0e472",
                            "bcl:num": "5",
                            "bcl:text": "For certainty, subsection (4) does not authorize the minister to provide, in an LNG project agreement, an indemnity respecting payments made or costs incurred as a result of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e480",
                                    "bcl:num": "a",
                                    "bcl:text": "an amendment or enactment not identified in the definition in section 1 of \"carbon tax change\", \"greenhouse gas regulatory change\", \"LNG tax change\" or \"natural gas tax credit change\", or"
                                },
                                {
                                    "@id": "d0e489",
                                    "bcl:num": "b",
                                    "bcl:text": "the creation, modification or termination of any program other than an incentive program."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d0e500",
                    "bcl:marginalnote": "Ratification",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d0e508",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may, by order, ratify an LNG project agreement that",
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e516",
                                    "bcl:num": "a",
                                    "bcl:text": "was entered into by the minister, on behalf of the government, before this Act comes into force, and"
                                },
                                {
                                    "@id": "d0e525",
                                    "bcl:num": "b",
                                    "bcl:text": "includes a provision making the agreement subject to ratification by an enactment."
                                }
                            ]
                        },
                        {
                            "@id": "d0e535",
                            "bcl:num": "2",
                            "bcl:text": "An indemnity provided under an LNG project agreement ratified under subsection (1) is effective on the date of ratification."
                        }
                    ]
                },
                {
                    "@id": "d0e545",
                    "bcl:marginalnote": {
                        "in:doc": "Financial Administration Act"
                    },
                    "bcl:num": "4",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96138_01",
                            "@xlink:type": "locator",
                            "in:doc": "Financial Administration Act"
                        },
                        "#text": "Section 72 (3), (4) and (8) of the  does not apply to an indemnity provided to a person by the government under an LNG project agreement."
                    }
                },
                {
                    "@id": "d0e558",
                    "bcl:marginalnote": "Assignments",
                    "bcl:num": "5",
                    "bcl:text": "If an LNG project agreement provides that an assignment of the agreement, in whole or in part, may be made only with the consent of the minister, the minister may consent to the assignment only with the approval of the Lieutenant Governor in Council."
                },
                {
                    "@id": "d0e570",
                    "bcl:marginalnote": "Payment of indemnity",
                    "bcl:num": "6",
                    "bcl:text": "Money required to be paid by the government under an LNG project agreement must be paid out of the consolidated revenue fund."
                },
                {
                    "@id": "d0e582",
                    "bcl:marginalnote": "Set-off of amounts owed",
                    "bcl:num": "7",
                    "bcl:text": "The government may retain money by way of set-off, out of any money due or payable to a person by the government under an LNG project agreement, if",
                    "bcl:paragraph": [
                        {
                            "@id": "d0e593",
                            "bcl:num": "a",
                            "bcl:text": "the person owes money to the government, or"
                        },
                        {
                            "@id": "d0e602",
                            "bcl:num": "b",
                            "bcl:text": "an overpayment has been made by the government to the person."
                        }
                    ]
                },
                {
                    "@id": "d0e612",
                    "bcl:marginalnote": "Publication",
                    "bcl:num": "8",
                    "bcl:text": "The minister must, as soon as practicable, publish",
                    "bcl:paragraph": [
                        {
                            "@id": "d0e623",
                            "bcl:num": "a",
                            "bcl:text": "an LNG project agreement entered into under section 2 (1) or ratified under section 3, and"
                        },
                        {
                            "@id": "d0e632",
                            "bcl:num": "b",
                            "bcl:text": "if the minister has been notified that an assignment of an LNG project agreement referred to in paragraph (a) of this section has occurred, a notice",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d0e640",
                                    "bcl:num": "i",
                                    "bcl:text": "stating that the assignment has occurred,"
                                },
                                {
                                    "@id": "d0e649",
                                    "bcl:num": "ii",
                                    "bcl:text": "setting out the date of the assignment, and"
                                },
                                {
                                    "@id": "d0e658",
                                    "bcl:num": "iii",
                                    "bcl:text": "identifying the relevant parties."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d0e669",
                    "bcl:marginalnote": "Authority circumscribed",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d0e677",
                            "bcl:num": "1",
                            "bcl:text": "The minister may not enter into an LNG project agreement under section 2 (1) on a date later than 10 years after the date this Act comes into force."
                        },
                        {
                            "@id": "d0e686",
                            "bcl:num": "2",
                            "bcl:text": "Subsection (1) does not apply to an amendment to an LNG project agreement."
                        }
                    ]
                },
                {
                    "@id": "d0e696",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "10",
                    "bcl:text": "This Act comes into force on the date of Royal Assent."
                }
            ]
        }
    }
}