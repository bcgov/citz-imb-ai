        "@id": "00_96229_01",
        "act:title": "Insurance for Crops Act",
        "act:chapter": "229",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "111685340/96229/tlc96229_f",
            "act:tlc": "E2tlc96229"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Agreements with Canada",
                    "bcl:num": "1",
                    "bcl:text": "The minister, for the government, may enter into an agreement with Canada on crop insurance in British Columbia."
                },
                {
                    "@id": "d2e27",
                    "bcl:marginalnote": "Audit of corporation",
                    "bcl:num": "2",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/03002_01",
                            "@xlink:type": "locator",
                            "in:doc": "Auditor General Act"
                        },
                        "#text": "Unless the Auditor General is appointed in accordance with the  as the auditor of a corporation established under this Act, the Lieutenant Governor in Council must appoint an auditor to audit the accounts of the corporation at least once each year."
                    }
                },
                {
                    "@id": "d2e42",
                    "bcl:marginalnote": "Expenses",
                    "bcl:num": "3",
                    "bcl:text": "The government may pay any money the government becomes liable to pay in carrying out the terms of an agreement entered into under a scheme of crop insurance established under section 4 (2) (a) of this Act, including any expenses incurred in carrying out the terms of the agreement, out of the consolidated revenue fund unless money is available for that payment",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e53",
                            "bcl:num": "a",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96436_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Special Accounts Appropriation and Control Act"
                                },
                                "#text": "in the Production Insurance Account established under section\u00a09.2 of the , or"
                            }
                        },
                        {
                            "@id": "d2e65",
                            "bcl:num": "b",
                            "bcl:text": "under a special vote of the Legislature."
                        }
                    ]
                },
                {
                    "@id": "d2e75",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e83",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e95",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations to:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e104",
                                    "bcl:num": "a",
                                    "bcl:text": "establish and administer a scheme of crop insurance in British Columbia;"
                                },
                                {
                                    "@id": "d2e114",
                                    "bcl:num": "b",
                                    "bcl:text": "establish a corporation to manage a scheme, provide staff, and provide the corporation's powers and duties, including the making of contracts;"
                                },
                                {
                                    "@id": "d2e123",
                                    "bcl:num": "c",
                                    "bcl:text": "establish a crop insurance fund and regulate its investment and use;"
                                },
                                {
                                    "@id": "d2e132",
                                    "bcl:num": "d",
                                    "bcl:text": "provide for the recovery of unpaid insurance premiums."
                                }
                            ]
                        },
                        {
                            "@id": "d2e141",
                            "bcl:num": "3",
                            "bcl:text": "If a corporation is not established under subsection (2) (b), the minister or a person authorized by the minister may administer the scheme."
                        }
                    ]
                }
            ]
        }
    }
}