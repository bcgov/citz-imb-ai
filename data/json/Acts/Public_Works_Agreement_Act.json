        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96391_01",
        "act:title": "Public Works Agreement Act",
        "act:chapter": "391",
        "act:yearenacted": "1996",
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Power to authorize agreements",
                    "bcl:num": "1",
                    "bcl:text": "The Lieutenant Governor in Council may authorize a minister of the government to make and carry out with a minister or authority of Canada, or jointly with the minister or authority and any improvement district, municipality, the British Columbia Diking Authority or the Greater Vancouver Sewerage and Drainage District, an agreement regarding one or more of the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e26",
                            "bcl:num": "a",
                            "bcl:text": "water and land development;"
                        },
                        {
                            "@id": "d2e35",
                            "bcl:num": "b",
                            "bcl:text": "highway construction or improvement;"
                        },
                        {
                            "@id": "d2e45",
                            "bcl:num": "c",
                            "bcl:text": "flood control;"
                        },
                        {
                            "@id": "d2e54",
                            "bcl:num": "d",
                            "bcl:text": "hospitals;"
                        },
                        {
                            "@id": "d2e63",
                            "bcl:num": "e",
                            "bcl:text": "schools;"
                        },
                        {
                            "@id": "d2e72",
                            "bcl:num": "f",
                            "bcl:text": "other matters in British Columbia."
                        }
                    ]
                },
                {
                    "@id": "d2e82",
                    "bcl:marginalnote": "Minister's powers",
                    "bcl:num": "2",
                    "bcl:text": "In an agreement under this Act, the minister authorized to make and carry out the agreement may undertake on behalf of the government to do one or more of the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e93",
                            "bcl:num": "a",
                            "bcl:text": "acquire land and rights of way for works;"
                        },
                        {
                            "@id": "d2e102",
                            "bcl:num": "b",
                            "bcl:text": "make surveys, reports and estimates of costs of projects;"
                        },
                        {
                            "@id": "d2e112",
                            "bcl:num": "c",
                            "bcl:text": "build structures;"
                        },
                        {
                            "@id": "d2e121",
                            "bcl:num": "d",
                            "bcl:text": "carry out projects;"
                        },
                        {
                            "@id": "d2e130",
                            "bcl:num": "e",
                            "bcl:text": "maintain and operate works."
                        }
                    ]
                },
                {
                    "@id": "d2e140",
                    "bcl:marginalnote": "Expenses incurred",
                    "bcl:num": "3",
                    "bcl:text": "In the absence of a special vote of the Legislature for the purpose, the expenses incurred in carrying out the terms of an agreement entered into under this Act must be paid out of the consolidated revenue fund."
                }
            ]
        }
    }
}