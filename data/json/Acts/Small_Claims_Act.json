        "@id": "00_96430_01",
        "act:title": "Small Claims Act",
        "act:chapter": "430",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1527898742/96430/tlc96430_f",
            "act:tlc": "E3tlc96430"
        },
        "act:content": {
            "bcl:part": [
                {
                    "@id": "d2e21",
                    "bcl:num": "1",
                    "bcl:text": "Definitions, Purpose and Claims",
                    "bcl:section": [
                        {
                            "@id": "d2e30",
                            "bcl:marginalnote": "Definitions",
                            "bcl:num": "1",
                            "bcl:text": "In this Act:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e41",
                                    "bcl:text": {
                                        "in:term": "Chief Judge",
                                        "#text": "means the Chief Judge of the Provincial Court;"
                                    }
                                },
                                {
                                    "@id": "d2e50",
                                    "bcl:text": {
                                        "in:term": "claim",
                                        "#text": "includes a counterclaim made by a defendant against a claimant;"
                                    }
                                },
                                {
                                    "@id": "d2e60",
                                    "bcl:text": {
                                        "in:term": "costs",
                                        "#text": "means the fees, charges and expenses that are listed in the rules;"
                                    }
                                },
                                {
                                    "@id": "d2e78",
                                    "bcl:text": {
                                        "in:term": "proceeding",
                                        "#text": "means an application, claim or other matter;"
                                    }
                                },
                                {
                                    "@id": "d2e69",
                                    "bcl:text": {
                                        "in:term": "Provincial Court",
                                        "#text": "means the Provincial Court of British Columbia;"
                                    }
                                },
                                {
                                    "@id": "d2e87",
                                    "bcl:text": {
                                        "in:term": "rules",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96080_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Court Rules Act"
                                        },
                                        "#text": "means the Small Claims Rules prescribed under the ."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e100",
                            "bcl:marginalnote": "Purpose",
                            "bcl:num": "2",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e108",
                                    "bcl:num": "1",
                                    "bcl:text": "The purpose of this Act and the rules is to allow people who bring claims to the Provincial Court to have them resolved and to have enforcement proceedings concluded in a just, speedy, inexpensive and simple manner."
                                },
                                {
                                    "@id": "d2e117",
                                    "bcl:num": "2",
                                    "bcl:text": "Subject to this Act and the rules, in conducting a hearing the Provincial Court may make any order or give any direction it thinks necessary to achieve the purpose of this Act and the rules."
                                }
                            ]
                        },
                        {
                            "@id": "d2e127",
                            "bcl:marginalnote": "Claims the court may hear",
                            "bcl:num": "3",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e135",
                                    "bcl:num": "1",
                                    "bcl:text": [
                                        "The Provincial Court has jurisdiction in a claim for",
                                        "if the amount claimed or the value of the personal property or services is equal to or less than an amount that is prescribed by regulation, excluding interest and costs."
                                    ],
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e144",
                                            "bcl:num": "a",
                                            "bcl:text": "debt or damages,"
                                        },
                                        {
                                            "@id": "d2e153",
                                            "bcl:num": "b",
                                            "bcl:text": "recovery of personal property,"
                                        },
                                        {
                                            "@id": "d2e163",
                                            "bcl:num": "c",
                                            "bcl:text": "specific performance of an agreement relating to personal property or services, or"
                                        },
                                        {
                                            "@id": "d2e172",
                                            "bcl:num": "d",
                                            "bcl:text": "relief from opposing claims to personal property"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e184",
                                    "bcl:num": "2",
                                    "bcl:text": "The Provincial Court does not have jurisdiction in a claim for libel, slander or malicious prosecution."
                                },
                                {
                                    "@id": "d1e196",
                                    "bcl:num": "3",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/12025_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Civil Resolution Tribunal Act"
                                        },
                                        "#text": "This section is subject to sections 16.4 and 56.3 of the ."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e194",
                            "bcl:marginalnote": "Making or defending a claim",
                            "bcl:num": "4",
                            "bcl:text": "The rules contain the procedure to be followed in making or defending a claim or in enforcing an order of the Provincial Court on a claim."
                        }
                    ]
                },
                {
                    "@id": "d2e207",
                    "bcl:num": "2",
                    "bcl:text": "Appeal",
                    "bcl:section": [
                        {
                            "@id": "d2e216",
                            "bcl:marginalnote": "Right of appeal",
                            "bcl:num": "5",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e224",
                                    "bcl:num": "1",
                                    "bcl:text": "Any party to a proceeding under this Act may appeal to the Supreme Court an order to allow or dismiss a claim if that order was made by a Provincial Court judge after a trial."
                                },
                                {
                                    "@id": "d2e233",
                                    "bcl:num": "2",
                                    "bcl:text": "No appeal lies from any order of the Provincial Court made in a proceeding under this Act other than an order referred to in subsection (1)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e243",
                            "bcl:marginalnote": "Time limit for appeal",
                            "bcl:num": "6",
                            "bcl:text": "An appeal must be started within 40\u00a0days, beginning on the day after the order of the Provincial Court is made."
                        },
                        {
                            "@id": "d2e255",
                            "bcl:marginalnote": "Notice of appeal",
                            "bcl:num": "7",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e263",
                                    "bcl:num": "1",
                                    "bcl:text": "A person starts an appeal by filing a notice of appeal in the registry of the Supreme Court that is nearest to the court where the order being appealed was made."
                                },
                                {
                                    "@id": "d2e272",
                                    "bcl:num": "2",
                                    "bcl:text": "On the day the notice of appeal is filed in the registry of the Supreme Court, the appellant must file a copy of the notice of appeal in the registry of the Provincial Court where the order being appealed was made."
                                }
                            ]
                        },
                        {
                            "@id": "d2e282",
                            "bcl:marginalnote": "Deposit",
                            "bcl:num": "8",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e290",
                                    "bcl:num": "1",
                                    "bcl:text": "When the notice of appeal is filed, the appellant must deposit $200 with a registrar of the Supreme Court as security for costs that the court may order the appellant to pay if that person loses the appeal."
                                },
                                {
                                    "@id": "d2e299",
                                    "bcl:num": "2",
                                    "bcl:text": "If the order under appeal requires the appellant to pay a sum of money, the appellant must deposit that sum with the security for costs."
                                },
                                {
                                    "@id": "d2e308",
                                    "bcl:num": "3",
                                    "bcl:text": "Before depositing the amount required under this section, the appellant may apply to the Supreme Court to reduce that amount."
                                },
                                {
                                    "@id": "d2e318",
                                    "bcl:num": "4",
                                    "bcl:text": "The application must be filed in the registry of the Supreme Court within the time limit for starting the appeal."
                                },
                                {
                                    "@id": "d2e327",
                                    "bcl:num": "5",
                                    "bcl:text": "The appellant is not required to serve notice of the application on any person."
                                },
                                {
                                    "@id": "d2e336",
                                    "bcl:num": "6",
                                    "bcl:text": "The Supreme Court may by order reduce the amount an appellant is required to deposit under this section, and, if the amount is reduced, the appellant must serve notice of the order on the other parties to the appeal."
                                }
                            ]
                        },
                        {
                            "@id": "d2e346",
                            "bcl:marginalnote": "Suspension of proceedings",
                            "bcl:num": "9",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e354",
                                    "bcl:num": "1",
                                    "bcl:text": "When the appellant deposits the amount required under section 8 (1) and the amount, if any, required under section 8 (2) or deposits the amount the Supreme Court orders under section 8 (6), the order under appeal and any proceeding to enforce the order are suspended."
                                },
                                {
                                    "@id": "d2e363",
                                    "bcl:num": "2",
                                    "bcl:text": "On application by a party to the appeal, the Supreme Court may order that the order under appeal or a proceeding to enforce that order is not suspended and may attach conditions to the order."
                                }
                            ]
                        },
                        {
                            "@id": "d2e374",
                            "bcl:marginalnote": "Date of hearing",
                            "bcl:num": "10",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e382",
                                    "bcl:num": "1",
                                    "bcl:text": "On filing a notice of appeal, the appellant must apply to a registrar of the Supreme Court to set a date for hearing the appeal."
                                },
                                {
                                    "@id": "d2e391",
                                    "bcl:num": "2",
                                    "bcl:text": "The hearing date set by the registrar must be at least 21\u00a0days after the date of the application to set the hearing date."
                                }
                            ]
                        },
                        {
                            "@id": "d2e401",
                            "bcl:marginalnote": "Service of notice",
                            "bcl:num": "11",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e409",
                                    "bcl:num": "1",
                                    "bcl:text": "The appellant must serve the notice of appeal and notice of the hearing date on each person who was a party to the proceeding in which the order under appeal was made, but need not serve notice on a person who is not affected by what the appellant requests of the Supreme Court in the appeal."
                                },
                                {
                                    "@id": "d2e418",
                                    "bcl:num": "2",
                                    "bcl:text": "The notice of appeal must be served not later than 7\u00a0days after the notice of appeal was filed in the registry of the Supreme Court."
                                },
                                {
                                    "@id": "d2e427",
                                    "bcl:num": "3",
                                    "bcl:text": "The notice of hearing must be served not later than 7\u00a0days after the date of the application to set the hearing date."
                                },
                                {
                                    "@id": "d2e437",
                                    "bcl:num": "4",
                                    "bcl:text": "The appellant must file in the registry of the Supreme Court an affidavit stating when, where, how, by whom and on whom the notice of appeal and notice of the hearing date were served."
                                }
                            ]
                        },
                        {
                            "@id": "d2e447",
                            "bcl:marginalnote": "Hearing of appeal",
                            "bcl:num": "12",
                            "bcl:text": "An appeal to the Supreme Court under this Act",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e458",
                                    "bcl:num": "a",
                                    "bcl:text": "may be brought to review the order under appeal on questions of fact and on questions of law, and"
                                },
                                {
                                    "@id": "d2e467",
                                    "bcl:num": "b",
                                    "bcl:text": "must not be heard as a new trial unless the Supreme Court orders that the appeal be heard in that court as a new trial."
                                }
                            ]
                        },
                        {
                            "@id": "d2e477",
                            "bcl:marginalnote": "Decision",
                            "bcl:num": "13",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e485",
                                    "bcl:num": "1",
                                    "bcl:text": "On an appeal, the Supreme Court may do one or more of the following:",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e494",
                                            "bcl:num": "a",
                                            "bcl:text": "make any order that could be made by the Provincial Court;"
                                        },
                                        {
                                            "@id": "d2e503",
                                            "bcl:num": "b",
                                            "bcl:text": "impose reasonable terms and conditions in an order;"
                                        },
                                        {
                                            "@id": "d2e513",
                                            "bcl:num": "c",
                                            "bcl:text": "make any additional order that it considers just;"
                                        },
                                        {
                                            "@id": "d2e522",
                                            "bcl:num": "d",
                                            "bcl:text": "by order award costs to any party to the appeal in accordance with the Supreme Court Rules."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e531",
                                    "bcl:num": "2",
                                    "bcl:text": "There is no appeal from an order made by the Supreme Court under this section."
                                }
                            ]
                        },
                        {
                            "@id": "d2e541",
                            "bcl:marginalnote": "Recording of appeal",
                            "bcl:num": "14",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e549",
                                    "bcl:num": "1",
                                    "bcl:text": "After the Supreme Court decides the appeal, a registrar of the Supreme Court must record the order and send a copy of the recorded order to a registrar of the Provincial Court for filing."
                                },
                                {
                                    "@id": "d2e558",
                                    "bcl:num": "2",
                                    "bcl:text": "After a copy of the recorded order is filed in the Provincial Court, all subsequent proceedings must be in that court unless the Supreme Court orders otherwise."
                                }
                            ]
                        },
                        {
                            "@id": "d2e568",
                            "bcl:marginalnote": "Variations of time",
                            "bcl:num": "15",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e576",
                                    "bcl:num": "1",
                                    "bcl:text": "On application, a judge of the Supreme Court may by order shorten or extend the time for doing anything under this Part."
                                },
                                {
                                    "@id": "d2e585",
                                    "bcl:num": "2",
                                    "bcl:text": "A time limit may be extended even if the application for the extension, or the order granting it, is made after the time limit has expired."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e596",
                    "bcl:num": "3",
                    "bcl:text": "Evidence, Procedure and Administration",
                    "bcl:section": [
                        {
                            "@id": "d2e605",
                            "bcl:marginalnote": "Evidence",
                            "bcl:num": "16",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e613",
                                    "bcl:num": "1",
                                    "bcl:text": "The Provincial Court may admit as evidence in a proceeding under this Act or the rules any oral or written testimony, record or other thing that the court considers is credible or trustworthy and is relevant to the matter being heard, even though the testimony, record or other thing is not admissible as evidence in any other court under the laws of evidence."
                                },
                                {
                                    "@id": "d2e622",
                                    "bcl:num": "2",
                                    "bcl:text": "The Provincial Court may not admit as evidence in a proceeding under this Act or the rules anything that is privileged under the laws of evidence."
                                }
                            ]
                        },
                        {
                            "@id": "d2e632",
                            "bcl:marginalnote": "Directions of Chief Judge",
                            "bcl:num": "17",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e640",
                                    "bcl:num": "1",
                                    "bcl:text": "The Chief Judge may give directions, consistent with the rules, respecting matters of practice and procedure in the Provincial Court."
                                },
                                {
                                    "@id": "d2e649",
                                    "bcl:num": "2",
                                    "bcl:text": "In accordance with the directions of the Chief Judge, a registrar of the Provincial Court may give a direction respecting the practice or procedure to be followed by the parties in a proceeding under this Act or the rules."
                                }
                            ]
                        },
                        {
                            "@id": "d2e659",
                            "bcl:marginalnote": "Forms",
                            "bcl:num": "18",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96080_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Court Rules Act"
                                },
                                "#text": "After consulting with the Chief Judge, the Attorney General may authorize forms for use in the Provincial Court on any matter or proceeding under this Act or the rules for which forms are not prescribed under the ."
                            }
                        },
                        {
                            "@id": "d2e674",
                            "bcl:marginalnote": "Costs",
                            "bcl:num": "19",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e682",
                                    "bcl:num": "1",
                                    "bcl:text": "The Provincial Court may determine, in accordance with the rules, the amount of costs that are payable by one party in a proceeding under this Act or the rules to another party in the proceeding or it may direct a registrar of the court to determine the amount."
                                },
                                {
                                    "@id": "d2e691",
                                    "bcl:num": "2",
                                    "bcl:text": "If a registrar of the Provincial Court determines the amount of costs, any party to the proceeding may ask the court to review the registrar's decision on costs."
                                },
                                {
                                    "@id": "d2e700",
                                    "bcl:num": "3",
                                    "bcl:text": "If the rules provide for a reasonable fee, charge or other expense, the Provincial Court or a registrar of the court may determine what amount is reasonable."
                                },
                                {
                                    "@id": "d2e710",
                                    "bcl:num": "4",
                                    "bcl:text": "The Provincial Court must not order that one party in a proceeding under this Act or the rules pay counsel or solicitor's fees to another party to the proceeding."
                                }
                            ]
                        },
                        {
                            "@id": "d2e720",
                            "bcl:marginalnote": "Registrars",
                            "bcl:num": "20",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e728",
                                    "bcl:num": "1",
                                    "bcl:text": "The Attorney General may appoint a person to be a registrar of the Provincial Court for a designated area of British Columbia."
                                },
                                {
                                    "@id": "d2e737",
                                    "bcl:num": "2",
                                    "bcl:text": "The registrar is an officer of the Provincial Court and has, in respect of that court, all the powers and duties of a registrar of the Supreme Court."
                                },
                                {
                                    "@id": "d2e746",
                                    "bcl:num": "3",
                                    "bcl:text": "After consulting with the Chief Judge, the Attorney General may, by regulation, add to or change the powers and duties of a registrar of the Provincial Court."
                                }
                            ]
                        },
                        {
                            "@id": "d2e757",
                            "bcl:marginalnote": "Power to make regulations",
                            "bcl:num": "21",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e765",
                                    "bcl:num": "1",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96238_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Interpretation Act"
                                        },
                                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                                    }
                                },
                                {
                                    "@id": "d2e777",
                                    "bcl:num": "2",
                                    "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations prescribing an amount, of not more than $50\u00a0000, for the purposes of section 3."
                                },
                                {
                                    "@id": "d2e786",
                                    "bcl:num": "3",
                                    "bcl:text": "For the purposes of a pilot project, a regulation under subsection (2) may prescribe another amount that, for a prescribed period of time, applies in respect of a prescribed registry of the Provincial Court."
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    }
}