                                }
                            ],
                            "oasis:tbody": {
                                "oasis:trow": [
                                    {
                                        "oasis:entry": [
                                            {
                                                "@colname": "c1",
                                                "oasis:line": {
                                                    "in:em": "Employer"
                                                }
                                            },
                                            {
                                                "@colname": "c2",
                                                "oasis:line": {
                                                    "in:em": "Employees"
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "oasis:entry": [
                                            {
                                                "@colname": "c1",
                                                "@valign": "top",
                                                "oasis:line": {
                                                    "in:br": null,
                                                    "#text": "School\u00a0District\u00a0No.\u00a023\u00a0\u2014Central Okanagan"
                                                }
                                            },
                                            {
                                                "@colname": "c2",
                                                "@valign": "top",
                                                "oasis:line": "Speech/language pathologists and physiotherapists employed by The Board of School Trustees of School District No. 23 (Central Okanagan) in the School District."
                                            }
                                        ]
                                    },
                                    {
                                        "oasis:entry": [
                                            {
                                                "@colname": "c1",
                                                "@valign": "top",
