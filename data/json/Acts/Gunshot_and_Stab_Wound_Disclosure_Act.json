        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@id": "00_10007_01",
        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "act:title": "Gunshot and Stab Wound Disclosure Act",
        "act:chapter": "7",
        "act:yearenacted": "2010",
        "act:assentedto": "June 3, 2010",
        "act:currency": {
            "act:tlcDirPath": "553593740/10007/1154450599",
            "act:tlc": "E2tlc10007"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e24",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "emergency medical assistant",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96182_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Emergency Health Services Act"
                                },
                                "#text": "means an emergency medical assistant as defined in the ;"
                            }
                        },
                        {
                            "@id": "d2e47",
                            "bcl:text": {
                                "in:term": "health care facility",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e57",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96180_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Health Authorities Act"
                                        },
                                        "#text": "a facility operated by a regional health board designated under the ,"
                                    }
                                },
                                {
                                    "@id": "d2e69",
                                    "bcl:num": "b",
                                    "bcl:text": "an organization or institution that provides health care services,"
                                },
                                {
                                    "@id": "d2e78",
                                    "bcl:num": "c",
                                    "bcl:text": "a clinic that provides health care services,"
                                },
                                {
                                    "@id": "d2e87",
                                    "bcl:num": "d",
                                    "bcl:text": "the office of a medical practitioner, or"
                                },
                                {
                                    "@id": "d2e96",
                                    "bcl:num": "e",
                                    "bcl:text": "a prescribed facility;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e105",
                            "bcl:text": {
                                "in:term": "local police authority",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96367_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Police Act"
                                },
                                "#text": "means the police force or police department or the designated policing unit, as defined in section 1 of the , that is responsible for policing the area in which a health care facility is located;"
                            }
                        },
                        {
                            "@id": "d2e118",
                            "bcl:text": [
                                {
                                    "in:term": "stab wound",
                                    "#text": "means"
                                },
                                "but does not include a wound that is reasonably believed to be self-inflicted or unintentionally inflicted."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e127",
                                    "bcl:num": "a",
                                    "bcl:text": "a wound caused by a knife or other sharp or pointed instrument, or"
                                },
                                {
                                    "@id": "d2e136",
                                    "bcl:num": "b",
                                    "bcl:text": "a prescribed wound,"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e149",
                    "bcl:marginalnote": "Mandatory disclosure",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e157",
                            "bcl:num": "1",
                            "bcl:text": "A health care facility or emergency medical assistant who treats a person for a gunshot or stab wound must disclose the following information to the local police authority:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e166",
                                    "bcl:num": "a",
                                    "bcl:text": "the injured person's name, if known;"
                                },
                                {
                                    "@id": "d2e175",
                                    "bcl:num": "b",
                                    "bcl:text": "the fact that the injured person is being treated or has been treated for a gunshot or stab wound;"
                                },
                                {
                                    "@id": "d2e185",
                                    "bcl:num": "c",
                                    "bcl:text": "in the case of a health care facility, the name and location of the health care facility;"
                                },
                                {
                                    "@id": "d2e194",
                                    "bcl:num": "d",
                                    "bcl:text": "in the case of an emergency medical assistant, the location where the treatment occurs;"
                                },
                                {
                                    "@id": "d2e203",
                                    "bcl:num": "e",
                                    "bcl:text": "any other information required by the regulations."
                                }
                            ]
                        },
                        {
                            "@id": "d2e212",
                            "bcl:num": "2",
                            "bcl:text": "Subsection (1) does not apply to an emergency medical assistant who delivers the injured person to a health care facility."
                        }
                    ]
                },
                {
                    "@id": "d2e222",
                    "bcl:marginalnote": "Manner and timing of disclosure",
                    "bcl:num": "3",
                    "bcl:text": "Subject to the regulations, the disclosure required by section 2 must be made",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e233",
                            "bcl:num": "a",
                            "bcl:text": "orally, and"
                        },
                        {
                            "@id": "d2e242",
                            "bcl:num": "b",
                            "bcl:text": "as soon as it is reasonably practicable to do so without interfering with the injured person's treatment or disrupting the regular activities of the health care facility or the emergency medical assistant."
                        }
                    ]
                },
                {
                    "@id": "d2e252",
                    "bcl:marginalnote": "Other obligations not affected",
                    "bcl:num": "4",
                    "bcl:text": "Nothing in this Act prevents a health care facility or an emergency medical assistant from disclosing to a local police authority information that the health care facility or emergency medical assistant is otherwise by law permitted or authorized to disclose."
                },
                {
                    "@id": "d2e265",
                    "bcl:marginalnote": "Personal liability protection",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e273",
                            "bcl:num": "1",
                            "bcl:text": [
                                "Subject to subsection (2), no legal proceeding for damages lies or may be commenced or maintained against",
                                "because of anything done or omitted in the performance or intended performance of any duty under this Act."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e282",
                                    "bcl:num": "a",
                                    "bcl:text": "a health care facility,"
                                },
                                {
                                    "@id": "d2e291",
                                    "bcl:num": "b",
                                    "bcl:text": "a director, officer or employee of a health care facility,"
                                },
                                {
                                    "@id": "d2e301",
                                    "bcl:num": "c",
                                    "bcl:text": "an emergency medical assistant, or"
                                },
                                {
                                    "@id": "d2e310",
                                    "bcl:num": "d",
                                    "bcl:text": "any other person acting under the authority of this Act"
                                }
                            ]
                        },
                        {
                            "@id": "d2e322",
                            "bcl:num": "2",
                            "bcl:text": "Subsection (1) does not apply to a person referred to in that subsection in relation to anything done or omitted by that person in bad faith."
                        }
                    ]
                },
                {
                    "@id": "d2e332",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act"
                    },
                    "bcl:num": "6",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5 of the  does not apply to this Act or the regulations."
                    }
                },
                {
                    "@id": "d2e350",
                    "bcl:marginalnote": "Regulations",
                    "bcl:num": "7",
                    "bcl:text": "The Lieutenant Governor in Council may make regulations as follows:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e361",
                            "bcl:num": "a",
                            "bcl:text": "prescribing a wound for the purposes of paragraph (b) of the definition of \"stab wound\" in section 1;"
                        },
                        {
                            "@id": "d2e370",
                            "bcl:num": "b",
                            "bcl:text": "defining terms that are used but not defined in this Act;"
                        },
                        {
                            "@id": "d2e380",
                            "bcl:num": "c",
                            "bcl:text": "prescribing facilities or classes of facilities for the purposes of paragraph\u00a0(e) of the definition of \"health care facility\" in section 1;"
                        },
                        {
                            "@id": "d2e389",
                            "bcl:num": "d",
                            "bcl:text": "prescribing information that must be disclosed under section 2 (1) (e);"
                        },
                        {
                            "@id": "d2e398",
                            "bcl:num": "e",
                            "bcl:text": "governing the manner and timing of the disclosure required under section\u00a02;"
                        },
                        {
                            "@id": "d2e407",
                            "bcl:num": "f",
                            "bcl:text": "prescribing the person or class of persons responsible for making disclosure on behalf of a health care facility;"
                        },
                        {
                            "@id": "d2e416",
                            "bcl:num": "g",
                            "bcl:text": "exempting persons or classes of persons from the requirements of this Act;"
                        },
                        {
                            "@id": "d2e425",
                            "bcl:num": "h",
                            "bcl:text": "exempting facilities or classes of facilities from the requirements of this Act;"
                        },
                        {
                            "@id": "d2e435",
                            "bcl:num": "i",
                            "bcl:text": "prescribing circumstances in which an exemption under paragraph (g) or (h) is or is not applicable."
                        }
                    ]
                },
                {
                    "@id": "d2e445",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "8",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in Council."
                }
            ]
        }
    }
}