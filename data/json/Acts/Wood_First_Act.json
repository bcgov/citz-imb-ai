        "@xmlns:fun": "http://www.bclaws.ca/xslt/functions",
        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_09018_01",
        "act:title": "Wood First Act",
        "act:chapter": "18",
        "act:yearenacted": "2009",
        "act:assentedto": "October 29, 2009",
        "act:currency": {
            "act:tlcDirPath": "901199259/09018/tlc09018_f",
            "act:tlc": "E3tlc09018"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": {
                                "in:term": "local government",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e38",
                                    "bcl:num": "a",
                                    "bcl:text": "the City of Vancouver,"
                                },
                                {
                                    "@id": "d2e48",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/03026_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Community\n                Charter"
                                        },
                                        "#text": "a municipality as defined in the , or"
                                    }
                                },
                                {
                                    "@id": "d2e60",
                                    "bcl:num": "c",
                                    "bcl:text": "a regional district;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e69",
                            "bcl:text": {
                                "in:term": "Provincial government",
                                "in:desc": "[government as reported through the\n            consolidated revenue fund]",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00023_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Budget Transparency and Accountability\n            Act"
                                },
                                "#text": "means that part of the government\n          reporting entity referred to in paragraph (a)  of the definition of \"government reporting entity\"\n          in section 1 (1) of the ;"
                            }
                        },
                        {
                            "@id": "d2e84",
                            "bcl:text": [
                                {
                                    "in:term": "provincially funded building",
                                    "#text": "means"
                                },
                                "with respect to which the Provincial government contributed money, other than\n          through a contribution by an unconditional grant to a local government, to fund its design\n          or construction."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e93",
                                    "bcl:num": "a",
                                    "bcl:text": "a building, or"
                                },
                                {
                                    "@id": "d2e102",
                                    "bcl:num": "b",
                                    "bcl:text": "an addition to a building that increases the size of the building,"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e116",
                    "bcl:marginalnote": "Purpose",
                    "bcl:num": "2",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/15002",
                            "@xlink:type": "locator",
                            "in:doc": "Building Act"
                        },
                        "#text": "The purpose of this Act is to facilitate a culture of wood by requiring the use of\n        wood as the primary building material in all new provincially funded buildings, in a manner\n        consistent with the building regulations within the meaning of the ."
                    }
                },
                {
                    "@id": "d2e128",
                    "bcl:marginalnote": "Best practices",
                    "bcl:num": "3",
                    "bcl:text": "In order to promote the use of wood in provincially funded buildings, the minister\n        may do the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e139",
                            "bcl:num": "a",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/15002",
                                    "@xlink:type": "locator",
                                    "in:doc": "Building Act"
                                },
                                "#text": "recommend best practices for the use of wood in provincially funded buildings in a\n          manner consistent with the building regulations within the meaning of the ;"
                            }
                        },
                        {
                            "@id": "d2e148",
                            "bcl:num": "b",
                            "bcl:text": "advise on the form and content of agreements and other arrangements for the design\n          or construction of provincially funded buildings;"
                        },
                        {
                            "@id": "d2e158",
                            "bcl:num": "c",
                            "bcl:text": "carry out prescribed responsibilities."
                        }
                    ]
                },
                {
                    "@id": "d2e168",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e176",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041\n          of the ."
                            }
                        },
                        {
                            "@id": "d2e188",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may\n          make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e197",
                                    "bcl:num": "a",
                                    "bcl:text": "requiring reports on the use of wood in provincially funded\n            buildings;"
                                },
                                {
                                    "@id": "d2e207",
                                    "bcl:num": "b",
                                    "bcl:text": "respecting the preparation of reports required under paragraph\n            (a), including, without limitation, the timing, form and content of the\n            reports, and respecting records that must be maintained in relation to those reports and\n            access that must be provided to those records;"
                                },
                                {
                                    "@id": "d2e216",
                                    "bcl:num": "c",
                                    "bcl:text": "prescribing responsibilities for the purpose of section 3 (c);"
                                },
                                {
                                    "@id": "d2e225",
                                    "bcl:num": "d",
                                    "bcl:text": "defining a word or expression used but not defined in this Act."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e235",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "5",
                    "bcl:text": "This Act comes into force on the date of Royal Assent."
                }
            ]
        }
    }
}