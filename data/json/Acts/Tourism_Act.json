        "@id": "00_96453_01",
        "act:title": "Tourism Act",
        "act:chapter": "453",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1089244767/96453/tlc96453_f",
            "act:tlc": "E2tlc96453"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Duties, powers and functions",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e23",
                            "bcl:num": "1",
                            "bcl:text": "The duties, powers and functions of the minister include the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e32",
                                    "bcl:num": "a",
                                    "bcl:text": "encouraging development of the tourism industry in British Columbia;"
                                },
                                {
                                    "@id": "d2e41",
                                    "bcl:num": "b",
                                    "bcl:text": "providing information services for tourists;"
                                },
                                {
                                    "@id": "d2e51",
                                    "bcl:num": "c",
                                    "bcl:text": "promoting tourism;"
                                },
                                {
                                    "@id": "d2e60",
                                    "bcl:num": "d",
                                    "bcl:text": "reflecting tourism interests in land and resource use and management decisions;"
                                },
                                {
                                    "@id": "d2e69",
                                    "bcl:num": "e",
                                    "bcl:text": "encouraging the development of the motion picture industry in British Columbia."
                                }
                            ]
                        },
                        {
                            "@id": "d2e78",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the minister may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e87",
                                    "bcl:num": "a",
                                    "bcl:text": "develop policies, plans and programs that reflect the duties, powers and functions set out in subsection (1),"
                                },
                                {
                                    "@id": "d2e96",
                                    "bcl:num": "b",
                                    "bcl:text": "encourage the enhancement of the standards of accommodation, facilities, tourist services and related amenities and support structures necessary to facilitate and support tourists in British Columbia,"
                                },
                                {
                                    "@id": "d2e106",
                                    "bcl:num": "c",
                                    "bcl:text": "enhance the professionalism and job creation potential of the tourism industry in British Columbia by",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e115",
                                            "bcl:num": "i",
                                            "bcl:text": "developing occupational standards and certification processes, and"
                                        },
                                        {
                                            "@id": "d2e124",
                                            "bcl:num": "ii",
                                            "bcl:text": "developing and sponsoring training programs, seminars and other activities through which information can be shared and expertise developed,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e133",
                                    "bcl:num": "d",
                                    "bcl:text": "collect, evaluate and disseminate information regarding the following:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e142",
                                            "bcl:num": "i",
                                            "bcl:text": "tourism markets and market potential;"
                                        },
                                        {
                                            "@id": "d2e151",
                                            "bcl:num": "ii",
                                            "bcl:text": "trends in tourist activities, expectations and needs;"
                                        },
                                        {
                                            "@id": "d2e161",
                                            "bcl:num": "iii",
                                            "bcl:text": "competing tourism markets;"
                                        },
                                        {
                                            "@id": "d2e170",
                                            "bcl:num": "iv",
                                            "bcl:text": "the availability and suitability of transportation and other facilities and services supporting tourism activities;"
                                        },
                                        {
                                            "@id": "d2e179",
                                            "bcl:num": "v",
                                            "bcl:text": "tourism programs and activities;"
                                        },
                                        {
                                            "@id": "d2e188",
                                            "bcl:num": "vi",
                                            "bcl:text": "land and resources for tourism use,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e197",
                                    "bcl:num": "e",
                                    "bcl:text": "provide tourists with travel services and with information on the following:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e206",
                                            "bcl:num": "i",
                                            "bcl:text": "accommodations;"
                                        },
                                        {
                                            "@id": "d2e216",
                                            "bcl:num": "ii",
                                            "bcl:text": "tourism destinations and facilities;"
                                        },
                                        {
                                            "@id": "d2e225",
                                            "bcl:num": "iii",
                                            "bcl:text": "tourist attractions;"
                                        },
                                        {
                                            "@id": "d2e234",
                                            "bcl:num": "iv",
                                            "bcl:text": "services available to tourists,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e243",
                                    "bcl:num": "f",
                                    "bcl:text": "promote British Columbia as a tourism destination, and"
                                },
                                {
                                    "@id": "d2e252",
                                    "bcl:num": "g",
                                    "bcl:text": "negotiate and enter into agreements or arrangements relating to tourism or any other matter referred to in this section,",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e261",
                                            "bcl:num": "i",
                                            "bcl:text": "subject to the approval of the Lieutenant Governor in Council, with the government of a province or the government of Canada or any agency of or other body created by any one or more of those governments, and"
                                        },
                                        {
                                            "@id": "d2e271",
                                            "bcl:num": "ii",
                                            "bcl:text": "with any other person."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e280",
                            "bcl:num": "3",
                            "bcl:text": "Without limiting subsections (1) and (2), the minister may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e289",
                                    "bcl:num": "a",
                                    "bcl:text": "sell or otherwise dispose of to any person, or authorize a person or organization to sell or otherwise dispose of to any person, magazines, informational material or other products or services related to the promotion of tourism,"
                                },
                                {
                                    "@id": "d2e298",
                                    "bcl:num": "b",
                                    "bcl:text": "sell products referred to in paragraph (a) to a person for resale or other disposition,"
                                },
                                {
                                    "@id": "d2e307",
                                    "bcl:num": "c",
                                    "bcl:text": "sell or otherwise dispose of advertising space in those products, and"
                                },
                                {
                                    "@id": "d2e316",
                                    "bcl:num": "d",
                                    "bcl:text": "establish the prices at which those products and services, and that advertising space, may be sold or otherwise disposed of."
                                }
                            ]
                        },
                        {
                            "@id": "d2e326",
                            "bcl:num": "4",
                            "bcl:text": "The minister may establish different prices for different classes of services or products, including advertising space, for different types of dispositions or for disposition to different classes of persons."
                        }
                    ]
                },
                {
                    "@id": "d2e336",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "2",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                    }
                }
            ]
        }
    }
