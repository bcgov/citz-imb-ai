        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96320_01",
        "act:title": "Resort Associations Act",
        "act:chapter": "320",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "286269762/96320/tlc96320_f",
            "act:tlc": "E3tlc96320"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "association",
                                "#text": "means an association incorporated under section\u00a03;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "bylaws",
                                "#text": "means the bylaws of an association;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "municipality",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/03026_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Community Charter"
                                },
                                "#text": "means a municipality as defined in the ;"
                            }
                        },
                        {
                            "@id": "d2e57",
                            "bcl:text": {
                                "in:term": "owner",
                                "#text": "means"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e66",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96250_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Land Title Act"
                                        },
                                        "#text": "the owner of an estate in fee simple registered under the , or"
                                    }
                                },
                                {
                                    "@id": "d2e78",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96245_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Land Act"
                                        },
                                        "#text": "a person in possession of Crown land under a lease, licence, agreement for sale, easement, statutory right of way or other instrument under the ;"
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e90",
                            "bcl:text": {
                                "in:term": "regional district",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/r15001_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Local Government Act"
                                },
                                "#text": "means a regional district as defined in the ;"
                            }
                        },
                        {
                            "@id": "d2e102",
                            "bcl:text": {
                                "in:term": "registrar",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96250_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Land Title Act"
                                },
                                "#text": "means a registrar as defined in the ;"
                            }
                        },
                        {
                            "@id": "d2e115",
                            "bcl:text": {
                                "in:term": "resort land",
                                "#text": "means the land in a resort promotion area that is specified by the minister as resort land and includes a lot, strata lot or other parcel into which the land is subdivided;"
                            }
                        },
                        {
                            "@id": "d2e124",
                            "bcl:text": {
                                "in:term": "resort promotion area",
                                "#text": "means a resort promotion area established under section 2."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e134",
                    "bcl:marginalnote": "Resort promotion areas",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e142",
                            "bcl:num": "1",
                            "bcl:text": "The minister may by order establish an area of British Columbia within a municipality or a regional district as a resort promotion area."
                        },
                        {
                            "@id": "d2e151",
                            "bcl:num": "2",
                            "bcl:text": "Before the minister makes an order under subsection (1), the minister must be satisfied that",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e160",
                                    "bcl:num": "a",
                                    "bcl:text": "one of the following conditions is met:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e170",
                                            "bcl:num": "i",
                                            "bcl:text": "alpine ski lift operations, year-round recreational facilities and commercial overnight accommodation are offered within the area;"
                                        },
                                        {
                                            "@id": "d2e179",
                                            "bcl:num": "ii",
                                            "bcl:text": "a person has entered into an agreement with the government with respect to developing alpine ski lift operations, year-round recreational facilities and commercial overnight accommodation within the area;"
                                        },
                                        {
                                            "@id": "d2e188",
                                            "bcl:num": "iii",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/r15001_00",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Local Government Act"
                                                },
                                                "#text": "the area is within a resort region, as defined in the , and"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e200",
                                    "bcl:num": "b",
                                    "bcl:text": "the establishment of the resort promotion area has been approved by",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e209",
                                            "bcl:num": "i",
                                            "bcl:text": "the council of all the municipalities in which any part of the area is located, and"
                                        },
                                        {
                                            "@id": "d2e218",
                                            "bcl:num": "ii",
                                            "bcl:text": "the board of all the regional districts in which any part of the area is located, if the part is not in a municipality."
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e228",
                    "bcl:marginalnote": "Resort associations",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e236",
                            "bcl:num": "1",
                            "bcl:text": "If the minister establishes a resort promotion area under section 2, the minister may by order specify land within that area as resort land and incorporate an association to carry out the purposes referred to in section 4 (1) within the resort promotion area."
                        },
                        {
                            "@id": "d2e245",
                            "bcl:num": "2",
                            "bcl:text": "Before the minister makes an order under subsection (1), the minister must be satisfied that the owners of land in the area have signed and presented to the minister a petition for the establishment of a resort association."
                        },
                        {
                            "@id": "d2e254",
                            "bcl:num": "3",
                            "bcl:text": {
                                "in:desc": "[petition for local area service]",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/03026_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Community Charter"
                                },
                                "#text": "Section 212\u00a0 of the  applies to a petition under this section as far as reasonably possible and, for these purposes, the minister may make orders in relation to any matters dealt with in that section."
                            }
                        },
                        {
                            "@id": "d2e270",
                            "bcl:num": "4",
                            "bcl:text": "The name of an association must include the words \"Resort Association\"."
                        },
                        {
                            "@id": "d2e279",
                            "bcl:num": "5",
                            "bcl:text": "The first bylaws of an association must be",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e288",
                                    "bcl:num": "a",
                                    "bcl:text": "approved by the minister and the council of the municipality in which the resort promotion area is located or, in the absence of a municipality, by the board of the regional district in which the resort promotion area is located, and"
                                },
                                {
                                    "@id": "d2e297",
                                    "bcl:num": "b",
                                    "bcl:text": "filed with the Registrar of Companies."
                                }
                            ]
                        },
                        {
                            "@id": "d2e306",
                            "bcl:num": "6",
                            "bcl:text": "An association incorporated under subsection (1) comes into existence when the following are filed with the Registrar of Companies:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e315",
                                    "bcl:num": "a",
                                    "bcl:text": "the order under subsection (1);"
                                },
                                {
                                    "@id": "d2e325",
                                    "bcl:num": "b",
                                    "bcl:text": "the bylaws referred to in subsection (5);"
                                },
                                {
                                    "@id": "d2e334",
                                    "bcl:num": "c",
                                    "bcl:text": "a list of the persons who will be the first directors of the association;"
                                },
                                {
                                    "@id": "d2e343",
                                    "bcl:num": "d",
                                    "bcl:text": "a notice of the address of the association."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e353",
                    "bcl:marginalnote": "Purposes and powers of association",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e361",
                            "bcl:num": "1",
                            "bcl:text": "The purposes of an association are to promote, facilitate and encourage the development, maintenance and operation of a resort promotion area."
                        },
                        {
                            "@id": "d2e370",
                            "bcl:num": "2",
                            "bcl:text": "An association may acquire and dispose of real and personal property."
                        }
                    ]
                },
                {
                    "@id": "d2e380",
                    "bcl:marginalnote": "Membership in association",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e388",
                            "bcl:num": "1",
                            "bcl:text": "The owners of resort land and persons admitted under subsection (2) or (3) constitute the members of the association."
                        },
                        {
                            "@id": "d2e397",
                            "bcl:num": "2",
                            "bcl:text": "An owner of land within a resort promotion area that is not resort land may, in accordance with the bylaws, become a member of the association and on becoming a member the owner's land is deemed to be resort land."
                        },
                        {
                            "@id": "d2e406",
                            "bcl:num": "3",
                            "bcl:text": "A person may, in accordance with the bylaws of an association, become a member of the association if the person",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e416",
                                    "bcl:num": "a",
                                    "bcl:text": "owns or carries on business in the resort promotion area,"
                                },
                                {
                                    "@id": "d2e425",
                                    "bcl:num": "b",
                                    "bcl:text": "is an occupier of resort land,"
                                },
                                {
                                    "@id": "d2e434",
                                    "bcl:num": "c",
                                    "bcl:text": "is an agent of an owner of resort land, or"
                                },
                                {
                                    "@id": "d2e443",
                                    "bcl:num": "d",
                                    "bcl:text": "is a member of any other class of persons identified in the bylaws."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e454",
                    "bcl:marginalnote": "Application of Acts",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e462",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/02057_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Business Corporations Act"
                                },
                                "#text": "The  does not apply to an association."
                            }
                        },
                        {
                            "@id": "d2e474",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/15018_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Societies Act"
                                },
                                "#text": "The following provisions of the  apply to an association:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e486",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "in:desc": "[definitions]",
                                        "#text": "section 1 , except the definitions of \"ordinary resolution\" and \"special resolution\";"
                                    }
                                },
                                {
                                    "@id": "d2e514",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "in:desc": "[no share capital]",
                                        "#text": "section 3 ;"
                                    }
                                },
                                {
                                    "@id": "d2e523",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "in:desc": "[liability of members]",
                                        "#text": "section 5 ;"
                                    }
                                },
                                {
                                    "@id": "d2e532",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "in:desc": "[capacity and powers of society]",
                                        "#text": "section 6 ;"
                                    }
                                },
                                {
                                    "@id": "d2e541",
                                    "bcl:num": "e",
                                    "bcl:text": {
                                        "in:desc": "[restricted activities and powers]",
                                        "#text": "section 7 ;"
                                    }
                                },
                                {
                                    "@id": "d2e551",
                                    "bcl:num": "f",
                                    "bcl:text": {
                                        "in:desc": "[seal]",
                                        "#text": "section 9 (6) ;"
                                    }
                                },
                                {
                                    "@id": "d2e560",
                                    "bcl:num": "g",
                                    "bcl:text": {
                                        "in:desc": "[statement of directors and registered office]",
                                        "#text": "section 12 ;"
                                    }
                                },
                                {
                                    "@id": "d2e569",
                                    "bcl:num": "h",
                                    "bcl:text": {
                                        "in:desc": "[alterations to bylaws]",
                                        "#text": "section 17 ;"
                                    }
                                },
                                {
                                    "@id": "d2e578",
                                    "bcl:num": "i",
                                    "bcl:text": {
                                        "in:desc": "[Registered Office and Records]",
                                        "#text": "Part 3 ;"
                                    }
                                },
                                {
                                    "@id": "d2e587",
                                    "bcl:num": "j",
                                    "bcl:text": {
                                        "in:desc": [
                                            "[Investment and Borrowing]",
                                            "[Finance]"
                                        ],
                                        "#text": "Division 1  of Part 4 ;"
                                    }
                                },
                                {
                                    "@id": "d3e587",
                                    "bcl:num": "k",
                                    "bcl:text": {
                                        "in:desc": "[Management]",
                                        "#text": "Part 5 , except"
                                    },
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e496",
                                            "bcl:num": "i",
                                            "bcl:text": {
                                                "in:desc": "[removal of directors]",
                                                "#text": "section 50 , and"
                                            }
                                        },
                                        {
                                            "@id": "d2e505",
                                            "bcl:num": "ii",
                                            "bcl:text": {
                                                "in:desc": "[Indemnification of Directors and Senior Managers and Payment of Expenses]",
                                                "#text": "Division 7 ;"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e687",
                                    "bcl:num": "l",
                                    "bcl:text": {
                                        "in:desc": "[Members and General Meetings]",
                                        "#text": "Part 6 , except"
                                    },
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e698",
                                            "bcl:num": "i",
                                            "bcl:text": {
                                                "in:desc": "[membership]",
                                                "#text": "section 67 (1) to (3) ,"
                                            }
                                        },
                                        {
                                            "@id": "d1e710",
                                            "bcl:num": "ii",
                                            "bcl:text": {
                                                "in:desc": "[classes of membership]",
                                                "#text": "section 68 ,"
                                            }
                                        },
                                        {
                                            "@id": "d1e722",
                                            "bcl:num": "iii",
                                            "bcl:text": {
                                                "in:desc": "[termination of membership]",
                                                "#text": "section 69 ,"
                                            }
                                        },
                                        {
                                            "@id": "d1e735",
                                            "bcl:num": "iv",
                                            "bcl:text": {
                                                "in:desc": "[discipline and expulsion of member]",
                                                "#text": "section 70 , and"
                                            }
                                        },
                                        {
                                            "@id": "d1e747",
                                            "bcl:num": "v",
                                            "bcl:text": {
                                                "in:desc": "[right to vote]",
                                                "#text": "section 84 (2) ;"
                                            }
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e760",
                                    "bcl:num": "m",
                                    "bcl:text": {
                                        "in:desc": "[court may remedy irregularities]",
                                        "#text": "section 105 ;"
                                    }
                                },
                                {
                                    "@id": "d1e772",
                                    "bcl:num": "n",
                                    "bcl:text": {
                                        "in:desc": "[registrar or court may order access or copies]",
                                        "#text": "section 107 ;"
                                    }
                                },
                                {
                                    "@id": "d1e784",
                                    "bcl:num": "o",
                                    "bcl:text": {
                                        "in:desc": "[Audit]",
                                        "#text": "Part 9 ;"
                                    }
                                },
                                {
                                    "@id": "d1e797",
                                    "bcl:num": "p",
                                    "bcl:text": {
                                        "in:desc": "[investigation of society]",
                                        "#text": "section 213 ;"
                                    }
                                },
                                {
                                    "@id": "d1e809",
                                    "bcl:num": "q",
                                    "bcl:text": {
                                        "in:desc": "[general regulation-making authority]",
                                        "#text": "section 228 ."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e596",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/02057_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Business Corporations Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/15018_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Societies Act"
                                    }
                                ],
                                "#text": "The minister may order that specified provisions of the  and  apply to an association in addition to those provisions specified in subsection (2)."
                            }
                        },
                        {
                            "@id": "d2e612",
                            "bcl:num": "4",
                            "bcl:text": {
                                "in:desc": "[definitions]",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/15018_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Societies Act"
                                },
                                "#text": "The reporting society provisions, as defined in section 231  of the , apply to an association."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e625",
                    "bcl:marginalnote": "Bylaws",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e633",
                            "bcl:num": "1",
                            "bcl:text": "An association may make bylaws that may include provisions for",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e642",
                                    "bcl:num": "a",
                                    "bcl:text": "classes of membership,"
                                },
                                {
                                    "@id": "d2e651",
                                    "bcl:num": "b",
                                    "bcl:text": "admission of members under section 5 (2) and (3),"
                                },
                                {
                                    "@id": "d2e661",
                                    "bcl:num": "c",
                                    "bcl:text": "voting rights of members, and"
                                },
                                {
                                    "@id": "d2e670",
                                    "bcl:num": "d",
                                    "bcl:text": "levying of assessments on members."
                                }
                            ]
                        },
                        {
                            "@id": "d2e679",
                            "bcl:num": "2",
                            "bcl:text": {
                                "in:desc": "[alterations to bylaws]",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/15018_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Societies Act"
                                },
                                "#text": "The bylaws may only be added to, amended or repealed in accordance with their provisions and section 17  of the  and with the approval of the minister and the council of the municipality in which the resort land is located or, in the absence of a municipality, the board of the regional district in which the resort promotion area is located."
                            }
                        },
                        {
                            "@id": "d2e691",
                            "bcl:num": "3",
                            "bcl:text": "The bylaws bind the association and its members to the same extent as if the bylaws had been signed and sealed by the association and each member and contained covenants on the part of the association with each member and on the part of each member with every other member and with the association to observe and perform all the provisions of the bylaws."
                        }
                    ]
                },
                {
                    "@id": "d2e701",
                    "bcl:marginalnote": "Oppressive acts",
                    "bcl:num": "8",
                    "bcl:text": "A member of an association may apply to the Supreme Court for relief if the member considers",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e712",
                            "bcl:num": "a",
                            "bcl:text": "that the affairs of the association are being conducted or the powers of the association are being exercised in a manner oppressive to the member or to the member and one or more other members, or"
                        },
                        {
                            "@id": "d2e721",
                            "bcl:num": "b",
                            "bcl:text": "that an act of the association has been done or is proposed or that a resolution of the members has been passed or is proposed that is unfairly prejudicial to the member or to the member and one or more other members."
                        }
                    ]
                },
                {
                    "@id": "d2e731",
                    "bcl:marginalnote": "Notation on title",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e739",
                            "bcl:num": "1",
                            "bcl:text": "The resort land is, on the establishment of the resort promotion area, subject to this Act and the bylaws, without special endorsement on the indefeasible title, and the registrar may, and on application of the association must, make the following notation on every indefeasible title of resort land issued on or after the establishment of the resort promotion area:",
                            "bcl:paragraph": {
                                "@id": "d1e816",
                                "bcl:text": {
                                    "in:doc": "Resort Associations Act",
                                    "#text": "\"This land is subject to the  and the bylaws of the .............................. Resort Association filed with the Registrar of Companies.\""
                                }
                            }
                        },
                        {
                            "@id": "d2e754",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96250_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Land Title Act"
                                },
                                "#text": "An application under subsection (1) must contain a description of the resort land that is sufficient for the registrar to identify it in the records of the land title office and must be in the form prescribed under the ."
                            }
                        },
                        {
                            "@id": "d2e767",
                            "bcl:num": "3",
                            "bcl:text": [
                                "In the event of any delay, omission, mistake or misfeasance by the registrar or the registrar's employees in relation to making a notation under subsection (1),",
                                "for any loss or damage sustained by any person because of the delay, omission, mistake or misfeasance."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e776",
                                    "bcl:num": "a",
                                    "bcl:text": "the registrar is not liable and neither the government nor the Land Title and Survey Authority of British Columbia is liable vicariously,"
                                },
                                {
                                    "@id": "d2e785",
                                    "bcl:num": "a.1",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96250_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Land Title Act"
                                        },
                                        "#text": "the assurance fund or the Land Title and Survey Authority of British Columbia as a nominal defendant is not liable under Part 19.1 of the , and"
                                    }
                                },
                                {
                                    "@id": "d2e797",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96250_00",
                                                "@xlink:type": "locator",
                                                "in:doc": "Land Title Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96250_00",
                                                "@xlink:type": "locator",
                                                "in:doc": "Land Title Act"
                                            }
                                        ],
                                        "#text": "the assurance fund or the minister charged with the administration of the  as a nominal defendant is not liable under Part\u00a020 of the"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e815",
                    "bcl:marginalnote": "Levies",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e823",
                            "bcl:num": "1",
                            "bcl:text": "An assessment levied under the bylaws constitutes a debt."
                        },
                        {
                            "@id": "d2e832",
                            "bcl:num": "2",
                            "bcl:text": "If an owner of resort land defaults in the payment of an assessment levied against the owner under the bylaws, the association may,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e841",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96245_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Land Act"
                                        },
                                        "#text": "in respect of the Crown leases and rights of way on the resort land, file with the ministry of the minister responsible for the administration of the  a certificate showing the amount owing, and"
                                    }
                                },
                                {
                                    "@id": "d2e854",
                                    "bcl:num": "b",
                                    "bcl:text": "in respect of other resort land, file in the land title office, in the same manner that a charge is registered, a certificate showing the amount owing and the legal description."
                                }
                            ]
                        },
                        {
                            "@id": "d2e863",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/97045_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Builders Lien Act"
                                },
                                "#text": "If a certificate is filed or registered under subsection (2), it is a charge for the amount owing in favour of the association, in priority to every other lien or charge of whatever kind except those created under the  and those of the Crown, other than mortgages in favour of the Crown."
                            }
                        },
                        {
                            "@id": "d2e875",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96245_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Land Act"
                                },
                                "#text": "The association must, on satisfaction of the debt, file with the ministry of the minister responsible for the administration of the  or the registrar, as the case may be, a release in a form acceptable to that ministry or the registrar."
                            }
                        },
                        {
                            "@id": "d2e887",
                            "bcl:num": "5",
                            "bcl:text": "An owner or other person claiming an estate or interest in or charge on resort land may apply to the Supreme Court to require the association to show cause why a certificate filed or registered under subsection (2) should not be removed."
                        },
                        {
                            "@id": "d2e896",
                            "bcl:num": "6",
                            "bcl:text": "On an application under subsection (5), the court may make any order the court considers appropriate."
                        }
                    ]
                },
                {
                    "@id": "d2e906",
                    "bcl:marginalnote": "Associations and areas continued",
                    "bcl:num": "10.1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e914",
                            "bcl:num": "1",
                            "bcl:text": "An association incorporated under section 3 of this Act before this section comes into force is continued."
                        },
                        {
                            "@id": "d2e923",
                            "bcl:num": "2",
                            "bcl:text": "A mountain resort area established under this Act before this section comes into force is continued as a resort promotion area."
                        }
                    ]
                },
                {
                    "@id": "d2e934",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "11",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations as referred to in section\u00a041 of the ."
                    }
                }
            ]
        }
    }
}