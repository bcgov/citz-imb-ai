        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "15003",
        "act:title": "Federal Port Development Act",
        "act:chapter": "3",
        "act:yearenacted": "2015",
        "act:assentedto": "March 25, 2015",
        "act:currency": {
            "act:tlcDirPath": "1198514681/15003_a/15003_t",
            "act:tlc": "E3tlc15003"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d0e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d0e26",
                            "bcl:text": {
                                "in:term": "agreement",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-6.7/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "Canada Marine Act"
                                },
                                "#text": "means an agreement, referred to in section 64.6 of the , among Canada and the government, or agents of either, in respect of an undertaking situated in a port in British Columbia;"
                            }
                        },
                        {
                            "@id": "d0e38",
                            "bcl:text": {
                                "in:term": "federal regulation",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-6.7/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "Canada Marine Act"
                                },
                                "#text": "means a regulation under section 64.1 of the  that applies in relation to an undertaking situated in a port in British Columbia;"
                            }
                        },
                        {
                            "@id": "d0e50",
                            "bcl:text": {
                                "in:term": "port",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-6.7/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "Canada Marine Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d0e62",
                            "bcl:text": {
                                "in:term": "provincial body",
                                "#text": "means a corporation or other entity that"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e69",
                                    "bcl:num": "a",
                                    "bcl:text": "is established or continued under an enactment, and"
                                },
                                {
                                    "@id": "d0e78",
                                    "bcl:num": "b",
                                    "bcl:text": "has powers or duties under an enactment;"
                                }
                            ]
                        },
                        {
                            "@id": "d0e88",
                            "bcl:text": {
                                "in:term": "provincial official",
                                "#text": "means a person who"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d0e95",
                                    "bcl:num": "a",
                                    "bcl:text": "is a member of the Executive Council, an employee of the government or a person appointed to or employed by a provincial body, and"
                                },
                                {
                                    "@id": "d0e104",
                                    "bcl:num": "b",
                                    "bcl:text": "has powers or duties under an enactment;"
                                }
                            ]
                        },
                        {
                            "@id": "d0e114",
                            "bcl:text": {
                                "in:term": "undertaking",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-6.7/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "Canada Marine Act"
                                },
                                "#text": "means an undertaking, or an undertaking in a class, designated for the purposes of section 64.1 (2) (a) of the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d0e127",
                    "bcl:marginalnote": "Authority to enter into agreement",
                    "bcl:num": "2",
                    "bcl:text": "With the prior approval of the Lieutenant Governor in Council, a member of the Executive Council may enter into an agreement on behalf of the government."
                },
                {
                    "@id": "d0e139",
                    "bcl:marginalnote": "Implementation of agreement",
                    "bcl:num": "3",
                    "bcl:text": "A provincial official or provincial body has authority to exercise a power or perform a duty under a federal regulation if",
                    "bcl:paragraph": [
                        {
                            "@id": "d0e150",
                            "bcl:num": "a",
                            "bcl:text": "the federal regulation incorporates by reference the enactment of British Columbia under which the power is granted or the duty is imposed on the provincial official or provincial body, and"
                        },
                        {
                            "@id": "d0e159",
                            "bcl:num": "b",
                            "bcl:text": "the government has entered into an agreement providing for the administration and enforcement of the federal regulation by the provincial official or provincial body."
                        }
                    ]
                },
                {
                    "@id": "d0e169",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "4",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in Council."
                }
            ]
        }
    }
}