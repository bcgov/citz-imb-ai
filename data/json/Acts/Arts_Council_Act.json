        "@id": "00_96019_01",
        "act:title": "Arts Council Act",
        "act:chapter": "19",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "524872423/96019/tlc96019_f",
            "act:tlc": "E3tlc96019"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e32",
                            "bcl:text": {
                                "in:term": "council",
                                "#text": "means the British Columbia Arts Council continued by this Act;"
                            }
                        },
                        {
                            "@id": "d2e41",
                            "bcl:text": {
                                "in:term": "fiscal year",
                                "#text": "means the fiscal year of the government;"
                            }
                        },
                        {
                            "@id": "d2e51",
                            "bcl:text": {
                                "in:term": "member",
                                "#text": "means a member of the council."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e61",
                    "bcl:marginalnote": "Purposes of council",
                    "bcl:num": "2",
                    "bcl:text": "The British Columbia Arts Council is continued for the purposes of",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e72",
                            "bcl:num": "a",
                            "bcl:text": "providing support for arts and culture in British Columbia,"
                        },
                        {
                            "@id": "d2e81",
                            "bcl:num": "b",
                            "bcl:text": "providing persons and organizations with the opportunity to participate in the arts and culture in British Columbia, and"
                        },
                        {
                            "@id": "d2e91",
                            "bcl:num": "c",
                            "bcl:text": "providing an open, accountable and neutrally administered process for managing funds for British Columbia arts and culture."
                        }
                    ]
                },
                {
                    "@id": "d2e101",
                    "bcl:marginalnote": "Powers and duties",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e109",
                            "bcl:num": "1",
                            "bcl:text": "The council must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e118",
                                    "bcl:num": "a",
                                    "bcl:text": "consult and collaborate with arts and cultural organizations, artists and artists' organizations, ministries of the government, local governments and other communities of interest in carrying out its purposes,"
                                },
                                {
                                    "@id": "d2e127",
                                    "bcl:num": "b",
                                    "bcl:text": "allocate the money appropriated annually for the council by the Legislature, and"
                                },
                                {
                                    "@id": "d2e137",
                                    "bcl:num": "c",
                                    "bcl:text": "support arts and culture in British Columbia through the following:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e146",
                                            "bcl:num": "i",
                                            "bcl:text": "public education, research and advocacy;"
                                        },
                                        {
                                            "@id": "d2e155",
                                            "bcl:num": "ii",
                                            "bcl:text": "awarding grants to any person or organization from the money appropriated for the council;"
                                        },
                                        {
                                            "@id": "d2e164",
                                            "bcl:num": "iii",
                                            "bcl:text": "the production and distribution of information about the council and the arts and culture in British Columbia."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e173",
                            "bcl:num": "2",
                            "bcl:text": "The minister may specify other powers and duties to be exercised and performed by the council."
                        }
                    ]
                },
                {
                    "@id": "d2e183",
                    "bcl:marginalnote": "The council",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e191",
                            "bcl:num": "1",
                            "bcl:text": "The council consists of not more than 15 members broadly representative of the regions and the artistic communities of British Columbia appointed by the Lieutenant Governor in Council."
                        },
                        {
                            "@id": "d2e200",
                            "bcl:num": "2",
                            "bcl:text": "The Lieutenant Governor in Council must designate a member to be the chair and another member to be the vice-chair of the council."
                        }
                    ]
                },
                {
                    "@id": "d2e210",
                    "bcl:marginalnote": "Remuneration and expenses",
                    "bcl:num": "5",
                    "bcl:text": "A member of the council may be paid",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e221",
                            "bcl:num": "a",
                            "bcl:text": "an allowance for reasonable travelling and incidental expenses necessarily incurred in carrying out the business of the council, and"
                        },
                        {
                            "@id": "d2e230",
                            "bcl:num": "b",
                            "bcl:text": "if the member is not a member of the Legislative Assembly or a public servant, remuneration at rates set by the Lieutenant Governor in Council."
                        }
                    ]
                },
                {
                    "@id": "d2e241",
                    "bcl:marginalnote": "Report and financial statement",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e249",
                            "bcl:num": "1",
                            "bcl:text": "The council must, within 90 days after the close of each fiscal year, submit to the minister",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e258",
                                    "bcl:num": "a",
                                    "bcl:text": "an annual report on the status of arts and culture in British Columbia during the preceding fiscal year, and"
                                },
                                {
                                    "@id": "d2e267",
                                    "bcl:num": "b",
                                    "bcl:text": "a financial statement showing all money allocated by the council during the preceding fiscal year."
                                }
                            ]
                        },
                        {
                            "@id": "d2e277",
                            "bcl:num": "2",
                            "bcl:text": "The report and the financial statement referred to in subsection (1) must be laid before the Legislative Assembly within 120 days after the end of the fiscal year for which the report and statement are made if the Legislative Assembly is then sitting, or within 15\u00a0days after the opening of the following session."
                        },
                        {
                            "@id": "d2e286",
                            "bcl:num": "3",
                            "bcl:text": "The council, on request, must provide to the minister any information or advice the minister may require."
                        }
                    ]
                },
                {
                    "@id": "d2e296",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "7",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                    }
                }
            ]
        }
    }
}