        "@id": "13007",
        "act:title": "Justice Reform and Transparency Act",
        "act:chapter": "7",
        "act:yearenacted": "2013",
        "act:assentedto": "March 14, 2013",
        "act:currency": {
            "act:tlcDirPath": "216002890/440216704/1484742013",
            "act:tlc": "E3tlc13007"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e25",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e36",
                            "bcl:text": {
                                "in:term": "council",
                                "#text": "means the Justice and Public Safety Council established under\n            section\n            2;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "justice and public safety sector",
                                "#text": "means the justice system, including,\n          without limitation, programs or services, funded in whole or in part by public money, that\n          contribute to the administration of justice or public safety in British\n          Columbia;"
                            }
                        },
                        {
                            "@id": "d2e55",
                            "bcl:text": {
                                "in:term": "Justice Summit",
                                "#text": "means a meeting convened by the minister under section\n          9;"
                            }
                        },
                        {
                            "@id": "d2e64",
                            "bcl:text": {
                                "in:term": "qualified candidate",
                                "#text": "means an individual who is in a senior leadership\n          role in the government and who has responsibility for matters relating to the\n          administration of justice in British Columbia or matters relating to public safety, and\n          includes any other individual the minister considers to be qualified to assist in\n          improving the performance of the justice and public safety sector."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e74",
                    "bcl:marginalnote": "Justice and Public Safety Council",
                    "bcl:num": "2",
                    "bcl:text": "The Justice and Public Safety Council is established consisting of",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e85",
                            "bcl:num": "a",
                            "bcl:text": "a qualified candidate appointed by the minister as chair, and"
                        },
                        {
                            "@id": "d2e94",
                            "bcl:num": "b",
                            "bcl:text": "other qualified candidates appointed by the minister as members."
                        }
                    ]
                },
                {
                    "@id": "d2e104",
                    "bcl:marginalnote": "Objects of council",
                    "bcl:num": "3",
                    "bcl:text": "The objects of the council are the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e115",
                            "bcl:num": "a",
                            "bcl:text": "to develop, in accordance with section 5, a strategic vision for the justice and public\n          safety sector;"
                        },
                        {
                            "@id": "d2e124",
                            "bcl:num": "b",
                            "bcl:text": "to establish a strategic plan in accordance with section 6;"
                        },
                        {
                            "@id": "d2e134",
                            "bcl:num": "c",
                            "bcl:text": "[Not in force.]"
                        },
                        {
                            "@id": "d2e143",
                            "bcl:num": "d",
                            "bcl:text": "to collect information on the justice and public safety sector and use that\n          information to assist the council in performing its functions under this\n          section;"
                        },
                        {
                            "@id": "d2e152",
                            "bcl:num": "e",
                            "bcl:text": "to facilitate the collection and sharing by participants in the justice and public\n          safety sector of information needed to enhance the ability of the participants\n          to",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d2e161",
                                    "bcl:num": "i",
                                    "bcl:text": "ensure careful management and prudent expenditure of public\n            resources,"
                                },
                                {
                                    "@id": "d2e170",
                                    "bcl:num": "ii",
                                    "bcl:text": "engage in evidence-based decision making,"
                                },
                                {
                                    "@id": "d2e179",
                                    "bcl:num": "iii",
                                    "bcl:text": "make informed evaluations of their performance, and"
                                },
                                {
                                    "@id": "d2e189",
                                    "bcl:num": "iv",
                                    "bcl:text": "design strategies to improve that performance;"
                                }
                            ]
                        },
                        {
                            "@id": "d2e198",
                            "bcl:num": "f",
                            "bcl:text": "to promote collaboration and cooperation among participants in the justice and\n          public safety sector;"
                        },
                        {
                            "@id": "d2e207",
                            "bcl:num": "g",
                            "bcl:text": "to provide advice and recommendations to the minister and to perform any other\n          functions respecting the justice and public safety sector that the minister\n          requires."
                        }
                    ]
                },
                {
                    "@id": "d2e217",
                    "bcl:marginalnote": "Advisory boards",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e225",
                            "bcl:num": "1",
                            "bcl:text": "The minister may, at any time and from time to time, establish one or more\n          advisory boards to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e234",
                                    "bcl:num": "a",
                                    "bcl:text": "advise the minister on matters related to the administration of justice or\n            public safety in British Columbia,"
                                },
                                {
                                    "@id": "d2e243",
                                    "bcl:num": "b",
                                    "bcl:text": "make recommendations to the minister as required to improve the performance of\n            the justice and public safety sector, and"
                                },
                                {
                                    "@id": "d2e253",
                                    "bcl:num": "c",
                                    "bcl:text": "perform any other duties the minister may direct."
                                }
                            ]
                        },
                        {
                            "@id": "d2e262",
                            "bcl:num": "2",
                            "bcl:text": "The council may make recommendations to the minister respecting the composition of\n          an advisory board and, after considering any recommendations made under this subsection,\n          the minister may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e271",
                                    "bcl:num": "a",
                                    "bcl:text": "appoint members of the advisory board, and"
                                },
                                {
                                    "@id": "d2e280",
                                    "bcl:num": "b",
                                    "bcl:text": "designate one member as chair and another member as vice-chair."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e290",
                    "bcl:marginalnote": "Justice and public safety strategic vision",
                    "bcl:num": "5",
                    "bcl:text": "The council must, after such consultation as the council considers appropriate with\n        its advisory boards, if any, and participants in the justice and public safety sector,\n        including, without limitation, participants in a Justice Summit, develop a strategic vision\n        reflecting desired outcomes for the justice and public safety sector."
                },
                {
                    "@id": "d2e303",
                    "bcl:marginalnote": "Strategic plans",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e311",
                            "bcl:num": "1",
                            "bcl:text": "The council must, in each fiscal year, prepare a strategic plan in relation to the\n          applicable period referred to in subsection (2) (a) and must, in each strategic plan, do\n          the following for each fiscal year that falls within the period to which the strategic\n          plan relates:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e320",
                                    "bcl:num": "a",
                                    "bcl:text": "propose goals that advance the strategic vision referred to in section\n            5;"
                                },
                                {
                                    "@id": "d2e329",
                                    "bcl:num": "b",
                                    "bcl:text": "identify impediments to the achievement of the proposed goals;"
                                },
                                {
                                    "@id": "d2e339",
                                    "bcl:num": "c",
                                    "bcl:text": "propose strategies to achieve the proposed goals and to reduce or eliminate the\n            identified impediments;"
                                },
                                {
                                    "@id": "d2e348",
                                    "bcl:num": "d",
                                    "bcl:text": "establish performance measures by which to assess",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e357",
                                            "bcl:num": "i",
                                            "bcl:text": "the progress being made towards the proposed goals, and"
                                        },
                                        {
                                            "@id": "d2e366",
                                            "bcl:num": "ii",
                                            "bcl:text": "the effectiveness of the strategies developed to achieve those\n              goals."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e375",
                            "bcl:num": "2",
                            "bcl:text": "The council must ensure that a strategic plan under this section is",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e384",
                                    "bcl:num": "a",
                                    "bcl:text": "prepared in relation to the 3 fiscal years following the fiscal year in which\n            the strategic plan is required to be prepared, and"
                                },
                                {
                                    "@id": "d2e394",
                                    "bcl:num": "b",
                                    "bcl:text": "published",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e403",
                                            "bcl:num": "i",
                                            "bcl:text": "before the first day of the first fiscal year in relation to which the plan is\n              prepared, and"
                                        },
                                        {
                                            "@id": "d2e412",
                                            "bcl:num": "ii",
                                            "bcl:text": "in a manner that can reasonably be expected to bring the strategic plan to the\n              attention of the public."
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e422",
                    "bcl:marginalnote": "Not in force",
                    "bcl:num": "7-8",
                    "bcl:text": "[Not in force.]"
                },
                {
                    "@id": "d2e434",
                    "bcl:marginalnote": "Justice Summit",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e442",
                            "bcl:num": "1",
                            "bcl:text": "The minister must, at least annually, convene a Justice Summit to facilitate\n          innovation in, and collaboration across, the justice and public safety sector."
                        },
                        {
                            "@id": "d2e451",
                            "bcl:num": "2",
                            "bcl:text": "The minister may invite to a Justice Summit",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e460",
                                    "bcl:num": "a",
                                    "bcl:text": "the Chief Justice of British Columbia, the Chief Justice of the Supreme Court\n            and the Chief Judge of the Provincial Court and, through them, any other members or\n            officers of their courts that they consider appropriate,"
                                },
                                {
                                    "@id": "d2e470",
                                    "bcl:num": "b",
                                    "bcl:text": "members of the council, and"
                                },
                                {
                                    "@id": "d2e479",
                                    "bcl:num": "c",
                                    "bcl:text": "any other individuals, including, without limitation, other participants in the\n            justice and public safety sector, the minister considers to be qualified to assist in\n            improving the performance of the justice and public safety sector."
                                }
                            ]
                        },
                        {
                            "@id": "d2e488",
                            "bcl:num": "3",
                            "bcl:text": "A Justice Summit may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e497",
                                    "bcl:num": "a",
                                    "bcl:text": "review and consider initiatives and procedures undertaken in other jurisdictions\n            in relation to the justice system in those jurisdictions,"
                                },
                                {
                                    "@id": "d2e506",
                                    "bcl:num": "b",
                                    "bcl:text": "provide input to the council to assist the council in creating the strategic\n            vision referred to in section 5,"
                                },
                                {
                                    "@id": "d2e515",
                                    "bcl:num": "c",
                                    "bcl:text": "make recommendations relating to priorities, strategies, performance measures,\n            procedures and new initiatives related to the justice and public safety\n            sector,"
                                },
                                {
                                    "@id": "d2e525",
                                    "bcl:num": "d",
                                    "bcl:text": "assess the progress being made in justice reform in British Columbia,\n            and"
                                },
                                {
                                    "@id": "d2e534",
                                    "bcl:num": "e",
                                    "bcl:text": "engage in any other deliberations that the Justice Summit considers\n            appropriate."
                                }
                            ]
                        },
                        {
                            "@id": "d2e543",
                            "bcl:num": "4",
                            "bcl:text": "After the conclusion of its deliberations, a Justice Summit must report to the\n          minister on the outcome of those deliberations."
                        }
                    ]
                },
                {
                    "@id": "d2e553",
                    "bcl:marginalnote": "Memoranda of understanding",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e561",
                            "bcl:num": "1",
                            "bcl:text": "The Attorney General and the Chief Justice of British Columbia may enter into a\n          memorandum of understanding governing any matter relating to the administration of the\n          Court of Appeal."
                        },
                        {
                            "@id": "d2e570",
                            "bcl:num": "2",
                            "bcl:text": "The Attorney General and the Chief Justice of the Supreme Court may enter into a\n          memorandum of understanding governing any matter relating to the administration of that\n          court."
                        },
                        {
                            "@id": "d2e579",
                            "bcl:num": "3",
                            "bcl:text": "The Attorney General and the Chief Judge of the Provincial Court may enter into a\n          memorandum of understanding governing any matter relating to the administration of that\n          court."
                        },
                        {
                            "@id": "d2e589",
                            "bcl:num": "4",
                            "bcl:text": "Without limiting subsections (1) to (3), a memorandum under this\n          section may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e598",
                                    "bcl:num": "a",
                                    "bcl:text": "address the respective roles and responsibilities of the parties to the\n            memorandum in the administration of the court, and"
                                },
                                {
                                    "@id": "d2e607",
                                    "bcl:num": "b",
                                    "bcl:text": "specify how those parties are to share information, promote and measure\n            effective court administration and report to the public."
                                }
                            ]
                        },
                        {
                            "@id": "d2e616",
                            "bcl:num": "5",
                            "bcl:text": "The Attorney General may publish, in a manner that can reasonably be expected to\n          bring to the attention of the public, all or part of a memorandum entered into under this\n          section, except to the extent the memorandum otherwise provides."
                        }
                    ]
                },
                {
                    "@id": "d2e626",
                    "bcl:marginalnote": "Independence not restricted",
                    "bcl:num": "11",
                    "bcl:text": "Nothing in this Act restricts the independence that a participant in the justice and\n        public safety sector has at law, including, without limitation, judicial\n        independence."
                },
                {
                    "@id": "d2e638",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act",
                        "#text": "Section 5 of the  does not\n        apply"
                    },
                    "bcl:num": "12",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5\n        of the  does not apply to this Act or the\n        regulations."
                    }
                },
                {
                    "@id": "d2e765",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "31",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in\n        Council."
                }
            ],
