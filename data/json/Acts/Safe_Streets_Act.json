        "@id": "00_04075_01",
        "act:title": "Safe Streets Act",
        "act:chapter": "75",
        "act:yearenacted": "2004",
        "act:assentedto": "October 26, 2004",
        "act:currency": {
            "act:tlcDirPath": "1527898742/04075/tlc04075_f",
            "act:tlc": "E2tlc04075"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "solicit",
                        "#text": "In this Act,  means to communicate, in person, using the\n        spoken, written or printed word, a gesture or another means, for the purpose of receiving\n        money or another thing of value, regardless of whether consideration is offered or provided\n        in return."
                    }
                },
                {
                    "@id": "d2e33",
                    "bcl:marginalnote": "Solicitation in aggressive manner prohibited",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e41",
                            "bcl:num": "1",
                            "bcl:text": "A person commits an offence if the person solicits in a manner that would cause a\n          reasonable person to be concerned for the solicited person's safety or security, including\n          threatening the person solicited with physical harm, by word, gesture or other\n          means."
                        },
                        {
                            "@id": "d2e50",
                            "bcl:num": "2",
                            "bcl:text": "A person commits an offence if the person engages, in a manner that would cause a\n          reasonable person to be concerned for the solicited person's safety or security, in one or\n          more of the following activities during a solicitation or after the solicited person\n          responds or fails to respond to the solicitation:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e59",
                                    "bcl:num": "a",
                                    "bcl:text": "obstructing the path of the solicited person;"
                                },
                                {
                                    "@id": "d2e69",
                                    "bcl:num": "b",
                                    "bcl:text": "using abusive language;"
                                },
                                {
                                    "@id": "d2e78",
                                    "bcl:num": "c",
                                    "bcl:text": "proceeding behind or alongside or ahead of the solicited person;"
                                },
                                {
                                    "@id": "d2e87",
                                    "bcl:num": "d",
                                    "bcl:text": "physically approaching, as a member of a group of 2 or more persons, the\n            solicited person;"
                                },
                                {
                                    "@id": "d2e96",
                                    "bcl:num": "e",
                                    "bcl:text": "continuing to solicit the person."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e106",
                    "bcl:marginalnote": "Solicitation of captive audience prohibited",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e114",
                            "bcl:num": "1",
                            "bcl:text": "In this section:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e123",
                                    "bcl:text": {
                                        "in:term": "commercial passenger vehicle",
                                        "#text": "means a motor vehicle operated\n          on a roadway by or on behalf of a person who charges or collects compensation for the\n          transportation of passengers in that motor vehicle, and includes a vehicle operated by or\n          on behalf of the British Columbia Transit Authority or the South Coast British Columbia\n          Transportation Authority to provide a regularly scheduled public passenger transportation\n          service;"
                                    }
                                },
                                {
                                    "@id": "d2e132",
                                    "bcl:text": {
                                        "in:term": "roadway",
                                        "#text": "means a highway, road, street, lane or right of way,\n          including the shoulder of any of them, that is improved, designed or ordinarily used by\n          the general public for the passage of vehicles;"
                                    }
                                },
                                {
                                    "@id": "d2e142",
                                    "bcl:text": {
                                        "in:term": "vehicle",
                                        "#text": "includes non-motorized vehicles."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e151",
                            "bcl:num": "2",
                            "bcl:text": "Subject to subsection (3), a person commits an offence who does any of the\n          following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e160",
                                    "bcl:num": "a",
                                    "bcl:text": "solicits a person who is using, waiting to use, or departing from a device\n            commonly referred to as an automated teller machine;"
                                },
                                {
                                    "@id": "d2e169",
                                    "bcl:num": "b",
                                    "bcl:text": "solicits a person who is using, or waiting to use, a pay telephone or a public\n            toilet facility;"
                                },
                                {
                                    "@id": "d2e178",
                                    "bcl:num": "c",
                                    "bcl:text": "solicits a person who is waiting at a place that is marked, by use of a sign or\n            otherwise, as a place where a commercial passenger vehicle regularly stops to pick up or\n            disembark passengers;"
                                },
                                {
                                    "@id": "d2e187",
                                    "bcl:num": "d",
                                    "bcl:text": "solicits a person who is in, on or disembarking from a commercial passenger\n            vehicle;"
                                },
                                {
                                    "@id": "d2e197",
                                    "bcl:num": "e",
                                    "bcl:text": "solicits a person who is in the process of getting in, out of, on or off of a\n            vehicle or who is in a parking lot."
                                }
                            ]
                        },
                        {
                            "@id": "d2e206",
                            "bcl:num": "3",
                            "bcl:text": "No offence is committed under subsection (2) if the person soliciting is 5 metres or\n          more from the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e215",
                                    "bcl:num": "a",
                                    "bcl:text": "in the case of subsection (2) (a) to (c), the automated teller\n            machine, pay telephone, public toilet facility entrance or commercial passenger vehicle\n            marker, as applicable;"
                                },
                                {
                                    "@id": "d2e224",
                                    "bcl:num": "b",
                                    "bcl:text": "in the case of subsection (2) (d) or (e), the commercial passenger\n            vehicle or vehicle, as applicable."
                                }
                            ]
                        },
                        {
                            "@id": "d2e233",
                            "bcl:num": "4",
                            "bcl:text": "No offence is committed under subsection (2) (a) if the person soliciting",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e242",
                                    "bcl:num": "a",
                                    "bcl:text": "has express permission, given by the owner or occupier of the premises on which\n            the automated teller machine is located, to solicit within 5 metres of the automated\n            teller machine, and"
                                },
                                {
                                    "@id": "d2e252",
                                    "bcl:num": "b",
                                    "bcl:text": "solicits only on the premises."
                                }
                            ]
                        },
                        {
                            "@id": "d2e261",
                            "bcl:num": "5",
                            "bcl:text": "A person commits an offence if the person, while on a roadway, solicits a person\n          who is in or on a stopped, standing or parked vehicle."
                        }
                    ]
                },
                {
                    "@id": "d2e271",
                    "bcl:marginalnote": "Arrest without warrant",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e279",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:term": "peace officer",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "In this section,  means a peace officer\n          described in paragraph (c) of the definition of \"peace officer\" in section 29 of the\n            ."
                            }
                        },
                        {
                            "@id": "d2e294",
                            "bcl:num": "2",
                            "bcl:text": "A peace officer may arrest without warrant any person who the peace officer\n          believes on reasonable and probable grounds is committing an offence under this\n          Act."
                        }
                    ]
                },
                {
                    "@id": "d2e353",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "6",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in\n        Council."
                }
            ],
            "bcl:conseqhead": {
                "bcl:text": "Consequential Amendment",
                "bcl:num": "5",
