        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "act:title": "Poverty Reduction Strategy Act",
        "act:chapter": "40",
        "act:yearenacted": "2018",
        "act:assentedto": "November 8, 2018",
        "act:currency": {
            "act:tlcDirPath": "1922970521/1754396278/1751120306",
            "act:tlc": "E3tlc18040"
        },
        "act:content": {
            "bcl:part": [
                {
                    "@id": "d1e27",
                    "bcl:num": "1",
                    "bcl:text": "Definitions",
                    "bcl:section": {
                        "@id": "d1e35",
                        "bcl:marginalnote": "Definitions",
                        "bcl:num": "1",
                        "bcl:text": "In this Act:",
                        "bcl:definition": [
                            {
                                "@id": "d1e46",
                                "bcl:text": {
                                    "in:term": "advisory committee",
                                    "#text": "means the committee under section 10;"
                                }
                            },
                            {
                                "@id": "d1e54",
                                "bcl:text": {
                                    "in:term": "annual report",
                                    "#text": "means a report under section 8;"
                                }
                            },
                            {
                                "@id": "d1e63",
                                "bcl:text": {
                                    "in:term": "strategy",
                                    "#text": "means the strategy under section 2."
                                }
                            }
                        ]
                    }
                },
                {
                    "@id": "d1e73",
                    "bcl:num": "2",
                    "bcl:text": "Poverty Reduction Strategy",
                    "bcl:division": [
                        {
                            "@id": "d1e81",
                            "bcl:num": "1",
                            "bcl:text": "Development of Strategy",
                            "bcl:section": [
                                {
                                    "@id": "d1e89",
                                    "bcl:marginalnote": "Minister to develop strategy",
                                    "bcl:num": "2",
                                    "bcl:subsection": [
                                        {
                                            "@id": "d1e97",
                                            "bcl:num": "1",
                                            "bcl:text": "The minister must develop a strategy to reduce and prevent poverty in British Columbia."
                                        },
                                        {
                                            "@id": "d1e106",
                                            "bcl:num": "2",
                                            "bcl:text": "The minister must",
                                            "bcl:paragraph": [
                                                {
                                                    "@id": "d1e114",
                                                    "bcl:num": "a",
                                                    "bcl:text": "post the strategy in accordance with section 9\u00a0(a) by March 31, 2019, and"
                                                },
                                                {
                                                    "@id": "d1e123",
                                                    "bcl:num": "b",
                                                    "bcl:text": "review and update the strategy at least once every 5 years after that date."
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e134",
                                    "bcl:marginalnote": "Poverty reduction and prevention initiatives",
                                    "bcl:num": "3",
                                    "bcl:subsection": [
                                        {
                                            "@id": "d1e142",
                                            "bcl:num": "1",
                                            "bcl:text": "The strategy must include initiatives intended, over the 5-year period beginning on January 1, 2019, to reduce the poverty rate for 2024 below the poverty rate for 2016 by at least",
                                            "bcl:paragraph": [
                                                {
                                                    "@id": "d1e150",
                                                    "bcl:num": "a",
                                                    "bcl:text": "25% among all persons, and"
                                                },
                                                {
                                                    "@id": "d1e159",
                                                    "bcl:num": "b",
                                                    "bcl:text": "50% among persons under 18 years of age."
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d1e169",
                                            "bcl:num": "2",
                                            "bcl:text": "The strategy must include initiatives intended to reduce and prevent poverty by increasing the following:",
                                            "bcl:paragraph": [
                                                {
                                                    "@id": "d1e177",
                                                    "bcl:num": "a",
                                                    "bcl:text": "the affordability of goods, services and housing to persons living in poverty and other low-income British Columbians;"
                                                },
                                                {
                                                    "@id": "d1e186",
                                                    "bcl:num": "b",
                                                    "bcl:text": "the opportunities for persons living in poverty to move out of poverty;"
                                                },
                                                {
                                                    "@id": "d1e195",
                                                    "bcl:num": "c",
                                                    "bcl:text": "the inclusion of persons living in poverty in community life and in systems of supports."
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d1e205",
                                            "bcl:num": "3",
                                            "bcl:text": "For the purposes of subsection (1), the poverty rate must be measured using the market basket measure published by Statistics Canada as the \"Market Basket Measure\" or \"Canada's Official Poverty Line\"."
                                        },
                                        {
                                            "@id": "d1e215",
                                            "bcl:num": "4",
                                            "bcl:text": "The minister must review the targets set in subsection (1) before December 31, 2023 and, after doing so, may lay a report before the Legislative Assembly respecting future targets for the reduction of poverty."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e225",
                                    "bcl:marginalnote": "Commitment to Indigenous peoples",
                                    "bcl:num": "4",
                                    "bcl:text": "The strategy must reflect a commitment to",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e235",
                                            "bcl:num": "a",
                                            "bcl:text": "reconciliation with Indigenous peoples,"
                                        },
                                        {
                                            "@id": "d1e244",
                                            "bcl:num": "b",
                                            "bcl:text": "the Calls to Action of the Truth and Reconciliation Commission, and"
                                        },
                                        {
                                            "@id": "d1e254",
                                            "bcl:num": "c",
                                            "bcl:text": "the United Nations Declaration on the Rights of Indigenous Peoples."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e265",
                                    "bcl:marginalnote": "Scope of strategy",
                                    "bcl:num": "5",
                                    "bcl:subsection": [
                                        {
                                            "@id": "d1e272",
                                            "bcl:num": "1",
                                            "bcl:text": "In developing and updating the strategy, the minister must consider",
                                            "bcl:paragraph": [
                                                {
                                                    "@id": "d1e280",
                                                    "bcl:num": "a",
                                                    "bcl:text": "the breadth and depth of poverty, and"
                                                },
                                                {
                                                    "@id": "d1e289",
                                                    "bcl:num": "b",
                                                    "bcl:text": "the full range of persons living in poverty."
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d1e299",
                                            "bcl:num": "2",
                                            "bcl:text": "Without limiting subsection (1), the minister must consider the following topics:",
                                            "bcl:paragraph": [
                                                {
                                                    "@id": "d1e307",
                                                    "bcl:num": "a",
                                                    "bcl:text": "housing;"
                                                },
                                                {
                                                    "@id": "d1e316",
                                                    "bcl:num": "b",
                                                    "bcl:text": "families, children and youth;"
                                                },
                                                {
                                                    "@id": "d1e325",
                                                    "bcl:num": "c",
                                                    "bcl:text": "education;"
                                                },
                                                {
                                                    "@id": "d1e335",
                                                    "bcl:num": "d",
                                                    "bcl:text": "employment;"
                                                },
                                                {
                                                    "@id": "d1e344",
                                                    "bcl:num": "e",
                                                    "bcl:text": "income supports;"
                                                },
                                                {
                                                    "@id": "d1e353",
                                                    "bcl:num": "f",
                                                    "bcl:text": "social supports."
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d1e363",
                                            "bcl:num": "3",
                                            "bcl:text": "Without limiting subsection (1), the minister must consider the following groups:",
                                            "bcl:paragraph": [
                                                {
                                                    "@id": "d1e371",
                                                    "bcl:num": "a",
                                                    "bcl:text": "children;"
                                                },
                                                {
                                                    "@id": "d1e380",
                                                    "bcl:num": "b",
                                                    "bcl:text": "youth;"
                                                },
                                                {
                                                    "@id": "d1e389",
                                                    "bcl:num": "c",
                                                    "bcl:text": "women and persons of all genders;"
                                                },
                                                {
                                                    "@id": "d1e399",
                                                    "bcl:num": "d",
                                                    "bcl:text": "Indigenous peoples;"
                                                },
                                                {
                                                    "@id": "d1e408",
                                                    "bcl:num": "e",
                                                    "bcl:text": "persons living with disabilities;"
                                                },
                                                {
                                                    "@id": "d1e417",
                                                    "bcl:num": "f",
                                                    "bcl:text": "persons living in rural and remote communities;"
                                                },
                                                {
                                                    "@id": "d1e426",
                                                    "bcl:num": "g",
                                                    "bcl:text": "immigrants and refugees;"
                                                },
                                                {
                                                    "@id": "d1e435",
                                                    "bcl:num": "h",
                                                    "bcl:text": "LGBTQ2S+ persons;"
                                                },
                                                {
                                                    "@id": "d1e444",
                                                    "bcl:num": "i",
                                                    "bcl:text": "seniors;"
                                                },
                                                {
                                                    "@id": "d1e454",
                                                    "bcl:num": "j",
                                                    "bcl:text": "persons and families working and earning low incomes;"
                                                },
                                                {
                                                    "@id": "d1e463",
                                                    "bcl:num": "k",
                                                    "bcl:text": "persons living with or fleeing abuse;"
                                                },
                                                {
                                                    "@id": "d1e472",
                                                    "bcl:num": "l",
                                                    "bcl:text": "persons living with mental illness or addiction;"
                                                },
                                                {
                                                    "@id": "d1e481",
                                                    "bcl:num": "m",
                                                    "bcl:text": "persons of colour."
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e492",
                                    "bcl:marginalnote": "Accessibility and coordination",
                                    "bcl:num": "6",
                                    "bcl:text": "In developing and updating the strategy, the minister must consider the accessibility and coordination of",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e503",
                                            "bcl:num": "a",
                                            "bcl:text": "initiatives included in the strategy, and"
                                        },
                                        {
                                            "@id": "d1e512",
                                            "bcl:num": "b",
                                            "bcl:text": "supports provided to or for persons living in poverty by or on behalf of the following:",
                                            "bcl:subparagraph": [
                                                {
                                                    "@id": "d1e520",
                                                    "bcl:num": "i",
                                                    "bcl:text": "the government;"
                                                },
                                                {
                                                    "@id": "d1e529",
                                                    "bcl:num": "ii",
                                                    "bcl:text": "the government of Canada;"
                                                },
                                                {
                                                    "@id": "d1e538",
                                                    "bcl:num": "iii",
                                                    "bcl:text": "Indigenous governments;"
                                                },
                                                {
                                                    "@id": "d1e548",
                                                    "bcl:num": "iv",
                                                    "bcl:text": "local governments."
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e559",
                                    "bcl:marginalnote": "Description of effects",
                                    "bcl:num": "7",
                                    "bcl:text": "The strategy must include a description of the effects that the minister intends poverty reduction and prevention to have on British Columbians as a whole."
                                }
                            ]
                        },
                        {
                            "@id": "d1e572",
                            "bcl:num": "2",
                            "bcl:text": "Reporting and Publication",
                            "bcl:section": [
                                {
                                    "@id": "d1e580",
                                    "bcl:marginalnote": "Annual reporting",
                                    "bcl:num": "8",
                                    "bcl:subsection": [
                                        {
                                            "@id": "d1e588",
                                            "bcl:num": "1",
                                            "bcl:text": "The minister must prepare, by October 1 of each calendar year, beginning in 2020, a report on the previous calendar year that describes the following:",
                                            "bcl:paragraph": [
                                                {
                                                    "@id": "d1e596",
                                                    "bcl:num": "a",
                                                    "bcl:text": "the actions taken to implement the strategy;"
                                                },
                                                {
                                                    "@id": "d1e605",
                                                    "bcl:num": "b",
                                                    "bcl:text": "the effects of the strategy on poverty reduction;"
                                                },
                                                {
                                                    "@id": "d1e614",
                                                    "bcl:num": "c",
                                                    "bcl:text": "any progress made towards the targets set in section 3\u00a0(1)."
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d1e624",
                                            "bcl:num": "2",
                                            "bcl:text": "An annual report on a calendar year must include the comments provided under section 10\u00a0(4)\u00a0(a) in relation to that calendar year."
                                        },
                                        {
                                            "@id": "d1e633",
                                            "bcl:num": "3",
                                            "bcl:text": "The minister must lay each annual report before the Legislative Assembly as soon as practicable and, promptly after doing so, must post the annual report in accordance with section 9\u00a0(a)."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e643",
                                    "bcl:marginalnote": "Publication",
                                    "bcl:num": "9",
                                    "bcl:text": "The minister must",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e654",
                                            "bcl:num": "a",
                                            "bcl:text": "post the strategy and the annual reports on a publicly accessible website maintained by or on behalf of the minister, and"
                                        },
                                        {
                                            "@id": "d1e663",
                                            "bcl:num": "b",
                                            "bcl:text": "make the strategy and the annual reports available in accessible formats."
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e675",
                    "bcl:num": "3",
                    "bcl:text": "Community Involvement",
                    "bcl:section": [
                        {
                            "@id": "d1e683",
                            "bcl:marginalnote": "Advisory committee",
                            "bcl:num": "10",
                            "bcl:subsection": [
                                {
                                    "@id": "d1e690",
                                    "bcl:num": "1",
                                    "bcl:text": "The minister must establish a committee to advise the minister on matters relating to poverty reduction and prevention."
                                },
                                {
                                    "@id": "d1e699",
                                    "bcl:num": "2",
                                    "bcl:text": "At least half of the members of the advisory committee must be women."
                                },
                                {
                                    "@id": "d1e708",
                                    "bcl:num": "3",
                                    "bcl:text": "The advisory committee must include a representative from at least each of the following groups:",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e716",
                                            "bcl:num": "a",
                                            "bcl:text": "Indigenous peoples;"
                                        },
                                        {
                                            "@id": "d1e725",
                                            "bcl:num": "b",
                                            "bcl:text": "persons living in poverty;"
                                        },
                                        {
                                            "@id": "d1e734",
                                            "bcl:num": "c",
                                            "bcl:text": "persons living with disabilities;"
                                        },
                                        {
                                            "@id": "d1e744",
                                            "bcl:num": "d",
                                            "bcl:text": "local governments;"
                                        },
                                        {
                                            "@id": "d1e753",
                                            "bcl:num": "e",
                                            "bcl:text": "organizations that advocate for persons living in poverty;"
                                        },
                                        {
                                            "@id": "d1e762",
                                            "bcl:num": "f",
                                            "bcl:text": "the business community;"
                                        },
                                        {
                                            "@id": "d1e771",
                                            "bcl:num": "g",
                                            "bcl:text": "unions;"
                                        },
                                        {
                                            "@id": "d1e780",
                                            "bcl:num": "h",
                                            "bcl:text": "academics;"
                                        },
                                        {
                                            "@id": "d1e789",
                                            "bcl:num": "i",
                                            "bcl:text": "persons living in rural and remote communities."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e800",
                                    "bcl:num": "4",
                                    "bcl:text": "Without limiting subsection (1), the advisory committee has the following duties:",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e808",
                                            "bcl:num": "a",
                                            "bcl:text": "to give the minister comments in relation to a calendar year on the matters referred to in section 8 (1);"
                                        },
                                        {
                                            "@id": "d1e817",
                                            "bcl:num": "b",
                                            "bcl:text": "to advise the minister in relation to consultations under section 11."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e827",
                                    "bcl:num": "5",
                                    "bcl:text": "Members of the advisory committee must be",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e835",
                                            "bcl:num": "a",
                                            "bcl:text": "reimbursed for reasonable travelling and out-of-pocket expenses necessarily incurred by them in discharging their duties under this Act, and"
                                        },
                                        {
                                            "@id": "d1e844",
                                            "bcl:num": "b",
                                            "bcl:text": "if they are living in poverty, paid an honorarium."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d1e855",
                            "bcl:marginalnote": "Consultations",
                            "bcl:num": "11",
                            "bcl:subsection": [
                                {
                                    "@id": "d1e863",
                                    "bcl:num": "1",
                                    "bcl:text": "In developing and updating the strategy, the minister must consult with representatives of at least the groups referred to in section 10\u00a0(3)."
                                },
                                {
                                    "@id": "d1e872",
                                    "bcl:num": "2",
                                    "bcl:text": "Consultations under subsection (1) must be carried out in a manner that is intended to",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d1e880",
                                            "bcl:num": "a",
                                            "bcl:text": "ensure the strategy is informed by the experiences of persons living in poverty, and"
                                        },
                                        {
                                            "@id": "d1e889",
                                            "bcl:num": "b",
                                            "bcl:text": "uphold the commitment under section 4 to Indigenous peoples."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d1e900",
                            "bcl:marginalnote": "Supports for participation",
                            "bcl:num": "12",
                            "bcl:text": "The minister may provide monetary or other supports to or for persons living in poverty to enable them to",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e911",
                                    "bcl:num": "a",
                                    "bcl:text": "serve on the advisory committee, or"
                                },
                                {
                                    "@id": "d1e920",
                                    "bcl:num": "b",
                                    "bcl:text": "participate in consultations under section 11 (1)."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e931",
                    "bcl:num": "4",
                    "bcl:text": "Miscellaneous",
                    "bcl:section": [
                        {
                            "@id": "d1e939",
                            "bcl:marginalnote": {
                                "in:doc": "Offence Act",
                                "#text": "Section 5 of  does not apply"
                            },
                            "bcl:num": "13",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96338_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Offence Act"
                                },
                                "#text": "Section 5 of the  does not apply to this Act or the regulations."
                            }
                        },
                        {
                            "@id": "d1e959",
                            "bcl:marginalnote": "Regulations",
                            "bcl:num": "14",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                            }
                        }
                    ]
                }
            ],
            "bcl:section": {
                "@id": "d1e978",
                "bcl:marginalnote": "Commencement",
                "bcl:num": "15",
                "bcl:text": "This Act comes into force on the date of Royal Assent."
            }
        }
    }
}