        "@id": "00_96103_01",
        "act:title": "Ecological Reserve Act",
        "act:chapter": "103",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "414786120/96103/tlc96103_f",
            "act:tlc": "E3tlc96103"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "disposition",
                                "#text": "means and includes every act of the government where Crown land, mines, minerals, coal, petroleum, natural gas, timber and water, or any right, title, interest or estate in them is granted, disposed of or affected, or by which the government divests itself of or creates a right, title, interest or estate in, or permits the use of land, mines, minerals, coal, petroleum, natural gas, timber and water;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "ecology",
                                "#text": "means the study of the interrelations between human beings, other animals, or plants and their environment;"
                            }
                        },
                        {
                            "@id": "d2e45",
                            "bcl:text": {
                                "in:term": "ecosystem",
                                "#text": "means a complete system composed of human beings, other animals and plants in a defined area, and with the soil and climate comprising their habitat in that area;"
                            }
                        },
                        {
                            "@id": "d2e54",
                            "bcl:text": {
                                "in:term": "environment",
                                "#text": "means all the external conditions or influences under which human beings, animals and plants live or are developed;"
                            }
                        },
                        {
                            "@id": "d2e63",
                            "bcl:text": {
                                "in:term": "habitat",
                                "#text": "means that kind of place or situation in which a human being, animal or a plant lives."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e73",
                    "bcl:marginalnote": "Purpose",
                    "bcl:num": "2",
                    "bcl:text": "The purpose of this Act is to reserve Crown land for ecological purposes, including the following areas:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e84",
                            "bcl:num": "a",
                            "bcl:text": "areas suitable for scientific research and educational purposes associated with studies in productivity and other aspects of the natural environment;"
                        },
                        {
                            "@id": "d2e93",
                            "bcl:num": "b",
                            "bcl:text": "areas that are representative examples of natural ecosystems in British Columbia;"
                        },
                        {
                            "@id": "d2e103",
                            "bcl:num": "c",
                            "bcl:text": "areas that serve as examples of ecosystems that have been modified by human beings and offer an opportunity to study the recovery of the natural ecosystem from modification;"
                        },
                        {
                            "@id": "d2e112",
                            "bcl:num": "d",
                            "bcl:text": "areas where rare or endangered native plants and animals in their natural habitat may be preserved;"
                        },
                        {
                            "@id": "d2e121",
                            "bcl:num": "e",
                            "bcl:text": "areas that contain unique and rare examples of botanical, zoological or geological phenomena."
                        }
                    ]
                },
                {
                    "@id": "d2e131",
                    "bcl:marginalnote": "Establishing and modifying ecological reserves",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e139",
                            "bcl:num": "1",
                            "bcl:text": "The Lieutenant Governor in Council may, by order,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e148",
                                    "bcl:num": "a",
                                    "bcl:text": "establish an area of Crown land as an ecological reserve, and"
                                },
                                {
                                    "@id": "d2e157",
                                    "bcl:num": "b",
                                    "bcl:text": "declare the name by which the ecological reserve is to be known."
                                }
                            ]
                        },
                        {
                            "@id": "d2e167",
                            "bcl:num": "2",
                            "bcl:text": "The Lieutenant Governor in Council may, by order, add to, cancel in its entirety or delete any portion of an ecological reserve established under subsection (1)."
                        },
                        {
                            "@id": "d2e176",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00017_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Protected Areas of British Columbia Act"
                                },
                                "#text": "Subsection (2) does not apply to an ecological reserve referenced in Schedule A or B of the ."
                            }
                        },
                        {
                            "@id": "d2e188",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00017_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Protected Areas of British Columbia Act"
                                },
                                "#text": "The Lieutenant Governor in Council may, by order, add to an ecological reserve referenced in Schedule A or B of the ."
                            }
                        },
                        {
                            "@id": "d2e200",
                            "bcl:num": "5",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00017_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Protected Areas of British Columbia Act"
                                },
                                "#text": "Except as permitted by subsection (4), the boundaries of an ecological reserve referenced in Schedule A or B of the  must not be affected except by an Act of the Legislature."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e213",
                    "bcl:marginalnote": "Publication in Gazette",
                    "bcl:num": "4",
                    "bcl:text": "An order of the Lieutenant Governor in Council under this Act establishing or modifying an ecological reserve must be published in the Gazette."
                },
                {
                    "@id": "d2e225",
                    "bcl:marginalnote": "Ecological reserves not available for disposition",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e233",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00017_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Protected Areas of British Columbia Act"
                                },
                                "#text": "Any area established or continued as an ecological reserve under this Act or by the  must be immediately withdrawn and reserved from any further disposition that might otherwise be granted under any Act or law in force in British Columbia."
                            }
                        },
                        {
                            "@id": "d2e245",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/04015_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Coal Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96157_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Forest Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96245_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Land Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/00_96292_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Mineral Tenure Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96294_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Mining Right of Way Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96361_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Petroleum and Natural Gas Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/04071_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Range Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/14015",
                                        "@xlink:type": "locator",
                                        "in:doc": "Water Sustainability Act"
                                    }
                                ],
                                "#text": "Without limiting subsection (1), that subsection applies to dispositions under the following Acts: , , , , , ,  and ."
                            }
                        },
                        {
                            "@id": "d2e279",
                            "bcl:num": "3",
                            "bcl:text": "Subsection (1) does not apply to a disposition by permit under section 5.1."
                        }
                    ]
                },
                {
                    "@id": "d2e290",
                    "bcl:marginalnote": "Permits for scientific research and educational purposes",
                    "bcl:num": "5.1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e298",
                            "bcl:num": "1",
                            "bcl:text": "In accordance with the regulations, the minister may issue a permit to a person authorizing use and occupation of an ecological reserve for ecological scientific research or educational purposes under section 2."
                        },
                        {
                            "@id": "d2e307",
                            "bcl:num": "2",
                            "bcl:text": "A permit under subsection (1) may be limited to one entry or may cover a specified period of time."
                        },
                        {
                            "@id": "d2e316",
                            "bcl:num": "3",
                            "bcl:text": "It is a condition of a permit issued under subsection (1) that the permittee comply with this Act and the regulations."
                        },
                        {
                            "@id": "d2e326",
                            "bcl:num": "4",
                            "bcl:text": "If necessary and incidental to the scientific research or educational purpose for which a permit is issued, the minister may authorize in the permit one or more of the following uses or activities:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e335",
                                    "bcl:num": "a",
                                    "bcl:text": "entry to and access through the ecological reserve by specified means of conveyance or transportation;"
                                },
                                {
                                    "@id": "d2e344",
                                    "bcl:num": "b",
                                    "bcl:text": "introduction of a specified plant or animal species."
                                }
                            ]
                        },
                        {
                            "@id": "d2e353",
                            "bcl:num": "5",
                            "bcl:text": "A permit issued under this section must include terms and conditions that the minister considers advisable to protect the ecological reserve and the natural resources in it."
                        },
                        {
                            "@id": "d2e362",
                            "bcl:num": "6",
                            "bcl:text": "In accordance with the regulations, the minister may cancel or modify a permit issued under this section if the minister considers it advisable for the protection of the ecological reserve or its natural resources."
                        },
                        {
                            "@id": "d2e371",
                            "bcl:num": "7",
                            "bcl:text": "Subject to the regulations, the minister may delegate to any person or class of persons any of the minister's powers, duties and functions under this section."
                        }
                    ]
                },
                {
                    "@id": "d2e381",
                    "bcl:marginalnote": "Designated wildland area as ecological reserve",
                    "bcl:num": "6",
                    "bcl:text": {
                        "bcl:link": [
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/96344_01",
                                "@xlink:type": "locator",
                                "in:doc": "Park Act"
                            },
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/00017_00",
                                "@xlink:type": "locator",
                                "in:doc": "Protected Areas of British Columbia Act"
                            }
                        ],
                        "#text": "Despite the , a designated wildland area or any portion of it, designated as such under that Act, may be established as an ecological reserve under this Act or by the ."
                    }
                },
                {
                    "@id": "d2e399",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e407",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the  and orders."
                            }
                        },
                        {
                            "@id": "d2e419",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e428",
                                    "bcl:num": "a",
                                    "bcl:text": "for the control, restriction or prohibition of any use, development or occupation of the land or any of the natural resources in an ecological reserve;"
                                },
                                {
                                    "@id": "d2e438",
                                    "bcl:num": "b",
                                    "bcl:text": "for the control, restriction or prohibition of exercise of powers granted by any other Act or regulation by a minister, ministry of the government, or agent of the government specified in the regulations;"
                                },
                                {
                                    "@id": "d2e447",
                                    "bcl:num": "c",
                                    "bcl:text": "for the control, restriction or prohibition of the dumping, deposit or emission within an ecological reserve of any substance;"
                                },
                                {
                                    "@id": "d2e456",
                                    "bcl:num": "c.1",
                                    "bcl:text": "respecting permits under section 5.1, including, without limitation, providing for their issue, suspension, modification or cancellation;"
                                },
                                {
                                    "@id": "d2e465",
                                    "bcl:num": "c.2",
                                    "bcl:text": "requiring and prescribing a fee payable for a permit under section 5.1 and for a permit application;"
                                },
                                {
                                    "@id": "d2e474",
                                    "bcl:num": "c.3",
                                    "bcl:text": "respecting the delegation of the powers, duties and functions of the minister under section 5.1;"
                                },
                                {
                                    "@id": "d2e483",
                                    "bcl:num": "d",
                                    "bcl:text": "creating an offence for the contravention of a regulation;"
                                },
                                {
                                    "@id": "d2e493",
                                    "bcl:num": "e",
                                    "bcl:text": "generally for any other matter or thing necessary or incidental to the protection of an ecological reserve."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e503",
                    "bcl:marginalnote": "Offences and penalties",
                    "bcl:num": "7.1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e511",
                            "bcl:num": "1",
                            "bcl:text": "A person who commits an offence under the regulations is liable to a fine of up to $200\u00a0000."
                        },
                        {
                            "@id": "d2e520",
                            "bcl:num": "2",
                            "bcl:text": "If an offence under subsection (1) is of a continuing nature, each day that the offence continues constitutes a separate offence."
                        },
                        {
                            "@id": "d2e529",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96338_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Offence Act"
                                },
                                "#text": "Section 5 of the  does not apply to this Act or the regulations."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e542",
                    "bcl:marginalnote": "Time limit for prosecuting offence",
                    "bcl:num": "7.2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e550",
                            "bcl:num": "1",
                            "bcl:text": "The time limit for laying an information for an offence under this Act is",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e559",
                                    "bcl:num": "a",
                                    "bcl:text": "3 years after the date that the facts on which the information is based arose, or"
                                },
                                {
                                    "@id": "d2e568",
                                    "bcl:num": "b",
                                    "bcl:text": "if the minister issues a certificate described in subsection (2), 18 months after the date that the facts on which the information is based first came to the knowledge of the minister."
                                }
                            ]
                        },
                        {
                            "@id": "d2e578",
                            "bcl:num": "2",
                            "bcl:text": "A certificate purporting to have been issued by the minister, certifying the date that the facts on which the information is based first came to the knowledge of the minister,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e587",
                                    "bcl:num": "a",
                                    "bcl:text": "is admissible without proof of the signature or official character of the person appearing to have signed the certificate, and"
                                },
                                {
                                    "@id": "d2e596",
                                    "bcl:num": "b",
                                    "bcl:text": "is proof of the certified matters."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e606",
                    "bcl:marginalnote": "Administration",
                    "bcl:num": "8",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/00017_00",
                            "@xlink:type": "locator",
                            "in:doc": "Protected Areas of British Columbia Act"
                        },
                        "#text": "Subject to the regulations and orders made under this Act, land established or continued as an ecological reserve under this Act or by the  is under the jurisdiction of and is to be administered by the minister."
                    }
                },
                {
                    "@id": "d2e622",
                    "bcl:marginalnote": "Advisers",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e630",
                            "bcl:num": "1",
                            "bcl:text": "The minister may appoint a person or persons to advise the minister on any matter relating to the establishment and administration of ecological reserves."
                        },
                        {
                            "@id": "d2e639",
                            "bcl:num": "2",
                            "bcl:text": "A person appointed under subsection (1) has the duties specified by the minister and is subject to the regulations."
                        }
                    ]
                },
                {
                    "@id": "d2e649",
                    "bcl:marginalnote": "Other Acts",
                    "bcl:num": "10",
                    "bcl:text": "This Act, and any regulation or order made under this Act, applies to every ecological reserve, despite any other Act or regulation."
                }
            ]
        }
    }
}