        "@id": "00_96399_01",
        "act:title": "Recreational Facility Act",
        "act:chapter": "399",
        "act:yearenacted": "1996",
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "public recreational facility",
                        "#text": "In this Act,  means a recreational facility available to any individual who wishes to use it for its intended purposes."
                    }
                },
                {
                    "@id": "d2e30",
                    "bcl:marginalnote": "Grants for facility",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e38",
                            "bcl:num": "1",
                            "bcl:text": "The minister may pay a grant to a municipality, regional district or an organization approved by the minister, that will sponsor the renovation, construction or equipping of a public recreational facility."
                        },
                        {
                            "@id": "d2e47",
                            "bcl:num": "2",
                            "bcl:text": "A grant under subsection (1) must not be greater than 1/3 of the cost of the renovation, construction or equipping of the public recreational facility or $400 000, whichever is less."
                        }
                    ]
                },
                {
                    "@id": "d2e57",
                    "bcl:marginalnote": "Grants for planning",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e65",
                            "bcl:num": "1",
                            "bcl:text": "The minister may pay a grant to a municipality or regional district for preparing a comprehensive plan for the provision of recreational facilities in the municipality or regional district."
                        },
                        {
                            "@id": "d2e74",
                            "bcl:num": "2",
                            "bcl:text": "A grant under subsection (1) must not be greater than 33 1/3\u00a2 for each person in the municipality or regional district, or $25\u00a0000, whichever is less."
                        }
                    ]
                },
                {
                    "@id": "d2e84",
                    "bcl:marginalnote": "Advisory committee",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e92",
                            "bcl:num": "1",
                            "bcl:text": "The minister may appoint a person or persons to advise the minister on matters relating to this Act."
                        },
                        {
                            "@id": "d2e101",
                            "bcl:num": "2",
                            "bcl:text": "A person appointed under subsection (1) may be paid reasonable and necessary travelling and out of pocket expenses incurred by the person in carrying out duties."
                        }
                    ]
                },
                {
                    "@id": "d2e111",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "5",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                    }
                }
            ]
        }
    }
