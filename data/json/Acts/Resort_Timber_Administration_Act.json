        "@id": "00_06030_01",
        "act:title": "Resort Timber Administration Act",
        "act:chapter": "30",
        "act:yearenacted": "2006",
        "act:assentedto": "May 18, 2006",
        "act:currency": {
            "act:tlcDirPath": "286269762/06030/tlc06030_f",
            "act:tlc": "E2tlc06030"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": [
                                {
                                    "in:term": "all seasons resort",
                                    "#text": "means a resort business operated or intended\n          to be operated for the purpose of providing"
                                },
                                "and includes a resort operated principally to provide alpine skiing and\n          snowboarding to customers by fixed lifts, in return for user fees;"
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e38",
                                    "bcl:num": "a",
                                    "bcl:text": "single-seasonal or multi-seasonal recreational activities, and"
                                },
                                {
                                    "@id": "d2e48",
                                    "bcl:num": "b",
                                    "bcl:text": "facilities for or related to those recreational activities,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e60",
                            "bcl:text": {
                                "in:term": "controlled recreation area",
                                "#text": "means an area designated by\n          regulation under section 4;"
                            }
                        },
                        {
                            "@id": "d2e69",
                            "bcl:text": {
                                "in:term": "Crown timber",
                                "#text": "means timber reserved to the\n          government;"
                            }
                        },
                        {
                            "@id": "d2e78",
                            "bcl:text": {
                                "in:term": "forestry statutes",
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96157_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Forest\n            Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/02069_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Forest and Range\n              Practices Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96157_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Forest\n              Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/02069_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Forest and Range\n              Practices Act"
                                    }
                                ],
                                "#text": "means the  and the  and includes the regulations under the  and the regulations under the ;"
                            }
                        },
                        {
                            "@id": "d2e99",
                            "bcl:text": {
                                "in:term": "private land",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96157_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Forest\n              Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d2e112",
                            "bcl:text": {
                                "in:term": "specified enactment",
                                "#text": "means a provision of the forestry statutes,\n          pertaining to the forest resources of the Crown, that is designated by regulation under\n            section\n            4."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e122",
                    "bcl:marginalnote": "Minister may delegate powers and duties",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e130",
                            "bcl:num": "1",
                            "bcl:text": "The minister, by conditional or unconditional written authority, may delegate the\n          minister's powers and duties under this Act to a person employed in any ministry of the\n          government."
                        },
                        {
                            "@id": "d2e139",
                            "bcl:num": "2",
                            "bcl:text": "A delegation under this section may be made by reference to the delegate's name or\n          title."
                        }
                    ]
                },
                {
                    "@id": "d2e149",
                    "bcl:marginalnote": "Minister's responsibilities under specified enactments",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e157",
                            "bcl:num": "1",
                            "bcl:text": "In relation to a controlled recreation area or an all seasons resort in a\n          controlled recreation area, the minister, instead of any official referred to in a\n          specified enactment,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e166",
                                    "bcl:num": "a",
                                    "bcl:text": "has all the powers pertaining to a discretion, function or duty referred to in\n            the specified enactment, and"
                                },
                                {
                                    "@id": "d2e175",
                                    "bcl:num": "b",
                                    "bcl:text": "is charged with all the responsibilities pertaining to that discretion, function\n            or duty."
                                }
                            ]
                        },
                        {
                            "@id": "d2e185",
                            "bcl:num": "2",
                            "bcl:text": "Each of the minister's powers, discretions, functions and duties under a specified\n          enactment applies only in controlled recreation areas."
                        },
                        {
                            "@id": "d2e194",
                            "bcl:num": "3",
                            "bcl:text": "The exercise of the powers conferred on the minister by this section, the carrying\n          out of each discretion, function and duty under a specified enactment and the\n          responsibilities with which the minister is charged under this section remain subject in\n          all respects to whichever of the forestry statutes contains the specified\n          enactment."
                        }
                    ]
                },
                {
                    "@id": "d2e204",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e212",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the\n            ."
                            }
                        },
                        {
                            "@id": "d2e224",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may\n          make regulations",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e233",
                                    "bcl:num": "a",
                                    "bcl:text": "designating as a controlled recreation area an area that consists of one or both\n            of the following:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e243",
                                            "bcl:num": "i",
                                            "bcl:text": "Crown land;"
                                        },
                                        {
                                            "@id": "d2e252",
                                            "bcl:num": "ii",
                                            "bcl:text": "private land on which Crown timber is located,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e261",
                                    "bcl:num": "a.1",
                                    "bcl:text": "cancelling the designation of an area as a controlled recreation area or\n            amending the boundaries of a controlled recreation area, and"
                                },
                                {
                                    "@id": "d2e270",
                                    "bcl:num": "b",
                                    "bcl:text": "subject to subsection (3), designating any provision of the\n            forestry statutes as a specified enactment for the purposes of this Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e279",
                            "bcl:num": "3",
                            "bcl:text": [
                                "The Lieutenant Governor in Council may not make a designation under subsection (2)\n            (b) unless satisfied that",
                                "under the provision proposed for designation is necessary or desirable in relation\n          to the planning, development, construction, operation or maintenance of an all seasons\n          resort in a controlled recreation area."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e288",
                                    "bcl:num": "a",
                                    "bcl:text": "the exercise of a power or discretion, or"
                                },
                                {
                                    "@id": "d2e298",
                                    "bcl:num": "b",
                                    "bcl:text": "the carrying out of a function or duty"
                                }
                            ]
                        },
                        {
                            "@id": "d2e310",
                            "bcl:num": "4",
                            "bcl:text": "In making a regulation under this Act, the Lieutenant Governor in Council may make\n          different regulations for different circumstances, persons, places, things or\n          transactions."
                        }
                    ]
                },
                {
                    "@id": "d2e369",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "7",
                    "bcl:text": "This Act comes into force on the date of Royal Assent."
                }
            ],
            "bcl:conseqhead": {
                "bcl:text": "Consequential Amendments",
                "bcl:num": "5-6",
                "bcl:conseqnote": {
