        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_17022_01",
        "act:title": "Electoral Reform Referendum 2018 Act",
        "act:chapter": "22",
        "act:yearenacted": "2017",
        "act:assentedto": "November 30, 2017",
        "act:currency": {
            "act:tlcDirPath": "414786120/1316968157/309218332",
            "act:tlc": "E3tlc17022"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d1e27",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d1e38",
                            "bcl:text": {
                                "in:term": "chief electoral officer",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96106_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "Election Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d1e50",
                            "bcl:text": {
                                "in:term": "financial agent",
                                "#text": "means a person who, on behalf of an opponent group or a proponent group, receives payments and contributions under this Act, incurs expenses and distributes any amount received;"
                            }
                        },
                        {
                            "@id": "d1e59",
                            "bcl:text": {
                                "in:term": "opponent group",
                                "#text": ", in relation to the referendum, means an individual who or organization that"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e66",
                                    "bcl:num": "a",
                                    "bcl:text": "opposes a proportional representation voting system, and"
                                },
                                {
                                    "@id": "d1e75",
                                    "bcl:num": "b",
                                    "bcl:text": "is established as an opponent group in accordance with the regulations for the purpose of receiving payment under section 4;"
                                }
                            ]
                        },
                        {
                            "@id": "d1e85",
                            "bcl:text": {
                                "in:term": "proponent group",
                                "#text": ", in relation to the referendum, means an individual who or organization that"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e92",
                                    "bcl:num": "a",
                                    "bcl:text": "supports a proportional representation voting system, and"
                                },
                                {
                                    "@id": "d1e101",
                                    "bcl:num": "b",
                                    "bcl:text": "is established as a proponent group in accordance with the regulations for the purpose of receiving payment under section 4;"
                                }
                            ]
                        },
                        {
                            "@id": "d1e111",
                            "bcl:text": {
                                "in:term": "referendum",
                                "#text": "means the referendum required to be conducted under section 2;"
                            }
                        },
                        {
                            "@id": "d1e119",
                            "bcl:text": {
                                "in:term": "voting package",
                                "#text": "means the set of materials, prescribed in the regulations, for the conduct of the referendum;"
                            }
                        },
                        {
                            "@id": "d1e127",
                            "bcl:text": {
                                "in:term": "voting system",
                                "#text": "means a system for electing members of the Legislative Assembly."
                            }
                        }
                    ]
                },
                {
                    "@id": "d1e136",
                    "bcl:marginalnote": "Referendum on electoral reform required",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d1e144",
                            "bcl:num": "1",
                            "bcl:text": "A referendum respecting a proportional representation voting system must be conducted throughout British Columbia."
                        },
                        {
                            "@id": "d1e153",
                            "bcl:num": "2",
                            "bcl:text": "For the referendum to be conducted, the Lieutenant Governor in Council must, by regulation,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e161",
                                    "bcl:num": "a",
                                    "bcl:text": "state the question or questions that will be put to the electorate at the referendum,"
                                },
                                {
                                    "@id": "d1e170",
                                    "bcl:num": "b",
                                    "bcl:text": "specify the date on which distribution of the voting packages must commence, and"
                                },
                                {
                                    "@id": "d1e179",
                                    "bcl:num": "c",
                                    "bcl:text": "specify the date on which voting in the referendum closes, which must be no later than November 30, 2018."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e190",
                    "bcl:marginalnote": {
                        "in:doc": [
                            "Offence Act",
                            "Referendum Act"
                        ],
                        "#text": "and  do not apply"
                    },
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d1e203",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96338_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Offence Act"
                                },
                                "#text": "Section 5 of the  does not apply to this Act or the regulations."
                            }
                        },
                        {
                            "@id": "d1e216",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96400_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Referendum Act"
                                },
                                "#text": "The  does not apply to the referendum."
                            }
                        }
                    ]
                },
                {
                    "@id": "d1e230",
                    "bcl:marginalnote": "Funding for opponent and proponent groups",
                    "bcl:num": "4",
                    "bcl:text": "Subject to the regulations, the chief electoral officer may make payments, to be used for the purpose of opposing or supporting a proportional representation voting system, to financial agents acting on behalf of one or more opponent or proponent groups."
                },
                {
                    "@id": "d1e242",
                    "bcl:marginalnote": "Referendum to be conducted by mail-in ballot",
                    "bcl:num": "5",
                    "bcl:text": "The referendum must be conducted by distribution of a voting package in accordance with the regulations."
                },
                {
                    "@id": "d1e255",
                    "bcl:marginalnote": "Elections BC responsible for administration of referendum",
                    "bcl:num": "6",
                    "bcl:text": "The chief electoral officer is responsible for conducting the referendum in accordance with the regulations."
                },
                {
                    "@id": "d1e267",
                    "bcl:marginalnote": "Results of referendum count",
                    "bcl:num": "7",
                    "bcl:text": "The chief electoral officer must",
                    "bcl:paragraph": [
                        {
                            "@id": "d1e278",
                            "bcl:num": "a",
                            "bcl:text": "report the result of the referendum to the Speaker of the Legislative Assembly, and"
                        },
                        {
                            "@id": "d1e287",
                            "bcl:num": "b",
                            "bcl:text": "announce the result of the referendum in a manner that the chief electoral officer considers will inform the electorate of that result."
                        }
                    ]
                },
                {
                    "@id": "d1e297",
                    "bcl:marginalnote": "Who may vote in referendum",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d1e305",
                            "bcl:num": "1",
                            "bcl:text": "In order to vote in the referendum, an individual must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e313",
                                    "bcl:num": "a",
                                    "bcl:text": "be a Canadian citizen,"
                                },
                                {
                                    "@id": "d1e322",
                                    "bcl:num": "b",
                                    "bcl:text": "be 18 years of age or older on the date on which voting in the referendum closes,"
                                },
                                {
                                    "@id": "d1e331",
                                    "bcl:num": "c",
                                    "bcl:text": "have been a resident of British Columbia for at least 6 months immediately before the date on which voting in the referendum closes,"
                                },
                                {
                                    "@id": "d1e341",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96106_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Election Act"
                                        },
                                        "#text": "be registered as a voter as defined in the  or be qualified to register as a voter in the referendum in accordance with the regulations, and"
                                    }
                                },
                                {
                                    "@id": "d1e354",
                                    "bcl:num": "e",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96106_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Election Act"
                                        },
                                        "#text": "not be disqualified by the  or any other enactment from voting in the referendum or be otherwise disqualified by law."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d1e368",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1) (e), the following individuals are not entitled to vote in the referendum:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e376",
                                    "bcl:num": "a",
                                    "bcl:text": "the chief electoral officer and the deputy chief electoral officer;"
                                },
                                {
                                    "@id": "d1e385",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96106_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Election Act"
                                        },
                                        "#text": "an individual who is prohibited from voting under Part 12 of the ."
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e400",
                    "bcl:marginalnote": "Duty if referendum is binding",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d1e417",
                            "bcl:num": "0.1",
                            "bcl:text": {
                                "in:term": "subsequent referendum",
                                "#text": "In this section,  means the subsequent referendum referred to in subsection\u00a0(3)."
                            }
                        },
                        {
                            "@id": "d1e408",
                            "bcl:num": "1",
                            "bcl:text": "The result of the referendum is binding on the government only if more than\u00a050% of the validly cast ballots",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e416",
                                    "bcl:num": "a",
                                    "bcl:text": "vote the same way on a question stated, if the question has the option of 2\u00a0answers, or"
                                },
                                {
                                    "@id": "d1e425",
                                    "bcl:num": "b",
                                    "bcl:text": "are in favour of the same voting system, if a question has the option of more than 2 answers."
                                }
                            ]
                        },
                        {
                            "@id": "d1e435",
                            "bcl:num": "2",
                            "bcl:text": [
                                "If",
                                "the government must take steps that the government considers necessary or advisable to implement the result of the referendum, including introducing the legislation needed to implement the proportional representation voting system in sufficient time for that voting system to be in place for a general election called on or after July 1, 2021."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e443",
                                    "bcl:num": "a",
                                    "bcl:text": "the result of the referendum is binding on the government in accordance with subsection (1), and"
                                },
                                {
                                    "@id": "d1e452",
                                    "bcl:num": "b",
                                    "bcl:text": "the ballots referred to in that subsection are in favour of adopting a proportional representation voting system,"
                                }
                            ]
                        },
                        {
                            "@id": "d1e487",
                            "bcl:num": "3",
                            "bcl:text": [
                                "If",
                                "a subsequent referendum must be conducted throughout British Columbia after\u00a02 general elections have been held using the proportional representation voting system, respecting whether to continue using the proportional representation voting system or to revert to the first past the post voting system."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e495",
                                    "bcl:num": "a",
                                    "bcl:text": "the result of the referendum is binding on the government in accordance with subsection\u00a0(1), and"
                                },
                                {
                                    "@id": "d1e504",
                                    "bcl:num": "b",
                                    "bcl:text": "a proportional representation voting system is implemented,"
                                }
                            ]
                        },
                        {
                            "@id": "d1e517",
                            "bcl:num": "4",
                            "bcl:text": "If a subsequent referendum must be conducted under subsection (3), the date on which voting in the subsequent referendum closes must be no later than the last day of the thirteenth month after the month in which the general voting day of the second general election referred to in subsection (3) falls."
                        }
                    ]
                },
                {
                    "@id": "d1e466",
                    "bcl:marginalnote": "Penalties respecting misuse or non-repayment of funds",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d1e474",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96106_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Election Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96398_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Recall and Initiative Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96106_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Election Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96398_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Recall and Initiative Act"
                                    }
                                ],
                                "#text": "If, by regulation under this Act, a provision of the  or the  applies in relation to the use or repayment of payments made under section 4 of this Act, despite any penalty that would apply to a contravention of that provision under the  or the , a person who contravenes the provision is liable on conviction to a fine of not more than $50 000 or to imprisonment for not more than 2 years, or both."
                            }
                        },
                        {
                            "@id": "d1e499",
                            "bcl:num": "2",
                            "bcl:text": "A person who contravenes a provision of a regulation under this Act that relates to the use or repayment of payments made under section 4 is liable on conviction to a fine of not more than $50 000 or to imprisonment for not more than 2 years, or both."
                        }
                    ]
                },
                {
                    "@id": "d1e509",
                    "bcl:marginalnote": "Appropriation",
                    "bcl:num": "11",
                    "bcl:text": "Administrative costs of conducting the referendum, including payments made under section 4, must be paid out of the consolidated revenue fund."
                },
                {
                    "@id": "d1e522",
                    "bcl:marginalnote": "Regulations",
                    "bcl:num": "12",
                    "bcl:subsection": [
                        {
                            "@id": "d1e530",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                            }
                        },
                        {
                            "@id": "d1e543",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e551",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96106_00",
                                                "@xlink:type": "locator",
                                                "in:doc": "Election Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/14018",
                                                "@xlink:type": "locator",
                                                "in:doc": "Local Elections Campaign Financing Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96398_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Recall and Initiative Act"
                                            }
                                        ],
                                        "#text": "providing that specified provisions of the , the , the  or the regulations under those Acts apply or do not apply to and in relation to the referendum;"
                                    }
                                },
                                {
                                    "@id": "d1e572",
                                    "bcl:num": "b",
                                    "bcl:text": "adapting any provisions of those Acts or regulations with changes that the Lieutenant Governor in Council considers necessary or advisable."
                                }
                            ]
                        },
                        {
                            "@id": "d1e582",
                            "bcl:num": "3",
                            "bcl:text": "Without limiting subsection (1) or (2), the Lieutenant Governor in Council may make regulations that the Lieutenant Governor in Council considers necessary or advisable respecting the referendum, including, without limitation, respecting",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e590",
                                    "bcl:num": "a",
                                    "bcl:text": "the manner by which the referendum is to be conducted,"
                                },
                                {
                                    "@id": "d1e599",
                                    "bcl:num": "b",
                                    "bcl:text": "voting in the referendum,"
                                },
                                {
                                    "@id": "d1e608",
                                    "bcl:num": "c",
                                    "bcl:text": "counting the referendum vote,"
                                },
                                {
                                    "@id": "d1e618",
                                    "bcl:num": "d",
                                    "bcl:text": "advertising in relation to the referendum, and"
                                },
                                {
                                    "@id": "d1e627",
                                    "bcl:num": "e",
                                    "bcl:text": "the availability of information respecting the matters to be voted on."
                                }
                            ]
                        },
                        {
                            "@id": "d1e638",
                            "bcl:num": "4",
                            "bcl:text": "In making a regulation under subsection (3) (c), the Lieutenant Governor in Council may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e646",
                                    "bcl:num": "a",
                                    "bcl:text": "if a question that is stated for the referendum has the option of more than 2\u00a0answers, prescribe how to determine what voting system validly cast ballots are in favour of, and"
                                },
                                {
                                    "@id": "d1e655",
                                    "bcl:num": "b",
                                    "bcl:text": "make different regulations for a question that has the option of 2 answers or a question that has the option of more than 2 answers."
                                }
                            ]
                        },
                        {
                            "@id": "d1e665",
                            "bcl:num": "5",
                            "bcl:text": "Without limiting subsection (1), (2) or (3), the Lieutenant Governor in Council may make regulations that the Lieutenant Governor in Council considers necessary or advisable",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e673",
                                    "bcl:num": "a",
                                    "bcl:text": "for the purposes of payments made under section 4, including, without limitation, respecting",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d1e681",
                                            "bcl:num": "i",
                                            "bcl:text": "the establishment of opponent groups or proponent groups,"
                                        },
                                        {
                                            "@id": "d1e690",
                                            "bcl:num": "ii",
                                            "bcl:text": "the making of payments to financial agents and limits on payment,"
                                        },
                                        {
                                            "@id": "d1e699",
                                            "bcl:num": "iii",
                                            "bcl:text": "the designation and duties of financial agents,"
                                        },
                                        {
                                            "@id": "d1e709",
                                            "bcl:num": "iv",
                                            "bcl:text": "obligations, restrictions, limitations or conditions in relation to the holding, use and disbursement of payments received, and accounting and reporting in relation to payments received,"
                                        },
                                        {
                                            "@id": "d1e718",
                                            "bcl:num": "v",
                                            "bcl:text": "liability of financial agents and principal officers or members of opponent groups or proponent groups for failing to comply with the requirements of the regulations,"
                                        },
                                        {
                                            "@id": "d1e727",
                                            "bcl:num": "vi",
                                            "bcl:text": "requirements of financial agents to repay amounts that were not used by an opponent group or a proponent group, or amounts that the financial agent knew, or ought to have known, were used for a purpose or in a manner other than as permitted under the regulations,"
                                        },
                                        {
                                            "@id": "d1e736",
                                            "bcl:num": "vii",
                                            "bcl:text": "the publication of any matter in relation to a payment made to opponent groups or proponent groups, and"
                                        },
                                        {
                                            "@id": "d1e745",
                                            "bcl:num": "viii",
                                            "bcl:text": "applications to the court for relief from failing to comply with one or more requirements of a regulation made under this paragraph, and"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d1e755",
                                    "bcl:num": "b",
                                    "bcl:text": "without limiting paragraph (a), respecting the making and receipt of payments and contributions, other than payments under section 4, and the incurring of expenses, in relation to the referendum by any individual or organization, including opponent groups and proponent groups, including, without limitation, respecting requirements of financial agents to pay amounts that were not used by an opponent group or a proponent group."
                                }
                            ]
                        },
                        {
                            "@id": "d1e765",
                            "bcl:num": "6",
                            "bcl:text": "A regulation made under the authority of subsection (5) (a) (vi) or (b) may provide that amounts that must be repaid or paid under that regulation constitute a debt due to the government by financial agents."
                        },
                        {
                            "@id": "d1e774",
                            "bcl:num": "7",
                            "bcl:text": "Without limiting subsection (1), (2), (3) or (5), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d1e782",
                                    "bcl:num": "a",
                                    "bcl:text": "prescribing offences and penalties for failure to comply with the regulations;"
                                },
                                {
                                    "@id": "d1e791",
                                    "bcl:num": "b",
                                    "bcl:text": "respecting any matter for which regulations are contemplated by this Act;"
                                },
                                {
                                    "@id": "d1e800",
                                    "bcl:num": "c",
                                    "bcl:text": "conferring a discretion on the chief electoral officer."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d1e811",
                    "bcl:marginalnote": "Repeals",
                    "bcl:num": "13",
                    "bcl:subsection": [
                        {
                            "@id": "d1e819",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/08009_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Electoral Reform Referendum 2009 Act"
                                },
