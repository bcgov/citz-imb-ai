        "@id": "00_04058_01",
        "act:title": "B.C. Rail Benefits (First\u00a0Nations) Trust Act",
        "act:chapter": "58",
        "act:yearenacted": "2004",
        "act:assentedto": "October 21, 2004",
        "act:currency": {
            "act:tlcDirPath": "1944036832/04058/tlc04058_f",
            "act:tlc": "E3tlc04058"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": {
                                "in:term": "allocation",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04069_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Northern Development Initiative Trust Act"
                                },
                                "#text": "means the $15 million to which the B.C. Rail Benefits (First Nations) Trust is entitled under section 13 (c) of the ;"
                            }
                        },
                        {
                            "@id": "d2e41",
                            "bcl:text": {
                                "in:term": "B.C. Rail Benefits (First Nations) Trust",
                                "#text": "means the B.C. Rail Benefits (First Nations) Trust established under section 3 (1);"
                            }
                        },
                        {
                            "@id": "d2e51",
                            "bcl:text": {
                                "in:term": "Beneficiary First Nations",
                                "#text": "means those of the eligible first nations and treaty societies that are prescribed as Beneficiary First Nations, and includes any other first nation or treaty society that is added as a Beneficiary First Nation by resolution of the directors of the B.C. Rail Benefits (First Nations) Trust under section 5 (3);"
                            }
                        },
                        {
                            "@id": "d2e60",
                            "bcl:text": {
                                "in:term": "eligible first nations and treaty societies",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/i-5/",
                                    "@xlink:type": "locator",
                                    "in:doc": "Indian Act"
                                },
                                "#text": "means the Gitxsan Treaty Society and the following bands within the meaning of the \u00a0(Canada):"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e72",
                                    "bcl:num": "a",
                                    "bcl:text": "Alexandria;"
                                },
                                {
                                    "@id": "d2e81",
                                    "bcl:num": "b",
                                    "bcl:text": "Blueberry River First Nations;"
                                },
                                {
                                    "@id": "d2e90",
                                    "bcl:num": "c",
                                    "bcl:text": "Bridge River;"
                                },
                                {
                                    "@id": "d2e99",
                                    "bcl:num": "d",
                                    "bcl:text": "Canim Lake;"
                                },
                                {
                                    "@id": "d2e109",
                                    "bcl:num": "e",
                                    "bcl:text": "Cayoose Creek;"
                                },
                                {
                                    "@id": "d2e118",
                                    "bcl:num": "f",
                                    "bcl:text": "Fort Nelson First Nation;"
                                },
                                {
                                    "@id": "d2e127",
                                    "bcl:num": "g",
                                    "bcl:text": "Lheidli T'enneh;"
                                },
                                {
                                    "@id": "d2e136",
                                    "bcl:num": "h",
                                    "bcl:text": "McLeod Lake;"
                                },
                                {
                                    "@id": "d2e145",
                                    "bcl:num": "i",
                                    "bcl:text": "Mount Currie;"
                                },
                                {
                                    "@id": "d2e154",
                                    "bcl:num": "j",
                                    "bcl:text": "Nak'azdli;"
                                },
                                {
                                    "@id": "d2e164",
                                    "bcl:num": "k",
                                    "bcl:text": "N'Quatqua;"
                                },
                                {
                                    "@id": "d2e173",
                                    "bcl:num": "l",
                                    "bcl:text": "Red Bluff;"
                                },
                                {
                                    "@id": "d2e182",
                                    "bcl:num": "m",
                                    "bcl:text": "Saulteau First Nations;"
                                },
                                {
                                    "@id": "d2e191",
                                    "bcl:num": "n",
                                    "bcl:text": "Seton Lake;"
                                },
                                {
                                    "@id": "d2e200",
                                    "bcl:num": "o",
                                    "bcl:text": "Soda Creek;"
                                },
                                {
                                    "@id": "d2e209",
                                    "bcl:num": "p",
                                    "bcl:text": "Squamish;"
                                },
                                {
                                    "@id": "d2e219",
                                    "bcl:num": "q",
                                    "bcl:text": "T'it'q'et;"
                                },
                                {
                                    "@id": "d2e228",
                                    "bcl:num": "r",
                                    "bcl:text": "Takla Lake First Nation;"
                                },
                                {
                                    "@id": "d2e237",
                                    "bcl:num": "s",
                                    "bcl:text": "Tl'azt'en Nation;"
                                },
                                {
                                    "@id": "d2e246",
                                    "bcl:num": "t",
                                    "bcl:text": "Tsawwassen First Nation;"
                                },
                                {
                                    "@id": "d2e255",
                                    "bcl:num": "u",
                                    "bcl:text": "Ts'kw'aylaxw First Nation;"
                                },
                                {
                                    "@id": "d2e264",
                                    "bcl:num": "v",
                                    "bcl:text": "West Moberly First Nations;"
                                },
                                {
                                    "@id": "d2e274",
                                    "bcl:num": "w",
                                    "bcl:text": "Williams Lake;"
                                },
                                {
                                    "@id": "d2e283",
                                    "bcl:num": "x",
                                    "bcl:text": "Xaxli'p."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e293",
                    "bcl:marginalnote": "Beneficiary First Nations may be prescribed",
                    "bcl:num": "2",
                    "bcl:text": "The Lieutenant Governor in Council may, by regulation, prescribe one or more eligible first nations and treaty societies as Beneficiary First Nations."
                },
                {
                    "@id": "d2e305",
                    "bcl:marginalnote": "B.C. Rail Benefits (First Nations) Trust established",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e313",
                            "bcl:num": "1",
                            "bcl:text": "On the making of a regulation under section 2, there is established a corporation known as the B.C. Rail Benefits (First Nations) Trust consisting of the directors referred to in section 4."
                        },
                        {
                            "@id": "d2e322",
                            "bcl:num": "2",
                            "bcl:text": "The B.C. Rail Benefits (First Nations) Trust has the power and capacity of an individual of full capacity."
                        },
                        {
                            "@id": "d2e331",
                            "bcl:num": "3",
                            "bcl:text": "The B.C. Rail Benefits (First Nations) Trust is not an agent of the government."
                        }
                    ]
                },
                {
                    "@id": "d2e341",
                    "bcl:marginalnote": "Directors of the B.C. Rail Benefits (First Nations) Trust",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e349",
                            "bcl:num": "1",
                            "bcl:text": "The directors of the B.C. Rail Benefits (First Nations) Trust are,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e358",
                                    "bcl:num": "a",
                                    "bcl:text": "for each first nation that is a Beneficiary First Nation, the chief of the first nation or the chief's designate, or, if the first nation does not have a chief, the individual acting in that capacity for the first nation or the individual's designate, and"
                                },
                                {
                                    "@id": "d2e367",
                                    "bcl:num": "b",
                                    "bcl:text": "for each treaty society that is a Beneficiary First Nation, the executive director of the treaty society or the executive director's designate, or, if the treaty society does not have an executive director, the individual acting in that capacity for the treaty society or the individual's designate."
                                }
                            ]
                        },
                        {
                            "@id": "d2e377",
                            "bcl:num": "2",
                            "bcl:text": "A director of the B.C. Rail Benefits (First Nations) Trust ceases to hold office when the director ceases to meet the qualifications referred to in subsection (1)."
                        },
                        {
                            "@id": "d2e386",
                            "bcl:num": "3",
                            "bcl:text": "The directors of the B.C. Rail Benefits (First Nations) Trust",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e395",
                                    "bcl:num": "a",
                                    "bcl:text": "must establish a B.C. Rail Benefits (First Nations) Trust Account,"
                                },
                                {
                                    "@id": "d2e404",
                                    "bcl:num": "b",
                                    "bcl:text": "must receive the allocation and deposit that money into the B.C. Rail Benefits (First Nations) Trust Account,"
                                },
                                {
                                    "@id": "d2e413",
                                    "bcl:num": "c",
                                    "bcl:text": "may spend the money in the B.C. Rail Benefits (First Nations) Trust Account in accordance with section 9, and"
                                },
                                {
                                    "@id": "d2e422",
                                    "bcl:num": "d",
                                    "bcl:text": "may invest any or all of the money that is in the B.C. Rail Benefits (First Nations) Trust Account in accordance with section 10."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e432",
                    "bcl:marginalnote": "Proceedings of directors",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e440",
                            "bcl:num": "1",
                            "bcl:text": "The directors of the B.C. Rail Benefits (First Nations) Trust must appoint one of their number as chair and may, subject to this Act, otherwise establish their own procedures."
                        },
                        {
                            "@id": "d2e449",
                            "bcl:num": "2",
                            "bcl:text": "An act or proceeding of the directors of the B.C. Rail Benefits (First Nations) Trust is not invalid merely because not all of the directors referred to in section 4 (1) are in attendance."
                        },
                        {
                            "@id": "d2e458",
                            "bcl:num": "3",
                            "bcl:text": "The directors may, by directors' resolution, add any first nation or treaty society as a Beneficiary First Nation."
                        }
                    ]
                },
                {
                    "@id": "d2e469",
                    "bcl:marginalnote": "Remuneration of directors",
                    "bcl:num": "6",
                    "bcl:text": "A director of the B.C. Rail Benefits (First Nations) Trust must not accept remuneration from that corporation other than for reasonable travelling and out of pocket expenses necessarily incurred by the director in discharging the director's duties."
                },
                {
                    "@id": "d2e481",
                    "bcl:marginalnote": "Accountability",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e489",
                            "bcl:num": "1",
                            "bcl:text": "Within 4 months after the end of each of its fiscal years, the B.C. Rail Benefits (First Nations) Trust must prepare an annual report on its use of the allocation in the fiscal year for which the report is prepared, and must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e498",
                                    "bcl:num": "a",
                                    "bcl:text": "present that report to each of its directors, and"
                                },
                                {
                                    "@id": "d2e507",
                                    "bcl:num": "b",
                                    "bcl:text": "make that report available to the members of the Beneficiary First Nations in a reasonable manner, including by electronic means."
                                }
                            ]
                        },
                        {
                            "@id": "d2e517",
                            "bcl:num": "2",
                            "bcl:text": "The annual report under subsection (1) must include the audited financial statements for the fiscal year for which the report is prepared."
                        }
                    ]
                },
                {
                    "@id": "d2e527",
                    "bcl:marginalnote": "B.C. Rail Benefits (First Nations) Trust Account to be managed",
                    "bcl:num": "8",
                    "bcl:text": "The B.C. Rail Benefits (First Nations) Trust must manage the B.C. Rail Benefits (First Nations) Trust Account."
                },
                {
                    "@id": "d2e539",
                    "bcl:marginalnote": "Purpose of the B.C. Rail Benefits (First Nations) Trust Account",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e547",
                            "bcl:num": "1",
                            "bcl:text": "The purpose of the B.C. Rail Benefits (First Nations) Trust Account is to provide funding for Beneficiary First Nations' projects that are approved by the directors of the B.C. Rail Benefits (First Nations) Trust and that advance one or more of the following goals:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e556",
                                    "bcl:num": "a",
                                    "bcl:text": "economic development;"
                                },
                                {
                                    "@id": "d2e565",
                                    "bcl:num": "b",
                                    "bcl:text": "educational advancement;"
                                },
                                {
                                    "@id": "d2e575",
                                    "bcl:num": "c",
                                    "bcl:text": "cultural renewal."
                                }
                            ]
                        },
                        {
                            "@id": "d2e584",
                            "bcl:num": "2",
                            "bcl:text": "The directors of the B.C. Rail Benefits (First Nations) Trust may use money from the B.C. Rail Benefits (First Nations) Trust Account to satisfy expenses that are reasonably and necessarily incurred in order to allow the directors to perform their obligations under this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e594",
                    "bcl:marginalnote": "Investments",
                    "bcl:num": "10",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96464_01",
                            "@xlink:type": "locator",
                            "in:doc": "Trustee Act"
                        },
                        "#text": "The B.C. Rail Benefits (First Nations) Trust must invest the allocation only as permitted under the provisions of the  respecting the investment of trust property by a trustee."
                    }
                },
                {
                    "@id": "d2e609",
                    "bcl:marginalnote": "No rights affected",
                    "bcl:num": "11",
                    "bcl:text": [
                        "Nothing in, under or arising out of this Act, including, without limitation,",
                        "abrogates or derogates from any aboriginal rights or treaty rights of any first nation or of any aboriginal peoples, including, without limitation, any right of a first nation or of any aboriginal peoples to claim an aboriginal right or treaty right in, to or in relation to any land, thing or matter."
                    ],
                    "bcl:paragraph": [
                        {
                            "@id": "d2e620",
                            "bcl:num": "a",
                            "bcl:text": "the inclusion of a first nation in, or the exclusion of a first nation from, the B.C. Rail Benefits (First Nations) Trust, or"
                        },
                        {
                            "@id": "d2e629",
                            "bcl:num": "b",
                            "bcl:text": "any participation of any first nation, or any failure or refusal of any first nation to participate, in the B.C. Rail Benefits (First Nations) Trust,"
                        }
                    ]
                },
                {
                    "@id": "d2e644",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act"
                    },
                    "bcl:num": "12",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5 of the  does not apply to this Act."
                    }
                },
                {
                    "@id": "d2e662",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "13",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the ."
                    }
                },
                {
                    "@id": "d2e677",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "14",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in Council."
                }
            ]
        }
    }
