        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "12010_01",
        "act:title": "Criminal Asset Management Act",
        "act:chapter": "10",
        "act:yearenacted": "2012",
        "act:assentedto": "May 14, 2012",
        "act:currency": {
            "act:tlcDirPath": "781755088/1127069118/1473853941",
            "act:tlc": "E3tlc12010"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e24",
                    "bcl:marginalnote": "Interpretation",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e32",
                            "bcl:num": "1",
                            "bcl:text": "In this Act:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e41",
                                    "bcl:text": {
                                        "in:term": "director",
                                        "#text": "means the Director of Criminal Asset Management designated\n            under section\n              2;"
                                    }
                                },
                                {
                                    "@id": "d2e50",
                                    "bcl:text": {
                                        "in:term": "eligible victim",
                                        "#text": "means a person who"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e60",
                                            "bcl:num": "a",
                                            "bcl:text": "suffered pecuniary loss as a direct result of a criminal or quasi-criminal\n              activity that resulted in forfeiture, to which this Act applies, of\n              property,"
                                        },
                                        {
                                            "@id": "d2e69",
                                            "bcl:num": "b",
                                            "bcl:text": "did not engage, directly or indirectly, in the commission of the criminal or\n              quasi-criminal activity, and"
                                        },
                                        {
                                            "@id": "d2e78",
                                            "bcl:num": "c",
                                            "bcl:text": "meets the criteria prescribed under this Act;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e87",
                                    "bcl:text": {
                                        "in:term": "fund",
                                        "#text": "means the Criminal Asset Management Fund continued under\n              section\n              12;"
                                    }
                                },
                                {
                                    "@id": "d2e96",
                                    "bcl:text": {
                                        "in:term": "proceeds of crime",
                                        "#text": "means any property, benefit or advantage\n            that"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e105",
                                            "bcl:num": "a",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Criminal Code"
                                                },
                                                "#text": "falls within the definition of \"proceeds of crime\" in section 462.3 of the\n                , or"
                                            }
                                        },
                                        {
                                            "@id": "d2e118",
                                            "bcl:num": "b",
                                            "bcl:text": "is obtained or derived, directly or indirectly, as a result of an act or\n              omission that, in the jurisdiction in which the act or omission occurs, constitutes an\n              offence;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e127",
                                    "bcl:text": {
                                        "in:term": "property",
                                        "#text": "includes a portion of property or a portion of an interest\n            in property;"
                                    }
                                },
                                {
                                    "@id": "d2e136",
                                    "bcl:text": {
                                        "in:term": "relevant provision",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Criminal\n              Code"
                                        },
                                        "#text": "means a provision of the  or any other federal Act prescribed as a relevant\n            provision."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e148",
                            "bcl:num": "2",
                            "bcl:text": "A relevant provision prescribed under section 15 is deemed to include any\n          similar provision of an enactment of a jurisdiction outside of Canada."
                        }
                    ]
                },
                {
                    "@id": "d2e158",
                    "bcl:marginalnote": "Director of Criminal Asset Management",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e166",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service\n              Act"
                                },
                                "#text": "The minister may, in writing, designate as Director of Criminal Asset Management a\n          person who is appointed under the ."
                            }
                        },
                        {
                            "@id": "d2e178",
                            "bcl:num": "2",
                            "bcl:text": "The director may delegate, with or without conditions, any or all of the powers,\n          functions and duties of the director under this Act to a person or class of\n          persons."
                        },
                        {
                            "@id": "d2e187",
                            "bcl:num": "3",
                            "bcl:text": "A delegation under subsection (2) must be in writing and may include any\n          terms or conditions the director considers appropriate."
                        }
                    ]
                },
                {
                    "@id": "d2e197",
                    "bcl:marginalnote": "Director's responsibilities",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e205",
                            "bcl:num": "1",
                            "bcl:text": "The director is responsible for the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e214",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Criminal Code"
                                        },
                                        "#text": "taking possession and control of, and managing or otherwise dealing with,\n            property that is the subject of a management order obtained by the minister under\n            section 83.13, 462.331 or 490.81 of the ;"
                                    }
                                },
                                {
                                    "@id": "d2e226",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Criminal Code"
                                        },
                                        "#text": "administering and managing property that is the subject of a restraint order\n            obtained by the minister under section 83.13, 462.33 or 490.8 of the ;"
                                    }
                                },
                                {
                                    "@id": "d2e239",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Criminal Code"
                                        },
                                        "#text": "taking possession and control of, preserving, managing, disposing of or\n            otherwise dealing with property that is forfeited to the government under section 83.14,\n            199, 462.37, 462.38, 462.43, 490, 490.01, 490.1, 490.2 or\u00a0491.1 of the ;"
                                    }
                                },
                                {
                                    "@id": "d2e251",
                                    "bcl:num": "d",
                                    "bcl:text": "taking possession and control of, preserving, managing, disposing of or\n            otherwise dealing with property that is forfeited to the government under a relevant\n            provision."
                                }
                            ]
                        },
                        {
                            "@id": "d2e260",
                            "bcl:num": "2",
                            "bcl:text": "The director must perform any additional duties assigned to the director by the\n          minister."
                        }
                    ]
                },
                {
                    "@id": "d2e270",
                    "bcl:marginalnote": "Director's powers",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e278",
                            "bcl:num": "1",
                            "bcl:text": "The director may take possession and control of, preserve, manage, dispose of or\n          otherwise deal with any property described in section 3 (1) (c) or (d) in any manner that\n          the director considers appropriate."
                        },
                        {
                            "@id": "d2e287",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting the generality of subsection (1), the director\n          may",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e296",
                                    "bcl:num": "a",
                                    "bcl:text": "take possession and control of, and preserve or manage, the property for the\n            length of time and on the terms that the director considers appropriate,"
                                },
                                {
                                    "@id": "d2e306",
                                    "bcl:num": "b",
                                    "bcl:text": "dispose of the property at the price and on the terms that the director\n            considers appropriate,"
                                },
                                {
                                    "@id": "d2e315",
                                    "bcl:num": "c",
                                    "bcl:text": "do anything the director considers advisable for the ongoing management or\n            operation of the property before its final disposition, including",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e324",
                                            "bcl:num": "i",
                                            "bcl:text": "complying with the terms of any order to which the property is subject,\n              including an order to comply with environmental, industrial, labour or property\n              standards or to pay taxes, utility charges or other charges, or"
                                        },
                                        {
                                            "@id": "d2e333",
                                            "bcl:num": "ii",
                                            "bcl:text": "making improvements or repairs to the property to maintain its economic\n              value,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e342",
                                    "bcl:num": "d",
                                    "bcl:text": "dispose of perishable or rapidly depreciating property, or"
                                },
                                {
                                    "@id": "d2e351",
                                    "bcl:num": "e",
                                    "bcl:text": "destroy property that has little or no value."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e362",
                    "bcl:marginalnote": "Money held in trust",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e370",
                            "bcl:num": "1",
                            "bcl:text": "Any money received by the director, or realized from the disposition of property\n          referred to in section 3 (1) (a) or (b), that has not yet been forfeited to the government\n          or had its entitlement otherwise determined in accordance with law must be held in trust\n          by the director."
                        },
                        {
                            "@id": "d2e379",
                            "bcl:num": "2",
                            "bcl:text": "Unless the money is forfeited to the government, the director must pay money held\n          in trust and any interest or other income earned on the money to the person determined to\n          be entitled to that money."
                        },
                        {
                            "@id": "d2e388",
                            "bcl:num": "3",
                            "bcl:text": "If money held in trust under this section is forfeited to the government, the\n          director must pay the money and any interest or other income earned on that money into the\n          fund."
                        }
                    ]
                },
                {
                    "@id": "d2e398",
                    "bcl:marginalnote": "Management of property forfeited to Crown",
                    "bcl:num": "6",
                    "bcl:text": "Property that is forfeited to the government as described in section 3 (1) (c) or\n        (d) must be dealt with by the director as provided under sections 3 and 4."
                },
                {
                    "@id": "d2e410",
                    "bcl:marginalnote": "Application for compensation",
                    "bcl:num": "7",
                    "bcl:text": "A person may apply, in accordance with the regulations, for compensation from the\n        fund as an eligible victim."
                },
                {
                    "@id": "d2e422",
                    "bcl:marginalnote": "Payment to eligible victim",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e430",
                            "bcl:num": "1",
                            "bcl:text": "Subject to this Act and the regulations and on receipt of an application under\n            section\n            7, the director may pay to an eligible victim an amount in the circumstances\n          and subject to the conditions and limitations that the director considers\n          appropriate."
                        },
                        {
                            "@id": "d2e439",
                            "bcl:num": "2",
                            "bcl:text": "Despite subsection (1), the director may not pay to an eligible victim of a criminal\n          or quasi-criminal activity a total amount that exceeds the sum of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e448",
                                    "bcl:num": "a",
                                    "bcl:text": "any money forfeited as a result of the activity, and"
                                },
                                {
                                    "@id": "d2e458",
                                    "bcl:num": "b",
                                    "bcl:text": "the net proceeds, as determined by the regulations, resulting from the\n            disposition of any property forfeited as a result of the activity."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e468",
                    "bcl:marginalnote": "Manner of payment",
                    "bcl:num": "9",
                    "bcl:text": "In compensating an eligible victim under section 8, the director may do the\n        following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e479",
                            "bcl:num": "a",
                            "bcl:text": "pay an eligible victim in one or more instalments;"
                        },
                        {
                            "@id": "d2e488",
                            "bcl:num": "b",
                            "bcl:text": "prorate payments, in accordance with the regulations, among eligible victims or a\n          category of eligible victims."
                        }
                    ]
                },
                {
                    "@id": "d2e498",
                    "bcl:marginalnote": "Reconsideration of decision",
                    "bcl:num": "10",
                    "bcl:text": "On application to the director, or on the director's own initiative, the director\n        may reconsider a decision under section 8 or 9 respecting the payment of\n        compensation or eligibility for compensation."
                },
                {
                    "@id": "d2e511",
                    "bcl:marginalnote": "Repayment of excess compensation received",
                    "bcl:num": "11",
                    "bcl:text": "If an eligible victim receives from the fund money that is in excess of the amount\n        awarded to the eligible victim under this Act, the eligible victim is liable to repay to the\n        director the amount of compensation to which that eligible victim was not\n        entitled."
                },
                {
                    "@id": "d2e523",
                    "bcl:marginalnote": "Criminal Asset Management Fund",
                    "bcl:num": "12",
                    "bcl:subsection": [
                        {
                            "@id": "d2e531",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96436_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Special Accounts\n              Appropriation and Control Act"
                                },
                                "#text": "The Forfeited Crime Proceeds Fund, established under the , is continued as a special account\n          in the general fund of the consolidated revenue fund to be known as the Criminal Asset\n          Management Fund."
                            }
                        },
                        {
                            "@id": "d2e543",
                            "bcl:num": "2",
                            "bcl:text": "The fund consists of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e552",
                                    "bcl:num": "a",
                                    "bcl:text": "the closing balance in the Forfeited Crime Proceeds Fund at the end of the day\n            before this section comes into force, and"
                                },
                                {
                                    "@id": "d2e562",
                                    "bcl:num": "b",
                                    "bcl:text": "the money paid into the special account under subsection (3)."
                                }
                            ]
                        },
                        {
                            "@id": "d2e571",
                            "bcl:num": "3",
                            "bcl:text": "The following must be paid into the fund:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e580",
                                    "bcl:num": "a",
                                    "bcl:text": "any money provided to the minister or the government as proceeds of crime by or\n            on behalf of",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e589",
                                            "bcl:num": "i",
                                            "bcl:text": "the government of Canada, or"
                                        },
                                        {
                                            "@id": "d2e598",
                                            "bcl:num": "ii",
                                            "bcl:text": "the government of a jurisdiction referred to in paragraph (b) of the definition\n              of \"proceeds of crime\";"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e607",
                                    "bcl:num": "b",
                                    "bcl:text": "any money provided to the minister or the government that was paid as a fine\n            under",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e617",
                                            "bcl:num": "i",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Criminal Code"
                                                },
                                                "#text": "section 462.37 (3) of the ,"
                                            }
                                        },
                                        {
                                            "@id": "d2e629",
                                            "bcl:num": "ii",
                                            "bcl:text": "any similar provision in any other federal Act, or"
                                        },
                                        {
                                            "@id": "d2e638",
                                            "bcl:num": "iii",
                                            "bcl:text": "any similar provision of the laws of a jurisdiction outside of\n              Canada;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e647",
                                    "bcl:num": "c",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                            "@xlink:type": "locator",
                                            "in:doc": "Criminal Code"
                                        },
                                        "#text": "any money forfeited under section 83.14, 199, 462.37, 462.38, 462.43, 490,\n            490.01, 490.1, 490.2 or 491.1 of the  and provided to the minister or the\n            government;"
                                    }
                                },
                                {
                                    "@id": "d2e659",
                                    "bcl:num": "d",
                                    "bcl:text": "any money forfeited under a relevant provision and provided directly to the\n            minister or the government, or by or on behalf of",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e668",
                                            "bcl:num": "i",
                                            "bcl:text": "the government of Canada, or"
                                        },
                                        {
                                            "@id": "d2e678",
                                            "bcl:num": "ii",
                                            "bcl:text": "the government of a jurisdiction referred to in section 1 (2);"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e687",
                                    "bcl:num": "e",
                                    "bcl:text": "any money realized from the disposition of property by the director under\n              section\n              4;"
                                },
                                {
                                    "@id": "d2e696",
                                    "bcl:num": "f",
                                    "bcl:text": "any money and interest or other income referred to in section 5\n            (3);"
                                },
                                {
                                    "@id": "d2e705",
                                    "bcl:num": "g",
                                    "bcl:text": "any money repaid to the director under section 11."
                                }
                            ]
                        },
                        {
                            "@id": "d2e714",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96138_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Financial Administration\n              Act"
                                },
                                "#text": "Despite section 21 (3) of the  but subject to this Act and the regulations, the director may\n          make payments out of the fund for one or more of the following purposes:"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e726",
                                    "bcl:num": "a",
                                    "bcl:text": "compensation of eligible victims;"
                                },
                                {
                                    "@id": "d2e736",
                                    "bcl:num": "b",
                                    "bcl:text": "crime prevention and remediation;"
                                },
                                {
                                    "@id": "d2e745",
                                    "bcl:num": "c",
                                    "bcl:text": "administration of this Act, including, without limitation, any costs related to\n            taking possession and control of, preserving, managing, disposing of or otherwise\n            dealing with property for the purposes of this Act;"
                                },
                                {
                                    "@id": "d2e754",
                                    "bcl:num": "d",
                                    "bcl:text": "other prescribed purposes."
                                }
                            ]
                        },
                        {
                            "@id": "d2e763",
                            "bcl:num": "5",
                            "bcl:text": "The director may make payments out of the fund for purposes referred to in\n            subsection (4)\n            (d) only with the approval of the Minister of Finance."
                        },
                        {
                            "@id": "d2e772",
                            "bcl:num": "6",
                            "bcl:text": "The cumulative total of amounts paid out of the special account under subsection\n          (4) must not be larger than the cumulative total of the balance referred to in subsection (2)\n            (a) and the amounts paid into the special account under subsection\n          (3)."
                        }
                    ]
                },
                {
                    "@id": "d2e782",
                    "bcl:marginalnote": "Offences",
                    "bcl:num": "13",
                    "bcl:subsection": [
                        {
                            "@id": "d2e790",
                            "bcl:num": "1",
                            "bcl:text": "A person must not",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e799",
                                    "bcl:num": "a",
                                    "bcl:text": "interfere with, impede or obstruct the director or any person acting on behalf\n            of the director in carrying out or attempting to carry out the director's duties under\n            this Act, or"
                                },
                                {
                                    "@id": "d2e808",
                                    "bcl:num": "b",
                                    "bcl:text": "withhold, destroy or conceal, or refuse to furnish, any information or thing\n            required by the director or any person acting on behalf of the director for the purposes\n            of managing property referred to in section 3."
                                }
                            ]
                        },
                        {
                            "@id": "d2e818",
                            "bcl:num": "2",
                            "bcl:text": "A person must not knowingly make a false or misleading statement, either orally or\n          in writing, to the director or any person acting on behalf of the director while he or she\n          is engaged in carrying out his or her duties under this Act."
                        },
                        {
                            "@id": "d2e827",
                            "bcl:num": "3",
                            "bcl:text": "A person who contravenes subsection (1) or (2) commits an offence."
                        }
                    ]
                },
                {
                    "@id": "d2e837",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act",
                        "#text": "Section 5 of  does not apply"
                    },
                    "bcl:num": "14",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5 of the  does not apply to this Act or\n        the regulations."
                    }
                },
                {
                    "@id": "d2e855",
                    "bcl:marginalnote": "Regulations",
                    "bcl:num": "15",
                    "bcl:subsection": [
                        {
                            "@id": "d2e863",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41\n          of the ."
                            }
                        },
                        {
                            "@id": "d2e875",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may\n          make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e884",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "in:desc": "[director's responsibilities]",
                                        "#text": "prescribing a relevant provision for the purpose of section 3 (1)\n              (d)\u00a0;"
                                    }
                                },
                                {
                                    "@id": "d2e897",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "in:desc": "[forfeited money]",
                                        "#text": "prescribing a relevant provision for the purpose of section 12 (3)\n              (d)\u00a0;"
                                    }
                                },
                                {
                                    "@id": "d2e909",
                                    "bcl:num": "c",
                                    "bcl:text": "respecting compensation of eligible victims under this Act, including the\n            application for and the information in support of an application for compensation under\n            this Act;"
                                },
                                {
                                    "@id": "d2e918",
                                    "bcl:num": "d",
                                    "bcl:text": "respecting circumstances in which no payment of compensation may be made to an\n            eligible victim or a category of eligible victims;"
                                },
                                {
                                    "@id": "d2e927",
                                    "bcl:num": "e",
                                    "bcl:text": "respecting the process for adjudication of an application for compensation and\n            the factors, if any, to be considered in determining the amount of compensation to be\n            awarded to an eligible victim;"
                                },
                                {
                                    "@id": "d2e936",
                                    "bcl:num": "f",
                                    "bcl:text": "establishing circumstances in which an amount is required to be deducted or set\n            off from another amount that is to be paid under this Act to an eligible\n            victim;"
                                },
                                {
                                    "@id": "d2e945",
                                    "bcl:num": "g",
                                    "bcl:text": "respecting the fund and payments from the fund;"
                                },
                                {
                                    "@id": "d2e955",
                                    "bcl:num": "h",
                                    "bcl:text": "respecting any other matter for which regulations are contemplated by this\n            Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e964",
                            "bcl:num": "3",
                            "bcl:text": "In making regulations under this section, the Lieutenant Governor in Council may\n          do one or more of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e973",
                                    "bcl:num": "a",
                                    "bcl:text": "make different regulations for different circumstances or classes of persons,\n            property or criminal or quasi-criminal activity;"
                                },
                                {
                                    "@id": "d2e982",
                                    "bcl:num": "b",
                                    "bcl:text": "delegate a matter to a person;"
                                },
                                {
                                    "@id": "d2e991",
                                    "bcl:num": "c",
                                    "bcl:text": "confer a discretion on a person."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e1055",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "17",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in\n        Council."
                }
            ],
