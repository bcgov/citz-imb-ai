        "@id": "00_96327_01",
        "act:title": "Music Teachers (Registered) Act",
        "act:chapter": "327",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1325524918/96327/tlc96327_f",
            "act:tlc": "E2tlc96327"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "association",
                        "#text": "In this Act,  means the British Columbia Registered Music Teachers' Association."
                    }
                },
                {
                    "@id": "d2e30",
                    "bcl:marginalnote": "Association continued as a corporation",
                    "bcl:num": "2",
                    "bcl:text": "The British Columbia Registered Music Teachers' Association is continued as a corporation."
                },
                {
                    "@id": "d2e42",
                    "bcl:marginalnote": "Objects of the association",
                    "bcl:num": "3",
                    "bcl:text": "The objects of the association are",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e53",
                            "bcl:num": "a",
                            "bcl:text": "to raise the standard of the profession of music teaching in British Columbia, and"
                        },
                        {
                            "@id": "d2e62",
                            "bcl:num": "b",
                            "bcl:text": "to promote the interests of music teachers in British Columbia."
                        }
                    ]
                },
                {
                    "@id": "d2e72",
                    "bcl:marginalnote": "Members of the association",
                    "bcl:num": "4",
                    "bcl:text": "The members of the association are those persons who are members or become members in accordance with this Act."
                },
                {
                    "@id": "d2e84",
                    "bcl:marginalnote": "Power to acquire property",
                    "bcl:num": "5",
                    "bcl:text": "The association may acquire and hold property for its corporate purposes and may dispose of it or any part of it."
                },
                {
                    "@id": "d2e97",
                    "bcl:marginalnote": "Provincial council",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e105",
                            "bcl:num": "1",
                            "bcl:text": "The affairs of the association are to be managed by the Provincial council."
                        },
                        {
                            "@id": "d2e114",
                            "bcl:num": "2",
                            "bcl:text": "The members of the Provincial council must be elected and hold office in accordance with the bylaws of the association."
                        }
                    ]
                },
                {
                    "@id": "d2e124",
                    "bcl:marginalnote": "Branches",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e132",
                            "bcl:num": "1",
                            "bcl:text": "The association may establish branches in British Columbia."
                        },
                        {
                            "@id": "d2e141",
                            "bcl:num": "2",
                            "bcl:text": "Until otherwise determined by the Provincial council, the branches of The British Columbia Music Teachers' Association are branches of the association."
                        },
                        {
                            "@id": "d2e150",
                            "bcl:num": "3",
                            "bcl:text": "The constitution and bylaws of each branch, as in force on April\u00a03,\u00a01947, so far as consistent with this Act, continue to be the constitution and bylaws of the branch until altered under this Act."
                        },
                        {
                            "@id": "d2e160",
                            "bcl:num": "4",
                            "bcl:text": "A branch may make bylaws, consistent with this Act and the bylaws of the association, for conducting its own affairs."
                        }
                    ]
                },
                {
                    "@id": "d2e170",
                    "bcl:marginalnote": "Bylaws of the association",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e178",
                            "bcl:num": "1",
                            "bcl:text": "The Provincial council may make bylaws for all purposes relating to the affairs, business, property and objects of the association."
                        },
                        {
                            "@id": "d2e187",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the power of the Provincial council to make bylaws extends to the following matters:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e196",
                                    "bcl:num": "a",
                                    "bcl:text": "admission of persons as members of the association and the qualifications required for admission;"
                                },
                                {
                                    "@id": "d2e206",
                                    "bcl:num": "b",
                                    "bcl:text": "examination of applicants for membership;"
                                },
                                {
                                    "@id": "d2e215",
                                    "bcl:num": "c",
                                    "bcl:text": "registration of members and the issue of registration certificates;"
                                },
                                {
                                    "@id": "d2e224",
                                    "bcl:num": "d",
                                    "bcl:text": "appointment, functions, duties and removal of officers or servants of the association and their remuneration, if any;"
                                },
                                {
                                    "@id": "d2e233",
                                    "bcl:num": "e",
                                    "bcl:text": "times and places for the purpose of electing officers;"
                                },
                                {
                                    "@id": "d2e242",
                                    "bcl:num": "f",
                                    "bcl:text": "conduct of meetings, including the manner in which voting must be conducted;"
                                },
                                {
                                    "@id": "d2e251",
                                    "bcl:num": "g",
                                    "bcl:text": "establishment and dissolution of branches;"
                                },
                                {
                                    "@id": "d2e261",
                                    "bcl:num": "h",
                                    "bcl:text": "relationship of branches to the association, including the basis on which branches must contribute to the funds of the association and the basis on which members of branches are to be deemed to be members of the association;"
                                },
                                {
                                    "@id": "d2e270",
                                    "bcl:num": "i",
                                    "bcl:text": "number of members of which the Provincial council consists;"
                                },
                                {
                                    "@id": "d2e279",
                                    "bcl:num": "j",
                                    "bcl:text": "representation of branches on the Provincial council;"
                                },
                                {
                                    "@id": "d2e288",
                                    "bcl:num": "k",
                                    "bcl:text": "term of office of members of the Provincial council;"
                                },
                                {
                                    "@id": "d2e297",
                                    "bcl:num": "l",
                                    "bcl:text": "conduct of the election of members of the Provincial council;"
                                },
                                {
                                    "@id": "d2e306",
                                    "bcl:num": "m",
                                    "bcl:text": "determination of the registration fees and the annual fee to be paid by members and their collection;"
                                },
                                {
                                    "@id": "d2e316",
                                    "bcl:num": "n",
                                    "bcl:text": "suspension and expulsion of members and the removal of the names of expelled members from the register;"
                                },
                                {
                                    "@id": "d2e325",
                                    "bcl:num": "o",
                                    "bcl:text": "conduct generally of the affairs of the association."
                                }
                            ]
                        },
                        {
                            "@id": "d2e334",
                            "bcl:num": "3",
                            "bcl:text": "A bylaw, amendment to a bylaw or repeal of a bylaw under this section takes effect when it is ratified by at least 2/3 of the members of the association who vote in a process determined by the Provincial council."
                        }
                    ]
                },
                {
                    "@id": "d2e344",
                    "bcl:marginalnote": "Board of examiners",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e352",
                            "bcl:num": "1",
                            "bcl:text": "There must be a board of examiners for conducting examinations of applicants for membership."
                        },
                        {
                            "@id": "d2e361",
                            "bcl:num": "2",
                            "bcl:text": "The board of examiners consists of 3 persons, of whom 2 are to be appointed by the Provincial council and one by the Lieutenant Governor in Council."
                        },
                        {
                            "@id": "d2e370",
                            "bcl:num": "3",
                            "bcl:text": "The remuneration, if any, of the board of examiners must be paid by the association."
                        }
                    ]
                },
                {
                    "@id": "d2e380",
                    "bcl:marginalnote": "Benevolent fund",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e388",
                            "bcl:num": "1",
                            "bcl:text": "The association may establish and administer a benevolent fund for a member or the family of a deceased member of the association who may require financial assistance and for that purpose may provide for contributions to be made by members."
                        },
                        {
                            "@id": "d2e397",
                            "bcl:num": "2",
                            "bcl:text": "Each branch of the association may likewise establish and administer a benevolent fund for that branch."
                        }
                    ]
                },
                {
                    "@id": "d2e407",
                    "bcl:marginalnote": "Designation",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e415",
                            "bcl:num": "1",
                            "bcl:text": "A person registered as a member of the association is entitled, so long as the person's name remains on the register, to use the designation \"Registered Music Teacher\" or the abbreviation \"R.M.T.\"."
                        },
                        {
                            "@id": "d2e424",
                            "bcl:num": "2",
                            "bcl:text": "A person who is not registered as a member of the association commits an offence if the person",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e433",
                                    "bcl:num": "a",
                                    "bcl:text": "assumes the designation \"Registered Music Teacher\" or uses the abbreviation \"R.M.T.\" or represents that the person is a registered music teacher, or"
                                },
                                {
                                    "@id": "d2e443",
                                    "bcl:num": "b",
                                    "bcl:text": "by false or fraudulent declaration or statement attempts to procure registration under this Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e452",
                            "bcl:num": "3",
                            "bcl:text": "A person who commits an offence under subsection (2) is liable on conviction to a fine of not less than $5 and not more than $25."
                        }
                    ]
                }
            ]
        }
    }
}