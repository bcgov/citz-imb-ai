        "@id": "00_96146_01",
        "act:title": "Fireworks Act",
        "act:chapter": "146",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1198514681/96146/217426474",
            "act:tlc": "E3tlc96146"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definition",
                    "bcl:num": "1",
                    "bcl:text": {
                        "in:term": "fireworks",
                        "#text": "In this Act,  includes cannon crackers, fireballs, firecrackers, mines, Roman candles, skyrockets, squibs, torpedoes and any other explosive designated as a firework by regulation."
                    }
                },
                {
                    "@id": "d2e30",
                    "bcl:marginalnote": "Application of Act",
                    "bcl:num": "2",
                    "bcl:text": "This Act applies to",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e41",
                            "bcl:num": "a",
                            "bcl:text": "a municipality that, by bylaw, declares that this Act applies, and"
                        },
                        {
                            "@id": "d2e50",
                            "bcl:num": "b",
                            "bcl:text": "a rural area designated by regulation."
                        }
                    ]
                },
                {
                    "@id": "d2e60",
                    "bcl:marginalnote": "Selling, giving or setting off fireworks",
                    "bcl:num": "3",
                    "bcl:text": "Except between October 24 and November 1 in any year, a person must not sell, give, fire or set off fireworks."
                },
                {
                    "@id": "d2e72",
                    "bcl:marginalnote": "Sale to minor",
                    "bcl:num": "4",
                    "bcl:text": "The fire commissioner may designate fireworks that may not be sold to a minor without the written permission of the parent or guardian of the minor."
                },
                {
                    "@id": "d2e84",
                    "bcl:marginalnote": "Permission for public display",
                    "bcl:num": "5",
                    "bcl:text": "Fireworks may be sold to and discharged by a person or organization at a public display if the public display is held with the written permission of",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e95",
                            "bcl:num": "a",
                            "bcl:text": "the fire commissioner, or"
                        },
                        {
                            "@id": "d2e104",
                            "bcl:num": "b",
                            "bcl:text": "a local assistant of the fire commissioner who has jurisdiction in the fire district where the public display is held."
                        }
                    ]
                },
                {
                    "@id": "d2e115",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "6",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                    }
                }
            ]
        }
    }
