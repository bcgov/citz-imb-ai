            "bcl:part": [
                {
                    "@id": "d2e18",
                    "bcl:num": "1",
                    "bcl:text": "Interpretation and Application",
                    "bcl:section": [
                        {
                            "@id": "d2e27",
                            "bcl:marginalnote": "Definitions",
                            "bcl:num": "1",
                            "bcl:text": "In this Act:",
                            "bcl:definition": [
                                {
                                    "@id": "d1e337",
                                    "bcl:text": {
                                        "in:term": "action",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/12025_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Civil Resolution Tribunal Act"
                                        },
                                        "#text": "includes proceedings brought in the civil resolution tribunal under the ;"
                                    }
                                },
                                {
                                    "@id": "d2e38",
                                    "bcl:text": {
                                        "in:term": "child",
                                        "#text": "means a person who is under 18 years of age;"
                                    }
                                },
                                {
                                    "@id": "d1e349",
                                    "bcl:text": {
                                        "in:term": "court",
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/12025_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Civil Resolution Tribunal Act"
                                        },
                                        "#text": "includes the civil resolution tribunal under the ;"
                                    }
                                },
                                {
                                    "@id": "d2e47",
                                    "bcl:text": {
                                        "in:term": "director",
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96005_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Adoption Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96046_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Child, Family and Community Service Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/00028",
                                                "@xlink:type": "locator",
                                                "in:doc": "Secure Care Act"
                                            }
                                        ],
                                        "#text": "means a director under the , the  or the ;"
                                    }
                                },
                                {
                                    "@id": "d2e66",
                                    "bcl:text": {
                                        "in:term": "federal youth legislation",
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/Y-1.5/index.html",
                                                "@xlink:type": "locator",
                                                "in:doc": "Youth Criminal Justice Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/Y-1/index.html",
                                                "@xlink:type": "locator",
                                                "in:doc": "Young Offenders Act"
                                            }
                                        ],
                                        "#text": "means the  (Canada), or the  (Canada) that was in force before April 1, 2003;"
                                    }
                                },
                                {
                                    "@id": "d2e81",
                                    "bcl:text": [
                                        {
                                            "in:term": "parent",
                                            "#text": "means, with respect to a child,"
                                        },
                                        "but does not include"
                                    ],
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e90",
                                            "bcl:num": "a",
                                            "bcl:text": {
                                                "bcl:link": {
                                                    "@resource": "leg",
                                                    "@xlink:href": "/legislation/11025_01",
                                                    "@xlink:type": "locator",
                                                    "in:doc": "Family Law Act"
                                                },
                                                "#text": "an individual who is a parent of the child under Part 3 of the ,"
                                            }
                                        },
                                        {
                                            "@id": "d2e102",
                                            "bcl:num": "b",
                                            "bcl:text": "an individual who",
                                            "bcl:subparagraph": [
                                                {
                                                    "@id": "d2e111",
                                                    "bcl:num": "i",
                                                    "bcl:text": "is married to, or lives in a marriage-like relationship with, a parent referred to in paragraph (a), and"
                                                },
                                                {
                                                    "@id": "d2e120",
                                                    "bcl:num": "ii",
                                                    "bcl:text": "contributes to the support, maintenance and care of the child,"
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d2e130",
                                            "bcl:num": "c",
                                            "bcl:text": "an individual who has guardianship or custody of the child, and"
                                        },
                                        {
                                            "@id": "d2e139",
                                            "bcl:num": "d",
                                            "bcl:text": "an individual who has contact with the child,"
                                        },
                                        {
                                            "@id": "d2e151",
                                            "bcl:num": "e",
                                            "bcl:text": "a director,"
                                        },
                                        {
                                            "@id": "d2e160",
                                            "bcl:num": "f",
                                            "bcl:text": "subject to the regulations, an individual who is included in paragraph\u00a0(c) or\u00a0(d) solely because he or she is responsible for the care, treatment, custody or supervision of the child under an arrangement with the government of British Columbia, the government of Canada or any other government, or under any of the following:",
                                            "bcl:subparagraph": [
                                                {
                                                    "@id": "d2e169",
                                                    "bcl:num": "i",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "/legislation/96005_01",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Adoption Act"
                                                        },
                                                        "#text": "the ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d2e182",
                                                    "bcl:num": "ii",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "/legislation/96046_01",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Child, Family and Community Service Act"
                                                        },
                                                        "#text": "the ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d2e194",
                                                    "bcl:num": "iii",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "/legislation/04046_01",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Correction Act"
                                                        },
                                                        "#text": "the ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d2e206",
                                                    "bcl:num": "iv",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/C-46/",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Criminal Code"
                                                        },
                                                        "#text": "the ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d2e218",
                                                    "bcl:num": "v",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "/legislation/96288_01",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Mental Health Act"
                                                        },
                                                        "#text": "the ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d2e230",
                                                    "bcl:num": "vi",
                                                    "bcl:text": {
                                                        "bcl:link": {
                                                            "@resource": "leg",
                                                            "@xlink:href": "/legislation/00028",
                                                            "@xlink:type": "locator",
                                                            "in:doc": "Secure Care Act"
                                                        },
                                                        "#text": "the ;"
                                                    }
                                                },
                                                {
                                                    "@id": "d2e242",
                                                    "bcl:num": "vii",
                                                    "bcl:text": "the federal youth legislation;"
                                                },
                                                {
                                                    "@id": "d2e252",
                                                    "bcl:num": "viii",
                                                    "bcl:text": "the provincial youth legislation;"
                                                },
                                                {
                                                    "@id": "d2e261",
                                                    "bcl:num": "ix",
                                                    "bcl:text": "an enactment of British Columbia or of Canada that is prescribed by the Lieutenant Governor in Council, or"
                                                }
                                            ]
                                        },
                                        {
                                            "@id": "d2e270",
                                            "bcl:num": "g",
                                            "bcl:text": "an individual described in paragraph (a) who does not have guardianship or custody of, or contact with, the child;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e279",
                                    "bcl:text": [
                                        {
                                            "in:term": "property loss",
                                            "#text": "means a loss"
                                        },
                                        "and includes economic loss suffered as a consequence of loss of or damage to property;"
                                    ],
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e288",
                                            "bcl:num": "a",
                                            "bcl:text": "experienced as a result of loss of or damage to property, and"
                                        },
                                        {
                                            "@id": "d2e297",
                                            "bcl:num": "b",
                                            "bcl:text": "caused by an act of a child that is described in section 3,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e310",
                                    "bcl:text": {
                                        "in:term": "provincial youth legislation",
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/03085_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Youth Justice Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96494REP_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Young Offenders (British Columbia) Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/03085_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Youth Justice Act"
                                            }
                                        ],
                                        "#text": "means the , or the  that was in force before the date on which the  came into force."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e329",
                            "bcl:marginalnote": "Application",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96412_00",
                                    "@xlink:type": "locator",
                                    "in:doc": "School Act"
                                },
                                "#text": "This Act does not apply in the circumstances referred to in section 10 of the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e344",
                    "bcl:num": "2",
                    "bcl:text": "Parent's Liability and Bringing an Action",
                    "bcl:section": [
                        {
                            "@id": "d2e353",
                            "bcl:marginalnote": "Parent's liability",
                            "bcl:num": "3",
                            "bcl:text": "Subject to section 6 and Part 3, if a child intentionally takes, damages or destroys property of another person, a parent of the child is liable for the loss of or damage to the property experienced as a result by an owner and by a person legally entitled to possession of the property."
                        },
                        {
                            "@id": "d2e366",
                            "bcl:marginalnote": {
                                "in:doc": "Small Claims Act"
                            },
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96430_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Small Claims Act"
                                },
                                "#text": "An action under this Act must be commenced under the ."
                            }
                        },
                        {
                            "@id": "d2e384",
                            "bcl:marginalnote": "Joint and separate liability",
                            "bcl:num": "5",
                            "bcl:text": "If more than one parent of a child is liable in an action brought under this Act, the parents of the child are jointly and separately liable."
                        },
                        {
                            "@id": "d2e396",
                            "bcl:marginalnote": "Maximum award",
                            "bcl:num": "6",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e404",
                                    "bcl:num": "1",
                                    "bcl:text": "Subject to subsection (2), if either an owner of property or a person legally entitled to possession of property suffers property loss, the owner, the person legally entitled to possession of the property or both may commence a civil action under this Act against a parent of a child who caused the property loss to recover damages, in an amount not exceeding $10 000, excluding interest and costs, in respect of the property loss."
                                },
                                {
                                    "@id": "d2e413",
                                    "bcl:num": "2",
                                    "bcl:text": "If one or more persons has suffered property loss as a result of the action of one or more children, the total amount of damages awarded against all the parents of all the children who caused the property loss must not exceed $10 000, irrespective of the number of parents of the children who are liable under this Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e423",
                            "bcl:marginalnote": "Insurers subrogated",
                            "bcl:num": "7",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e431",
                                    "bcl:num": "1",
                                    "bcl:text": "An insurer who has paid compensation to an owner of property or a person legally entitled to possession of the property in connection with property loss is subrogated to the rights of the person under this Act up to the amount paid in compensation."
                                },
                                {
                                    "@id": "d2e440",
                                    "bcl:num": "2",
                                    "bcl:text": "After an insurer pays compensation to a person in connection with property loss, the insurer may bring an action in the name of the insured or in its own name to enforce the rights referred to in subsection (1)."
                                },
                                {
                                    "@id": "d2e449",
                                    "bcl:num": "3",
                                    "bcl:text": "If compensation permitted under this Act is recovered against a parent and the payment is to be shared by the insurer and the insured, the net amount, after deduction of the costs of recovery, as determined by the court, must be divided as follows:",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e459",
                                            "bcl:num": "a",
                                            "bcl:text": "to the insurer, the amount of compensation paid to the insured;"
                                        },
                                        {
                                            "@id": "d2e468",
                                            "bcl:num": "b",
                                            "bcl:text": "to the insured, the amount that exceeds the amount of compensation paid by the insurer."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e478",
                            "bcl:marginalnote": "Right of action in addition to other rights",
                            "bcl:num": "8",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e486",
                                    "bcl:num": "1",
                                    "bcl:text": "Subject to section 2, the right of action and remedies under this Act are in addition to any other right of action or remedy that may be available."
                                },
                                {
                                    "@id": "d2e495",
                                    "bcl:num": "2",
                                    "bcl:text": "Subsection (1) does not require that damages awarded under this Act for the activity of a child be disregarded in assessing damages in any other proceeding arising out of that activity of the child."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e505",
                    "bcl:num": "3",
                    "bcl:text": "Defence to an Action under Part 2",
                    "bcl:section": [
                        {
                            "@id": "d2e515",
                            "bcl:marginalnote": "Parent's defence",
                            "bcl:num": "9",
                            "bcl:text": "A parent has a defence to an action under this Act if the parent satisfies the court that he or she",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e526",
                                    "bcl:num": "a",
                                    "bcl:text": "was exercising reasonable supervision over the child at the time the child engaged in the activity that caused the property loss, and"
                                },
                                {
                                    "@id": "d2e535",
                                    "bcl:num": "b",
                                    "bcl:text": "made reasonable efforts to prevent or discourage the child from engaging in the kind of activity that caused the property loss."
                                }
                            ]
                        },
                        {
                            "@id": "d2e545",
                            "bcl:marginalnote": "Factors that court may consider",
                            "bcl:num": "10",
                            "bcl:text": "In determining under section 9 whether a parent exercised reasonable supervision over a child or made reasonable efforts to prevent or discourage the child from engaging in the kind of activity that caused the property loss, the court may consider any of the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e556",
                                    "bcl:num": "a",
                                    "bcl:text": "the age and maturity of the child;"
                                },
                                {
                                    "@id": "d2e565",
                                    "bcl:num": "b",
                                    "bcl:text": "the prior conduct of the child;"
                                },
                                {
                                    "@id": "d2e575",
                                    "bcl:num": "c",
                                    "bcl:text": "the likelihood that the activity would result in property loss;"
                                },
                                {
                                    "@id": "d2e584",
                                    "bcl:num": "d",
                                    "bcl:text": "psychological or medical disorders, psychological, physical or learning disabilities or emotional disturbances of the child;"
                                },
                                {
                                    "@id": "d2e593",
                                    "bcl:num": "e",
                                    "bcl:text": "whether the likelihood of property loss arising from the child's conduct was reasonably foreseeable by the parent;"
                                },
                                {
                                    "@id": "d2e602",
                                    "bcl:num": "f",
                                    "bcl:text": "whether the child was under the supervision of the parent when the child engaged in the activity that resulted in the property loss;"
                                },
                                {
                                    "@id": "d2e611",
                                    "bcl:num": "g",
                                    "bcl:text": "if the child was not under the supervision of the parent when the child engaged in the activity that resulted in the property loss, whether the parent made reasonable arrangements for the supervision of the child;"
                                },
                                {
                                    "@id": "d2e620",
                                    "bcl:num": "h",
                                    "bcl:text": "whether the parent has sought to improve his or her parenting skills by attending parenting courses or in any other manner;"
                                },
                                {
                                    "@id": "d2e630",
                                    "bcl:num": "i",
                                    "bcl:text": "whether the parent has sought professional assistance for the child, designed to discourage activity of the kind that resulted in the property loss;"
                                },
                                {
                                    "@id": "d2e639",
                                    "bcl:num": "j",
                                    "bcl:text": "psychological or medical disorders, psychological, physical or learning disabilities or emotional disturbances of the parent;"
                                },
                                {
                                    "@id": "d2e648",
                                    "bcl:num": "k",
                                    "bcl:text": "any other matter that the court considers relevant to the determination."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e658",
                    "bcl:num": "4",
                    "bcl:text": "Evidentiary Matters related to Young Offenders",
                    "bcl:section": [
                        {
                            "@id": "d2e667",
                            "bcl:marginalnote": "Proof",
                            "bcl:num": "11",
                            "bcl:subsection": [
                                {
                                    "@id": "d2e675",
                                    "bcl:num": "1",
                                    "bcl:text": {
                                        "in:term": "offence",
                                        "#text": "In this section,  has the same meaning as in the federal youth legislation."
                                    }
                                },
                                {
                                    "@id": "d2e687",
                                    "bcl:num": "2",
                                    "bcl:text": "In an action under this Act, proof that a child has been found guilty of an offence under the federal youth legislation is proof, in the absence of evidence to the contrary, that the offence was committed by the child if",
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e696",
                                            "bcl:num": "a",
                                            "bcl:text": "no appeal of the finding of guilt was taken and the time for an appeal has expired, or"
                                        },
                                        {
                                            "@id": "d2e706",
                                            "bcl:num": "b",
                                            "bcl:text": "an appeal of the finding of guilt was taken but was dismissed or abandoned and no further appeal is available."
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e715",
                                    "bcl:num": "3",
                                    "bcl:text": "For the purposes of subsection (2), a copy of an order of disposition or sentence under the federal youth legislation purporting to be signed by the officer having custody of the records of the court that made the order is, on proof of the identity of the child named in the order as guilty of the offence, sufficient evidence that the child was found guilty of the offence, without proof of the signature or official character of the person appearing to have signed the order."
                                }
                            ]
                        },
                        {
                            "@id": "d2e725",
                            "bcl:marginalnote": "Disclosure of evidence obtained under federal youth legislation",
                            "bcl:num": "12",
                            "bcl:text": "If evidence obtained under the federal youth legislation is presented in an action under this Act, the court file must not be disclosed to any person except to the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e736",
                                    "bcl:num": "a",
                                    "bcl:text": "the court, authorized court employees and authorized persons who provide services to the court;"
                                },
                                {
                                    "@id": "d2e745",
                                    "bcl:num": "b",
                                    "bcl:text": "the claimant and the claimant's lawyer or agent;"
                                },
                                {
                                    "@id": "d2e755",
                                    "bcl:num": "c",
                                    "bcl:text": "the child, his or her parents and their lawyers or agents;"
                                },
                                {
                                    "@id": "d2e764",
                                    "bcl:num": "d",
                                    "bcl:text": "a peace officer who requires the information for the purpose of conducting an investigation;"
                                },
                                {
                                    "@id": "d2e773",
                                    "bcl:num": "e",
                                    "bcl:text": "a Crown counsel who requires the information for the purpose of prosecuting an offence."
                                }
                            ]
                        },
                        {
                            "@id": "d2e783",
                            "bcl:marginalnote": "No effect on provisions limiting disclosure or publication",
                            "bcl:num": "13",
                            "bcl:text": "If information from records under the federal youth legislation or the provincial youth legislation is made available for the purposes of an action under this Act or presented as evidence in an action under this Act, nothing in this Act affects the provisions of the federal youth legislation or the provincial youth legislation that limit disclosure or publication of the information."
                        }
                    ]
                },
                {
                    "@id": "d2e796",
                    "bcl:num": "5",
                    "bcl:text": "Miscellaneous",
                    "bcl:section": [
                        {
                            "@id": "d2e805",
                            "bcl:marginalnote": "Amount of damage award",
                            "bcl:num": "14",
                            "bcl:text": "In determining the amount of damages to be awarded under this Act, the court may consider any restitution made by, or compensation paid by, the child, a parent of the child or a person on behalf of the parent or the child."
                        },
                        {
                            "@id": "d2e817",
                            "bcl:marginalnote": "Power to make regulations",
                            "bcl:num": "15",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section 41 of the , including regulations that establish the circumstances in which a person responsible for the care, treatment, custody or supervision of a child is a parent within the meaning of section 1."
                            }
                        }
                    ]
                }
            ],
            "bcl:section": {
                "@id": "d2e832",
                "bcl:marginalnote": "Commencement",
                "bcl:num": "16",
                "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in Council."
            }
        }
    }
}