        "act:title": "First Nations Education Act",
        "act:chapter": "40",
        "act:yearenacted": "2007",
        "act:assentedto": "November 29, 2007",
        "act:currency": {
            "act:tlcDirPath": "1198514681/07040/tlc07040_f",
            "act:tlc": "E3tlc07040"
        },
        "act:content": {
            "bcl:preamble": {
                "bcl:marginalnote": "Preamble",
                "bcl:text": [
                    "WHEREAS the Province entered into the Education Jurisdiction Framework Agreement with the government of Canada and the First Nations Education Steering Committee on July 5, 2006;",
                    "AND WHEREAS the Province also entered into the British Columbia First Nation Education Agreement with the First Nations Education Steering Committee on July 5, 2006;",
                    {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                            "@xlink:type": "locator",
                            "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                        },
                        "#text": "AND WHEREAS the government of Canada has enacted the , S.C. 2006, c. 10;"
                    },
                    {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                            "@xlink:type": "locator",
                            "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                        },
                        "#text": "AND WHEREAS section 9 (1) of the  (Canada) authorizes, to the extent provided by an individual agreement between the government of Canada and a participating First Nation, the participating First Nation to enact laws respecting education on First Nation land;"
                    },
                    "THEREFORE HER MAJESTY, by and with the advice and consent of the Legislative Assembly of the Province of British Columbia, enacts as follows:"
                ]
            },
            "bcl:section": [
                {
                    "@id": "d2e46",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e57",
                            "bcl:text": {
                                "in:term": "British Columbia First Nation Education Agreement",
                                "#text": "means the agreement entered into between the Province and the First Nations Education Steering Committee, dated July 5, 2006;"
                            }
                        },
                        {
                            "@id": "d2e66",
                            "bcl:text": {
                                "in:term": "education",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                                },
                                "#text": "has the same meaning as in the  (Canada);"
                            }
                        },
                        {
                            "@id": "d2e79",
                            "bcl:text": {
                                "in:term": "Education Jurisdiction Framework Agreement",
                                "#text": "means the agreement entered into by the Province, the government of Canada and the First Nations Education Steering Committee, dated July 5, 2006;"
                            }
                        },
                        {
                            "@id": "d2e88",
                            "bcl:text": {
                                "in:term": "First Nation land",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                                },
                                "#text": "has the same meaning as in the  (Canada);"
                            }
                        },
                        {
                            "@id": "d2e100",
                            "bcl:text": {
                                "in:term": "First Nation law",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                                },
                                "#text": "has the same meaning as in the  (Canada);"
                            }
                        },
                        {
                            "@id": "d2e112",
                            "bcl:text": {
                                "in:term": "First Nations Education Authority",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                                },
                                "#text": "has the same meaning as in the  (Canada);"
                            }
                        },
                        {
                            "@id": "d2e124",
                            "bcl:text": {
                                "in:term": "individual agreement",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                                },
                                "#text": "has the same meaning as in the  (Canada);"
                            }
                        },
                        {
                            "@id": "d2e136",
                            "bcl:text": {
                                "in:term": "participating First Nation",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                                    "@xlink:type": "locator",
                                    "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                                },
                                "#text": "has the same meaning as in the  (Canada)."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e149",
                    "bcl:marginalnote": "Jurisdiction over education on First Nation land",
                    "bcl:num": "2",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "http://laws-lois.justice.gc.ca/eng/acts/F-11.75/index.html",
                            "@xlink:type": "locator",
                            "in:doc": "First Nations Jurisdiction over Education in British Columbia Act"
                        },
                        "#text": "In accordance with the British Columbia First Nation Education Agreement, the Province recognizes that a participating First Nation may enact First Nation laws with respect to education provided by the participating First Nation on First Nation land, to the extent authorized by an individual agreement between the government of Canada and that participating First Nation brought into effect by the  (Canada)."
                    }
                },
                {
                    "@id": "d2e156",
                    "bcl:marginalnote": "Assistance with teacher certification and regulation",
                    "bcl:num": "2.1",
                    "bcl:text": "If requested by the First Nations Education Authority, the Province will assist the First Nations Education Authority with the First Nations Education Authority's certification and regulation of teachers."
                },
                {
                    "@id": "d2e164",
                    "bcl:marginalnote": "Consultation",
                    "bcl:num": "3",
                    "bcl:text": "The Province will consult with the First Nations Education Authority in any general consultations respecting a proposed change to education policy, legislation or standards that may materially affect any of the following:",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e175",
                            "bcl:num": "a",
                            "bcl:text": "an education program offered by a participating First Nation;"
                        },
                        {
                            "@id": "d2e184",
                            "bcl:num": "b",
                            "bcl:text": "assessments, teacher certification, graduation requirements or curriculum;"
                        },
                        {
                            "@id": "d2e194",
                            "bcl:num": "c",
                            "bcl:text": "any matter related to assessments, teacher certification, graduation requirements or curriculum."
                        }
                    ]
                },
                {
                    "@id": "d2e204",
                    "bcl:marginalnote": "This Act prevails",
                    "bcl:num": "4",
                    "bcl:text": "If a provision of this Act is inconsistent or in conflict with a provision of another Act, the provision of this Act prevails."
                },
                {
                    "@id": "d2e325",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "19",
                    "bcl:text": "This Act comes into force by regulation of the Lieutenant Governor in Council."
                }
            ],
            "bcl:conseqhead": {
                "bcl:text": "Consequential Amendments",
                "bcl:num": "5-18",
                "bcl:conseqnote": {
                    "bcl:editorialnote": {
