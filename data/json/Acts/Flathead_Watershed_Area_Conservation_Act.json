        "@id": "00_11020_01",
        "act:title": "Flathead Watershed Area Conservation Act",
        "act:chapter": "20",
        "act:yearenacted": "2011",
        "act:assentedto": "November 14, 2011",
        "act:currency": {
            "act:tlcDirPath": "1198514681/11020/632747324",
            "act:tlc": "E3tlc11020"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e18",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e29",
                            "bcl:text": {
                                "in:term": [
                                    "coal land",
                                    "coal land reserve"
                                ],
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04015_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Coal Act"
                                },
                                "#text": "and  have the same meanings as in the ;"
                            }
                        },
                        {
                            "@id": "d2e44",
                            "bcl:text": {
                                "in:term": "Crown Land",
                                "#text": "means land, whether or not it is covered by water, that is owned by the government;"
                            }
                        },
                        {
                            "@id": "d2e54",
                            "bcl:text": {
                                "in:term": "Flathead watershed area",
                                "#text": "means all those parcels or tracts of land that on November\u00a09,\u00a02009, were situated in the Kootenay District and contained within the boundaries as shown on the official plan for the Flathead Watershed Area, deposited in the Media Vault, GeoBC, Victoria as Official Plan: Flathead Watershed Area, dated November\u00a09,\u00a02009;"
                            }
                        },
                        {
                            "@id": "d2e63",
                            "bcl:text": {
                                "in:term": "free miner",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00_96292_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Mineral Tenure Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d2e75",
                            "bcl:text": {
                                "in:term": "mine",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96293_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Mines Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d2e87",
                            "bcl:text": {
                                "in:term": "mineral",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00_96292_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Mineral Tenure Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d2e99",
                            "bcl:text": {
                                "in:term": "mineral title",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00_96292_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Mineral Tenure Act"
                                },
                                "#text": "has the same meaning as in the ;"
                            }
                        },
                        {
                            "@id": "d2e111",
                            "bcl:text": [
                                {
                                    "in:term": "mining activity",
                                    "#text": "means any activity related to"
                                },
                                "but does not include a quarry or a sand or gravel operation where the area of activity is 2 hectares or less and from which 20\u00a0000 tonnes or less of material is removed annually;"
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e121",
                                    "bcl:num": "a",
                                    "bcl:text": "the exploration and development of a mineral, a placer mineral, coal, sand, gravel or rock, or"
                                },
                                {
                                    "@id": "d2e130",
                                    "bcl:num": "b",
                                    "bcl:text": "the production of a mineral, a placer mineral, coal, sand, gravel or rock,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e142",
                            "bcl:text": {
                                "in:term": "placer mineral",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00_96292_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Mineral Tenure Act"
                                },
                                "#text": "has the same meaning as in the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e155",
                    "bcl:marginalnote": "Mining activity in the Flathead watershed area",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e163",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96245_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Land Act"
                                },
                                "#text": "The minister responsible for the administration of a section of the  referred to in paragraphs (a) to (c) of this subsection must not, for or in relation to a mining activity in the Flathead watershed area,"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e175",
                                    "bcl:num": "a",
                                    "bcl:text": "dispose of Crown land in the Flathead watershed area under section 11 of that Act,"
                                },
                                {
                                    "@id": "d2e184",
                                    "bcl:num": "b",
                                    "bcl:text": "grant an option to purchase Crown land in the Flathead watershed area under section 38 of that Act, or"
                                },
                                {
                                    "@id": "d2e194",
                                    "bcl:num": "c",
                                    "bcl:text": "issue a licence to occupy and use Crown land in the Flathead watershed area under section 39 of that Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e203",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96307_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Ministry of Lands, Parks and Housing Act"
                                },
                                "#text": "The minister responsible for the administration of the  must not, for or in relation to a mining activity in the Flathead watershed area,"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e215",
                                    "bcl:num": "a",
                                    "bcl:text": "dispose of Crown land in the Flathead watershed area under section 9 (1) (a) of that Act, or"
                                },
                                {
                                    "@id": "d2e224",
                                    "bcl:num": "b",
                                    "bcl:text": "provide in an agreement for the disposition of Crown land in the Flathead watershed area under section 9 (1) (c) of that Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e233",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96293_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Mines Act"
                                },
                                "#text": "The chief permitting officer and the minister under the  must not, for or in relation to a mining activity in the Flathead watershed area,"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e245",
                                    "bcl:num": "a",
                                    "bcl:text": "issue or amend a permit under section 10 of that Act, or"
                                },
                                {
                                    "@id": "d2e255",
                                    "bcl:num": "b",
                                    "bcl:text": "exempt any person under section 10 (2) of that Act from the requirement to obtain a permit under section 10 of that Act."
                                }
                            ]
                        },
                        {
                            "@id": "d2e264",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96293_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Mines Act"
                                },
                                "#text": "The Lieutenant Governor in Council must not, for or in relation to a mining activity in the Flathead watershed area, exempt under section 10 (1.1) of the  any person, class of persons or ministry of the government from the requirement to hold a permit under section 10 of that Act."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e277",
                    "bcl:marginalnote": "Energy resource activity",
                    "bcl:num": "3",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/08036_01",
                            "@xlink:type": "locator",
                            "in:doc": "Energy Resource Activities Act"
                        },
                        "#text": "The British Columbia Energy Regulator must not issue a permit under section 25 of the  in relation to the exploration for and development and production of petroleum, natural gas or both in the Flathead watershed area."
                    }
                },
                {
                    "@id": "d2e292",
                    "bcl:marginalnote": {
                        "in:doc": "Petroleum and Natural Gas Act",
                        "#text": "Crown reserves under the"
                    },
                    "bcl:num": "4",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96361_01",
                            "@xlink:type": "locator",
                            "in:doc": "Petroleum and Natural Gas Act"
                        },
                        "#text": "No dispositions of Crown reserves in the Flathead watershed area may be made under section\u00a071 or\u00a072 of the ."
                    }
                },
                {
                    "@id": "d2e309",
                    "bcl:marginalnote": "Coal and mineral reserves",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e317",
                            "bcl:num": "1",
                            "bcl:text": "Coal land in the Flathead watershed area is designated as a coal land reserve."
                        },
                        {
                            "@id": "d2e326",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00_04015_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Coal Act"
                                },
                                "#text": "The chief gold commissioner must not exercise the power under section 21 (3) of the  to cancel all or part of the coal land reserve established under this Act."
                            }
                        },
                        {
                            "@id": "d2e335",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/00_96292_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Mineral Tenure Act"
                                },
                                "#text": "A mineral reserve within the meaning of the  is established on the land in the Flathead watershed area."
                            }
                        },
                        {
                            "@id": "d2e348",
                            "bcl:num": "4",
                            "bcl:text": "A free miner must not register a mineral title in the mineral reserve established under subsection (3)."
                        }
                    ]
                },
                {
                    "@id": "d2e359",
                    "bcl:marginalnote": {
                        "in:doc": "Offence Act",
                        "#text": "Section 5 of the"
                    },
                    "bcl:num": "6",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96338_01",
                            "@xlink:type": "locator",
                            "in:doc": "Offence Act"
                        },
                        "#text": "Section 5 of the  does not apply to this Act."
                    }
                },
                {
                    "@id": "d2e376",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e384",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e396",
                            "bcl:num": "2",
                            "bcl:text": "Without limiting subsection (1), the Lieutenant Governor in Council may make regulations as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e405",
                                    "bcl:num": "a",
                                    "bcl:text": "defining a word or expression used but not defined in this Act;"
                                },
                                {
                                    "@id": "d2e415",
                                    "bcl:num": "b",
                                    "bcl:text": "providing for anything that the Lieutenant Governor in Council considers appropriate for the purpose of more effectively bringing this Act into operation."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e425",
                    "bcl:marginalnote": "Flathead Watershed Area Order",
                    "bcl:num": "8",
                    "bcl:text": "The Flathead Watershed Area Order, Order in Council 89/2010, ceases to have effect on the date that this Act comes into force."
                },
                {
                    "@id": "d2e437",
                    "bcl:marginalnote": "Conflict with another enactment",
                    "bcl:num": "9",
                    "bcl:text": "If a provision of this Act is inconsistent or in conflict with a provision of another enactment, the provision of this Act prevails."
                },
                {
                    "@id": "d1e475",
                    "bcl:marginalnote": "Commencement",
                    "bcl:num": "10",
                    "bcl:text": "This Act comes into force on the date of Royal Assent."
                }
            ]
        }
    }
}