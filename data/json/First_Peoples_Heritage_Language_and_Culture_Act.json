        "@xmlns:oasis": "http://docs.oasis-open.org/ns/oasis-exchange/table",
        "@xmlns:reg": "http://www.gov.bc.ca/2013/legislation/regulation",
        "@xsl-fo": "https://styles.qp.gov.bc.ca/bclaws-xsl-fo/act.xsl",
        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96147_01",
        "act:title": "First Peoples' Heritage, Language and Culture Act",
        "act:chapter": "147",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "1198514681/96147/tlc96147_f",
            "act:tlc": "E3tlc96147"
        },
        "act:content": {
            "bcl:preamble": {
                "bcl:marginalnote": "Preamble",
                "bcl:text": [
                    "WHEREAS the Province of British Columbia wishes to",
                    "THEREFORE HER MAJESTY, by and with the advice and consent of the Legislative\n        Assembly of the Province of British Columbia, enacts as follows:"
                ],
                "bcl:paragraph": [
                    {
                        "@id": "d1e31",
                        "bcl:num": "a",
                        "bcl:text": "protect, revitalize and enhance First Nations heritage, language, culture and\n          arts,"
                    },
                    {
                        "@id": "d1e40",
                        "bcl:num": "b",
                        "bcl:text": "increase understanding and sharing of knowledge, within both the First Nations and\n          non-First Nations communities, and"
                    },
                    {
                        "@id": "d1e49",
                        "bcl:num": "c",
                        "bcl:text": "heighten appreciation and acceptance of the wealth of cultural diversity among all\n          British Columbians;"
                    }
                ]
            },
            "bcl:section": [
                {
                    "@id": "d2e63",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e71",
                            "bcl:num": "1",
                            "bcl:text": "In this Act:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e80",
                                    "bcl:text": {
                                        "in:term": "board",
                                        "#text": "means the board of the corporation;"
                                    }
                                },
                                {
                                    "@id": "d2e89",
                                    "bcl:text": {
                                        "in:term": "committee",
                                        "#text": "means the committee continued under section\u00a02;"
                                    }
                                },
                                {
                                    "@id": "d2e99",
                                    "bcl:text": {
                                        "in:term": "corporation",
                                        "#text": "means the First Peoples' Heritage, Language and Culture\n            Council continued under section\u00a03;"
                                    }
                                },
                                {
                                    "@id": "d2e108",
                                    "bcl:text": {
                                        "in:term": "First Nations language group",
                                        "#text": "means a First Nations language group\n            prescribed by the minister under subsection (2)."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e117",
                            "bcl:num": "2",
                            "bcl:text": "After consulting with the board, the minister may make regulations setting out the\n          First Nations language groups from which the members of the committee may be\n          appointed."
                        }
                    ]
                },
                {
                    "@id": "d2e127",
                    "bcl:marginalnote": "First Peoples' Advisory Committee",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e135",
                            "bcl:num": "1",
                            "bcl:text": "The First Peoples' Advisory Committee is continued to provide advice to the\n          corporation on matters related to this Act."
                        },
                        {
                            "@id": "d2e144",
                            "bcl:num": "2",
                            "bcl:text": "The minister may appoint one representative to the committee from each First\n          Nations language group on the recommendation of the board."
                        },
                        {
                            "@id": "d2e153",
                            "bcl:num": "2.1",
                            "bcl:text": "For the purposes of subsection (2), a First Nations language group may\n          submit to the board the names of one or more members",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e163",
                                    "bcl:num": "a",
                                    "bcl:text": "whom the First Nations language group considers suitable for appointment to the\n            committee, and"
                                },
                                {
                                    "@id": "d2e172",
                                    "bcl:num": "b",
                                    "bcl:text": "who are willing to accept an appointment to the committee."
                                }
                            ]
                        },
                        {
                            "@id": "d2e181",
                            "bcl:num": "3",
                            "bcl:text": "The committee is composed of the persons appointed by the minister under subsection\u00a0(2)."
                        },
                        {
                            "@id": "d2e190",
                            "bcl:num": "4",
                            "bcl:text": "An appointment under subsection (3) is for a term of 2 years."
                        },
                        {
                            "@id": "d2e199",
                            "bcl:num": "5",
                            "bcl:text": "A member of the committee may designate another member of the First Nations\n          language group from which the committee member was appointed to attend one or more committee meetings\n          in the committee member's place."
                        },
                        {
                            "@id": "d2e208",
                            "bcl:num": "6",
                            "bcl:text": "A person designated under subsection (5) who attends a meeting of the committee in\n          accordance with the designation has the status of a member at that meeting."
                        },
                        {
                            "@id": "d2e218",
                            "bcl:num": "7",
                            "bcl:text": "The committee must meet once a year."
                        },
                        {
                            "@id": "d2e227",
                            "bcl:num": "8",
                            "bcl:text": "The committee may, by bylaw,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e236",
                                    "bcl:num": "a",
                                    "bcl:text": "determine its own procedure,"
                                },
                                {
                                    "@id": "d2e245",
                                    "bcl:num": "b",
                                    "bcl:text": "provide for the regulation and conduct of its meetings, and"
                                },
                                {
                                    "@id": "d2e254",
                                    "bcl:num": "c",
                                    "bcl:text": "elect a chair from among the members of the committee."
                                }
                            ]
                        },
                        {
                            "@id": "d2e263",
                            "bcl:num": "9",
                            "bcl:text": "Members of the committee serve without remuneration other than the reimbursement\n          of expenses incurred in discharging their duties under this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e273",
                    "bcl:marginalnote": "The First Peoples' Heritage, Language and Culture Council",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e281",
                            "bcl:num": "1",
                            "bcl:text": "The First Peoples' Heritage, Language and Culture Council is continued as a\n          corporation."
                        },
                        {
                            "@id": "d2e290",
                            "bcl:num": "2",
                            "bcl:text": "The corporation consists of a board of the following members:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e299",
                                    "bcl:num": "a",
                                    "bcl:text": "2 voting members appointed by the minister;"
                                },
                                {
                                    "@id": "d2e309",
                                    "bcl:num": "b",
                                    "bcl:text": "no more than 9 First Nations voting members appointed by the minister on the\n            recommendation of the board;"
                                },
                                {
                                    "@id": "d2e318",
                                    "bcl:num": "c",
                                    "bcl:text": "a non-voting member appointed by the minister on the recommendation of the board\n            for the purpose of providing additional historical, cultural or community\n            perspective;"
                                },
                                {
                                    "@id": "d2e327",
                                    "bcl:num": "d",
                                    "bcl:text": "a non-voting member appointed by the minister for the purpose of providing the\n            government's perspective to the board."
                                }
                            ]
                        },
                        {
                            "@id": "d2e336",
                            "bcl:num": "3",
                            "bcl:text": "An appointment under subsection (2) is for a term of 2 years."
                        },
                        {
                            "@id": "d2e345",
                            "bcl:num": "4",
                            "bcl:text": "A person may be appointed as a member of the board for more than one term but must\n          not be a member for more than 3\u00a0terms."
                        },
                        {
                            "@id": "d2e354",
                            "bcl:num": "5",
                            "bcl:text": "The minister may determine the remuneration of the members of the board and the\n          terms and conditions of their appointments."
                        },
                        {
                            "@id": "d2e364",
                            "bcl:num": "6",
                            "bcl:text": "The persons appointed under this section constitute the board."
                        },
                        {
                            "@id": "d2e373",
                            "bcl:num": "7",
                            "bcl:text": "The board must designate a member of the board to be its chair."
                        },
                        {
                            "@id": "d2e382",
                            "bcl:num": "8",
                            "bcl:text": "A member of the Executive Council or of the public service who is appointed as a\n          member of the board or elected as an officer of the corporation ceases to be a member of\n          the board or officer of the corporation on ceasing to be a member of the Executive Council\n          or of the public service."
                        },
                        {
                            "@id": "d2e391",
                            "bcl:num": "9",
                            "bcl:text": "A vacancy in the membership of the board does not impair the power of the\n          remaining members to act."
                        },
                        {
                            "@id": "d2e400",
                            "bcl:num": "10",
                            "bcl:text": "The board may, by bylaw,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e409",
                                    "bcl:num": "a",
                                    "bcl:text": "determine its own procedure,"
                                },
                                {
                                    "@id": "d2e419",
                                    "bcl:num": "b",
                                    "bcl:text": "provide for the regulation and conduct of its meetings,"
                                },
                                {
                                    "@id": "d2e428",
                                    "bcl:num": "c",
                                    "bcl:text": "elect officers of the corporation, and"
                                },
                                {
                                    "@id": "d2e437",
                                    "bcl:num": "d",
                                    "bcl:text": "elect an acting chair to the board in the absence of the chair."
                                }
                            ]
                        },
                        {
                            "@id": "d2e446",
                            "bcl:num": "11",
                            "bcl:text": "If the board is unable, or fails, to make recommendations for the purposes of\n          subsection\u00a0(2)\u00a0(b), the minister may make appointments to the board in accordance with a\n          process developed by the minister to identify suitable candidates for appointment to the\n          board."
                        }
                    ]
                },
                {
                    "@id": "d2e456",
                    "bcl:marginalnote": "Agent of the government",
                    "bcl:num": "4",
                    "bcl:text": "The corporation is for all purposes an agent of the government."
                },
                {
                    "@id": "d2e469",
                    "bcl:marginalnote": "Capital of corporation",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e477",
                            "bcl:num": "1",
                            "bcl:text": "The capital of the corporation is one share with a par value of $100."
                        },
                        {
                            "@id": "d2e486",
                            "bcl:num": "2",
                            "bcl:text": "The share in the corporation must be",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e495",
                                    "bcl:num": "a",
                                    "bcl:text": "issued to and registered in the name of the minister, and"
                                },
                                {
                                    "@id": "d2e505",
                                    "bcl:num": "b",
                                    "bcl:text": "held on behalf of the government."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e515",
                    "bcl:marginalnote": "Purposes and powers",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e523",
                            "bcl:num": "1",
                            "bcl:text": "The purposes of the corporation are as follows:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e532",
                                    "bcl:num": "a",
                                    "bcl:text": "to provide support to any of the following that are associated with First\n            Nations heritage, language, culture or arts:",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e541",
                                            "bcl:num": "i",
                                            "bcl:text": "organizations;"
                                        },
                                        {
                                            "@id": "d2e551",
                                            "bcl:num": "ii",
                                            "bcl:text": "programs;"
                                        },
                                        {
                                            "@id": "d2e560",
                                            "bcl:num": "iii",
                                            "bcl:text": "cultural centres;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e569",
                                    "bcl:num": "b",
                                    "bcl:text": "to receive, manage and distribute funds and property of every nature and kind\n            from any source for the establishment, operation and maintenance of the corporation and\n            to further the purposes of the corporation;"
                                },
                                {
                                    "@id": "d2e578",
                                    "bcl:num": "c",
                                    "bcl:text": "to support and advise ministries of government on initiatives, programs and\n            services related to First Nations heritage, language, culture and arts;"
                                },
                                {
                                    "@id": "d2e587",
                                    "bcl:num": "d",
                                    "bcl:text": "to advise the government on the preservation and fostering of First Nations\n            languages, arts and other aspects of cultural development of First Nations peoples\n            throughout British Columbia;"
                                },
                                {
                                    "@id": "d2e596",
                                    "bcl:num": "e",
                                    "bcl:text": "to consider all matters brought to its attention by the government and, if\n            requested by the government, to report its findings to the government."
                                }
                            ]
                        },
                        {
                            "@id": "d2e606",
                            "bcl:num": "2",
                            "bcl:text": "The corporation has the powers and capacity of a natural person of full\n          capacity."
                        },
                        {
                            "@id": "d2e615",
                            "bcl:num": "3",
                            "bcl:text": "The Minister of Finance is the fiscal agent of the corporation."
                        }
                    ]
                },
                {
                    "@id": "d2e625",
                    "bcl:marginalnote": "Investment",
                    "bcl:num": "7",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96138_01",
                            "@xlink:type": "locator",
                            "in:doc": "Financial Administration\n            Act"
                        },
                        "#text": "Money received by the corporation may be invested by the Minister of Finance in\n        investments permitted under section 40 (4) of the  for money in a trust fund."
                    }
                },
                {
                    "@id": "d2e640",
                    "bcl:marginalnote": "Financial administration",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e648",
                            "bcl:num": "1",
                            "bcl:text": "The board must",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e657",
                                    "bcl:num": "a",
                                    "bcl:text": "establish and maintain an accounting system satisfactory to the minister,\n            and"
                                },
                                {
                                    "@id": "d2e666",
                                    "bcl:num": "b",
                                    "bcl:text": "whenever required, render detailed accounts of revenues and expenditures of the\n            corporation for the period or to the day the minister designates."
                                }
                            ]
                        },
                        {
                            "@id": "d2e676",
                            "bcl:num": "2",
                            "bcl:text": "All books or records of account, documents and other financial records must at all\n          times be open for inspection by the minister or a person designated."
                        },
                        {
                            "@id": "d2e685",
                            "bcl:num": "3",
                            "bcl:text": "The Minister of Finance may direct the Comptroller General to examine and report\n          to the Treasury Board on any or all of the financial and accounting operations of the\n          corporation."
                        },
                        {
                            "@id": "d2e694",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/03002_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Auditor\n              General Act"
                                },
                                "#text": "Unless the Auditor General is appointed in accordance with the  as the auditor of the corporation, the corporation\n          must appoint an auditor to audit, at least once each fiscal year, the financial statements\n          for the preceding fiscal year."
                            }
                        },
                        {
                            "@id": "d2e706",
                            "bcl:num": "5",
                            "bcl:text": "The costs of the audit must be paid by the corporation."
                        },
                        {
                            "@id": "d2e715",
                            "bcl:num": "6",
                            "bcl:text": "The board must prepare for the minister, after the end of the fiscal year of the\n          corporation,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e724",
                                    "bcl:num": "a",
                                    "bcl:text": "a report of the corporation on its operations for the preceding fiscal year,\n            and"
                                },
                                {
                                    "@id": "d2e734",
                                    "bcl:num": "b",
                                    "bcl:text": "an audited financial statement showing the assets and liabilities of the\n            corporation at the end of the preceding fiscal year and the operations of the\n            corporation for that year in the form required by the minister."
                                }
                            ]
                        },
                        {
                            "@id": "d2e743",
                            "bcl:num": "7",
                            "bcl:text": "The audited financial statement referred to in subsection (6) must be prepared in\n          accordance with generally accepted accounting principles."
                        },
                        {
                            "@id": "d2e752",
                            "bcl:num": "8",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96140_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Financial Information Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/00023_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Budget Transparency and Accountability Act"
                                    }
                                ],
                                "#text": "The  and the\n             apply to the\n          corporation."
                            }
                        },
                        {
                            "@id": "d2e767",
                            "bcl:num": "9",
                            "bcl:text": "The fiscal year of the corporation is a period of 12\u00a0months beginning on April\u00a01\n          in each year and ending on March\u00a031 in the next succeeding year."
                        },
                        {
                            "@id": "d2e776",
                            "bcl:num": "10",
                            "bcl:text": "The report and audited financial statement referred to in subsection (6)\n          must be laid before the Legislative Assembly within 90 days following the end of the\n          fiscal year for which the report and statement are made if the Legislative Assembly is\n          then sitting."
                        },
                        {
                            "@id": "d2e785",
                            "bcl:num": "11",
                            "bcl:text": "If the Legislative Assembly is not sitting, the report and audited financial\n          statement must be laid before the Legislative Assembly within 15 days after the opening of\n          the next following session."
                        }
                    ]
                },
                {
                    "@id": "d2e795",
                    "bcl:marginalnote": "Distribution of funds and property",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e803",
                            "bcl:num": "1",
                            "bcl:text": "By resolution the board may determine the manner in which the funds and property\n          available in each year are to be used and distributed to organizations, programs and\n          cultural centres described in section 6 (1) (a) and must, in so determining, be\n          governed by the provisions of any gift, devise, bequest or trust."
                        },
                        {
                            "@id": "d2e812",
                            "bcl:num": "2",
                            "bcl:text": "If, in the opinion of the board, the directions, terms or trusts imposed by a\n          donor, settlor, transferor or will-maker are no longer in the best interests of the\n          corporation, the board may apply to a judge of the Supreme Court for an order authorizing\n          such variation of the directions, terms or trusts as the court, having the intent of the\n          donor, settlor, transferor or will-maker in mind, considers will better further both that\n          intent and the best interests of the corporation."
                        },
                        {
                            "@id": "d2e821",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96464_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Trustee\n          Act"
                                },
                                "#text": "Sections 86 and 87 of the  apply to an application referred to in subsection\u00a0(2) of this\n          section."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e834",
                    "bcl:marginalnote": "Staff and benefits",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e842",
                            "bcl:num": "1",
                            "bcl:text": "The board may appoint officers and employees it considers necessary for the work\n          of the corporation and may by resolution determine the terms and conditions of their\n          employment."
                        },
                        {
                            "@id": "d2e851",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96385_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Public Service Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96388_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Public\n              Service Labour Relations Act"
                                    }
                                ],
                                "#text": "The  and the  do not apply to the corporation or to\n          a member, officer or employee of the corporation."
                            }
                        },
                        {
                            "@id": "d2e866",
                            "bcl:num": "3) and (4",
                            "bcl:text": "[Repealed 1999-44-51.]"
                        },
                        {
                            "@id": "d2e876",
                            "bcl:num": "5",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96386_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Benefit Plan Act"
                                },
                                "#text": "The  applies\n          to the officers and employees of the corporation."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e890",
                    "bcl:marginalnote": "Liability of members",
                    "bcl:num": "11",
                    "bcl:text": "No member of the corporation or the committee is personally liable for loss or\n        damage suffered by a person as a result of anything done in good faith in the exercise of a\n        power given by this Act."
                },
                {
                    "@id": "d2e902",
                    "bcl:marginalnote": "Exemption from property taxes",
                    "bcl:num": "12",
                    "bcl:text": {
                        "bcl:link": [
                            {
                                "@resource": "leg",
                                "@xlink:href": "/legislation/03026_00",
                                "@xlink:type": "locator",
                                "in:doc": "Community\n        Charter"
                            },
                            {
