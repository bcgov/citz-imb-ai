        "@id": "00_96176_01",
        "act:title": "Greenbelt Act",
        "act:chapter": "176",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "553593740/96176/tlc96176_f",
            "act:tlc": "E3tlc96176"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e15",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:text": "In this Act:",
                    "bcl:definition": [
                        {
                            "@id": "d2e26",
                            "bcl:text": {
                                "in:term": "Crown land",
                                "#text": "means ungranted Crown or public land or Crown domain within British Columbia that belongs to the government, whether or not waters flow over or cover it, and includes any right, title, estate or interest of the government in land;"
                            }
                        },
                        {
                            "@id": "d2e35",
                            "bcl:text": {
                                "in:term": "greenbelt land",
                                "#text": "means land that is"
                            },
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e45",
                                    "bcl:num": "a",
                                    "bcl:text": "considered by the minister to be suitable for preservation as greenbelt land under this Act, and"
                                },
                                {
                                    "@id": "d2e54",
                                    "bcl:num": "b",
                                    "bcl:text": "reserved or acquired for that purpose under section\u00a03."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e64",
                    "bcl:marginalnote": "Application of other Acts",
                    "bcl:num": "2",
                    "bcl:subsection": [
                        {
                            "@id": "d2e72",
                            "bcl:num": "1",
                            "bcl:text": "Except as provided in this Act or the regulations, greenbelt land is not subject to any other enactment, whenever enacted or made."
                        },
                        {
                            "@id": "d2e81",
                            "bcl:num": "2",
                            "bcl:text": "Except in accordance with this Act or the regulations, no person may exercise a power granted under any other enactment so as to affect greenbelt land."
                        },
                        {
                            "@id": "d2e90",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": [
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/02036_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Agricultural Land Commission Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96103_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Ecological Reserve Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/96117_01",
                                        "@xlink:type": "locator",
                                        "in:doc": "Environment and Land Use Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/03053_00",
                                        "@xlink:type": "locator",
                                        "in:doc": "Environmental Management Act"
                                    },
                                    {
                                        "@resource": "leg",
                                        "@xlink:href": "/legislation/14015",
                                        "@xlink:type": "locator",
                                        "in:doc": "Water Sustainability Act"
                                    }
                                ],
                                "#text": "Despite subsections (1) and (2), this Act is subject to the , the , the , the  and the ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e115",
                    "bcl:marginalnote": "Preservation of greenbelt land",
                    "bcl:num": "3",
                    "bcl:text": "For establishing and preserving greenbelt land,",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e126",
                            "bcl:num": "a",
                            "bcl:text": "the Lieutenant Governor in Council may, by order, reserve Crown land as greenbelt land,"
                        },
                        {
                            "@id": "d2e135",
                            "bcl:num": "b",
                            "bcl:text": "with the approval of the Lieutenant Governor in Council, the minister may acquire land on behalf of the government as greenbelt land, and"
                        },
                        {
                            "@id": "d2e145",
                            "bcl:num": "c",
                            "bcl:text": "with the approval of the Lieutenant Governor in Council, the minister may make an agreement on behalf of the government with any of the following for the acquisition by the government of land owned by them as greenbelt land:",
                            "bcl:subparagraph": [
                                {
                                    "@id": "d2e154",
                                    "bcl:num": "i",
                                    "bcl:text": "Canada;"
                                },
                                {
                                    "@id": "d2e163",
                                    "bcl:num": "ii",
                                    "bcl:text": "an agency of Canada;"
                                },
                                {
                                    "@id": "d2e172",
                                    "bcl:num": "iii",
                                    "bcl:text": "an agency of the government;"
                                },
                                {
                                    "@id": "d2e181",
                                    "bcl:num": "iv",
                                    "bcl:text": "a municipality or regional district;"
                                },
                                {
                                    "@id": "d2e190",
                                    "bcl:num": "v",
                                    "bcl:text": "an agency of a municipality or regional district."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e200",
                    "bcl:marginalnote": "Greenbelt register",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e208",
                            "bcl:num": "1",
                            "bcl:text": "The minister must maintain a greenbelt register to record all land reserved or acquired under section\u00a03."
                        },
                        {
                            "@id": "d2e217",
                            "bcl:num": "2",
                            "bcl:text": "The record may include the following:",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e226",
                                    "bcl:num": "a",
                                    "bcl:text": "the legal description of the land;"
                                },
                                {
                                    "@id": "d2e236",
                                    "bcl:num": "b",
                                    "bcl:text": "the name of the owner of the fee simple if other than the government;"
                                },
                                {
                                    "@id": "d2e245",
                                    "bcl:num": "c",
                                    "bcl:text": "the estate or interest in the land held by the government and the method of acquisition;"
                                },
                                {
                                    "@id": "d2e254",
                                    "bcl:num": "d",
                                    "bcl:text": "the area;"
                                },
                                {
                                    "@id": "d2e263",
                                    "bcl:num": "e",
                                    "bcl:text": "the date of entry in the register."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e273",
                    "bcl:marginalnote": "Gifts of money",
                    "bcl:num": "5",
                    "bcl:subsection": [
                        {
                            "@id": "d2e281",
                            "bcl:num": "1",
                            "bcl:text": "The Minister of Finance may accept money, received from a gift or grant, for the acquisition or maintenance of greenbelt land."
                        },
                        {
                            "@id": "d2e290",
                            "bcl:num": "2",
                            "bcl:text": "On the requisition of the minister, money accepted under subsection (1) may be paid out for this Act without any other appropriation."
                        }
                    ]
                },
                {
                    "@id": "d2e301",
                    "bcl:marginalnote": "Disposition of greenbelt land",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e309",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96245_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Land Act"
                                },
                                "#text": "With the approval of the Lieutenant Governor in Council and after public notice, the minister may dispose of greenbelt land in accordance with the ."
                            }
                        },
                        {
                            "@id": "d2e321",
                            "bcl:num": "2",
                            "bcl:text": "On disposal, the minister must delete the record of that land from the greenbelt register."
                        },
                        {
                            "@id": "d2e330",
                            "bcl:num": "3",
                            "bcl:text": {
                                "in:doc": "Greenbelt Protection Fund Act",
                                "#text": "This section does not apply to land acquired by gift under the former ."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e343",
                    "bcl:marginalnote": "Inconsistent use under existing lease or agreement",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e351",
                            "bcl:num": "1",
                            "bcl:text": "Land that, at the time it is recorded in the greenbelt register is being used, under a lease or other agreement, for a purpose inconsistent with the nature and use of the land as greenbelt land, may continue to be used for that purpose until the expiry of the term of that lease or other agreement and any extension specifically permitted by the lease or other agreement."
                        },
                        {
                            "@id": "d2e360",
                            "bcl:num": "2",
                            "bcl:text": "If, at the time it is recorded in the greenbelt register, there are buildings on greenbelt land, the minister may lease the buildings."
                        }
                    ]
                },
                {
                    "@id": "d2e370",
                    "bcl:marginalnote": "Management of greenbelt land",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e378",
                            "bcl:num": "1",
                            "bcl:text": "The minister is responsible for the management of greenbelt land."
                        },
                        {
                            "@id": "d2e387",
                            "bcl:num": "2",
                            "bcl:text": "The minister may carry out maintenance, improvement and development work on greenbelt land."
                        },
                        {
                            "@id": "d2e396",
                            "bcl:num": "3",
                            "bcl:text": "The minister may, in writing, delegate the management of greenbelt land."
                        }
                    ]
                },
                {
                    "@id": "d2e406",
                    "bcl:marginalnote": "Lease, right of way or easement over greenbelt land",
                    "bcl:num": "9",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96245_01",
                            "@xlink:type": "locator",
                            "in:doc": "Land Act"
                        },
                        "#text": "Despite section 6, the minister may lease or grant a right of way or easement over greenbelt land in accordance with the  to any person on terms consistent with the continued existence, nature and use of the land as greenbelt land."
                    }
                },
                {
                    "@id": "d2e421",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "10",
                    "bcl:text": {
                        "bcl:link": {
                            "@resource": "leg",
                            "@xlink:href": "/legislation/96238_01",
                            "@xlink:type": "locator",
                            "in:doc": "Interpretation Act"
                        },
                        "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                    }
                }
            ]
        }
    }
}