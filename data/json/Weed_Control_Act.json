        "@xsi:schemaLocation": "http://www.gov.bc.ca/2013/legislation/act http://standards.qp.gov.bc.ca/standards/2013/act_1.0.xsd",
        "@id": "00_96487_01",
        "act:title": "Weed Control Act",
        "act:chapter": "487",
        "act:yearenacted": "1996",
        "act:currency": {
            "act:tlcDirPath": "901199259/96487/tlc96487_f",
            "act:tlc": "E3tlc96487"
        },
        "act:content": {
            "bcl:section": [
                {
                    "@id": "d2e21",
                    "bcl:marginalnote": "Definitions",
                    "bcl:num": "1",
                    "bcl:subsection": [
                        {
                            "@id": "d2e29",
                            "bcl:num": "1",
                            "bcl:text": "In this Act:",
                            "bcl:definition": [
                                {
                                    "@id": "d2e38",
                                    "bcl:text": {
                                        "in:term": "council",
                                        "#text": "means"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e47",
                                            "bcl:num": "a",
                                            "bcl:text": "the council of a municipality, and"
                                        },
                                        {
                                            "@id": "d2e57",
                                            "bcl:num": "b",
                                            "bcl:text": "the board of a regional district;"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e66",
                                    "bcl:text": {
                                        "in:term": "inspector",
                                        "#text": "means a person appointed by the minister under section 3, and includes a weed control officer appointed by a council under section\u00a010;"
                                    }
                                },
                                {
                                    "@id": "d2e75",
                                    "bcl:text": {
                                        "in:term": "minister",
                                        "#text": "includes a person designated in writing by the minister;"
                                    }
                                },
                                {
                                    "@id": "d2e84",
                                    "bcl:text": {
                                        "in:term": "municipality",
                                        "#text": "includes a regional district;"
                                    }
                                },
                                {
                                    "@id": "d2e93",
                                    "bcl:text": {
                                        "in:term": "notice",
                                        "#text": "means a notice issued by an inspector under section 4;"
                                    }
                                },
                                {
                                    "@id": "d2e102",
                                    "bcl:text": {
                                        "in:term": "noxious weed",
                                        "#text": "means a weed designated by regulation to be a noxious weed, and includes the seeds of the noxious weed;"
                                    }
                                },
                                {
                                    "@id": "d2e112",
                                    "bcl:text": {
                                        "in:term": "occupier",
                                        "#text": "means a person who"
                                    },
                                    "bcl:paragraph": [
                                        {
                                            "@id": "d2e121",
                                            "bcl:num": "a",
                                            "bcl:text": "is in physical possession of land, premises or property, or"
                                        },
                                        {
                                            "@id": "d2e130",
                                            "bcl:num": "b",
                                            "bcl:text": "is responsible for, and has control over, the condition of, the activities conducted on and the persons allowed to enter or use, land, premises or property."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e139",
                            "bcl:num": "2",
                            "bcl:text": "For this Act",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e148",
                                    "bcl:num": "a",
                                    "bcl:text": "there may be more than one occupier of land, premises or property,"
                                },
                                {
                                    "@id": "d2e157",
                                    "bcl:num": "b",
                                    "bcl:text": "a municipality may be an occupier of land, premises or property, and"
                                },
                                {
                                    "@id": "d2e167",
                                    "bcl:num": "c",
                                    "bcl:text": "the government may be an occupier of land, premises or property."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e177",
                    "bcl:marginalnote": "Duty to control noxious weeds",
                    "bcl:num": "2",
                    "bcl:text": "In accordance with the regulations, an occupier must control noxious weeds growing or located on land and premises, and on any other property located on land and premises, occupied by that person."
                },
                {
                    "@id": "d2e189",
                    "bcl:marginalnote": "Appointment and powers of inspectors",
                    "bcl:num": "3",
                    "bcl:subsection": [
                        {
                            "@id": "d2e197",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96385_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Public Service Act"
                                },
                                "#text": "The minister may appoint inspectors for this Act under the ."
                            }
                        },
                        {
                            "@id": "d2e209",
                            "bcl:num": "2",
                            "bcl:text": "At any time during daylight hours, an inspector may enter any land, premises, except a residence, and property for any purpose relating to the administration or enforcement of this Act or the regulations, and may inspect and examine the land, premises and property."
                        },
                        {
                            "@id": "d2e218",
                            "bcl:num": "3",
                            "bcl:text": "An inspector who enters land, premises or property under subsection (2) may require an occupier of the land, premises or property",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e228",
                                    "bcl:num": "a",
                                    "bcl:text": "to give the inspector all reasonable assistance in connection with the entry, inspection and examination,"
                                },
                                {
                                    "@id": "d2e237",
                                    "bcl:num": "b",
                                    "bcl:text": "to answer all proper questions relating to the inspection and examination, and"
                                },
                                {
                                    "@id": "d2e246",
                                    "bcl:num": "c",
                                    "bcl:text": "for the purposes of paragraphs (a) and (b), to attend at the land, premises or property with the inspector."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e256",
                    "bcl:marginalnote": "Notice to control noxious weeds",
                    "bcl:num": "4",
                    "bcl:subsection": [
                        {
                            "@id": "d2e264",
                            "bcl:num": "1",
                            "bcl:text": "An inspector may serve a notice directing an occupier, in accordance with the notice, to control noxious weeds growing or located on land, premises or property occupied by the occupier."
                        },
                        {
                            "@id": "d2e273",
                            "bcl:num": "2",
                            "bcl:text": "If a notice is served on an occupier the occupier must promptly bring the notice to the attention of the owner of the land, premises or property that is the subject of the notice."
                        }
                    ]
                },
                {
                    "@id": "d2e283",
                    "bcl:marginalnote": "Noxious weed control regulations",
                    "bcl:num": "5",
                    "bcl:text": [
                        "The Lieutenant Governor in Council may make regulations",
                        "considered particularly susceptible to noxious weeds or to the injurious distribution or effect of noxious weeds."
                    ],
                    "bcl:paragraph": [
                        {
                            "@id": "d2e294",
                            "bcl:num": "a",
                            "bcl:text": "to control noxious weeds on land, premises, property or a class of land, premises, or property, or"
                        },
                        {
                            "@id": "d2e303",
                            "bcl:num": "b",
                            "bcl:text": "respecting a process or a class of process"
                        }
                    ]
                },
                {
                    "@id": "d2e318",
                    "bcl:marginalnote": "Form of notice and method of service",
                    "bcl:num": "6",
                    "bcl:subsection": [
                        {
                            "@id": "d2e326",
                            "bcl:num": "1",
                            "bcl:text": "A notice must be in the prescribed form and contain the information required under the regulations."
                        },
                        {
                            "@id": "d2e335",
                            "bcl:num": "2",
                            "bcl:text": "A notice",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e344",
                                    "bcl:num": "a",
                                    "bcl:text": "may be served personally on the occupier to whom it is directed,"
                                },
                                {
                                    "@id": "d2e354",
                                    "bcl:num": "b",
                                    "bcl:text": "may be sent by registered mail addressed to the occupier to whom it is directed, or"
                                },
                                {
                                    "@id": "d2e363",
                                    "bcl:num": "c",
                                    "bcl:text": "may be left with any person who is, in the opinion of the inspector leaving the notice,",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e372",
                                            "bcl:num": "i",
                                            "bcl:text": "over the age of 16 years, and"
                                        },
                                        {
                                            "@id": "d2e381",
                                            "bcl:num": "ii",
                                            "bcl:text": "occupying residential or business premises on the land that is the subject of the notice."
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "@id": "d2e390",
                            "bcl:num": "3",
                            "bcl:text": [
                                "If an inspector",
                                "the inspector may serve the notice by posting it in a conspicuous place on the land, premises or property that is the subject of the notice, and the notice is served for the purposes of this Act at the expiration of 3 days immediately following the date that the notice was posted."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e399",
                                    "bcl:num": "a",
                                    "bcl:text": "is unable to serve a notice under subsection (2) and the inspector believes that the occupier to whom the notice is directed is evading service,"
                                },
                                {
                                    "@id": "d2e409",
                                    "bcl:num": "b",
                                    "bcl:text": "is unable to ascertain any occupier of the land, premises or property that is the subject of the notice, or"
                                },
                                {
                                    "@id": "d2e418",
                                    "bcl:num": "c",
                                    "bcl:text": "is of the opinion that it is unreasonable or impractical to serve under subsection (2) the occupier to whom the notice is directed,"
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e431",
                    "bcl:marginalnote": "Control of noxious weeds by inspector",
                    "bcl:num": "7",
                    "bcl:subsection": [
                        {
                            "@id": "d2e439",
                            "bcl:num": "1",
                            "bcl:text": [
                                "If",
                                "an inspector may, without notice, take the action considered necessary to enter on any land, premises or property and control noxious weeds."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e448",
                                    "bcl:num": "a",
                                    "bcl:text": "a notice is served under section 6 and, in the opinion of an inspector, noxious weeds are not controlled",
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e457",
                                            "bcl:num": "i",
                                            "bcl:text": "within the time, which must not be less than 5 days, specified in the notice, or"
                                        },
                                        {
                                            "@id": "d2e467",
                                            "bcl:num": "ii",
                                            "bcl:text": "in the manner specified in the notice, or"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e476",
                                    "bcl:num": "b",
                                    "bcl:text": "an inspector is of the opinion that, in order to prevent the injurious distribution and effect of noxious weeds, it is necessary to immediately control the noxious weeds,"
                                }
                            ]
                        },
                        {
                            "@id": "d2e488",
                            "bcl:num": "2",
                            "bcl:text": "If an inspector controls noxious weeds under subsection (1), the inspector must prepare a signed statement setting out the costs of the control and send the signed statement,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e497",
                                    "bcl:num": "a",
                                    "bcl:text": "if the noxious weeds were controlled on land, premises or property in a municipality, other than a regional district, to the designated municipal officer, and"
                                },
                                {
                                    "@id": "d2e506",
                                    "bcl:num": "b",
                                    "bcl:text": "if the noxious weeds were controlled on land, premises or property other than that referred to in paragraph (a), to the minister."
                                }
                            ]
                        },
                        {
                            "@id": "d2e516",
                            "bcl:num": "3",
                            "bcl:text": "If the municipal officer or minister to whom a signed statement is sent under subsection (2) issues a certificate in respect of the amount of the signed statement, every occupier of the land, premises or property on which or in which the noxious weeds were controlled is jointly and severally liable to pay the amount specified in the certificate to the municipality or the minister."
                        }
                    ]
                },
                {
                    "@id": "d2e526",
                    "bcl:marginalnote": "Recovery of costs",
                    "bcl:num": "8",
                    "bcl:subsection": [
                        {
                            "@id": "d2e534",
                            "bcl:num": "1",
                            "bcl:text": "If the amount specified in a certificate issued under section 7 is not paid, the municipal officer or minister who issued the certificate may,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e543",
                                    "bcl:num": "a",
                                    "bcl:text": [
                                        "if the noxious weeds were controlled on land or an improvement in a municipality, other than a regional district, send a certificate containing",
                                        "to the duly appointed collector of taxes for that municipality, or"
                                    ],
                                    "bcl:subparagraph": [
                                        {
                                            "@id": "d2e552",
                                            "bcl:num": "i",
                                            "bcl:text": "a legal description of the land,"
                                        },
                                        {
                                            "@id": "d2e562",
                                            "bcl:num": "ii",
                                            "bcl:text": "a description of the improvement and legal description of the land on which it is located,"
                                        },
                                        {
                                            "@id": "d2e571",
                                            "bcl:num": "iii",
                                            "bcl:text": "the name of the owner of the land or improvement, and"
                                        },
                                        {
                                            "@id": "d2e580",
                                            "bcl:num": "iv",
                                            "bcl:text": "the total amount of the money owing,"
                                        }
                                    ]
                                },
                                {
                                    "@id": "d2e592",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": [
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96448_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Taxation (Rural Area) Act"
                                            },
                                            {
                                                "@resource": "leg",
                                                "@xlink:href": "/legislation/96448_01",
                                                "@xlink:type": "locator",
                                                "in:doc": "Taxation (Rural Area) Act"
                                            }
                                        ],
                                        "#text": "if the noxious weeds were controlled on land or an improvement, as defined in the , which are not located in a municipality, other than a regional district, send the certificate referred to in paragraph (a) to the Surveyor of Taxes appointed under the ."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e607",
                            "bcl:num": "2",
                            "bcl:text": [
                                "On receipt of a certificate referred to in subsection (1), the municipal collector or the Surveyor of Taxes must enter in the tax roll the amount set out in the certificate in respect of the land or improvement referred to in it, and the amount is then deemed for all purposes to be, as applicable,",
                                "and the provisions for collection and recovery of taxes contained in those Acts apply to those amounts."
                            ],
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e617",
                                    "bcl:num": "a",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/03026_00",
                                            "@xlink:type": "locator",
                                            "in:doc": "Community Charter"
                                        },
                                        "#text": "taxes in arrear of the municipality under the , or"
                                    }
                                },
                                {
                                    "@id": "d2e629",
                                    "bcl:num": "b",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/96448_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Taxation (Rural Area) Act"
                                        },
                                        "#text": "delinquent taxes under the ,"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e645",
                    "bcl:marginalnote": "Weed control committees",
                    "bcl:num": "9",
                    "bcl:subsection": [
                        {
                            "@id": "d2e653",
                            "bcl:num": "1",
                            "bcl:text": "The council of a municipality may establish one or more weed control committees, each consisting of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e662",
                                    "bcl:num": "a",
                                    "bcl:text": "one member of the council appointed by the council,"
                                },
                                {
                                    "@id": "d2e671",
                                    "bcl:num": "b",
                                    "bcl:text": "one resident in the municipality appointed by the council,"
                                },
                                {
                                    "@id": "d2e681",
                                    "bcl:num": "c",
                                    "bcl:text": "one member of the ministry appointed by the minister,"
                                },
                                {
                                    "@id": "d2e690",
                                    "bcl:num": "d",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/15018_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Societies Act"
                                        },
                                        "#text": "one member in good standing, appointed by the council, of a society, as defined in the , that has as a primary purpose the protection of the environment or the encouragement of anti-pollution measures, and"
                                    }
                                },
                                {
                                    "@id": "d2e702",
                                    "bcl:num": "e",
                                    "bcl:text": {
                                        "bcl:link": {
                                            "@resource": "leg",
                                            "@xlink:href": "/legislation/08028_01",
                                            "@xlink:type": "locator",
                                            "in:doc": "Public Health Act"
                                        },
                                        "#text": "one member appointed by the minister responsible for the ."
                                    }
                                }
                            ]
                        },
                        {
                            "@id": "d2e714",
                            "bcl:num": "2",
                            "bcl:text": "A member of a weed control committee holds office for a period of one year."
                        },
                        {
                            "@id": "d2e723",
                            "bcl:num": "3",
                            "bcl:text": "If a council establishes a weed control committee under subsection (1), that council",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e732",
                                    "bcl:num": "a",
                                    "bcl:text": "must notify the minister in writing of the names of the persons appointed,"
                                },
                                {
                                    "@id": "d2e742",
                                    "bcl:num": "b",
                                    "bcl:text": "must provide secretarial or clerical assistance for the weed control committee,"
                                },
                                {
                                    "@id": "d2e751",
                                    "bcl:num": "c",
                                    "bcl:text": "must designate the member of the weed control committee appointed by council to be chair, and"
                                },
                                {
                                    "@id": "d2e760",
                                    "bcl:num": "d",
                                    "bcl:text": "may provide for the payment of expenses to weed control committee members."
                                }
                            ]
                        },
                        {
                            "@id": "d2e769",
                            "bcl:num": "4",
                            "bcl:text": "A weed control committee must, with respect to its municipality,",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e778",
                                    "bcl:num": "a",
                                    "bcl:text": "advise the minister and the council on all matters relating to noxious weeds and noxious weed control,"
                                },
                                {
                                    "@id": "d2e787",
                                    "bcl:num": "b",
                                    "bcl:text": "compile a list of weeds that it considers to be noxious and to require control, and submit the list to the minister and the council,"
                                },
                                {
                                    "@id": "d2e797",
                                    "bcl:num": "c",
                                    "bcl:text": "advise the council on the appointment of weed control officers, and supervise weed control officers,"
                                },
                                {
                                    "@id": "d2e806",
                                    "bcl:num": "d",
                                    "bcl:text": "assist in the organization and administration of weed control programs,"
                                },
                                {
                                    "@id": "d2e815",
                                    "bcl:num": "e",
                                    "bcl:text": "not later than October 1 in each year, submit to the minister and the council an annual report, and estimates for the next year, respecting weed control matters, and"
                                },
                                {
                                    "@id": "d2e824",
                                    "bcl:num": "f",
                                    "bcl:text": "perform other duties the Lieutenant Governor in Council prescribes."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e834",
                    "bcl:marginalnote": "Weed control officers",
                    "bcl:num": "10",
                    "bcl:subsection": [
                        {
                            "@id": "d2e842",
                            "bcl:num": "1",
                            "bcl:text": "A council may appoint one or more inspectors and weed control officers to enforce and administer this Act in the municipality."
                        },
                        {
                            "@id": "d2e851",
                            "bcl:num": "2",
                            "bcl:text": "If an inspector is appointed by a council, it must notify the minister in writing of the name of the inspector."
                        },
                        {
                            "@id": "d2e860",
                            "bcl:num": "3",
                            "bcl:text": "If the minister is of the opinion that additional inspectors or weed control officers are required in a municipality for the purpose of effectively enforcing and administering this Act and the regulations in the municipality, the minister may appoint one or more inspectors for that purpose."
                        }
                    ]
                },
                {
                    "@id": "d2e870",
                    "bcl:marginalnote": "Weed control agreements",
                    "bcl:num": "11",
                    "bcl:subsection": [
                        {
                            "@id": "d2e878",
                            "bcl:num": "1",
                            "bcl:text": "The councils of 2 or more municipalities may enter into an agreement respecting noxious weed control and an agreement respecting the costs of noxious weed control in all or part of those municipalities."
                        },
                        {
                            "@id": "d2e887",
                            "bcl:num": "2",
                            "bcl:text": "On behalf of the government the minister may enter into an agreement with the council of a municipality for noxious weed control and the costs of noxious weed control in all or part of",
                            "bcl:paragraph": [
                                {
                                    "@id": "d2e896",
                                    "bcl:num": "a",
                                    "bcl:text": "that municipality, or"
                                },
                                {
                                    "@id": "d2e906",
                                    "bcl:num": "b",
                                    "bcl:text": "land, premises and property that are not within, but adjoin, the boundaries of that municipality."
                                }
                            ]
                        }
                    ]
                },
                {
                    "@id": "d2e917",
                    "bcl:marginalnote": "Highways",
                    "bcl:num": "12",
                    "bcl:subsection": [
                        {
                            "@id": "d2e925",
                            "bcl:num": "1",
                            "bcl:text": {
                                "in:term": "highway",
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04044_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Transportation Act"
                                },
                                "#text": "In this section,  means a highway as defined in the ."
                            }
                        },
                        {
                            "@id": "d2e940",
                            "bcl:num": "2",
                            "bcl:text": "If a highway is owned by the government, but is in the possession of a municipality, other than a regional district, that municipality is the occupier of that highway."
                        },
                        {
                            "@id": "d2e949",
                            "bcl:num": "3",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04044_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Transportation Act"
                                },
                                "#text": "If a highway is owned by the government and is not in the possession of a municipality, the occupier of that highway is the minister responsible for the administration of the  on behalf of the government."
                            }
                        },
                        {
                            "@id": "d2e962",
                            "bcl:num": "4",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/04044_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Transportation Act"
                                },
                                "#text": "If a new highway is constructed, or an existing highway is rerouted, within the boundaries of a municipality, other than a regional district, by or under the direction of the government, the minister responsible for the administration of the , on behalf of the government, is the occupier of that highway while it is being constructed or rerouted."
                            }
                        }
                    ]
                },
                {
                    "@id": "d2e975",
                    "bcl:marginalnote": "Crown land",
                    "bcl:num": "13",
                    "bcl:text": "If unoccupied land is owned by the government, the occupier of that Crown land is that member of the Executive Council designated by the minister to be the occupier on behalf of the government."
                },
                {
                    "@id": "d2e987",
                    "bcl:marginalnote": "Exemptions",
                    "bcl:num": "14",
                    "bcl:subsection": [
                        {
                            "@id": "d2e995",
                            "bcl:num": "1",
                            "bcl:text": "If, in the opinion of the Lieutenant Governor in Council, an area of British Columbia not in a municipality, other than a regional district, is waste land or sparsely populated land, the Lieutenant Governor in Council may exempt that area from this Act."
                        },
                        {
                            "@id": "d2e1004",
                            "bcl:num": "2",
                            "bcl:text": "If, in the opinion of the council of a municipality, other than a regional district, an area of British Columbia in the municipality is waste land or sparsely populated land, the council of that municipality may, by bylaw and with the consent of the minister, exempt that area from this Act."
                        }
                    ]
                },
                {
                    "@id": "d2e1014",
                    "bcl:marginalnote": "Offence",
                    "bcl:num": "15",
                    "bcl:text": "A person commits an offence who knowingly",
                    "bcl:paragraph": [
                        {
                            "@id": "d2e1025",
                            "bcl:num": "a",
                            "bcl:text": "contravenes this Act,"
                        },
                        {
                            "@id": "d2e1034",
                            "bcl:num": "b",
                            "bcl:text": "contravenes a regulation made under section 5,"
                        },
                        {
                            "@id": "d2e1044",
                            "bcl:num": "c",
                            "bcl:text": "obstructs an inspector in the lawful exercise of the inspector's duties under this Act,"
                        },
                        {
                            "@id": "d0e1108",
                            "bcl:num": "c.1",
                            "bcl:text": "provides information that is false or misleading with respect to a material fact contained in a signed statement under this Act, or"
                        },
                        {
                            "@id": "d2e1053",
                            "bcl:num": "d",
                            "bcl:text": "refuses or neglects to comply with a notice served on the person."
                        }
                    ]
                },
                {
                    "@id": "d2e1063",
                    "bcl:marginalnote": "Power to make regulations",
                    "bcl:num": "16",
                    "bcl:subsection": [
                        {
                            "@id": "d2e1071",
                            "bcl:num": "1",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96238_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Interpretation Act"
                                },
                                "#text": "The Lieutenant Governor in Council may make regulations referred to in section\u00a041 of the ."
                            }
                        },
                        {
                            "@id": "d2e1083",
                            "bcl:num": "2",
                            "bcl:text": {
                                "bcl:link": {
                                    "@resource": "leg",
                                    "@xlink:href": "/legislation/96117_01",
                                    "@xlink:type": "locator",
                                    "in:doc": "Environment and Land Use Act"
                                },
                                "#text": "Regulations in respect of methods used to control noxious weeds must not be made under subsection (1) unless the Environment and Land Use Committee established under the  approves the methods."
                            }
                        }
                    ]
                }
            ]
        }
    }
}