    <bcl:section id="d2e31" toc="false">
      <bcl:marginalnote>Prescribed police forces</bcl:marginalnote>
      <bcl:num>1</bcl:num>
      <bcl:text>The following are prescribed as police forces in British Columbia:</bcl:text>
      <bcl:paragraph id="d2e42">
        <bcl:num>a</bcl:num>
        <bcl:text>Organized Crime Agency of British Columbia;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e51">
        <bcl:num>b</bcl:num>
        <bcl:text>Stl'atl'imx Tribal Police Service;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e61">
        <bcl:num>c</bcl:num>
        <bcl:text>South Coast British Columbia Transportation Authority Police Service Designated Policing Unit.</bcl:text>
      </bcl:paragraph>
      <bcl:hnote>[am. B.C. Regs. 388/99; 455/2004; 257/2008, s. 4; 231/2022, App. 2]</bcl:hnote>
    </bcl:section>
