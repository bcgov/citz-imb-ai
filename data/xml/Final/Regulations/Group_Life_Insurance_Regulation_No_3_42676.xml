      <bcl:num>3</bcl:num>
      <bcl:text>Rates of contribution:</bcl:text>
      <bcl:paragraph id="d2e80">
        <bcl:num>a</bcl:num>
        <bcl:text>monthly salaried employees;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e89">
        <bcl:num>b</bcl:num>
        <bcl:text>retired employees: an amount equal to the coverage in effect immediately before retirement.</bcl:text>
