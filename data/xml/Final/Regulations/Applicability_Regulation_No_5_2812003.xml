    <bcl:section id="d2e42" toc="false">
      <bcl:marginalnote>Taxation Acts applicable to authority</bcl:marginalnote>
      <bcl:num>1</bcl:num>
      <bcl:text>The following statutes apply to the British Columbia Hydro and Power Authority:</bcl:text>
      <bcl:paragraph id="d2e53">
        <bcl:num>a</bcl:num>
        <bcl:text>Repealed. [B.C. Reg. 91/2013, Sch. s. 1 (a).]</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e62">
        <bcl:num>b</bcl:num>
        <bcl:text>
          <bcl:link resource="leg" xlink:href="/legislation/96317_01" xlink:type="locator">
            <in:doc>Motor Fuel Tax Act</in:doc>
          </bcl:link>;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e75">
        <bcl:num>c</bcl:num>
        <bcl:text>Repealed. [B.C. Reg. 91/2013, Sch. s. 1 (a).]</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e84">
        <bcl:num>d</bcl:num>
        <bcl:text>
          <bcl:link resource="leg" xlink:href="/legislation/96452_01" xlink:type="locator">
            <in:doc>Tobacco Tax Act</in:doc>
          </bcl:link>;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e96">
        <bcl:num>e</bcl:num>
        <bcl:text>
          <bcl:link resource="leg" xlink:href="/legislation/08040_01" xlink:type="locator">
            <in:doc>Carbon Tax Act</in:doc>
          </bcl:link>;</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e108">
        <bcl:num>f</bcl:num>
        <bcl:text>Repealed. [B.C. Reg. 91/2013, Sch. s. 1 (a).]</bcl:text>
      </bcl:paragraph>
      <bcl:paragraph id="d2e117">
        <bcl:num>g</bcl:num>
        <bcl:text>
          <bcl:link resource="leg" xlink:href="/legislation/12035_00" xlink:type="locator">
            <in:doc>Provincial Sales Tax Act</in:doc>
          </bcl:link>.</bcl:text>
