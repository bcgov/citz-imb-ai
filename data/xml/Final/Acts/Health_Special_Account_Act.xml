  <act:title>Health Special Account Act</act:title>
  <act:chapter>185</act:chapter>
  <act:yearenacted>1996</act:yearenacted>
  <act:currency>
    <act:tlcDirPath>712470149/96185/tlc96185_f</act:tlcDirPath>
