  <reg:content>
    <bcl:section id="d2e41" toc="false">
      <bcl:marginalnote>Programs prescribed</bcl:marginalnote>
      <bcl:num>1</bcl:num>
      <bcl:text>The programs named in the Schedule to this regulation are prescribed as continuing
        care programs under section 3 of the <bcl:link resource="leg" xlink:href="/legislation/96070_01" xlink:type="locator"><in:doc>Continuing Care Act</in:doc></bcl:link>.</bcl:text>
    </bcl:section>
    <bcl:schedule id="d0e52">
      <bcl:scheduletitle>Schedule</bcl:scheduletitle>
      <bcl:centertext>[en. B.C. Reg. 83/2019, App. 2.]</bcl:centertext>
      <bcl:section id="d2e64">
        <bcl:num>1</bcl:num>
        <bcl:text>The following programs administered by the ministry of the minister are prescribed as continuing care:</bcl:text>
        <bcl:paragraph id="d2e72">
          <bcl:num>a</bcl:num>
          <bcl:text>Home Support Services;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e81">
          <bcl:num>b</bcl:num>
          <bcl:text>Adult Day Services;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e90">
          <bcl:num>c</bcl:num>
          <bcl:text>Meals Programs;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e100">
          <bcl:num>d</bcl:num>
          <bcl:text>Respite Services;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e109">
          <bcl:num>e</bcl:num>
          <bcl:text>Care Management;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e118">
          <bcl:num>f</bcl:num>
          <bcl:text>Long-Term Care Services;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e127">
          <bcl:num>g</bcl:num>
          <bcl:text>Palliative and End-of-Life Care Services;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e136">
          <bcl:num>h</bcl:num>
          <bcl:text>Home Oxygen Program;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e145">
          <bcl:num>i</bcl:num>
          <bcl:text>Assisted Living Services;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e155">
          <bcl:num>j</bcl:num>
          <bcl:text>Community Nursing Services;</bcl:text>
        </bcl:paragraph>
        <bcl:paragraph id="d2e164">
          <bcl:num>k</bcl:num>
          <bcl:text>Community Rehabilitation Services.</bcl:text>
        </bcl:paragraph>
      </bcl:section>
    </bcl:schedule>
    <reg:provisionsnote>[Provisions relevant to the enactment of this regulation: <bcl:link resource="leg" xlink:href="/legislation/96070_01" xlink:type="locator"><in:doc>Continuing
          Care Act</in:doc></bcl:link>, R.S.B.C. 1996, c. 70, s. 3]</reg:provisionsnote>
