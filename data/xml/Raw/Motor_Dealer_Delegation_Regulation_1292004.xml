  <reg:title>Motor Dealer Delegation Regulation</reg:title>
  <reg:amsincluded>[includes amendments up to B.C. Reg. 200/2017, April 1, 2018]</reg:amsincluded>
  <reg:regpitid>129_2004_pit</reg:regpitid>
