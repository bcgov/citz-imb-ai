  <act:title>Tourist Accommodation (Assessment Relief) Act</act:title>
  <act:chapter>454</act:chapter>
  <act:yearenacted>1996</act:yearenacted>
  <act:currency>
    <act:tlcDirPath>1089244767/96454/tlc96454_f</act:tlcDirPath>
