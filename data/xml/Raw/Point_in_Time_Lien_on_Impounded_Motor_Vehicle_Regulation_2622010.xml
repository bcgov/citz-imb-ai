      <reg:content>
        <bcl:section id="d2e27" toc="false">
          <bcl:marginalnote>Lien on impounded vehicle</bcl:marginalnote>
          <bcl:num>1</bcl:num>
          <bcl:text>The following fees, costs and charges are prescribed for the purposes of section 255 (2) (a) of the Act:</bcl:text>
          <bcl:paragraph id="d2e38">
            <bcl:num>a</bcl:num>
            <bcl:text>for storage:</bcl:text>
            <bcl:subparagraph id="d2e47">
              <bcl:num>i</bcl:num>
              <bcl:text>$19.55 per day for impound lots located within the Greater Vancouver Regional District, the District of Squamish, the District of Chilliwack, the District of Abbotsford, the District of Mission or the City of Victoria;</bcl:text>
            </bcl:subparagraph>
            <bcl:subparagraph id="d2e57">
              <bcl:num>ii</bcl:num>
              <bcl:text>$16.10 per day for impound lots located outside the areas described in subparagraph (i);</bcl:text>
            </bcl:subparagraph>
          </bcl:paragraph>
          <bcl:paragraph id="d2e66">
            <bcl:num>b</bcl:num>
            <bcl:text>for towing, as set out in the following table:</bcl:text>
