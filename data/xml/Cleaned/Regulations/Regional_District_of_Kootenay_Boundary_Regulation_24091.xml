  <reg:title>Regional District of <in:br/>Kootenay Boundary Regulation</reg:title>
  <reg:amsincluded>[Last amended June 20, 2022 by B.C. Reg. 141/2022]</reg:amsincluded>
  <reg:regpitid>240_91_pit</reg:regpitid>
