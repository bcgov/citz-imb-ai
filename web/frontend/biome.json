{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    }
  },
	"organizeImports": {
		"enabled": true
	}
}
